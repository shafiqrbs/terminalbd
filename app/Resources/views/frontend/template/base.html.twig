<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>{{ globalOption.name }}</title>
    <link rel="shortcut icon" href="{{ asset('assets/img/favicon.ico') }}">
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <!-- Google fonts - witch you want to use - (rest you can just remove) -->
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:400,800,700italic,700,600italic,600,400italic,300italic,300|Roboto:100,300,400,500,700&amp;subset=latin,latin-ext' type='text/css' />
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- HEADER -->
    <!-- HEADER -->
    {% stylesheets filter='cssrewrite'
    'assets/template/desktop/patros/css/bootstrap.min.css'
    'assets/template/desktop/patros/font-awesome/css/font-awesome.min.css'
    'assets/template/plugin/owl.carousel/owl.carousel.min.css'
    'assets/template/plugin/owl.carousel/owl.theme.min.css'
    'assets/template/plugin/side.toolbar/vcore.sidebar.css'
    'assets/template/plugin/pgslider/pgwslider.min.css'
    'assets/bindu/3rd/select2/select2.css'
    'assets/template/desktop/css/module.css'
    'assets/template/desktop/patros/css/patros-black.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block cssBlock %}{% endblock %}
</head>
<body data-spy="scroll">
{{ include('frontend/template/templateCustomize.html.twig')}}
<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top">
    <section id="top-bar">
        <div class="container" id="menu">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6 text-left">
                        <div class="box">
                            <ul class="info-links">
                                {% if globalOption.templateCustomize.showCalendar == 1 %}<li><i class="fa fa-calendar"></i>&nbsp;{{ "now"|date("F j, Y") }}</li>{% endif %}
                                {% if globalOption.templateCustomize.showEmail == 1 %}<li><i class="fa fa-envelope"></i>&nbsp;{{ globalOption.email }}</li>{% endif %}
                                {% if globalOption.templateCustomize.showMobile == 1 %}<li><i class="fa fa-mobile"></i>&nbsp;{{ globalOption.mobile }}</li>{% endif %}
                            </ul>
                        </div>
                    </div>

                    <div class=" col-md-6 text-right">
                        <div class="box">
                            <ul class="social-links">
                                {% if globalOption.facebookPageUrl == 1 %}<li><a href="https://{{ globalOption.facebookPageUrl }}"><i class="fa fa-facebook"></i></a></li>{% endif %}
                                {% if globalOption.templateCustomize.showSearch == 1 %}<li><a href="javascript:" id="searchEvent"><i class="fa fa-search"></i></a></li>{% endif %}
                                {% if  globalOption.ecommerceConfig.cart == 1  %}<li><a href="{{ path('webservice_product_cart_details',{'subdomain':globalOption.subDomain}) }}" class="" ><i class="fa fa-shopping-cart"></i></a></li>{% endif %}
                                <li><a href="javascript:" class="register-btn" ><i class="fa fa-sign-in"></i></a></li>
                                {% if  app.user %}
                                    <li><a href="{{ path('fos_user_security_logout') }}" class="" ><i class="fa fa-unlock-alt"></i></a></li>
                                {% else %}
                                    <li><a href="javascript:" class="login-preview" ><i class="fa fa-lock"></i></a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container" id="header">
        <div class="navbar-header col-md-12" >
            <a class="" href="{{ path('ecommercesubdomain') }}">{% if globalOption.templateCustomize.webPath('logo') is not empty %}<img src="{{ image(globalOption.templateCustomize.webPath('logo')).resize() }}" alt="company logo" />{% else %}{{ globalOption.name }}{% endif %}</a>
        </div>
    </div>
    <section id="menu-bar" >
        <div class="container" id="menu">
            <div class="row">
                <div class="col-md-8">
                    {% render controller("FrontendBundle:TemplateWidget:header",{'globalOption':globalOption.id}) %}
                </div>
                {% if globalOption.templateCustomize.showSearch == 1 %}
                    <div class="input-group searchbar col-md-3" id="nav-search">
                        <input type="text" class="form-control searchbar" placeholder="Search for...">
		                        <span class="input-group-btn">
		                        <button class="btn btn-default glyphicon glyphicon-search" type="button"></button>
		                </span>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
</nav>
<div class="clearfix"></div>
{% block body %}{% endblock %}
<footer id="footer">
    <div class="container">
        <div class="row myfooter">
            <div class="col-sm-6"><div class="pull-left">
                    &copy; Copyright {{ globalOption.name }} {{ "now"|date('Y') }}
                </div></div>
            <div class="col-sm-6">
                <div class="pull-right">Designed & Developed by <a target="_blank" href="http://www.terminalbd.com">Umar It Limited</a></div>
            </div>
        </div>
    </div>
</footer>
{% render controller("FrontendBundle:TemplateWidget:modalLogin",{'globalOption':globalOption.id}) %}
{% if globalOption.templateCustomize.showSidebar == 1 %}
    <div class="side-toolbar" style=""></div>
{% endif %}
<!-- jQuery -->
<!--Jquery Smooth Scrolling-->
{% javascripts
'assets/template/desktop/patros/js/jquery.js'
'assets/template/desktop/patros/js/bootstrap.min.js'
'assets/template/plugin/jquery-inputmask/jquery.inputmask.bundle.min.js'
'assets/template/plugin/numeric/jquery.numeric.js'
'assets/template/plugin/validation/jquery.validate-1.14.0.min.js'
'assets/template/plugin/validation/jquery-validate.bootstrap-tooltip.min.js'
'assets/template/plugin/owl.carousel/owl.carousel.min.js'
'assets/bindu/3rd/select2/select2.js'
'assets/template/plugin/side.toolbar/vcore.sidebar.js'
'assets/template/plugin/pgslider/imagezoom.js'
'assets/template/plugin/pgslider/pgwslider.js'
'assets/template/plugin/side.toolbar/vcore.sidebar.js'
'assets/template/desktop/patros/js/jquery.quicksand.js'

%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script>  var subdomain ="{{ globalOption.subDomain }}" ; </script>
{% block javascriptBlock %}{% endblock %}
<script>
 $(document).ready(function(){

        var navbar = $('.navbar').outerHeight(true);
        var mins = 10;
        $('#breadcrumb').css({
            'margin-top':(navbar-mins),
            'margin-bottom':10,
        });

        $('.select2').select2({
            placeholder: "Select",
            allowClear: true,
            color: "black"
        });
        $(".numeric").numeric();
        $(".mobile").inputmask("mask", {"mask": "99999-999-999"}); //specifying fn & options
        $('#searchEvent').click(function(){
            $('#nav-search').slideToggle('slow');
        });

        $('#catlist').children('.news-list').each(function(index) {
            $(this).addClass(index % 2 ? 'odd' : 'even');
        });

        $('.side-toolbar').vSidebar({
            'items': [
                {% render controller("FrontendBundle:TemplateWidget:sidebar",{'globalOption':globalOption.id}) %}
            ],
            'position': 'right bottom'
        });

        var owlProduct = $("#preview-slider");
        owlProduct.owlCarousel({
            items:3,
            itemsDesktop:[1199,3],
            itemsDesktopSmall:[979,2],
            itemsTablet:[768,1],
            pagination: false,
            paginationNumbers: false,
            autoPlay:false,
            rewindNav:false
        });
        // Custom Navigation Events
        $(".preview-next").click(function(){
            owlProduct.trigger('owl.next');
        })

        $(".preview-prev").click(function(){
            owlProduct.trigger('owl.prev');
        })



        var owlClient = $("#client-slider");
        owlClient.owlCarousel({
            items:5,
            itemsDesktop:[1199,5],
            itemsDesktopSmall:[979,3],
            itemsTablet:[768,1],
            pagination: false,
            paginationNumbers: false,
            autoPlay:true,
            rewindNav:false
        });

        // Custom Navigation Events
        $(".next-client").click(function(){
            owlClient.trigger('owl.next');
        })

        $(".prev-client").click(function(){
            owlClient.trigger('owl.prev');
        })

        $("#testimonial-single-slider").owlCarousel({
            items:1,
            itemsDesktop:[1000,1],
            itemsDesktopSmall:[979,1],
            itemsTablet:[768,1],
            pagination: true,
            autoPlay:false
        });

        $("#news-slider").owlCarousel({
            items :3,
            itemsDesktop:[1000,1],
            itemsDesktopSmall:[980,1],
            navigation : false,
            pagination:false,
            autoPlay : true
        });


        $('#list').click(function(event){event.preventDefault();$('#product .item').addClass('list-group-item');});
        $('#grid').click(function(event){event.preventDefault();$('#product .item').removeClass('list-group-item');$('#products .item').addClass('grid-group-item');});

        $('.custom-menu a[href^="#"], .intro-scroller .inner-link').on('click',function (e) {

            e.preventDefault();
            var target = this.hash;
            var $target = $(target);

            $('html, body').stop().animate({
                'scrollTop': $target.offset().top
            }, 900, 'swing', function () {
                window.location.hash = target;
            });
        });

        $('a.page-scroll').bind('click', function(event) {
            var $anchor = $(this);
            $('html, body').stop().animate({
                scrollTop: $($anchor.attr('href')).offset().top
            }, 1500, 'easeInOutExpo');
            event.preventDefault();
        });

        $(".nav a").on("click", function(){
            $(".nav").find(".active").removeClass("active");
            $(this).parent().addClass("active");
        });

        $('body').append('<div id="toTop" class="btn btn-primary color1"><span class="glyphicon glyphicon-chevron-up"></span></div>');
        $(window).scroll(function () {
            if ($(this).scrollTop() != 0) {
                $('#toTop').fadeIn();
            } else {
                $('#toTop').fadeOut();
            }
        });
        $('#toTop').click(function(){
            $("html, body").animate({ scrollTop: 0 }, 700);
            return false;
        });

        $("#contactForm").validate({

            rules: {
                name: {required: true},
                mobile: {required: true}
            },
            messages: {
                name: "Just check the box<h5 class='text-danger'>You aren't going to read the EULA</h5>",
                mobile: "Enter valid mobile no"
            },
            tooltip_options: {
                name: {trigger:'focus'},
                mobile: {placement:'top',html:true}
            },
        });

        {% block documentready %}{% endblock %}

    });
    function gallery(){};

    var $itemsHolder = $('ul.port2');
    var $itemsClone = $itemsHolder.clone();
    var $filterClass = "";
    $('ul.filter li').click(function(e) {
        e.preventDefault();
        $filterClass = $(this).attr('data-value');
        if($filterClass == 'all'){ var $filters = $itemsClone.find('li'); }
        else { var $filters = $itemsClone.find('li[data-type='+ $filterClass +']'); }
        $itemsHolder.quicksand(
                $filters,
                { duration: 1000 },
                gallery
        );
    });

    $(document).ready(gallery);
</script>
</body>
</html>
