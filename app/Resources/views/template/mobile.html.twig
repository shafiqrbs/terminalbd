<!DOCTYPE html>
<html lang="en">
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!--> <html lang="en" class="no-js"> <!--<![endif]-->

<head>
    <meta charset="utf-8"/>
    <title>{{ globalOption.name }}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <meta content="" name="description"/>
    <meta content="" name="author"/>
    <meta name="MobileOptimized" content="320">
    <meta property="og:site_name" content="{{ globalOption.name }}">
    <meta property="og:title" content="{{ globalOption.name }}">
    <meta property="og:description" content="-CUSTOMER VALUE-">
    <meta property="og:type" content="website">
    <meta property="og:image" content="{{ image(globalOption.templateCustomize.webPath('logo')).resize() }}"><!-- link to image for socio -->
    <meta property="og:url" content="{{ globalOption.domain }}">
    <link rel="shortcut icon" href="favicon.ico">

    {% stylesheets filter='cssrewrite'
    'assets/template/mobile/default/css/jquery.mmenu.all.css'
    'assets/bindu/3rd/select2/select2.css'
    'assets/template/mobile/default/css/style.css'
    'assets/template/mobile/default/css/camera.css'
    'assets/template/mobile/default/css/photoswipe/photoswipe.css'
    'assets/frontend/common/css/hover-effects.css'
    'assets/frontend/common/css/accordion.css'
    'assets/bindu/3rd/tooltip/css/iml-styles.css'
    'assets/module/accordion/css/accordion.css'
    'assets/module/remodal/css/jquery.remodal.css'
    'assets/bindu/3rd/simple-editor/css/jquery.classyedit.css'
    'assets/bindu/3rd/rcswitcher/css/rcswitcher.min.css'
    'assets/bindu/3rd/time-picker/css/jquery.ptTimeSelect.css'
    'assets/frontend/common/css/common.css'
    'assets/module/capSlide/css/jquery.capSlide.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <link rel="shortcut icon" href="favicon.ico"/>
    <link rel="stylesheet" href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css">

</head>
<body class="o-page o-home p-blog">
<div id="page">
    <!-- Header -->
    <div id="header">
        <div class="header-content">
            <a class="menu-btn" href="#menu"></a>
            <a href="javascript:history.back();" class="p-link-back"><i class="fa fa-arrow-left"></i></a>
        </div>
    </div>
    <nav id="menu">
        {{ menuTree|raw }}
    </nav>
    <!-- Content -->
    {% block cssBlock %}{% endblock %}
{% block body %}{% endblock %}
{% block javascriptBlock %}{% endblock %}
    <div class="" id="mobile-footer">
        <ul class="social-networks">

            <li>
                <a href="tel:+88 {{ globalOption.mobile }}" data-title="{{ globalOption.mobile }}">
                    <i class="fa fa-phone"></i>
                </a>
            </li>
            <li>
                <a  href="#sms-modal" data-title="">
                    <i class="fa fa-comment"></i>
                </a>
            </li>
            <li>
                <a  href="javascript:" class="scrollToTop" data-title="Top up">
                    <i class="fa fa-hand-o-up"></i>
                </a>
            </li>
            <li>
                <a  href="#email-modal" data-title="">
                    <i class="fa fa-envelope"></i>
                </a>
            </li>
            <li>
                <a class="last" href="{{ path('mobile_contact',{'contact':'contact'}) }}" data-title="">
                    <i class="fa fa-map-marker"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="remodal" data-remodal-id="sms-modal" role="dialog" aria-labelledby="modal1Title" aria-describedby="modal1Desc">
        <form id="commentform" class="register">
            <div style="padding:10px">
                <h2 id="modal1Title">SEND SMS</h2>
                <div>
                    <p><span class="fa-icon"><i class="fa  fa-user"></i></span>
                        <input type="text" name="name" id="ContactName" placeholder="Enter your name">
                    </p>
                    <p><span class="fa-icon"><i class="fa  fa-mobile-phone"></i></span>
                        <input type="text" class="mobile" name="mobile" id="mobile" placeholder="Enter your mobile no ">
                    </p>
                    <p><textarea id="ContactMessage" name="comment" placeholder="Message"></textarea></p>
                    <input type="hidden" name="globalOption" id="globalOption" value=""  >
                </div>
                <span id="error"></span>
            </div>
            <button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
            <button data-remodal-action="confirm" class="remodal-confirm">Send</button>
        </form>
    </div>
</div>
{% javascripts
'assets/template/mobile/default/js/jquery.min.js'
'assets/template/mobile/default/js/jquery.mmenu.min.all.js'
'assets/template/mobile/default/js/slider/jquery.mobile.customized.min.js'
'assets/template/mobile/default/js/slider/jquery.easing.1.3.js'
'assets/template/mobile/default/js/slider/camera.min.js'
'assets/template/mobile/default/js/photoswipe/klass.min.js'
'assets/template/mobile/default/js/photoswipe/code.photoswipe.jquery-3.0.4.min.js'
'assets/template/mobile/default/js/o-script.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script type="text/javascript">

    $ = jQuery;
    jQuery(document).ready(function () {

        jQuery('#camera_wrap_4').camera({
            height: 'auto',
            loader: 'bar',
            pagination: false,
            thumbnails: false,
            hover: false,
            opacityOnGrid: false
        });

        jQuery('.scrollToTop').click(function(){
            $('html, body').animate({scrollTop : 0},800);
            return false;
        });

        {% block documentready %}
        {% endblock %}

    });
</script>
<style>

    .o-buttons.firoza {
        background:#008d71;
    }

    .o-buttons.green {
        background:#35aa47;
    }

    .o-buttons.blue {
        background: #0362fd;
    }

    .content-margin{
        margin: 10px; margin-bottom:40px; margin-top:0; background-color:#ffffff!important;
    }
    article p.posts-summary {
        height: 70px;
        overflow: hidden;
        padding-right: 5px;
        line-height: 17px;
        padding-top: 8px;
        text-align: left;
    }
    article a:hover{
        background-color:#c1cbd0!important;
    }
    .list{
        list-style: none;
        margin: 0;
        padding: 0;

    }
    .list .ul-list{
        list-style: none;
        margin: 0;
        padding: 0;

    }
    .list .ul-list li{
        list-style: none;
        margin: 0;
        padding: 0;
        height: 20px;
        line-height: 20px;

    }
    .list .ul-list li span{
        width: 20px;
        padding-right: 10px;
        display: inline-block;
    }
    .center{
        text-align: center;
    }

    .module-title{
        position: relative;
        margin-bottom:15px;
        font-size: 13px;
        padding-bottom: 5px;
        padding-top: 5px;

    }
    .module-title p{
        border-bottom: 1px solid #000033;
        line-height: 18px;
        padding-bottom: 5px;
        color: rgb(60, 150, 175);
    }
    /* ===========================Customer Register Form CSS Global for Mobile=========================================*/
    .register {
        margin-top: 30px;
    }

    .register .fa-icon {
        display: inline-block;
        top: 7px;
        position: absolute;
        left: 10px;
    }

    .register input[type="text"] , .register input[type="password"], .register textarea{
        width: 100%;
        background-color: #FFF;
        border: 1px solid #D7D9DB;
        padding: 3px 10px;
        height: 35px;
        color: #555;
        outline: none;
        font-size: 13px !important;
        padding-left: 25px!important;
        box-shadow: none;
        margin-bottom: 5px;
    }
    .register textarea{
        padding-left: 5px!important;
        height: 80px;
    }
    .register p input[type="text"], #signup p input[type="password"] , .register .select2 {
        width: 100%;
        height: 35px;
    }
    .register .select2-container , .register .select2-choice {
        height: 35px;
        line-height: 32px;
    }
    .register ul{
        margin-bottom: 2px;
    }
    .register ul li{
        list-style: none;
        color: red;
    }

    .register .submit {
        background-color: #131e2d;
        color: #FFF;
        border: none;
        text-transform: uppercase;
        cursor: pointer;
        margin-bottom: 10px;
    }

    .register p {
        text-align: left;
        position: relative;
    }
    .register p {
        margin-bottom: 20px;
    }

    .register .btn.blue {
        color: white;
        text-shadow: none;
        background-color: #4d90fe;
    }
    .register .btn {
        background-color: #e5e5e5;
        background-image: none;
        filter: none;
        border: 0;
        padding: 7px 14px;
        font-family: "Segoe UI", Helvetica, Arial, sans-serif;
        font-size: 14px;
        color: #333333;
        cursor: pointer;
        outline: none;
        -webkit-box-shadow: none !important;
        -moz-box-shadow: none !important;
        box-shadow: none !important;
        -webkit-border-radius: 0 !important;
        -moz-border-radius: 0 !important;
        border-radius: 0 !important;
        -webkit-text-shadow: none;
        -moz-text-shadow: none;
        text-shadow: none;
    }
    #modal1Desc{
        padding: 0;
    }
    .remodal-close{
        top:35px
    }
    .remodal #modal1Title {
        color: #fff;
        font-size: 15px;
        padding: 0px;
        text-align: left;
        padding-bottom:20px;
    }

</style>
</body>
</html>
