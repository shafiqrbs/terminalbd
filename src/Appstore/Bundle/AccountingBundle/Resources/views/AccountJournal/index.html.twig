
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Account of journal
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_journal') }}">Account of journal</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Account of journal lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Account journal</div>
                        <div class="spn5" id="message"></div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_journal_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('account_journal') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="portlet search-portlet box grey">
                                <form class="search-form" action="" method="get" name="itemSearch">
                                    <div class="span7">
                                        <div class="controls">
                                            <input type="text" id="startDate" name="startDate"  class="span4 search-input  date-picker" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="start date ">
                                            <input type="text" id="endDate" name="endDate"  class="span4 search-input  m-ctrl-medium date-picker" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="end date ">
                                            <select class="search-input span4" id="accountHead" name="accountHead">
                                                <option value="">Select account head</option>
                                                {% for account in accountHead %}
                                                    <option value="{{ account.id }}">{{ account.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="span4 leftMargin">
                                        <input type="text" id="toUser" name="toUser"  class="span11 select2User" value="{% if searchForm.toUser is defined %}{{ searchForm.toUser }} {% endif %}"  autocomplete="off" placeholder="select user">
                                    </div>
                                    <div class="span1">
                                        <div class="btn-group">
                                            <button class="btn" type="submit" >
                                                <i class="icon-search"></i>&nbsp;Go</button>
                                        </div>
                                    </div>
                                </form>
                                <div class="row-fluid " id="purchaseItemx">
                                    <div class="span4"><ul class="unstyled"><li><strong>Total Amount #:</strong>&nbsp;{{ overview|number_format }}</li></ul></div>
                                </div>
                            </div>

                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >To user</th>
                                    <th class="numeric" >Vendor</th>
                                    <th class="numeric" >Customer</th>
                                    <th class="numeric" >Bank</th>
                                    <th class="numeric" >Debit head</th>
                                    <th class="numeric" >Credit head</th>
                                    <th class="numeric" >Amount</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr id="remove-{{ entity.id }}">
                                        <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >{% if entity.toUser is not empty %}{{ entity.toUser }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.vendor is not empty %}{{ entity.vendor.name }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.customer is not empty %}{{ entity.customer }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.bank is not empty %}{{ entity.bank.name }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.accountHeadDebit is not empty %}{{ entity.accountHeadDebit.name }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.accountHeadCredit is not empty %}{{ entity.accountHeadCredit.name }}{% endif %}</td>
                                        <td class="numeric" >
                                            {% if entity.process == 'approved'  %}
                                                {{ entity.amount|number_format }}
                                            {% else %}
                                                <a data-mode="inline" class="editable" data-name="amount" href="#"  data-url="{{ path('account_journal_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your amount">{{ entity.amount }}</a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >
                                            {% if entity.process != 'approved'  %}
                                                <a href="javascript:" id="" data-id="{{ entity.id }}" class="btn red mini delete"  data-url="{{ path('account_journal_delete',{'id':entity.id}) }}"><i class="icon-trash"></i></a>
                                                <a href="javascript:" id="action-{{ entity.id }}" data-id="{{ entity.id }}" class="btn green mini approve "  data-url="{{ path('account_journal_approve',{'id':entity.id}) }}"><i class="icon-check"></i>&nbsp;Approve</a>
                                            {% elseif entity.process == 'approved'  %}
                                                <a href="javascript:" id="" data-id="" class="btn green mini "><i class="icon-check"></i>&nbsp;Approved</a>
                                            {% endif %}

                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/editable.js'
    '@AccountingBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    AccountingApproveProcess();
{% endblock %}



