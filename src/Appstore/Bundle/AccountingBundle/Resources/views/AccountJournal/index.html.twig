
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Account of journal
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_journal') }}">Account of journal</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Account of journal lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Account journal</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('account_journal_new') }}"><i class="icon-plus-sign"></i>&nbsp;Add New</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body">
                            {% include('flash-message.html.twig') %}
                            <form class="search-form" action="" method="get" name="itemSearch">
                                <div class="row-fluid">
                                    <div class="span3">
                                        <select class="search-input  span12 m-wrap" id="accountHeadDebit" name="accountHeadDebit">
                                            <option value="">Account Debit Head</option>
                                            {% for account in accountHead %}
                                                {% if account.children is not empty %}
                                                    <optgroup label="{{ account.name }}">
                                                     {% for child in account.children %}
                                                        {% if child.toIncrease == 'Debit' %}
                                                            <option {% if searchForm.accountHeadDebit is defined and searchForm.accountHeadDebit == child.id %} selected="selected" {% endif %} value="{{ child.id }}">{{ child.name }}</option>
                                                        {% endif %}
                                                     {% endfor %}
                                                    </optgroup>
                                                {% endif %}
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="span3">
                                        <select class="search-input  span12 m-wrap" id="accountHeadCredit" name="accountHeadCredit">
                                            <option value="">Account Credit Head</option>
                                            {% for account in accountHead %}
                                                {% if account.children is not empty %}
                                                    <optgroup label="{{ account.name }}">
                                                        {% for child in account.children %}
                                                            {% if child.toIncrease == 'Credit' %}
                                                                <option {% if searchForm.accountHeadDebit is defined and searchForm.accountHeadDebit == child.id %} selected="selected" {% endif %} value="{{ child.id }}">{{ child.name }}</option>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </optgroup>
                                                {% endif %}
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="span2">
                                        <input type="text" id="toUser" name="toUser"  class="span12 select2User leftMargin" value="{% if searchForm.toUser is defined %}{{ searchForm.toUser }}{% endif %}"  autocomplete="off" placeholder="Search user name">
                                    </div>
                                    <div class="span2">
                                        <input type="text" id="startDate" name="startDate"  class="span12 m-wrap search-input  date-picker" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}Start date{% endif %} ">
                                    </div>
                                    <div class="span2">
                                        <div class="controls">
                                            <div class="input-append span11">
                                                <input type="text" id="endDate" name="endDate"  class="span8 m-wrap search-input  m-ctrl-medium date-picker" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}End date{% endif %} ">
                                                <div class="btn-group">
                                                    <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content">
                                <tr class="head-red">
                                    <th class="numeric" ><strong>Debit</strong></th>
                                    <th class="numeric" ><strong>Credit</strong></th>
                                    <th class="numeric" ><strong>Balance</strong></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="numeric" ><strong>{{ overview.debit|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.credit|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ (overview.debit - overview.credit)|number_format }}</strong></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="portlet-body flip-scroll">

                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                 <tr class="head-blue">
                                     <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >User</th>
                                    <th class="numeric" >Method</th>
                                    <th class="numeric" >Ref No</th>
                                    <th class="numeric" >Debit</th>
                                    <th class="numeric" >Credit</th>
                                    <th class="numeric" >Debit</th>
                                    <th class="numeric" >Credit</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr id="remove-{{ entity.id }}">
                                        <td><span class="badge badge-success toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span></td>
                                        <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" ><a href="javascript:" class="tooltips" data-title="{% if entity.toUser is not empty %}{{ entity.toUser.profile.name }}{% endif %}" data-trigger="hover">{{ entity.toUser }}</a></td>
                                        <td class="numeric" >{% if entity.transactionMethod is not empty %}{{ entity.transactionMethod.name }}{% endif %}</td>
                                        <td class="numeric" >{{ entity.accountRefNo }}</td>
                                        <td class="numeric" >{% if entity.accountHeadDebit is not empty %}{{ entity.accountHeadDebit.name }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.accountHeadCredit is not empty %}{{ entity.accountHeadCredit.name }}{% endif %}</td>
                                        <td class="numeric" >
                                            {% if entity.transactionType == 'Debit' %}
                                            {% if entity.process == 'approved'  %}
                                                {{ entity.amount|number_format }}
                                            {% else %}
                                                <a data-mode="inline" class="editable" data-name="amount" href="#"  data-url="{{ path('account_journal_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your amount">{{ entity.amount }}</a>
                                            {% endif %}
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >
                                            {% if entity.transactionType == 'Credit' %}
                                            {% if entity.process == 'approved'  %}
                                                {{ entity.amount|number_format }}
                                            {% else %}
                                                <a data-mode="inline" class="editable" data-name="amount" href="#"  data-url="{{ path('account_journal_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your amount">{{ entity.amount }}</a>
                                            {% endif %}
                                            {% endif %}
                                        </td>
                                        <td class="" >
                                            {% if entity.process != 'approved'  %}
                                                <a href="javascript:" id="delete-{{ entity.id }}" data-id="{{ entity.id }}" class="btn red mini delete"  data-url="{{ path('account_journal_delete',{'id':entity.id}) }}"><i class="icon-trash"></i></a>
                                                <a href="javascript:" id="action-{{ entity.id }}" data-id="{{ entity.id }}" class="btn green mini approve "  data-url="{{ path('account_journal_approve',{'id':entity.id}) }}"><i class="icon-check"></i>&nbsp;Approve</a>
                                            {% elseif ( ("now"|date("d-m-y") == entity.updated|date('d-m-y')) and entity.process == 'approved' and  entity.journalSource is empty and app.user.granted("ROLE_DOMAIN_ACCOUNT_REVERSE")) or (  ("now"|date("d-m-y") == entity.updated|date('d-m-y')) and entity.process == 'approved' and  entity.journalSource is empty and app.user.granted("ROLE_DOMAIN")) %}
                                                <a href="{{ path('account_journal_reverse',{'id':entity.id}) }}" id="" data-id="" class="btn purple mini "><i class="icon-retweet"></i>&nbsp;Reverse</a>
                                            {% endif %}

                                        </td>
                                    </tr>
                                    <tr id="show-{{ entity.id }}" class="showing-overview">
                                        <td colspan="10">
                                            <table class="table">
                                                <tr><td>Remark</td><td>{{ entity.remark }}</td></tr>
                                                {% if entity.accountBank is not empty %}
                                                    <tr><td>Bank name</td><td>{{ entity.accountBank.bank.name }}</td></tr>
                                                    <tr><td>Account no.</td><td>{{ entity.accountBank.accountNo }}</td></tr>
                                                {% endif %}
                                                {% if entity.accountMobileBank is not empty %}
                                                    <tr><td>Mobile Account</td><td>{{ entity.accountMobileBank.name }}</td></tr>
                                                {% endif %}
                                            </table>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/editable.js'
    '@AccountingBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    AccountingApproveProcess();
{% endblock %}



