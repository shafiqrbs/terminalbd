{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN account_journal HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="account_journal-title">
                    Journal Entry
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_journal') }}">Journal Entry</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Journal Entry new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END account_journal HEADER-->
        <!-- BEGIN account_journal CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Journal Entry Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_journal_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('account_journal') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('account_journal_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('account_journal_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">

                                <div class="span4">

                                    {#
                                    <div class="row-fluid">
                                      <div class="span12">
                                          <div class="control-group">
                                              <label class="control-label" for="vendor">Vendor</label>
                                              <div class="controls">
                                                  {{ form_widget(form.vendor) }}
                                                  {{ form_errors(form.vendor) }}
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                                  <div class="row-fluid">
                                          <div class="span12">
                                              <div class="control-group">
                                                  <label class="control-label" for="customer">Customer</label>
                                                  <div class="controls">
                                                      {{ form_widget(form.customer) }}
                                                      {{ form_errors(form.customer) }}
                                                  </div>
                                              </div>
                                          </div>
                                  </div>#}

                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Transaction Type</label>
                                                <div class="controls">
                                                    {{ form_widget(form.transactionType) }}
                                                    {{ form_errors(form.transactionType) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="toUser">To/Form User</label>
                                                <div class="controls">
                                                    {{ form_widget(form.toUser) }}
                                                    {{ form_errors(form.toUser) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                   <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="transactionMethod">Transaction Method</label>
                                                <div class="controls">
                                                    {{ form_widget(form.transactionMethod) }}
                                                    {{ form_errors(form.transactionMethod) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid bankHide">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Bank Account</label>
                                                <div class="controls">
                                                    {{ form_widget(form.accountBank) }}
                                                    {{ form_errors(form.accountBank) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid mobileBankHide">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Mobile Account</label>
                                                <div class="controls">
                                                    {{ form_widget(form.accountMobileBank) }}
                                                    {{ form_errors(form.accountMobileBank) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    {#
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Transactional Account</label>
                                                <div class="controls">
                                                    {{ form_widget(form.processHead) }}
                                                    {{ form_errors(form.processHead) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>#}


                                </div>
                                <div class="span4">

                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Debit head</label>
                                                <div class="controls">
                                                    {{ form_widget(form.accountHeadDebit) }}
                                                    {{ form_errors(form.accountHeadDebit) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Credit head</label>
                                                <div class="controls">
                                                    {{ form_widget(form.accountHeadCredit) }}
                                                    {{ form_errors(form.accountHeadCredit) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Amount</label>
                                                <div class="controls">
                                                    {{ form_widget(form.amount) }}
                                                    {{ form_errors(form.amount) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Remark</label>
                                        <div class="controls">
                                            {{ form_widget(form.remark) }}
                                            {{ form_errors(form.remark) }}
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i>&nbsp;Payment</button>
                                    <button type="submit" class="btn red"><i class="icon-refresh"></i>&nbsp;Cancel</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('account_journal_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
