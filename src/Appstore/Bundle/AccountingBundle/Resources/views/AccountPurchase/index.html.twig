{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Account of purchase
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_purchase') }}">Account of purchase</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Account of purchase lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Account purchase</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_purchase_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('account_purchase') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="portlet search-portlet box grey">
                                <form class="search-form" action="" method="get" name="itemSearch">
                                    <div class="span7">
                                        <div class="controls">
                                            <input type="text" id="startDate" name="startDate"  class="span6 search-input  date-picker" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}Start receive date{% endif %} ">
                                            <input type="text" id="endDate" name="endDate"  class="span6 search-input date-picker" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}End receive date{% endif %}  ">
                                        </div>
                                    </div>
                                    <div class="span4 leftMargin">
                                        <input type="text" id="vendor" name="vendor"  class="span11 select2Vendor" value="{% if searchForm.vendor is defined %}{{ searchForm.vendor }}{% endif %}"  autocomplete="off" >
                                    </div>
                                    <div class="span1">
                                        <div class="btn-group">
                                            <button class="btn" type="submit" >
                                                <i class="icon-search"></i>&nbsp;Go</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr>
                                    <th class="numeric" colspan="4" style="text-align: right"><strong>Grand Total</strong></th>
                                    <td class="numeric" ><strong>{{ overview.totalAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.amount|number_format }}</strong></td>
                                    <td class="numeric" ><strong><strong>{{  (overview.totalAmount - overview.amount)|number_format }}</strong></strong></td>
                                    <td class="numeric" ></td>
                                </tr>
                                <tr class="head-grey">
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Company Name</th>
                                    <th class="numeric" >Purchase</th>
                                    <th class="numeric" >Purchase Return</th>
                                    <th class="numeric" >Total Amount</th>
                                    <th class="numeric" >Payment</th>
                                    <th class="numeric" >Due</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr id="remove-{{ entity.id }}">
                                        <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.vendor.name }}</td>
                                        <td class="numeric" >{% if  entity.purchase is not empty %}{{ entity.purchase.receiveDate|date('d-m-Y') }}/{{  entity.purchase.grn }}{% elseif  entity.purchase is empty and  entity.purchaseReturn is empty and entity.toIncrease == 'Debit'   %} Purchase Due Payment {% endif %}</td>
                                        <td class="numeric" >{% if  entity.purchaseReturn is not empty %}{{ entity.purchaseReturn.updated|date('d-m-Y') }}/{{  entity.purchaseReturn.invoice }}{% elseif  entity.purchase is empty and  entity.purchaseReturn is empty and entity.toIncrease == 'Credit'   %} Purchase Return Cash Receive {% endif %}{% if  entity.purchaseReturn is not empty %}{% endif %}</td>
                                        <td class="numeric" >{{ entity.totalAmount|number_format }}</td>
                                        <td class="numeric" >
                                                {% if entity.process == 'approved'  %}
                                                    {{ entity.amount|number_format }}
                                                {% else %}
                                                    <a  class="editable" data-name="amount" href="#"  data-url="{{ path('account_purchase_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your amount">{{ entity.amount }}</a>
                                                {% endif %}
                                        </td>
                                        <td class="numeric" >{{ entity.dueAmount|number_format }}</td>
                                        <td class="numeric" >
                                            {% if entity.process != 'approved'  %}
                                                <a href="javascript:" id="" data-id="{{ entity.id }}" class="btn red mini delete"  data-url="{{ path('account_purchase_delete',{'id':entity.id}) }}"><i class="icon-trash"></i></a>
                                                <a href="javascript:" id="action-{{ entity.id }}" data-id="{{ entity.id }}" class="btn green mini approve "  data-url="{{ path('account_purchase_approve',{'id':entity.id}) }}"><i class="icon-check"></i>&nbsp;Approve</a>
                                            {% elseif entity.process == 'approved'  %}
                                                <a href="javascript:" id="" data-id="" class="btn blue mini "><i class="icon-check"></i>&nbsp;Approved</a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/editable.js'
    '@AccountingBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    AccountingApproveProcess();
{% endblock %}


