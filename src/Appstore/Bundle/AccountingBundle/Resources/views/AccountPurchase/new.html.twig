{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN account_purchase HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="account_purchase-title">
                    Vendor Payment
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_purchase') }}">Vendor Payment</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Vendor Payment new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END account_purchase HEADER-->
        <!-- BEGIN account_purchase CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Vendor Payment Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_purchase_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('account_purchase') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('account_purchase_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('account_purchase_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">

                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" for="vendor">Company name</label>
                                        <div class="controls">
                                            {{ form_widget(form.vendor) }}
                                            {{ form_errors(form.vendor) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Process Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.processType) }}
                                            {{ form_errors(form.processType) }}
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row-fluid">

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="vendor">Bank</label>
                                        <div class="controls">
                                            {{ form_widget(form.bank) }}
                                            {{ form_errors(form.bank) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Payment method</label>
                                        <div class="controls">
                                            {{ form_widget(form.paymentMethod) }}
                                            {{ form_errors(form.paymentMethod) }}
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row-fluid">


                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Account no</label>
                                        <div class="controls">
                                            {{ form_widget(form.accountNo) }}
                                            {{ form_errors(form.accountNo) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Amount</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.amount) }}
                                                {{ form_errors(form.amount) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i>&nbsp;Payment</button>
                                    <button type="submit" class="btn red"><i class="icon-refresh"></i>&nbsp;Cancel</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('account_purchase_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
