
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Account of sales
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_sales') }}">Account of sales</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Account of sales lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Account sales</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_sales_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('account_sales') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="portlet search-portlet box grey">
                                <form class="search-form" action="" method="get" name="itemSearch">
                                    <div class="span4">
                                        <div class="controls">
                                            <input type="text" id="startDate" name="startDate"  class="span6 search-input  date-picker" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}start date{% endif %} ">
                                            <input type="text" id="endDate" name="endDate"  class="span6 search-input  m-ctrl-medium date-picker" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}end date{% endif %} ">
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <select class="search-input span12 select2" id="accountHead" name="accountHead">
                                            <option value="">Select account head</option>
                                            {% for account in accountHead %}
                                                {% set accountId = searchForm.accountHead is defined ? searchForm.accountHead : '' %}
                                                <option value="{{ account.id }}" {% if accountId == account.id %} selected="selected" {% endif %} >{{ account.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="span4">
                                        <input type="text" id="toUser" name="toUser"  class="span11 select2Customer" value="{% if searchForm.toUser is defined %}{{ searchForm.toUser }}{% endif %}"  autocomplete="off" placeholder="select user">
                                    </div>
                                    <div class="1">
                                        <div class="control-group">
                                            <div class="controls">
                                                <div class="input-append">
                                                    <div class="btn-group">
                                                        <button class="btn" type="submit" >
                                                            <i class="icon-search"></i>&nbsp;Go</button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>

{#                            <div class="row-fluid " id="purchaseItemx">
                                <div class="span4"><ul class="unstyled"><li><strong>Total Amount #:</strong>&nbsp;</li></ul></div>
                                <div class="span4"><ul class="unstyled"><li><strong>Receive Amount:</strong> &nbsp; </li></ul></div>
                                <div class="span4"><ul class="unstyled"><li><strong>Due Amount:</strong> &nbsp;</li></ul></div>
                            </div>#}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr>
                                    <th class="numeric" colspan="4" style="text-align: right"><strong>Grand Total</strong></th>
                                    <td class="numeric" ><strong>{{ overview.totalAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.receiveAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.dueAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.returnAmount|number_format }}</strong></td>
                                    <td class="numeric" ></td>
                                </tr>
                                <tr class="head-grey">
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Invoice</th>
                                    <th class="numeric" >Account Head</th>
                                    <th class="numeric" >Method</th>
                                    <th class="numeric" >Total</th>
                                    <th class="numeric" >Received</th>
                                    <th class="numeric" >Due</th>
                                    <th class="numeric" >Return</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr id="remove-{{ entity.id }}">
                                        <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >
                                            {% if entity.sales is not empty %}{{ entity.sales.invoice }} {% endif %}
                                            {% if entity.salesReturn is not empty %}{{ entity.salesReturn.invoice }} {% endif %}
                                        </td>

                                        <td class="numeric" >{{ entity.accountHead.name }}/{{ entity.accountHead.code }}</td>
                                        <td class="numeric" >{{ entity.sales.paymentMethod }}</td>
                                        <td class="numeric" >{{ entity.totalAmount|number_format }}</td>
                                        <td class="numeric" >
                                                {% if entity.process == 'approved'  %}
                                                    {{ entity.amount|number_format }}
                                                {% else %}
                                                    <a data-mode="inline" class="editable" data-name="amount" href="#"  data-url="{{ path('account_sales_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your amount">{{ entity.amount }}</a>
                                                {% endif %}
                                        </td>
                                        <td class="numeric" >{{ entity.dueAmount|number_format }}</td>
                                        <td class="numeric" >{{ entity.returnAmount|number_format }}</td>
                                        <td class="numeric" >
                                            {% if entity.process != 'approved'  %}
                                                <a href="javascript:" id="" data-id="{{ entity.id }}" class="btn red mini delete"  data-url="{{ path('account_sales_delete',{'id':entity.id}) }}"><i class="icon-trash"></i></a>
                                                <a href="javascript:" id="action-{{ entity.id }}" data-id="{{ entity.id }}" class="btn green mini approve "  data-url="{{ path('account_sales_approve',{'id':entity.id}) }}"><i class="icon-check"></i>&nbsp;Approve</a>
                                            {% elseif entity.process == 'approved'  %}
                                                <a href="javascript:" id="" data-id="" class="btn blue mini "><i class="icon-check"></i>&nbsp;Approved</a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/approveProcess.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $(".editable").editable();
    AccountingApproveProcess();
{% endblock %}


