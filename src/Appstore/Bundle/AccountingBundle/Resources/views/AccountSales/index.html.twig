
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Account of sales
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_sales') }}">Account of sales</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Account of sales lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Account sales</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('account_sales_new') }}"><i class="icon-plus-sign"></i>&nbsp; New Receive</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body">
                            {% include('flash-message.html.twig') %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content">
                                <tr class="head-red">
                                    <th class="numeric" ><strong>Received Mode</strong></th>
                                    <th class="numeric" ><strong>Count</strong></th>
                                    <th class="numeric" ><strong>Total</strong></th>
                                    <th class="numeric" ><strong>Received</strong></th>
                                    <th class="numeric" ><strong>Balance</strong></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set countInvoice = 0 %}
                                {% set netTotal = 0 %}
                                {% set netReceive = 0 %}
                                {% for overview in overview %}
                                    {% set countInvoice = countInvoice + overview.totalCount  %}
                                    {% set netTotal = netTotal+ overview.total  %}
                                    {% set netReceive = netReceive+ overview.receive  %}
                                <tr>
                                    <td class="numeric" ><strong>{{ overview.processHead }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.totalCount }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.total|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.receive|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{% if overview.total > 0  %}{{ (overview.total-overview.receive)|number_format }}{% endif %}</strong></td>
                                </tr>
                                {% endfor %}
                                </tbody>
                                <tr><th>Summary</th><th>{{ countInvoice }}</th><th>{{ netTotal|number_format }}</th><th>{{ netReceive|number_format }}</th><th>{{ (netTotal-netReceive)|number_format }}</th></tr>
                            </table>
                            <form class="search-form" action="" method="get" name="itemSearch">
                                <div class="row-fluid">
                                    <div class="span2">
                                        <input type="text" id="mobile" name="mobile"  class="leftMargin span12 select2Customer m-wrap" value="{% if searchForm.mobile is defined %}{{ searchForm.mobile }}{% endif %}"  autocomplete="off" placeholder="Customer mobile no">
                                    </div>
                                    <div class="span2">
                                        <input type="text" id="invoice" name="invoice"  class="leftMargin span12  m-wrap" value="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% endif %}"  autocomplete="off" placeholder="Invoice no">
                                    </div>
                                    <div class="span2">
                                        <select name="transactionMethod" id="transactionMethod" class="leftMargin span12 m-wrap">
                                            <option value="" >--Transaction--</option>
                                            {% for method in transactionMethods %}
                                                <option {% if searchForm.transactionMethod is defined and searchForm.transactionMethod == method.id %} selected="selected" {% endif %} value="{{ method.id }}" >{{ method.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="span2">
                                        <input type="text" id="accountRefNo" name="accountRefNo"  class="span12 search-input  m-wrap" value="{% if searchForm.accountRefNo is defined %}{{ searchForm.accountRefNo }}{% endif %}"  autocomplete="off" placeholder="Enter reference no">
                                    </div>
                                    <div class="span2">
                                        <input type="text" id="startDate" name="startDate"  class="span12 search-input  dateCalendar m-wrap" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}Start date{% endif %} ">
                                    </div>
                                    <div class="span2">
                                        <div class="controls">
                                            <div class="input-append span11">
                                                <input type="text" id="endDate" name="endDate"  class="span10 search-input dateCalendar m-wrap" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}End date{% endif %} ">
                                                <div class="btn-group">
                                                    <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content "><tr class="head-blue">
                                    {%  set sort = app.request.query.get('sort') %}
                                    {%  set direction = app.request.query.get('direction') %}
                                    <th {% if entities.isSorted('e.updated') %} class="sorted" {% endif %} >{{ knp_pagination_sortable(entities, 'Created', 'e.updated') }}{% if( direction == 'desc' and sort == 'e.updated') %}<i class="icon-sort-by-alphabet-alt"></i> {% else %}<i class="icon-sort-by-alphabet"></i> {% endif %}</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Mobile</th>
                                    <th class="numeric" >Invoice</th>
                                    <th {% if entities.isSorted('e.processHead') %} class="sorted" {% endif %} >{{ knp_pagination_sortable(entities, 'Receive Mode', 'e.processHead') }}{% if( direction == 'desc' and sort == 'e.processHead') %}<i class="icon-sort-by-alphabet-alt"></i> {% else %}<i class="icon-sort-by-alphabet"></i> {% endif %}</th>
                                    <th class="numeric" >Ref No.</th>
                                    <th class="numeric" >Trans. Method</th>
                                    <th class="numeric" >Sales</th>
                                    <th class="numeric" >Received</th>
                                    <th class="numeric" >Due</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr id="remove-{{ entity.id }}">
                                        <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >{% if entity.customer is not empty %}{{ entity.customer.name }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.customer is not empty %}{{ entity.customer.mobile }}{% endif %}</td>
                                        <td class="numeric" >
                                            {% if entity.sales is not empty %}{{ entity.sales.invoice }} {% endif %}
                                        </td>
                                        <td class="numeric" >{{ entity.processHead|capitalize }}</td>
                                        <td class="numeric" >{{ entity.accountRefNo }}</td>
                                         <td class="numeric" >
                                             {% if entity.transactionMethod is defined and entity.transactionMethod is not empty %}{{ entity.transactionMethod.name }}{% endif %}
                                         </td>
                                        <td class="numeric" >{{ entity.totalAmount|number_format }}</td>
                                        <td class="numeric" >
                                                {% if entity.process == 'approved'  %}
                                                    {{ entity.amount|number_format }}
                                                {% else %}
                                                    <a data-mode="inline" class="editable" data-name="amount" href="#"  data-url="{{ path('account_sales_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your amount">{{ entity.amount }}</a>
                                                {% endif %}
                                        </td>
                                        <td class="numeric" >{{ entity.balance|number_format }}</td>
                                        <td class="numeric" >
                                            {% if entity.process != 'approved'  %}
                                                <a href="javascript:" id="" data-id="{{ entity.id }}" class="btn red mini delete"  data-url="{{ path('account_sales_delete',{'id':entity.id}) }}"><i class="icon-trash"></i></a>
                                                {% if  entity.amount is not empty  %}
                                                <a href="javascript:" id="action-{{ entity.id }}" data-id="{{ entity.id }}" class="btn green mini approve "  data-url="{{ path('account_sales_approve',{'id':entity.id}) }}"><i class="icon-check"></i>&nbsp;Approve</a>
                                                {% endif %}
                                            {% elseif entity.process == 'approved' %}
                                                <a href="javascript:" id="" data-id="" class="btn blue mini "><i class="icon-check"></i>&nbsp;Approved</a>
                                            {% endif %}
                                           {# {% if entity.sales is not empty and  entity.sales.paymentStatus == 'Due' %}
                                            <a href="{{ path('account_sales_due',{'sales':entity.sales.id}) }}" class="btn mini yellow"><i class="icon-money"></i></a>
                                            {% endif %}#}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/approveProcess.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block documentready %}
    {{ parent() }}
    $(".editable").editable();
    AccountingApproveProcess();
{% endblock %}


