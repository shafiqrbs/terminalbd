
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Account of payment salary
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Account of payment salary</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Account of payment salary</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_paymentsalary_employee') }}"><i class="icon-th-list"></i>&nbsp;Employee salary</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="portlet search-portlet box grey">
                                <form class="search-form" action="" method="get" name="itemSearch">
                                    <div class="span4">
                                        <div class="controls">
                                            <input type="text" id="startDate" name="startDate"  class="span6 search-input  date-picker" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}start date{% endif %} ">
                                            <input type="text" id="endDate" name="endDate"  class="span6 search-input  m-ctrl-medium date-picker" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}end date{% endif %} ">
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <select class="search-input span12 select2" id="paymentMethod" name="paymentMethod">
                                                <option value="">Select payment method</option>
                                                {% set paymentMethod = searchForm.paymentMethod is defined ? searchForm.paymentMethod : '' %}
                                                <option value="Cash" {% if paymentMethod == 'Cash' %} selected="selected" {% endif %} >Cash</option>
                                                <option value="Cheque" {% if paymentMethod == 'Cheque' %} selected="selected" {% endif %} >Cheque</option>
                                            </select>
                                    </div>
                                    <div class="span4">
                                        <input type="text" id="toUser" name="toUser"  class="span11 select2User" value="{% if searchForm.toUser is defined %}{{ searchForm.toUser }}{% endif %}"  autocomplete="off" placeholder="select user">
                                    </div>
                                    <div class="1">
                                        <div class="control-group">
                                            <div class="controls">
                                                <div class="input-append">
                                                    <div class="btn-group">
                                                        <button class="btn" type="submit" >
                                                            <i class="icon-search"></i>&nbsp;Go</button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr>
                                    <th class="numeric" colspan="4" style="text-align: right"><strong>Grand Total</strong></th>
                                    <td class="numeric" ><strong>{% set basic = overview.totalAmount - overview.otherAmount  %}{{ basic|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.otherAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.totalAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.paidAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.advanceAmount|number_format }}</strong></td>
                                    <td class="numeric" ><strong>{{ overview.dueAmount|number_format }}</strong></td>
                                    <td class="numeric" ></td>
                                </tr>

                                <tr class="head-grey">
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Month</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Method</th>
                                    <th class="numeric" >Basic</th>
                                    <th class="numeric" >Other</th>
                                    <th class="numeric" >Total</th>
                                    <th class="numeric" >Payment</th>
                                    <th class="numeric" >Advance</th>
                                    <th class="numeric" >Due</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for payment in entities %}
                                    <tr id="remove-{{ payment.id }}">
                                        <td class="numeric" >{{ payment.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ payment.salaryMonth }}</td>
                                        <td class="numeric" >{{ payment.salarySetting.name }}/{{ payment.salarySetting.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ payment.paymentMethod }}</td>
                                        <td class="numeric" >{{ payment.salarySetting.totalAmount }}</td>
                                        <td class="numeric" >{{ payment.otherAmount }}</td>
                                        <td class="numeric" >{{ payment.totalAmount }}</td>
                                        <td class="numeric" >{{ payment.paidAmount }}</td>
                                        <td class="numeric" >{{ payment.advanceAmount }}</td>
                                        <td class="numeric" >{{ payment.dueAmount }}</td>
                                        <td class="numeric" >
                                            {% if payment.process != 'approved'  %}
                                                <a href="javascript:" id="" data-id="{{ payment.id }}" class="btn red mini delete"  data-url="{{ path('account_paymentsalary_delete',{'id':payment.id}) }}"><i class="icon-trash"></i></a>
                                                <a href="javascript:" id="action-{{ payment.id }}" data-id="{{ payment.id }}" class="btn green mini approve "  data-url="{{ path('account_paymentsalary_approve',{'id':payment.id}) }}"><i class="icon-check"></i>&nbsp;Approve</a>
                                            {% elseif payment.process == 'approved'  %}
                                                <a href="javascript:" id="" data-id="" class="btn blue mini "><i class="icon-check"></i>&nbsp;Approved</a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/editable.js'
    '@AccountingBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    AccountingApproveProcess();
{% endblock %}



