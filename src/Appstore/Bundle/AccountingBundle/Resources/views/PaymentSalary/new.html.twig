{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN account_salarysetting HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="account_salarysetting-title">
                    Salary Setting
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('account_salarysetting') }}">Salary Setting</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Salary Setting new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END account_salarysetting HEADER-->
        <!-- BEGIN account_salarysetting CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Salary Setting Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('account_paymentsalary') }}"><i class="icon-th-list"></i>&nbsp;Payment Salary</a></li>
                                    <li><a href="{{ path('account_paymentsalary_employee') }}"><i class="icon-th-list"></i>&nbsp;Salary Employee</a></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('account_salarysetting_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('account_salarysetting_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">

                                <div class="span9">
                                    <div class="control-group">
                                        <label class="control-label" for="Expenditure">Salary</label>
                                        <div class="controls">
                                            {{ form_widget(form.salarySetting) }}
                                            {{ form_errors(form.salarySetting) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="Expenditure">Salary month</label>
                                        <div class="controls">
                                            {{ form_widget(form.salaryMonth) }}
                                            {{ form_errors(form.salaryMonth) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">

                                        <div class="controls">
                                            {{ form_widget(form.paymentMethod) }}
                                            {{ form_errors(form.paymentMethod) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="sendBank"></label>
                                        <div class="controls">

                                            Send Bank {{ form_widget(form.sendBank) }}
                                            {{ form_errors(form.sendBank) }}

                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">

                                        <div class="controls">
                                            <input type="text" id="salaryAmount" name="salaryAmount" readonly="readonly" class="m-wrap span12 numeric" placeholder="Salary amount">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">

                                    <div class="control-group hide">
                                        <label class="control-label" for="bank">
                                            {{ form_widget(form.bank) }}
                                            {{ form_errors(form.bank) }}
                                        </label>
                                    </div>
                                </div>
                                <div class="span3 ">
                                    <div class="control-group hide">
                                        <label class="control-label" for="accountNo">
                                            {{ form_widget(form.accountNo) }}
                                            {{ form_errors(form.accountNo) }}
                                        </label>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="otherAmount">
                                            {{ form_widget(form.otherAmount) }}
                                            {{ form_errors(form.otherAmount) }}
                                         </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">
                                            {{ form_widget(form.remark) }}
                                            {{ form_errors(form.remark) }}
                                        </label>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">
                                            <input type="text" id="totalAmount" name="totalAmount" readonly="readonly" class="m-wrap span12 numeric" placeholder="Total amount">
                                        </label>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="paidAmount">
                                            {{ form_widget(form.paidAmount) }}
                                            {{ form_errors(form.paidAmount) }}
                                        </label>
                                    </div>
                                </div>

                            </div>
                             <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i>&nbsp;Save</button>
                                    <button type="reset" class="btn red"><i class="icon-refresh"></i>&nbsp;Cancel</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('account_salarysetting_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/common.js'
    '@AccountingBundle/Resources/public/js/paymentsalary.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    PaymentSalary();
{% endblock %}