{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN category HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="category-title">
                    Customer Invoice #  <strong>{{ entity.invoice }}</strong>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_invoice') }}">Customer Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Customer Invoice</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END category HEADER-->
        <!-- BEGIN category CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Invoice Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn black" href="{{ path('business_invoice') }}"><i class="icon-th-list"></i> Invoice</a>
                                <a class="btn red" href="{{ path('business_invoice_new') }}"><i class="icon-plus-sign"></i> New Invoice</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="clearfix"></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="form-actions portlet box yellow">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Event & Customer Information</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>

                                    <div class="row-fluid" >
                                        <div class="span4" >
                                            <div class="row-fluid">
                                                <div class="span12" >
                                                    <input type="text" style="margin-left:0!important;" id="mobile" name="mobile"  class="span12 m-wrap select2Customer eventProcess inputs" value="{% if entity.customer.name != 'Default' %}{{ entity.customer.mobile }}{% endif %}"  autocomplete="off" placeholder="Search existing customer name/mobile">
                                                </div>
                                            </div>
                                            <br/>
                                            <div class="row-fluid">
                                                <div class="span12" >
                                                    <div class="input-icon left">
                                                        <i class="icon-user"></i>
                                                        <input type="text" id="customerName" name="customerName" class="m-wrap span12 customer-input eventProcess" autocomplete="off" placeholder="Customer name/company" value="{% if entity.customer.name != "Default" %}{{ entity.customer.name }} {% endif %}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span12" >
                                                    <div class="input-icon left">
                                                        <i class="icon-phone"></i>
                                                        <input type="text" id="customerMobile" name="customerMobile" class="m-wrap span12 customer-input eventProcess" autocomplete="off" placeholder="Customer mobile no" value="{% if entity.customer.name != "Default" %}{{ entity.customer.mobile }}{% endif %}">
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="span4">
                                            <div class="row-fluid">
                                                <div class="span12" >
                                                    <div class="input-icon left">
                                                        <i class="icon-map-marker"></i>
                                                        <input type="text" id="venue" name="venue" class="m-wrap span12 eventProcess" autocomplete="off" placeholder="Event venue name" value="{{ entity.venue }}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span12" >
                                                    <textarea class="m-wrap span12 eventProcess" rows="4" name="customerAddress" id="customerAddress" placeholder="Enter address">{{ entity.customer.address|raw }}</textarea>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="span4 payment-info">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span class="label">Discount Type</span> <span class="pull-right sales-right">{{ form_widget(form.discountType) }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span class="label">Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span></label>
                                                        {# {{ form_widget(form.discount) }}#}
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span class="label">Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.received) }}</span></label>
                                                        <div class="controls">
                                                            {{ form_errors(form.received) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span id="balance" class="label">Due TK.</span> <span class="pull-right sales-right due" style="text-align:left;width:110px">{{ entity.due }}</span></label>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12 input-append-border">
                                                    {{ form_widget(form.transactionMethod) }}
                                                    {{ form_errors(form.transactionMethod) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div id="cartMethod">
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="input-prepend input-append input-append-border span12">
                                                            {{ form_widget(form.cardNo) }}
                                                            {{ form_errors(form.cardNo) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12 input-append-border">
                                                        {{ form_widget(form.paymentCard) }}
                                                        {{ form_errors(form.paymentCard) }}
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12 input-append-border">
                                                        {{ form_widget(form.accountBank) }}
                                                        {{ form_errors(form.accountBank) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="bkashMethod">
                                                <div class="row-fluid">
                                                    <div class="span12 input-append-border">
                                                        {{ form_widget(form.accountMobileBank) }}
                                                        {{ form_errors(form.accountMobileBank) }}
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="input-prepend input-append input-append-border span12">
                                                            {{ form_widget(form.paymentMobile) }}
                                                            {{ form_errors(form.paymentMobile) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="input-prepend input-append input-append-border span12">
                                                            {{ form_widget(form.transactionId) }}
                                                            {{ form_errors(form.transactionId) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12 input-append-border">
                                                    {{ form_widget(form.salesBy) }}
                                                    {{ form_errors(form.salesBy) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    {{ form_widget(form.comment) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>


                                <div class="clearfix">&nbsp;</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="row-fluid">
                            <div class="span12" id="particular-table">
                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                    <thead>
                                    <tr>
                                        <th class=""> Si/No</th>
                                        <th class="span4">Particular</th>
                                        <th class="span2">Unit Price</th>
                                        <th class="numeric" colspan="2" >
                                            <div class="row-fluid" style="border-bottom: 2px solid #ffffff; text-align: center; font-weight: bold"><span class="span12">Sales</span></div>
                                            <div class="row-fluid">
                                                <span class="span4">Quantity</span><span class="span4">Total</span></div>
                                        </th>
                                        <th class="numeric" colspan="2" >
                                            <div class="row-fluid" style="border-bottom: 2px solid #ffffff; text-align: center; font-weight: bold"><span class="span12">Return</span></div>
                                            <div class="row-fluid">
                                                <span class="span4">Quantity</span><span class="span4">Total</span></div>
                                        </th>
                                        <th class="numeric" colspan="2" >
                                            <div class="row-fluid" style="border-bottom: 2px solid #ffffff; text-align: center; font-weight: bold"><span class="span12">Damage</span></div>
                                            <div class="row-fluid">
                                                <span class="span4">Quantity</span><span class="span4">Total</span></div>
                                        </th>
                                        <th class="span2"><i class="icon-trash"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody id="invoiceParticulars">
                                    {% for item in particulars %}

                                        <tr id="remove-{{ item.id }}">
                                            <td  class="">{{ loop.index }}.</td>
                                            <td class="">{{ item.name }}</td>
                                            <td class="">{{ item.salesPrice }}</td>
                                            <td class=""> <input type="text" class=" numeric td-inline-input salesPrice" data-id="{{ item.id }}" autocomplete = "off"  id="salesPrice-{{ item.id }}" name="salesPrice" value="{{ item.price }}" ></td>
                                            <td class="" id="subTotal-{{ item.id }}"></td>
                                            <td class="">{{ item.name }}</td>
                                            <td class="">{{ item.name }}</td>
                                            <td class="">{{ item.name }}</td>
                                            <td class="">{{ item.name }}</td>
                                            {#<td class="">
                                               <input type="hidden" name="salesItem[]" value="{{ item.id }}" >
                                               <input type="hidden" id="subQuantity-{{ item.id }}" name="subQuantity[]" value="{{ item.subQuantity }}" >
                                               <input type="text" class=" numeric td-inline-input salesPrice" data-id="{{ item.id }}" autocomplete = "off"  id="salesPrice-{{ item.id }}" name="salesPrice" value="{{ item.price }}" >
                                           </td>
                                           <td class="">
                                               <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}">
                                           </td>
                                           <td class="" id="subTotal-{{ item.id }}">{{ item.subTotal|number_format }}</td>
                                           <td class="">
                                               <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}">
                                           </td>
                                           <td class="" id="subTotal-{{ item.id }}">{{ item.subTotal|number_format }}</td> <td class="">
                                               <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}">
                                           </td>
                                           <td class="" id="subTotal-{{ item.id }}">{{ item.subTotal|number_format }}</td>#}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="6" class="span12" style="border: 1px double #000"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                        <td class="span1"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                                        <td class="span1"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                        <td class="span1"><strong class="discount">{{ entity.discount|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                                        <td class="span1"><strong class="netTotal">{{ entity.total|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    </tfoot>
                                </table>
                                <div class="clearfix">&nbsp;</div>
                            </div>
                        </div>

                        <div class="clearfix">&nbsp;</div>
                        <div class="form-actions portlet box yellow">
                            <div class="pull-right">
                                <input type="hidden" class="dueAmount" name="due" id="due" value="{{ entity.due }}">
                                <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}">
                                <input type="hidden" class="netTotal" name="paymentTotal" id="paymentTotal" value="{{ entity.total }}">
                                <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                <div class="action"> <strong>Invoice For: </strong>
                                    {{ form_widget(form.process) }}
                                    {{ form_errors(form.process) }}
                                    <div class="btn-group">
                                        <button type="button" class="btn blue" id="receiveBtn" ><i class="icon-print"></i>&nbsp; Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .td-inline-input{
            height: 15px!important;
            line-height: 13px!important;
            font-size: 13px!important;
            border: 2px solid #4d90fe!important;
            width: 100px;
            margin-bottom:0!important;
        }
        .td-inline-input-qnt{
            height: 15px!important;
            line-height: 13px!important;
            font-size: 13px!important;
            border: 2px solid #4d90fe!important;
            width: 40px;
            margin-bottom:0!important;
        }

    </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@BusinessBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@BusinessBundle/Resources/public/js/invoice.js'
    '@BusinessBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}
