{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN category HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="category-title">
                    Customer Invoice #  <strong>{{ entity.invoice }}</strong>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_invoice') }}">Customer Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Customer Invoice</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END category HEADER-->
        <!-- BEGIN category CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Invoice Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn black" href="{{ path('business_invoice') }}"><i class="icon-th-list"></i> Invoice</a>
                                <a class="btn red" href="{{ path('business_invoice_new') }}"><i class="icon-plus-sign"></i> New Invoice</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="clearfix"></div>

                        <div class="clearfix"></div>

                        <div class="row-fluid">
                            <div class="span9" id="particular-table">
                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                    <thead>
                                    <tr>
                                        <th class=""> Si/No</th>
                                        <th class="span4">Particular</th>
                                        <th class="span2">Remain</th>
                                        <th class="span2">Unit</th>
                                        <th class="span2">Price</th>
                                        <th class="numeric" colspan="2" >
                                            <div class="row-fluid" style="border-bottom: 2px solid #ffffff; text-align: center; font-weight: bold"><span class="span12">Sales</span></div>
                                            <div class="row-fluid">
                                                <span class="span6 text-center">Qnt</span><span class="span6 text-center">Total</span></div>
                                        </th>
                                        <th class="numeric" colspan="2" >
                                            <div class="row-fluid" style="border-bottom: 2px solid #ffffff; text-align: center; font-weight: bold"><span class="span12">Return</span></div>
                                            <div class="row-fluid">
                                                <span class="span6 text-center">Qnt</span><span class="span6 text-center">Total</span></div>
                                        </th>
                                        <th class="numeric" colspan="2" >
                                            <div class="row-fluid" style="border-bottom: 2px solid #ffffff; text-align: center; font-weight: bold"><span class="span12">Damage</span></div>
                                            <div class="row-fluid">
                                                <span class="span6 text-center">Qnt</span><span class="span6 text-center">Total</span></div>
                                        </th>

                                        <th class="span2"><i class="icon-trash"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody id="invoiceParticulars">
                                    {% for item in particulars %}
                                        <tr id="remove-{{ item.id }}">
                                            <td  class="">{{ loop.index }}.</td>
                                            <td class="">{{ item.name }}</td>
                                            <td class="">{{ item.remainingQuantity }}</td>
                                            <td>{% if item.unit is not empty %}{{ item.unit.name }}{% endif %}</td>
                                            <td class="">{{ item.salesPrice }}</td>
                                            <td class="">
                                                <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}">
                                            </td>
                                            <td class="" id="subTotal-{{ item.id }}">
                                                <input type="text" class=" numeric td-inline-input-qnt subTotal" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="0" placeholder="total">
                                            </td>

                                             <td class="">
                                                <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}">
                                            </td>
                                            <td class="" id="subTotal-{{ item.id }}">
                                                <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="" placeholder="subTotal">
                                            </td>
                                             <td class="">
                                                <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}">
                                            </td>
                                            <td class="" id="subTotal-{{ item.id }}">
                                                <input type="text" class=" numeric td-inline-input-qnt quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="" placeholder="subTotal">
                                            </td>
                                            <td class="" id="subTotal-{{ item.id }}"></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="12" class="span12" style="border: 1px double #000"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                        <td class="span1"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"></td>
                                        <td class="span1"></td>
                                    </tr>

                                    </tfoot>
                                </table>
                                <div class="clearfix">&nbsp;</div>
                            </div>
                            <div class="span3 payment-info">
                                <div class="row-fluid">
                                    <div class="span12" >
                                        <input type="text" style="margin-left:0!important;" id="mobile" name="mobile"  class="span12 m-wrap select2Customer eventProcess inputs" value="{% if entity.customer.name != 'Default' %}{{ entity.customer.mobile }}{% endif %}"  autocomplete="off" placeholder="Search existing customer name/mobile">
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Discount Type</span> <span class="pull-right sales-right">{{ form_widget(form.discountType) }}</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span></label>
                                            {# {{ form_widget(form.discount) }}#}
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.received) }}</span></label>
                                            <div class="controls">
                                                {{ form_errors(form.received) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span id="balance" class="label">Due TK.</span> <span class="pull-right sales-right due" style="text-align:left;width:110px">{{ entity.due }}</span></label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12 input-append-border">
                                        {{ form_widget(form.transactionMethod) }}
                                        {{ form_errors(form.transactionMethod) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div id="cartMethod">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="input-prepend input-append input-append-border span12">
                                                {{ form_widget(form.cardNo) }}
                                                {{ form_errors(form.cardNo) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 input-append-border">
                                            {{ form_widget(form.paymentCard) }}
                                            {{ form_errors(form.paymentCard) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 input-append-border">
                                            {{ form_widget(form.accountBank) }}
                                            {{ form_errors(form.accountBank) }}
                                        </div>
                                    </div>
                                </div>
                                <div id="bkashMethod">
                                    <div class="row-fluid">
                                        <div class="span12 input-append-border">
                                            {{ form_widget(form.accountMobileBank) }}
                                            {{ form_errors(form.accountMobileBank) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="input-prepend input-append input-append-border span12">
                                                {{ form_widget(form.paymentMobile) }}
                                                {{ form_errors(form.paymentMobile) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="input-prepend input-append input-append-border span12">
                                                {{ form_widget(form.transactionId) }}
                                                {{ form_errors(form.transactionId) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12 input-append-border">
                                        {{ form_widget(form.salesBy) }}
                                        {{ form_errors(form.salesBy) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        {{ form_widget(form.comment) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="clearfix">&nbsp;</div>
                        <div class="form-actions portlet box yellow">
                            <div class="pull-right">
                                <input type="hidden" class="dueAmount" name="due" id="due" value="{{ entity.due }}">
                                <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}">
                                <input type="hidden" class="netTotal" name="paymentTotal" id="paymentTotal" value="{{ entity.total }}">
                                <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                <div class="action"> <strong>Invoice For: </strong>
                                    {{ form_widget(form.process) }}
                                    {{ form_errors(form.process) }}
                                    <div class="btn-group">
                                        <button type="button" class="btn blue" id="receiveBtn" ><i class="icon-print"></i>&nbsp; Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .td-inline-input{
            height: 15px!important;
            line-height: 13px!important;
            font-size: 13px!important;
            border: 2px solid #4d90fe!important;
            width: 50px;
            margin-bottom:0!important;
        }
        .td-inline-input-qnt{
            height: 15px!important;
            line-height: 13px!important;
            font-size: 13px!important;
            border: 2px solid #4d90fe!important;
            width: 40px;
            margin-bottom:0!important;
        }
        .sales-right{
            width: 150px;
        }
        .subTotal{
            border: 2px solid red!important;
        }

    </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@BusinessBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@BusinessBundle/Resources/public/js/invoice.js'
    '@BusinessBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}
