{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN category HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="category-title">
                    Customer Invoice #  <strong>{{ entity.invoice }}</strong>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_invoice') }}">Customer Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Customer Invoice</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END category HEADER-->
        <!-- BEGIN category CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Invoice Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn black" href="{{ path('business_invoice') }}"><i class="icon-th-list"></i> Invoice</a>
                                <a class="btn red" href="{{ path('business_invoice_new') }}"><i class="icon-plus-sign"></i> New Invoice</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <div class="clearfix"></div>
                        {% if entity.businessConfig.showStock == 1 %}
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="form-actions portlet box yellow">
                                        <div class="portlet-title">
                                            <div class="caption"><i class="icon-reorder"></i>Stock Product</div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <form class="" id="stockInvoice" name="stockInvoice" action="{{ path('business_invoice_distribution',{'id':entity.id}) }}" method="post">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <table class="table table-bordered table-striped table-condensed table-fixed">                                      <thead class="flip-content ">

                                                    <tr class="head-green">
                                                        <th style="width: 30%">Particular</th>
                                                        <th>Remain</th>
                                                        <th>Unit</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>Ret.Qnt</th>
                                                        <th>Dmg.Qnt</th>
                                                        <th>Spoil.Qnt</th>
                                                        <th>Sales</th>
                                                        <th>Sub-total</th>
                                                        <th>TLO Price</th>
                                                        <th>Bonus Qnt</th>
                                                        <th>&nbsp;</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr>
                                                        <td class="">
                                                            <select id="particular" name="particular" class="span12 m-wrap select2">
                                                                <option value="">--- Select Stock Product ---- </option>
                                                                {% for particular in particulars %}
                                                                    <option value="{{ particular.id }}">{{ particular.particularCode }} - {{ particular.name }} => Stock {{ particular.remainingQuantity }} {% if  particular.unit is defined and  particular.unit is not empty %}{{ particular.unit.name|default('---') }}{% endif %}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </td>
                                                        <td id="remainQnt"></td>
                                                        <td id="unit"></td>
                                                        <td id="unitPrice"></td>

                                                        <td class="">
                                                            <input type="text" class="numeric td-inline-input-qnt"  autocomplete="off"  id="quantity" name="quantity" value="0" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <input type="number" class="numeric td-inline-input-qnt"  autocomplete="off"   name="returnQuantity" id="returnQuantity" value="0" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <input type="number" class="numeric td-inline-input-qnt" id="damageQuantity" name="damageQuantity" value="0" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <input type="number" class="numeric td-inline-input-qnt"  autocomplete="off"  id="spoilQuantity" name="spoilQuantity" value="0" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <strong id="totalQuantity">0</strong>
                                                        </td>
                                                        <td class="">
                                                            <strong id="subTotal">0.00</strong>
                                                        </td>
                                                        <td id="tloPrice"> <input type="text" class="numeric td-inline-input-qnt"  autocomplete="off"  id="tloPrice" name="tloPrice" value="0" placeholder="0"></td>
                                                        <td>
                                                            <input type="number" class="numeric td-inline-input-qnt"   id="bonusQuantity" name="bonusQuantity" value="" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <div class="input-group">
                                                                <input type="hidden" id="salesPrice" name="salesPrice" value="0" >
                                                                <button type="submit" class="btn blue" id="addAccessories" ><i class="icon-save"></i> Add</button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="clearfix">&nbsp;</div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                        {% endif %}
                        <div class="clearfix"></div>
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}

                        <div class="clearfix"></div>

                        <div class="row-fluid">
                            <div class="span9" id="particular-table">
                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                    <thead>
                                    <tr>
                                        <th class="">S/N</th>
                                        <th>Particular</th>
                                        <th>Remain</th>
                                        <th>Unit</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Ret.Qnt</th>
                                        <th>Dmg.Qnt</th>
                                        <th>Spoil.Qnt</th>
                                        <th>Sales</th>
                                        <th>Sub-total</th>
                                        <th>TLO</th>
                                        <th>Sub-TLO</th>
                                        <th>Bonus Qnt</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody id="invoiceParticulars">
                                    {% set salesQnt = 0 %}
                                    {% set returnQnt = 0 %}
                                    {% set damageQnt = 0 %}
                                    {% set spoilQnt = 0 %}
                                    {% set bonusQnt = 0 %}
                                    {% set totalQnt = 0 %}

                                    {% for item in entity.businessInvoiceParticulars %}

                                        {% set salesQnt = salesQnt + item.quantity %}
                                        {% set returnQnt = returnQnt + item.returnQnt %}
                                        {% set damageQnt = damageQnt + item.damageQnt %}
                                        {% set spoilQnt = spoilQnt + item.spoilQnt %}
                                        {% set bonusQnt = bonusQnt + item.bonusQnt %}
                                        {% set totalQnt = totalQnt + item.totalQuantity %}

                                        <tr id="remove-{{ item.id }}">
                                            <td  class="">{{ loop.index }}.
                                            <input type="hidden" id="salesPrice-{{ item.id }}" name="salesPrice" value="{{ item.businessParticular.salesPrice }}">

                                            </td>
                                            <td class="">{{ item.particular }}</td>
                                            <td class="">{{ item.businessParticular.remainingQuantity }}</td>
                                            <td>{% if item.businessParticular.unit is not empty %}{{ item.businessParticular.unit.name }}{% endif %}</td>
                                            <td class="">{{ item.businessParticular.salesPrice }}</td>

                                            <td class="">
                                                <input type="number" class="remove-value numeric td-inline-input-qnt salesQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="salesQuantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}"></td>

                                             <td class="">
                                                <input type="number" class="remove-value numeric td-inline-input-qnt returnQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="returnQuantity-{{ item.id }}" name="quantity[]" value="{{ item.returnQnt }}" placeholder="{{ item.returnQnt }}">
                                            </td>
                                             <td class="">
                                                <input type="number" class="remove-value numeric td-inline-input-qnt damageQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="damageQuantity-{{ item.id }}" name="quantity[]" value="{{ item.damageQnt }}" placeholder="{{ item.damageQnt }}">
                                            </td>
                                            <td class="">
                                                <input type="number" class="remove-value numeric td-inline-input-qnt spoilQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="spoilQuantity-{{ item.id }}" name="quantity[]" value="{{ item.spoilQnt }}" placeholder="{{ item.spoilQnt }}">
                                            </td>
                                            <td class="">
                                              <strong id="totalQuantity-{{ item.id }}">{{ item.totalQuantity }}</strong>
                                            </td>
                                            <td class="">
                                                <strong id="subTotal-{{ item.id }}">{{ item.subTotal |number_format(2)}}</strong>
                                            </td>
                                            <td class="">
                                                <input type="number" class="remove-value numeric td-inline-input-qnt tloPrice" data-id="{{ item.id }}"  autocomplete = "off"   id="tloPrice-{{ item.id }}" name="tloPrice[]" value="{{ item.tloPrice }}" placeholder="{{ item.tloPrice }}">
                                            </td>
                                            <td class="tloPrice-{{ item.id }}">{{ item.tloPrice * item.totalQuantity }}</td>
                                            <td class="">
                                                <input type="number" class="remove-value numeric td-inline-input-qnt bonusQuantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="bonusQuantity-{{ item.id }}" name="quantity[]" value="{{ item.bonusQnt }}" placeholder="{{ item.bonusQnt }}">
                                            </td>
                                            <td>
                                                <a id="{{ item.id }}" data-id="{{ item.id }}"  data-url="{{ path('business_invoice_distribution_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini distributionDelete" ><i class="icon-trash"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="15" class="" style="border: 1px double #000"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class=""><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>

                                        <td class=""><strong class="salesQnt">{{ salesQnt }}</strong></td>
                                        <td class=""><strong class="returnQnt">{{ returnQnt }}</strong></td>
                                        <td class=""><strong class="damageQnt">{{ damageQnt }}</strong></td>
                                        <td class=""><strong class="spoilQnt">{{ spoilQnt }}</strong></td>
                                        <td class=""><strong class="totalQnt">{{ totalQnt }}</strong></td>
                                        <td class=""><strong class="subTotal">{{ entity.subTotal|number_format(2) }}</strong></td>
                                        <td class=""></td>
                                        <td class=""><strong class="tloPrice">{{ entity.tloPrice|number_format(2) }}</strong></td>
                                        <td class=""><strong class="bonusQnt">{{ bonusQnt }}</strong></td>
                                        <td class=""></td>
                                    </tr>
                                    </tfoot>
                                </table>
                                <div class="clearfix">&nbsp;</div>
                            </div>
                            <div class="span3 payment-info">
                                <div class="row-fluid">
                                    <div class="span12" >
                                        <select name="vendor" id="vendor" class="span12 m-wrap">
                                            <option value="">--Select TLO Vendor</option>
                                            {% for vendor in vendors %}
                                                <option {% if entity.vendor is not empty and entity.vendor.id ==  marketing.id %} selected="selected" {% endif %} value="{{ vendor.id }}">{{ vendor.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12" >
                                    <select name="marketing" id="marketing" class="span12 m-wrap">
                                        <option>--Select one Marketing Executive</option>
                                        {% for marketing in marketings %}
                                            <option {% if entity.marketing is not empty and entity.marketing.id ==  marketing.id %} selected="selected" {% endif %} value="{{ marketing.id }}">{{ marketing.name }}</option>
                                        {% endfor %}
                                    </select>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <div class="span12" >
                                        <select name="area" id="area" class="span12 m-wrap">
                                            <option>--Select one Marketing area</option>
                                            {% for area in areas %}
                                                <option  {% if entity.area is not empty and entity.area.id ==  area.id %} selected="selected" {% endif %} value="{{ area.id }}">{{ area.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12" >
                                        <input type="text" style="margin-left:0!important;" id="mobile" name="mobile"  class="span12 m-wrap select2Customer eventProcess inputs" value="{% if entity.customer.name != 'Default' %}{{ entity.customer.mobile }}{% endif %}"  autocomplete="off" placeholder="Search existing customer name/mobile">
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Discount Type</span> <span class="pull-right sales-right">{{ form_widget(form.discountType) }}</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span></label>
                                            {# {{ form_widget(form.discount) }}#}
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">TLO TK.</span> <span class="pull-right sales-right tloPrice" style="text-align:right;width:110px">{{ entity.tloPrice|number_format(2) }}</span></label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.received) }}</span></label>
                                            <div class="controls">
                                                {{ form_errors(form.received) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>

                                 <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span id="balance" class="label">Due TK.</span> <span class="pull-right sales-right due" style="text-align:right;width:110px">{{ (entity.due-entity.tloPrice) |number_format(2) }}</span></label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12 input-append-border">
                                        {{ form_widget(form.transactionMethod) }}
                                        {{ form_errors(form.transactionMethod) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div id="cartMethod">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="input-prepend input-append input-append-border span12">
                                                {{ form_widget(form.cardNo) }}
                                                {{ form_errors(form.cardNo) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 input-append-border">
                                            {{ form_widget(form.paymentCard) }}
                                            {{ form_errors(form.paymentCard) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 input-append-border">
                                            {{ form_widget(form.accountBank) }}
                                            {{ form_errors(form.accountBank) }}
                                        </div>
                                    </div>
                                </div>
                                <div id="bkashMethod">
                                    <div class="row-fluid">
                                        <div class="span12 input-append-border">
                                            {{ form_widget(form.accountMobileBank) }}
                                            {{ form_errors(form.accountMobileBank) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="input-prepend input-append input-append-border span12">
                                                {{ form_widget(form.paymentMobile) }}
                                                {{ form_errors(form.paymentMobile) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="input-prepend input-append input-append-border span12">
                                                {{ form_widget(form.transactionId) }}
                                                {{ form_errors(form.transactionId) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12 input-append-border">
                                        {{ form_widget(form.salesBy) }}
                                        {{ form_errors(form.salesBy) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        {{ form_widget(form.comment) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="clearfix">&nbsp;</div>
                        <div class="form-actions portlet box black">
                            <div class="pull-right">
                                <input type="hidden" class="dueAmount" name="due" id="due" value="{{ entity.due - entity.tloPrice }}">
                                <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}">
                                <input type="hidden" class="netTotal" name="paymentTotal" id="paymentTotal" value="{{ entity.total - entity.tloPrice }}">
                                <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                <div class="action"> <strong>Invoice For: </strong>
                                    {{ form_widget(form.process) }}
                                    {{ form_errors(form.process) }}
                                    <div class="btn-group">
                                        <button type="button" class="btn blue" id="receiveBtn" ><i class="icon-save"></i>&nbsp; Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
               {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .td-inline-input{
            height: 15px!important;
            line-height: 13px!important;
            font-size: 13px!important;
            border: 2px solid #4d90fe!important;
            width: 50px;
            margin-bottom:0!important;
        }
        .td-inline-input-qnt{
            height: 15px!important;
            line-height: 13px!important;
            font-size: 13px!important;
            border: 2px solid #4d90fe!important;
            width: 60px;
            margin-bottom:0!important;
        }
        .sales-right{
            width: 120px;
        }

    </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@BusinessBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@BusinessBundle/Resources/public/js/invoice.js'
    '@BusinessBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    $('.remove-value').click(function() {
        $(this).attr('value', '');
    });
{% endblock %}
