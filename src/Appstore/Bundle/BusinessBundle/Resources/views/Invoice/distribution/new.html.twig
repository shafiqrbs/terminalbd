{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN category HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="category-title">
                    Customer Invoice #  <strong>{{ entity.invoice }}</strong>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_invoice') }}">Customer Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Customer Invoice</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END category HEADER-->
        <!-- BEGIN category CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Invoice Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn black" href="{{ path('business_invoice') }}"><i class="icon-th-list"></i> Invoice</a>
                                <a class="btn red" href="{{ path('business_invoice_new') }}"><i class="icon-plus-sign"></i> New Invoice</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <div class="clearfix"></div>
                        {% if entity.businessConfig.showStock == 1 %}
                            <div class="row-fluid">
                                <div class="span12">
                                    <form class="" id="stockInvoice" name="stockInvoice" action="{{ path('business_invoice_distribution',{'id':entity.id}) }}" method="post">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <table class="table table-bordered table-striped table-condensed table-fixed">                                      <thead class="flip-content ">

                                                    <tr class="head-blue">
                                                        <th style="width: 30%">Particular</th>
                                                        <th>Remain</th>
                                                        <th>Unit</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>Ret.Qnt</th>
                                                        <th>Dmg.Qnt</th>
                                                        <th>Spoil.Qnt</th>
                                                        <th>Sales</th>
                                                        <th>Sub-total</th>
                                                        <th>TLO Price</th>
                                                        <th>Bonus Qnt</th>
                                                        <th>&nbsp;</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr>
                                                        <td class="">
                                                            <select id="particular" name="particular" class="span12 m-wrap select2">
                                                                <option value="">--- Select Stock Product ---- </option>
                                                                {% for particular in particulars %}
                                                                    <option value="{{ particular.id }}">{{ particular.particularCode }} - {{ particular.name }} => Stock {{ particular.remainingQuantity }} {% if  particular.unit is defined and  particular.unit is not empty %}{{ particular.unit.name|default('---') }}{% endif %}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </td>
                                                        <td id="remainQnt"></td>
                                                        <td id="unit"></td>
                                                        <td id="unitPrice"></td>

                                                        <td class="">
                                                            <input type="text" class="numeric td-inline-input-qnt"  autocomplete="off"  id="quantity" name="quantity" value="" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <input type="number" class="numeric td-inline-input-qnt"  autocomplete="off"   name="returnQuantity" id="returnQuantity" value="" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <input type="number" class="numeric td-inline-input-qnt" id="damageQuantity" name="damageQuantity" value="" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <input type="number" class="numeric td-inline-input-qnt"  autocomplete="off"  id="spoilQuantity" name="spoilQuantity" value="" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <strong id="totalQuantity">0</strong>
                                                        </td>
                                                        <td class="">
                                                            <strong id="subTotal">0.00</strong>
                                                        </td>
                                                        <td id="tloPrice">
                                                            <select id="tloMode" name="tloMode" style="margin-bottom: 0!important;border: 2px solid red!important;" class="m-wrap discount-type span6">
                                                                <option value="flat">Flat</option>
                                                                <option value="multiply">Multiply</option>
                                                                <option value="percent">(%)</option>
                                                            </select>
                                                            <input type="text" class="numeric td-inline-input-qnt span6"  autocomplete="off"  id="tloPrice" name="tloPrice" value="" placeholder="0">
                                                        </td>
                                                        <td>
                                                            <input type="number" class="numeric td-inline-input-qnt"   id="bonusQuantity" name="bonusQuantity" value="" placeholder="0">
                                                        </td>
                                                        <td class="">
                                                            <div class="input-group">
                                                                <input type="hidden" id="salesPrice" name="salesPrice" value="" >
                                                                <button type="submit" class="btn blue" id="addAccessories" ><i class="icon-save"></i> Add</button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12" id="particular-table">
                                    <table class="table table-bordered table-striped table-condensed table-fixed">
                                        <thead>
                                        <tr>
                                            <th class="">S/N</th>
                                            <th>Particular</th>
                                            <th>Remain</th>
                                            <th>Unit</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Ret.Qnt</th>
                                            <th>Dmg.Qnt</th>
                                            <th>Spoil.Qnt</th>
                                            <th>Sales</th>
                                            <th>Sub-total</th>
                                            <th>TLO</th>
                                            <th>Sub-TLO</th>
                                            <th>Bonus Qnt</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody id="invoiceParticulars">
                                        {% set salesQnt = 0 %}
                                        {% set returnQnt = 0 %}
                                        {% set damageQnt = 0 %}
                                        {% set spoilQnt = 0 %}
                                        {% set bonusQnt = 0 %}
                                        {% set totalQnt = 0 %}

                                        {% for item in entity.businessInvoiceParticulars %}

                                            {% set salesQnt = salesQnt + item.quantity %}
                                            {% set returnQnt = returnQnt + item.returnQnt %}
                                            {% set damageQnt = damageQnt + item.damageQnt %}
                                            {% set spoilQnt = spoilQnt + item.spoilQnt %}
                                            {% set bonusQnt = bonusQnt + item.bonusQnt %}
                                            {% set totalQnt = totalQnt + item.totalQuantity %}

                                            <tr id="remove-{{ item.id }}">
                                                <td  class="">{{ loop.index }}.
                                                    <input type="hidden" id="salesPrice-{{ item.id }}" name="salesPrice" value="{{ item.businessParticular.salesPrice }}">

                                                </td>
                                                <td class="">{{ item.particular }}</td>
                                                <td class="">{{ item.businessParticular.remainingQuantity }}</td>
                                                <td>{% if item.businessParticular.unit is not empty %}{{ item.businessParticular.unit.name }}{% endif %}</td>
                                                <td class="">{{ item.businessParticular.salesPrice }}</td>

                                                <td class="">
                                                    <input type="number" class="remove-value numeric td-inline-input-qnt salesQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="salesQuantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}"></td>

                                                <td class="">
                                                    <input type="number" class="remove-value numeric td-inline-input-qnt returnQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="returnQuantity-{{ item.id }}" name="quantity[]" value="{{ item.returnQnt }}" placeholder="{{ item.returnQnt }}">
                                                </td>
                                                <td class="">
                                                    <input type="number" class="remove-value numeric td-inline-input-qnt damageQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="damageQuantity-{{ item.id }}" name="quantity[]" value="{{ item.damageQnt }}" placeholder="{{ item.damageQnt }}">
                                                </td>
                                                <td class="">
                                                    <input type="number" class="remove-value numeric td-inline-input-qnt spoilQuantity" data-id="{{ item.id }}"  autocomplete = "off" min="1" max="{{ item.quantity }}"  id="spoilQuantity-{{ item.id }}" name="quantity[]" value="{{ item.spoilQnt }}" placeholder="{{ item.spoilQnt }}">
                                                </td>
                                                <td class="">
                                                    <strong id="totalQuantity-{{ item.id }}">{{ item.totalQuantity }}</strong>
                                                </td>
                                                <td class="">
                                                    <strong id="subTotal-{{ item.id }}">{{ item.subTotal |number_format(2)}}</strong>
                                                </td>
                                                <td class="">
                                                    <input type="number" class="remove-value numeric td-inline-input-qnt tloPrice" data-id="{{ item.id }}"  autocomplete = "off"   id="tloPrice-{{ item.id }}" name="tloPrice[]" value="{{ item.tloPrice }}" placeholder="{{ item.tloPrice }}">
                                                </td>
                                                <td class="tloPrice-{{ item.id }}">
                                                    {{ item.TloTotal }}
                                                </td>
                                                <td class="">
                                                    <input type="number" class="remove-value numeric td-inline-input-qnt bonusQuantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="bonusQuantity-{{ item.id }}" name="quantity[]" value="{{ item.bonusQnt }}" placeholder="{{ item.bonusQnt }}">
                                                </td>
                                                <td>
                                                    <a id="{{ item.id }}" data-id="{{ item.id }}"  data-url="{{ path('business_invoice_distribution_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini distributionDelete" ><i class="icon-trash"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <td colspan="15" class="" style="border: 1px double #000"></td>
                                        </tr>
                                        <tr>
                                            <td colspan="5" class=""><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>

                                            <td class=""><strong class="salesQnt">{{ salesQnt }}</strong></td>
                                            <td class=""><strong class="returnQnt">{{ returnQnt }}</strong></td>
                                            <td class=""><strong class="damageQnt">{{ damageQnt }}</strong></td>
                                            <td class=""><strong class="spoilQnt">{{ spoilQnt }}</strong></td>
                                            <td class=""><strong class="totalQnt">{{ totalQnt }}</strong></td>
                                            <td class=""><strong class="subTotal">{{ entity.subTotal|number_format(2) }}</strong></td>
                                            <td class=""></td>
                                            <td class=""><strong class="tloPrice">{{ entity.tloPrice|number_format(2) }}</strong></td>
                                            <td class=""><strong class="bonusQnt">{{ bonusQnt }}</strong></td>
                                            <td class=""></td>
                                        </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        {% endif %}
                        <div class="clearfix"></div>
                        <div class="row-fluid">
                            <div class="span8" style="margin-top:20px;" id="particular-table">
                                {% if entity.businessConfig.salesReturn  == 1 %}
                                <div class="form-actions portlet box green">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Sales Return Item</div>
                                    </div>
                                    <div class="portlet-body form">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <form class="stockInvoice" id="stockInvoice" name="stockInvoice" action="{{ path('business_invoice_accessories_add',{'invoice':entity.id}) }}" method="post">
                                                    <div class="row-fluid">
                                                        <div class="span12">
                                                            <div class="row-fluid particular-info" >
                                                                <div class="span8" >
                                                                    <div class="row-fluid">
                                                                        <div class="span12" >
                                                                            <select id="particular" name="particular" data-url="{{ path('business_invoice_particular_search',{'invoice':entity.id}) }}" class="span12 m-wrap select2 input" style="margin-left: 15px">
                                                                                <option value="">--- Select Stock Product ---- </option>
                                                                                {% for particular in particulars %}
                                                                                    {% if particular.category is not empty %}
                                                                                        <option value="{{ particular.id }}">{{ particular.category.name }} - {{ particular.name }} => BDT. {{ particular.salesPrice }}</option>
                                                                                    {% else %}
                                                                                        <option value="{{ particular.id }}">{{ particular.name }} => BDT. {{ particular.salesPrice }}</option>
                                                                                    {% endif %}
                                                                                {% endfor %}
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="span4">
                                                                    <div class="input-append span12" style="margin-bottom:0!important">
                                                                        <div class="input-group">
                                                                            <input type="number" class="m-wrap span4 form-control input-number input" id="quantity" name="quantity" value="1" min="1">
                                                                            <input type="text" class="m-wrap span3 form-control input-number input" id="salesPrice" name="salesPrice" placeholder="Price" value="" min="">
                                                                            <button type="button" class="btn yellow"  id="unit" >Unit</button>
                                                                            <button type="submit" class="btn blue" id="addAccessories" ><i class="icon-save"></i> Add</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12" >
                                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                                    <thead>
                                                    <tr>
                                                        <th class="">S/N</th>
                                                        <th>Item Name</th>
                                                        <th>Unit</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>SubTotal</th>
                                                        <th></th>
                                                    </tr>
                                                    </thead>
                                                    <tbody id="invoiceParticulars">
                                                    {% set salesQnt = 0 %}
                                                    {% for item in entity.businessInvoiceParticulars %}
                                                        {% set totalQnt = totalQnt + item.totalQuantity %}
                                                        <tr id="remove-{{ item.id }}">
                                                            <td  class="">{{ loop.index }}.
                                                                <input type="hidden" id="salesPrice-{{ item.id }}" name="salesPrice" value="{{ item.businessParticular.salesPrice }}">

                                                            </td>
                                                            <td class="">{{ item.particular }}</td>
                                                            <td class="">{{ item.businessParticular.remainingQuantity }}</td>
                                                            <td>{% if item.businessParticular.unit is not empty %}{{ item.businessParticular.unit.name }}{% endif %}</td>
                                                            <td class="">{{ item.businessParticular.salesPrice }}</td>
                                                            <td class="">{{ item.quantity }}</td>
                                                            <td class="salesReturnSubTotal-{{ item.id }}">{{ (item.quantity * item.businessParticular.salesPrice) }}</td>
                                                            <td>
                                                                <a id="{{ item.id }}" data-id="{{ item.id }}"  data-url="{{ path('business_invoice_distribution_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini distributionDelete" ><i class="icon-trash"></i></a>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot>
                                                    <tr>
                                                        <td colspan="7" class="" style="border: 1px double #000"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="5" class=""><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                                        <td class=""><strong class="subTotal">{{ entity.subTotal|number_format(2) }}</strong></td>
                                                        <td class=""></td>
                                                    </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                <div class="clearfix">&nbsp;</div>
                                {% if entity.businessConfig.storeLedger  == 1 %}
                                <div  class="form-actions portlet box blue">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Store Due/Receive</div>
                                    </div>
                                    <div class="portlet-body form">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <form class="stockInvoice" id="stockInvoice" name="stockInvoice" action="{{ path('business_invoice_accessories_add',{'invoice':entity.id}) }}" method="post">
                                                    <div class="row-fluid">
                                                        <div class="span12">
                                                            <div class="row-fluid particular-info" >
                                                                <div class="span6" >
                                                                    <div class="row-fluid">
                                                                        <div class="span12" >
                                                                            <select id="particular" name="particular" data-url="{{ path('business_invoice_particular_search',{'invoice':entity.id}) }}" class="span12 m-wrap select2 input" style="margin-left: 15px">
                                                                                <option value="">--- Select Store Name ---- </option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="span1">
                                                                    <button type="button" class="btn yellow" id="storeOutstanding">0</button>
                                                                </div>
                                                                <div class="span2">
                                                                    <select class="span12 m-wrap input" name="paymentMode">
                                                                        <option value="receive">Receive</option>
                                                                        <option value="due">Due</option>
                                                                    </select>
                                                                </div>
                                                                <div class="span3">
                                                                    <div class="input-append span12" style="margin-bottom:0!important">
                                                                        <div class="input-group">
                                                                            <input type="text" class="m-wrap span5 form-control input-number input" id="receive" name="receive" placeholder="Amount" value="" min="">
                                                                            <button type="submit" class="btn blue" id="addAccessories" ><i class="icon-save"></i> Save</button>
                                                                            <button type="submit" class="btn purple" id="addStore" ><i class="icon-user"></i></button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12" >
                                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                                    <thead>
                                                    <tr>
                                                        <th class="">S/N</th>
                                                        <th>Customer Name</th>
                                                        <th>Due</th>
                                                        <th>Receive</th>
                                                        <th></th>
                                                    </tr>
                                                    </thead>
                                                    <tbody id="invoiceParticulars">
                                                    {% set salesQnt = 0 %}
                                                    {% for item in entity.businessInvoiceParticulars %}
                                                        {% set totalQnt = totalQnt + item.totalQuantity %}
                                                        <tr id="remove-{{ item.id }}">
