{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN category HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="category-title">
                    Customer ID #  <strong>{{ entity.invoice }}</strong>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_invoice') }}">Customer Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Customer Invoice</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END category HEADER-->
        <!-- BEGIN category CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Customer Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('business_invoice') }}"><i class="icon-th-list"></i> Customer Lists</a>
                                <a class="btn red" href="{{ path('business_invoice_new') }}"><i class="icon-plus-sign"></i> Add New Customer</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->

                            <div class="row-fluid">
                                <div class="span12">
                                    <!--BEGIN TABS-->
                                    <div class="clearfix">&nbsp;</div>
                                    {{ form_start(form) }}
                                    {{ form_row(form._token) }}
                                    <div class="row-fluid particular-info">
                                        <div class="span8">
                                            <div class="form-control">
                                                <input type="text" id="particular" name="particular"  class="span12 m-wrap select2Particular" value=""  autocomplete="off" placeholder="Search particular name">
                                            </div>
                                        </div>
                                        <div class="span4">
                                            <div class="input-group input-append input-group">
                                                    <span class="input-group-btn">
                                                       <input type="number" style="text-align: center; font-weight: bold" class="m-wrap span3 form-control input-number" id="quantity" name="quantity" value="" min="" >
                                                       <input type="text" class="m-wrap span4 con select2Unit" name="unit" id="unit" placeholder="Item unit">
                                                        <input type="text" class="m-wrap span3 con" name="price" id="price" placeholder="price">
                                                    </span>
                                                <button type="button" class="btn blue"  id="addPrescriptionParticular" data-url="{{ path('business_invoice_medicine_add',{'invoice':entity.id}) }}" ><i class="icon-shopping-cart"></i> Add </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="row-fluid">
                                        <div class="span8">
                                            <div class="span12" id="particular-table">
                                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                                    <thead>
                                                    <tr>
                                                        <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i></th>
                                                        <th class="span1">Si/No</th>
                                                        <th class="span1">Code</th>
                                                        <th class="span3">Particular</th>
                                                        <th class="span2">Service</th>
                                                        <th class="span1">Qnt</th>
                                                        <th class="span2">Unit Price</th>
                                                        <th class="span1">Amount</th>
                                                        <th class="span1"><i class="icon-trash"></i></th>
                                                    </tr>
                                                    </thead>
                                                    <tbody id="invoiceParticulars">
                                                    {% for item in entity.invoiceParticulars %}
                                                        <tr id="remove-{{ item.id }}">
                                                            <td class="span1"><span class="badge badge-warning toggle badge-custom" id="{{ item.id  }}" ><span>[+]</span></span></td>
                                                            <td  class="span1">{{ loop.index }}</td>
                                                            <td  class="span1">{{ item.particular.particularCode }}</td>
                                                            <td class="span3">{{ item.particular.name }}</td>
                                                            <td class="span2">{{ item.particular.service.name }}</td>
                                                            <td class="span1">{% if item.particular.service.hasQuantity == 1 %}{{ item.quantity }}{% endif %}</td>
                                                            <td class="span2">{{ item.salesPrice }}</td>
                                                            <td class="span1">{{ item.subTotal|number_format }}</td>
                                                            <td class="span1"><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('hms_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini particularDelete" ><i class="icon-trash"></i></a></td>
                                                        </tr>
                                                        {% if item.particular.service.id == 1 %}
                                                            <tr id="show-{{ item.id }}" class="showing-overview">
                                                                <td colspan="8">
                                                                    <table class="table table-bordered table-striped table-condensed ">
                                                                        <tr class="">
                                                                            <th class="span3" >Instruction</th>
                                                                            <td class="span9" >{{ item.particular.instruction }}</td>
                                                                        </tr>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot>
                                                    <tr>
                                                        <td colspan="9" class="span12" style="border: 1px double #000"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="7" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                                        <td class="span1"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="7" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                                        <td class="span1"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="7" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                                                        <td class="span1">
                                                            <a href="javascript:" id=""  data-trigger="hover" data-original-title="Delete discount amount" data-url="{{ path('hms_invoice_discount_delete',{'id':entity.id}) }}" class=" btn red mini removeDiscount tooltips"><i class="icon-trash"></i></a>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="7" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                                                        <td class="span1"></td>
                                                    </tr>
                                                    </tfoot>
                                                </table>
                                                <div class="clearfix">&nbsp;</div>
                                            </div>
                                        </div>
                                        <div class="span4 payment-info">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discount) }}</span></label>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}
                                                            </span>
                                                        </label>
                                                        <div class="controls">
                                                            {{ form_errors(form.payment) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span id="balance">Due TK.</span> <span class="pull-right sales-right due" style="text-align: left; width: 110px"  id="" >{{ entity.due }}</span></label>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>

                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="form-actions portlet box grey">
                                        <div class="pull-right">
                                            <input type="hidden" id="patient" name="patient" value="{% if entity.customer is not empty %}{{ entity.customer.id }}{% endif %}">
                                            <input type="hidden" id="invoice" name="invoice" data-action="{{ path('hms_invoice_print_for',{'id': entity.id}) }}" value="{{ entity.id }}">
                                            <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                            <div class="action">
                                                {{ form_widget(form.process) }}
                                                {{ form_errors(form.process) }}
                                                <div class="btn-group">
                                                    {% if entity.process in ['Appointment','Visit','Done'] %}
                                                        <a target="_blank" href="{{ path('business_invoice_print_invoice',{'id':entity.id}) }}" class="btn purple"><i class="icon-print"></i>&nbsp; Print</a>
                                                    {% endif %}

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <!--END TABS-->
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="dialog_content" class="dialog_content" style="display:none">
        <div class="dialogModal_header"></div>
        <div class="dialogModal_content"></div>
    </div>

 <style>
     .checkbox-custom{
         color:red;
         border:1px solid #FFF;
         background-image:url("{{ asset('assets/img/tooth.png') }}");
         background-size: 24px 24px;
         background-repeat: no-repeat;
     }
 </style>

{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@DmsBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@BusinessBundle/Resources/public/js/invoice.js'
    '@BusinessBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
     $('#addParticular').attr("disabled", true);
{% endblock %}
