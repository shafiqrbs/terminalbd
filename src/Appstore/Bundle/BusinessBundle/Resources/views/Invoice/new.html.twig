{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN category HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="category-title">
                    Customer ID #  <strong>{{ entity.invoice }}</strong>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_invoice') }}">Customer Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Customer Invoice</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END category HEADER-->
        <!-- BEGIN category CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Customer Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('business_invoice') }}"><i class="icon-th-list"></i> Customer Lists</a>
                                <a class="btn red" href="{{ path('business_invoice_new') }}"><i class="icon-plus-sign"></i> Add New Customer</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->

                            <div class="row-fluid">
                                <div class="span12">
                                    <!--BEGIN TABS-->
                                    <div class="clearfix">&nbsp;</div>
                                    {{ form_start(form) }}
                                    {{ form_row(form._token) }}
                                    <div class="row-fluid particular-info">
                                        <div class="span8">
                                            <div class="form-control">
                                                <input type="text" id="particular" name="particular"  class="span12 m-wrap select2Particular" value=""  autocomplete="off" placeholder="Search particular name">
                                            </div>
                                        </div>
                                        <div class="span4">
                                            <div class="input-group input-append input-group">
                                                    <span class="input-group-btn">
                                                       <input type="text" style="text-align: center; font-weight: bold" class="m-wrap span3 form-control input-number" id="quantity" name="quantity" value="" min="" >
                                                       <input type="text" class="m-wrap span4 con select2Unit" name="unit" id="unit" placeholder="Item unit">
                                                        <input type="text" class="m-wrap span3 con" name="price" id="price" placeholder="price">
                                                    </span>
                                                <button type="button" class="btn blue"  id="addParticular" data-url="{{ path('business_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-shopping-cart"></i> Add </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="row-fluid">
                                        <div class="span8">
                                            <div class="span12" id="particular-table">
                                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                                    <thead>
                                                    <tr>
                                                        <th class=""> Si/No</th>
                                                        <th class="span3">Particular</th>
                                                        <th class="span2">Unit</th>
                                                        <th class="span2">Qnt</th>
                                                        <th class="span1">Amount</th>
                                                        <th class="span1"><i class="icon-trash"></i></th>
                                                    </tr>
                                                    </thead>
                                                    <tbody id="invoiceParticulars">
                                                    {% for item in entity.businessInvoiceParticulars %}
                                                        <tr id="remove-{{ item.id }}">
                                                            <td  class="span1">{{ loop.index }}.</td>
                                                            <td class="span3">{{ item.particular }}</td>
                                                            <td class="span2">{{ item.price }}</td>
                                                            <td class="span2">{{ item.quantity }}</td>
                                                            <td class="span1">{{ item.subTotal|number_format }}</td>
                                                            <td class="span1"><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('business_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini particularDelete" ><i class="icon-trash"></i></a></td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot>
                                                    <tr>
                                                        <td colspan="6" class="span12" style="border: 1px double #000"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                                        <td class="span1"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                                        <td class="span1"></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="discount">{{ entity.discount|number_format }}</strong></td>
                                                        <td class="span1">
                                                            <a href="javascript:" id=""  data-trigger="hover" data-original-title="Delete discount amount" data-url="{{ path('hms_invoice_discount_delete',{'id':entity.id}) }}" class=" btn red mini removeDiscount tooltips"><i class="icon-trash"></i></a>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                                                        <td class="span2"><strong class="netTotal">{{ entity.total|number_format }}</strong></td>
                                                        <td class="span1"></td>
                                                    </tr>
                                                    </tfoot>
                                                </table>
                                                <div class="clearfix">&nbsp;</div>
                                            </div>
                                        </div>
                                        <div class="span4 payment-info">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Discount Type</span> <span class="pull-right sales-right">{{ form_widget(form.discountType) }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span></label>
                                                        {{ form_widget(form.discount) }}
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12 input-append-border">
                                                    {{ form_widget(form.transactionMethod) }}
                                                    {{ form_errors(form.transactionMethod) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div id="cartMethod">
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="input-prepend input-append input-append-border span12">
                                                            {{ form_widget(form.cardNo) }}
                                                            {{ form_errors(form.cardNo) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12 input-append-border">
                                                        {{ form_widget(form.paymentCard) }}
                                                        {{ form_errors(form.paymentCard) }}
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12 input-append-border">
                                                        {{ form_widget(form.accountBank) }}
                                                        {{ form_errors(form.accountBank) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="bkashMethod">
                                                <div class="row-fluid">
                                                    <div class="span12 input-append-border">
                                                        {{ form_widget(form.accountMobileBank) }}
                                                        {{ form_errors(form.accountMobileBank) }}
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="input-prepend input-append input-append-border span12">
                                                            {{ form_widget(form.paymentMobile) }}
                                                            {{ form_errors(form.paymentMobile) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="input-prepend input-append input-append-border span12">
                                                            {{ form_widget(form.transactionId) }}
                                                            {{ form_errors(form.transactionId) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12 input-append-border">
                                                    {{ form_widget(form.salesBy) }}
                                                    {{ form_errors(form.salesBy) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.received) }}</span></label>
                                                        <div class="controls">
                                                            {{ form_errors(form.received) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span id="balance">Due TK.</span> <span class="pull-right sales-right dueAmount" style="text-align:left;width:110px"  id="" >{{ entity.due }}</span></label>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12 input-append-border">
                                                    <input type="text" style="margin-left:0!important;" id="mobile" name="mobile"  class="span10 select2Customer inputs" value="{{ entity.mobile }}"  autocomplete="off" placeholder="Customer mobile">
                                                    <a href="javascript:" class="pull-right btn green addCustomer inputs"><i class="icon-user"></i></a>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer" id="">
                                                <div class="span12 input-append-border">
                                                    <div class="row-fluid">
                                                        <div class="input-icon left input-height">
                                                            <i class="icon-user"></i>
                                                            <input type="text" id="customerName" name="customerName" class="m-wrap span12 customer-input" autocomplete="off" placeholder="Customer name/company" value="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer">
                                                <div class="span12 input-append-border">
                                                    <div class="row-fluid">
                                                        <div class="input-icon left input-height">
                                                            <i class="icon-phone"></i>
                                                            <input type="text" id="customerMobile" name="customerMobile" class="m-wrap span12 mobile customer-input" autocomplete="off" placeholder="Customer mobile no" value="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer">
                                                <div class="span12 input-append-border">
                                                    <div class="row-fluid">
                                                        <textarea id="customerAddress" name="customerAddress" class="m-wrap span12 customer-input" rows="2" placeholder="Enter customer details"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="form-actions portlet box yellow">
                                        <div class="pull-right">
                                            <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                            <input type="hidden" id="due" name="businessInvoice_due" value="{{ entity.due }}">
                                            <div class="action"> <strong>Invoice For: </strong>
                                                {{ form_widget(form.process) }}
                                                {{ form_errors(form.process) }}
                                                <div class="btn-group">
                                                    <button type="button" class="btn blue" id="receiveBtn" ><i class="icon-print"></i>&nbsp; Save & Print</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <!--END TABS-->
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@BusinessBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@BusinessBundle/Resources/public/js/invoice.js'
    '@BusinessBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}
