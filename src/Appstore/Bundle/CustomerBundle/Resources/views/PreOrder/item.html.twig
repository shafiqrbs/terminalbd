{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_damage HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_damage-title">
                    Manage Pre-order Item
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('preorder',{'shop':globalOption.slug}) }}">Manage Pre-order Item</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Pre-order new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_damage HEADER-->
        <!-- BEGIN inventory_damage CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green">
                    {% if entity.process == 'created'  %}
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Pre-order Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('preorder_new',{'shop':globalOption.slug}) }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('preorder',{'shop':globalOption.slug}) }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">
                                <div class="span10">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Item name</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.name) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="url">Item url</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-link"></i>
                                                        {{ form_widget(form.url) }}
                                                        {{ form_errors(form.url) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="quantity">Quantity</label>
                                                <div class="controls">
                                                    {{ form_widget(form.quantity) }}
                                                    {{ form_errors(form.quantity) }}
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="price">Unit Price $</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-dollar"></i>
                                                        {{ form_widget(form.dollar) }}
                                                        {{ form_errors(form.dollar) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Details</label>
                                        <div class="controls">
                                                {{ form_widget(form.details) }}
                                                {{ form_errors(form.details) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="reset" class="btn purple"><i class="icon-refresh"></i> Reset</button>

                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                        <br/>
                        <br/>

                    </div>
                    {% endif %}
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>List of Pre-order items</div>
                    </div>

                    <div class="portlet-body">
                        <div class="row-fluid">
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <label><strong>Bill Overview</strong></label>
                                        <ul class="unstyled" >
                                            <li><strong>Invoice</strong>:#&nbsp;{{ entity.grandTotalAmount }}</li>
                                            <li><strong>Grand Total</strong>:&nbsp;{{ entity.grandTotalAmount }}</li>
                                            <li><sub>Grand Total(Total,Shipping,Tax,Vat Etc)</sub></li>
                                            <li><strong>Pre-paid</strong>:&nbsp;{{ entity.prePaidAmount }}</li>
                                            <li><strong>Paid</strong>:&nbsp;{{ entity.paidAmount }}</li>
                                            {% if entity.paidAmount <  entity.grandTotalAmount and entity.dueAmount > 0 %}
                                                <li><strong>Due</strong>:&nbsp;{{ entity.dueAmount }}</li>
                                            {% elseif entity.paidAmount >  entity.grandTotalAmount and entity.returnAmount > 0 %}
                                                <li><strong>Return</strong>:&nbsp;{{ entity.returnAmount }}</li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <label><strong>Payment Details</strong></label>
                                        <ul class="unstyled" >
                                            {% if entity.cashOnDelivery == 1 %}
                                                <li><strong>Payment Method</strong>:&nbsp;Cash On Delivery</li>
                                            {% elseif entity.transactionMethod is not empty %}
                                                <li><strong>Payment Method</strong>:&nbsp;{{ entity.transactionMethod.name }}</li>
                                            {% endif %}
                                            <li><strong>Shipping Method</strong>:&nbsp;{{ entity.delivery }}</li>
                                            <li><strong>Delivery Date</strong>:&nbsp;{{ entity.deliveryDate|date('d-m-Y') }}</li>

                                            {% if entity.accountMobileBank is not empty %}
                                                <li><strong>Received</strong>:&nbsp;{{ entity.accountMobileBank.mobile }},{{ entity.accountMobileBank.serviceName }},{{ entity.accountMobileBank.authorised }}</li>
                                            {% endif %}
                                            {% if entity.mobileAccount is not empty %}
                                                <li><strong>Mobile</strong>:&nbsp;{{ entity.mobileAccount }}</li>
                                            {% endif %}
                                            {% if entity.accountType is not empty %}
                                                <li><strong>Account Type</strong>:&nbsp;{{ entity.accountType }}</li>
                                            {% endif %}
                                            {% if entity.transaction is not empty %}
                                                <li><strong>Transaction ID</strong>:&nbsp;{{ entity.transaction }}</li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <label><strong>{{ entity.delivery|capitalize }} Address</strong></label>
                                        <ul class="unstyled" >
                                            <li><strong>Name</strong>:&nbsp;{{ entity.createdBy.profile.name }}</li>
                                            <li><strong>Mobile</strong>:&nbsp;{{ entity.createdBy.profile.mobile }}</li>
                                            <li><strong>Location</strong>:&nbsp;{{ entity.createdBy.profile.location.name }}</li>
                                            <li>{{ entity.address }}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="portlet-body flip-scroll">
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Quantity</th>
                                    <th class="numeric" >USD</th>
                                    <th class="numeric" >TotalUSD</th>
                                    <th class="numeric" >Unit price</th>
                                    <th class="numeric" >Sub-total</th>
                                    <th class="numeric" >Tax&Shipping</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in entity.preOrderItems %}
                                    <tr id="remove-{{ item.id }}">
                                        <td>
                                            {% if item.details %}
                                                <span class="badge badge-warning toggle badge-custom" id="{{ item.id  }}" ><span>[+]</span></span>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" ><a target="_blank" href="{{ item.url }}"> {{ item.name|truncate(20) }}</a></td>
                                        <td class="numeric" >{{ item.quantity }}</td>
                                        <td class="numeric" >{{ item.dollar }}</td>
                                        <td class="numeric" >{{ item.totalDollar }}</td>
                                        <td class="numeric">{{ item.price }}</td>
                                        <td class="numeric">{{ item.total|number_format }}</td>
                                        <td class="numeric" >{{ item.shippingCharge }}</td>
                                        <td class="numeric" >
                                            <a data-title="Confirm item" href="javascript:" class="btn  mini confirm {% if item.status == 1 %} green {% else %} red {% endif %} " ><i class="icon-ok"></i>{% if item.status == 1 %} Accept {% else %} Deny {% endif %}</a>
                                            {% if entity.process == 'created'  %}
                                                <a title="Are you sure went to delete ?" data-id="{{ item.id }}" data-url="{{ path('customer_preorder_item_delete',{'preOrder':entity.id,'id':item.id}) }}" class="btn red mini remove" ><i class="icon-trash"></i></a>
                                            {% elseif entity.process == 'in-progress' and entity.checkRoleEcommercePreorder(app.user.role) == true  %}
                                                <a data-title="Confirm item" data-id="{{ item.id }}" data-url="{{ path('customer_preorder_item_confirm',{'preOrder':entity.id,'id':item.id}) }}" class="btn  mini confirm {% if item.status == 1 %} green {% else %} red {% endif %} " ><i class="icon-ok"></i>{% if item.status == 1 %} Accept {% else %} Deny {% endif %}</a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr id="show-{{ item.id }}" class="showing-overview">
                                        <td colspan="9">{{ item.details }}</td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td class="numeric" colspan="4"><span class="pull-right">Total USD</span></td>
                                    <td class="" >{{ entity.dollar }}</td>
                                    <td class="numeric"><span class="pull-right">Sub-total</span></td>
                                    <td class="numeric" id="itemTotalTk">{{ entity.totalAmount|number_format }}
                                        <input type="hidden" name="itemTotalTk" id="itemTotalAmount" value="{{ entity.totalAmount }}">
                                    </td>
                                    <td>{{ entity.totalShippingCharge|number_format }} </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td colspan="9"><br/></td>
                                </tr>
                                <tr>
                                    <td class="numeric" colspan="8" ><span class="pull-right">TotalAmount</span></td>
                                    <td class="numeric" >=&nbsp;{{ entity.totalAmount|number_format }}</td>
                                </tr>
                                <tr>
                                    <td class="numeric" colspan="8" ><span class="pull-right">Shipping & Tax</span></td>
                                    <td class="numeric" >=&nbsp;{{ entity.totalShippingCharge|number_format }}</td>
                                </tr>
                                {% if entity.delivery != 'pickup'  %}
                                    <tr>
                                        <td class="numeric" colspan="8" ><span class="pull-right">Delivery Charge</span></td>
                                        <td class="numeric">=&nbsp;{{ entity.deliveryCharge|number_format }}</td>
                                    </tr>
                                {% endif %}

                                {% if entity.ecommerceConfig.vatEnable == 1 %}
                                    <tr>
                                        <td class="numeric" colspan="8" ><span class="pull-right">Vat & Tax</span></td>
                                        <td class="numeric">=&nbsp;{{ entity.vat }}</td>
                                    </tr>
                                {% endif %}
                                {% if  entity.discountAmount > 0 %}
                                    <tr>
                                        <td class="numeric" colspan="8" ><span class="pull-right">Discount Amount</span></td>
                                        <td class="numeric"><strong>=&nbsp;{{  entity.discountAmount|number_format }}</strong></td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <td class="numeric" colspan="8" ><span class="pull-right">Grand Total</span></td>
                                    <td class="numeric"><strong>=&nbsp;{{ ( entity.grandTotalAmount)|number_format }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="numeric" colspan="8" ><span class="pull-right">Paid Amount</span></td>
                                    <td class="numeric"><strong>=&nbsp;{{ ( entity.paidAmount)|number_format }}</strong></td>
                                </tr>
                                {% if entity.advanceAmount  > 0 %}
                                    <tr>
                                        <td class="numeric" colspan="8" ><span class="pull-right" >Advance Amount</span></td>
                                        <td class="numeric" >=&nbsp;{{ ( entity.advanceAmount)|number_format }}</td>
                                    </tr>
                                {% endif %}
                                {% if entity.dueAmount  > 0 %}
                                    <tr>
                                        <td class="numeric" colspan="8" ><span class="pull-right" >Due Amount</span></td>
                                        <td class="numeric" >=&nbsp;{{ ( entity.dueAmount)|number_format }}</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>

                        </div>
                        <!--/span-->
                    </div>
                    <div class="form-actions" style="background-color: #FFFFff">

                        <div class="">
                            {% if entity.process == 'created' %}
                                 <div>
                                    <form id="process" name="process">
                                        <div class="row-fluid">

                                            <div class="span10">
                                                <div class="control-group">
                                                    <div class="controls">
                                                       <select class="span12" name="delivery" id="delivery">
                                                           <option value="pickup" {% if entity.delivery == 'pickup'  %} selected="selected" {% endif %}>Pickup address: [ {{ entity.ecommerceConfig.pickupLocation }} ]</option>
                                                           <option value="delivery" {% if entity.delivery == 'delivery'  %} selected="selected" {% endif %} >Delivery address</option>
                                                       </select>
                                                        <input type="text" name="address" id="address" class="span12 tooltips" data-original-title = "Enter  delivery address ie: Unit,Floor,House,Road,Area,Thana,District Etc" placeholder = "Enter  delivery address ie: Unit,Floor,House,Road,Area,Thana,District Etc" data-trigger = "hover"   value="{% if entity.delivery == 'pickup'  %}{{ entity.ecommerceConfig.pickupLocation }}{% else %}{{ entity.address }}{% endif %}" />
                                                    </div>
                                                </div>
                                            </div>
                                             <div class="span2">
                                                <div class="control-group">
                                                    <div class="controls" style="margin-top: 20px">
                                                        <button type="button" id="submitProcess" name="submitProcess"  data-url="{{ path('preorder_process',{'shop':globalOption.slug,id:entity.id,'process':'in-progress'}) }}"  class="btn blue"><i class="icon-refresh"></i>&nbsp;Process</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            {% elseif entity.process == 'verified'  %}
                                {{ form_start(preOrderform) }}
                                {{ form_row(preOrderform._token) }}
                                <div class="">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(preOrderform.location) }}
                                                            {{ form_errors(preOrderform.location) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span9">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(preOrderform.address) }}
                                                            {{ form_errors(preOrderform.address) }}
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span9">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="row-fluid">
                                                        <div class="span4">
                                                            <div class="row-fluid">
                                                                <div class="span12">
                                                                    <div class="control-group">
                                                                        {{ form_widget(preOrderform.paidAmount) }}
                                                                        {{ form_errors(preOrderform.paidAmount) }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="span8">
                                                            <div class="row-fluid">
                                                                <div class="span12">
                                                                    <div class="control-group">
                                                                        {{ form_widget(preOrderform.accountMobileBank) }}
                                                                        {{ form_errors(preOrderform.accountMobileBank) }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row-fluid">
                                                                <div class="span6">
                                                                    <div class="control-group">
                                                                        <div class="controls">
                                                                            {{ form_widget(preOrderform.mobileAccount) }}
                                                                            {{ form_errors(preOrderform.mobileAccount) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="span6">
                                                                    <div class="control-group">
                                                                        <div class="controls">
                                                                            {{ form_widget(preOrderform.transaction) }}
                                                                            {{ form_errors(preOrderform.transaction) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                        <div class="span3">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid" style="margin-top: 25px">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            <button type="submit" id="submitProcess" name="submitProcess" value="payment"  class="btn blue"><i class="icon-ok"></i>&nbsp;Payment</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                {{ form_end(preOrderform) }}
                            {% endif %}
                        </div>
                        {% if entity.preOrderItems is not empty %}
                        {% set paymentID = entity.globalOption.id~'-pre-order-'~entity.id %}
                        {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': paymentID } %}
                        {% endif %}
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@EcommerceBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@EcommerceBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    ApproveProcess();
    $('#fos_comment_comment_body').addClass('span12');
    $('.fos_comment_submit input[type="submit"]').addClass('btn blue');

    $("");
{% endblock %}

