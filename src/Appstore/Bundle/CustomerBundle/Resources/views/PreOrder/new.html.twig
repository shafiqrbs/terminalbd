                        </div>
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="unitPrice">Unit Price</label>
                                <div class="controls">
                                    {{ form_widget(form.unitPrice) }}
                                    {{ form_errors(form.unitPrice) }}
                                </div>
                            </div>
