                                            <div class="controls">
                                                {{ form_widget(paymentForm.mobileAccount) }}
                                                {{ form_errors(paymentForm.mobileAccount) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span8">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(paymentForm.transaction) }}
                                                {{ form_errors(paymentForm.transaction) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="span2">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid" style="margin-top: 25px">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                <button type="button" id="submitPayment" name="submitPayment" value="payment"  class="btn green"><i class="icon-save"></i>&nbsp;Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        {{ form_end(paymentForm) }}

