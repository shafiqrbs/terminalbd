<div class="row-fluid" >
    <div class="span12">
        <div class="row-fluid">
            <div class="span8 profile-info">
                {% if entity.customer is not empty %}<h1>{{ entity.customer.name }}</h1>{% endif %}
                <ul class="unstyled inline">
                    {% if entity.customer is not empty and entity.customer.location is not empty %}<li><i class="icon-map-marker"></i>{{ entity.customer.location.id }}</li>{% endif %}
                    <li><i class="icon-calendar"></i> {{ entity.created|date('d-F-Y') }}</li>
                    {% if entity.customer is not empty %}<li><i class="icon-phone"></i> {{ entity.customer.mobile }}</li>{% endif %}
                </ul>
            </div>
            <!--end span8-->
            <div class="span4">
                <div class="portlet sale-summary">
                    <div class="portlet-title">
                        <div class="caption">Profile</div>
                    </div>
                    <div class="portlet-body">
                        <ul class="unstyled">
                            <li>
                                <span class="sale-info">Gender <i class="icon-img-up"></i></span>
                                <span class="sale-num"> {% if entity.customer is not empty %} {{ entity.customer.gender }}{% endif %}</span>
                            </li>
                            <li>
                                <span class="sale-info">Age <i class="icon-img-down"></i></span>
                                <span class="sale-num">{% if entity.customer is not empty %} {{ entity.customer.age }} {{ entity.customer.ageType }} {% endif %}</span>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            <!--end span4-->
        </div>
        <!--end row-fluid-->
        <div class="clearfix">&nbsp;</div>
        <div class="tabbable tabbable-custom tabbable-custom-profile">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1_11" data-toggle="tab">Chief & Presenting</a></li>
                <li><a href="#tab_1_22" data-toggle="tab">Medical & Drug</a></li>
                <li><a href="#tab_1_33" data-toggle="tab">Examination</a></li>
                <li><a href="#tab_1_44" data-toggle="tab">Investigation & Diagnosis</a></li>
                <li><a href="#tab_1_55" data-toggle="tab">Advise</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1_11">
                    <div class="portlet-body" style="display: block;">
                        <div class="form-actions portlet box blue">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>CHIEF COMPLAINTS</div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead class="flip-content ">
                            <tr class="head-green">
                                <th class="numeric">Procedure</th>
                                <th class="numeric">Teeth Position</th>
                                <th class="numeric">Action</th>
                            </tr>
                            </thead>
                            <tbody id="procedure-chief-complaints">
                            {% for invoiceParticular in entity.invoiceParticulars %}
                                {% if invoiceParticular.dmsService is not empty and invoiceParticular.dmsService.slug|trim =='chief-complaints' %}
                                    <tr id="remove-{{ invoiceParticular.id }}">
                                        <td  class="numeric">{{ invoiceParticular.metaValue }}</td>
                                        <td class="numeric">
                                            {% if invoiceParticular.teethPosition is not empty %}
                                                <table class="dms-table">
                                                    {% set leftTeeths = [8,7,6,5,4,3,2,1] %}
                                                    {% set rightTeeths = [1,2,3,4,5,6,7,8] %}
                                                    <tr><td class="dms-td dms-td-border-none dms-td-border-bottom">
                                                            <ul class="leftTeeth">
                                                                {% for left in leftTeeths %}
                                                                    <li {% if left in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'upper-left' %} class="active" {% endif %} >{{ left }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                        <td class="dms-td dms-td-border-bottom">
                                                            <ul class="rightTeeth">
                                                                {% for right in rightTeeths %}
                                                                    <li {% if right in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'upper-right' %} class="active" {% endif %} >{{ right }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                    <tr><td class="dms-td dms-td-border-none">
                                                            <ul class="leftTeeth">
                                                                {% for left in leftTeeths %}
                                                                    <li {% if left in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'lower-left' %} class="active" {% endif %}>{{ left }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                        <td class="dms-td">
                                                            <ul class="rightTeeth">
                                                                {% for right in rightTeeths %}
                                                                    <li {% if right in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'lower-right' %} class="active" {% endif %} >{{ right }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                </table>
                                            {% endif %}
                                        </td>
                                        <td class="numeric">
                                            <a href="javascript:" class="btn red mini particularDetete" data-id="{{ invoiceParticular.id }}" id="{{ invoiceParticular.id }}" data-url="{{ path('dms_invoice_particular_delete',{'invoice':entity.invoice , 'id':invoiceParticular.id}) }}" ><i class="icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="form-actions portlet box green">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>HISTORY OF THE PRESENTING COMPLAINTS</div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead class="flip-content ">
                            <tr class="head-green">
                                <th class="numeric">Procedure</th>
                                <th class="numeric">Teeth Position</th>
                                <th class="numeric">Action</th>
                            </tr>
                            </thead>
                            <tbody id="procedure-chief-complaints">
                            {% for invoiceParticular in entity.invoiceParticulars %}
                                {% if invoiceParticular.dmsService is not empty and invoiceParticular.dmsService.slug|trim =='presenting' %}
                                    <tr id="remove-{{ invoiceParticular.id }}">
                                        <td  class="numeric">{{ invoiceParticular.metaValue }}</td>
                                        <td class="numeric">
                                            {% if invoiceParticular.teethPosition is not empty %}
                                                <table class="dms-table">
                                                    {% set leftTeeths = [8,7,6,5,4,3,2,1] %}
                                                    {% set rightTeeths = [1,2,3,4,5,6,7,8] %}
                                                    <tr><td class="dms-td dms-td-border-none dms-td-border-bottom">
                                                            <ul class="leftTeeth">
                                                                {% for left in leftTeeths %}
                                                                    <li {% if left in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'upper-left' %} class="active" {% endif %} >{{ left }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                        <td class="dms-td dms-td-border-bottom">
                                                            <ul class="rightTeeth">
                                                                {% for right in rightTeeths %}
                                                                    <li {% if right in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'upper-right' %} class="active" {% endif %} >{{ right }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                    <tr><td class="dms-td dms-td-border-none">
                                                            <ul class="leftTeeth">
                                                                {% for left in leftTeeths %}
                                                                    <li {% if left in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'lower-left' %} class="active" {% endif %}>{{ left }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                        <td class="dms-td">
                                                            <ul class="rightTeeth">
                                                                {% for right in rightTeeths %}
                                                                    <li {% if right in invoiceParticular.teethNo and invoiceParticular.teethPosition == 'lower-right' %} class="active" {% endif %} >{{ right }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                </table>
                                            {% endif %}
                                        </td>
                                        <td class="numeric">
                                            <a href="javascript:" class="btn red mini particularDetete" data-id="{{ invoiceParticular.id }}" id="{{ invoiceParticular.id }}" data-url="{{ path('dms_invoice_particular_delete',{'invoice':entity.invoice , 'id':invoiceParticular.id}) }}" ><i class="icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
                <!--tab-pane-->
                <div class="tab-pane" id="tab_1_22">
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Past Medical History</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <ul class="feeds">
                        {% for particular in particulars %}
                            {% if particular.service.slug == 'medical-history' %}
                                <li> <div class="col1">
                                        <div class="cont">
                                            <div class="cont-col2">
                                                <div class="desc">{{ particular.name }}: {% if invoiceParticularArr is not empty and invoiceParticularArr[particular.id] is defined and invoiceParticularArr[particular.id] is not empty %}{{ invoiceParticularArr[particular.id].metaValue }}{% endif %}</div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <div class="clearfix">&nbsp;</div>
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Drug History</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="row-fluid">
                        <div class="span12">{{ entity.drugHistory|raw }}</div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                </div>
                <div class="tab-pane" id="tab_1_33">
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>General Examination</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <ul class="feeds">
                        {% for particular in particulars %}
                            {% if particular.service.slug == 'general' %}
                                <li> <div class="col1">
                                        <div class="cont">
                                            <div class="cont-col2">
                                                <div class="desc">{{ particular.name }}: {% if invoiceParticularArr is not empty and invoiceParticularArr[particular.id] is defined and invoiceParticularArr[particular.id] is not empty %}{{ invoiceParticularArr[particular.id].metaValue }}{% endif %}</div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <div class="clearfix">&nbsp;</div>
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Local Examination</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    {% for particular in particulars %}
                        {% if particular.service.slug == 'physical' %}
                            <div class="row-fluid">
                                <div class="span12"><label>{{ particular.name }}</label></div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    {% if invoiceParticularArr is not empty and invoiceParticularArr[particular.id] is defined and invoiceParticularArr[particular.id] is not empty %}{{ invoiceParticularArr[particular.id].metaValue|raw }}{% endif %}
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                        {% endif %}
                    {% endfor %}
                    <div class="clearfix">&nbsp;</div>
                </div>
                <!--tab-pane-->
            </div>
        </div>
    </div>
    <!--end span9-->
</div>