<div class="row-fluid">
    <form id="appointmentForm" name="appointmentForm" method="post">
        <div class="span12">
            <div class="input-append span12" >
                <input type="date" class="m-wrap span10 form-control datePicker"  id="dateSchedule" name="dateSchedule" value="" >
                <div class="btn-group">
                    <button type="button" data-url="{{ path('dms_treatment_date_wise_schedule') }}"  class="btn blue" id="searchAppointment"><i class="icon-search"></i> Go</button>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="row-fluid">
    <table class="table table-bordered table-striped table-condensed flip-content ">
        <thead class="flip-content ">
        <tr class="head-green">
            <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
            <th class="numeric">Patient ID</th>
            <th class="numeric">Patient Name</th>
            <th class="numeric">Assign Doctor</th>
            <th class="numeric">Treatment Particular</th>
            <th class="numeric">Date</th>
            <th class="numeric">Time</th>
            <th class="numeric">Process</th>
            <th class="numeric">Status</th>
            <th class="numeric">Sms</th>
            <th class="numeric">Send</th>
        </tr>
        </thead>
        <tbody id="appointmentSchedule">
        {% for plan in treatmentSchedule %}
            <tr>
                <td  class="numeric">{{ loop.index }}</td>
                <td  class="numeric">{{ plan.patientId }}</td>
                <td  class="numeric">{{ plan.customerName }}</td>
                <td  class="numeric">{{ plan.doctorName }}</td>
                <td  class="numeric">{{ plan.particularCode }}-{{ plan.particularName }}</td>
                <td  class="numeric">
                    {% if plan.appointmentStatus ==1 %}
                        {{ plan.appointmentDate }}
                    {% else %}
                        <a  class="btn mini blue-stripe btn-action editable" data-name="AppointmentDate" href="javascript:"  data-url="{{ path('dms_treatment_inline_update') }}" data-value="{{ plan.appointmentDate }}" data-format="YYYY-MM-DD" data-viewformat="DD-MM-YYYY" data-template="DD-MM-YYYY" data-type="text" data-pk="{{ plan.id }}" data-original-title="Change appointment date">{{ plan.appointmentDate }}</a>
                    {% endif %}
                <td  class="numeric">
                    {% if plan.appointmentStatus ==1 %}
                        {{ plan.appointmentTime }}
                    {% else %}
                        <a  data-type="select" class="btn mini purple-stripe btn-action editable" id="process" data-name="AppointmentTime" href="#" data-source="{{ path('dms_invoice_appointment_datetime_select') }}"  data-url="{{ path('dms_treatment_inline_update') }}" data-pk="{{ plan.id }}" data-value="{{ plan.appointmentTime }}" data-original-title="Change appointment time">{{ plan.appointmentTime }}</a>
                    {% endif %}
                </td>
                <td  class="numeric">{{ plan.process }}</td>
                <td  class="numeric">{% if  plan.appointmentStatus == 1 %}Done{% else %}Pending{% endif %}</td>
                <td  class="numeric">{% if  plan.sendSms == 1 %}Yes{% else %}No{% endif %}</td>
                <td  class="numeric">
                    {% if plan.appointmentStatus != 1 %}
                        <a class="btn blue sms-confirm mini" href="javascript:" data-url="{{ path('dms_treatment_plan_sms',{'patient':plan.patientId,'id':plan.id}) }}"><i class="icon-phone"></i> Send SMS</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>