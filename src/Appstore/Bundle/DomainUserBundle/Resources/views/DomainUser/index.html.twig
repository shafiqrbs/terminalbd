{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Employee Lists
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('domain') }}">Employee</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
               <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Employee List</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('domain_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('domain') }}"><i class="icon-th-list"></i>&nbsp;List</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                    <th class="numeric">Name</th>
                                    <th class="numeric">User name</th>
                                    <th class="numeric">Role</th>
                                    <th class="numeric">Mobile</th>
                                    <th class="numeric">Last login</th>
                                    <th class="numeric">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    {% if entity.isDelete != 1 %}
                                    <tr>
                                        <td><span class="badge badge-warning toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span></td>
                                        <td>{{ entity.profile.name }}</td>
                                        <td>{{ entity.username }}</td>
                                        <td>{{ entity.role }}</td>
                                        <td class="numeric"><a href="tel:+88 {{ entity.profile.mobile }}"> {{ entity.profile.mobile }}</a></td>
                                        <td class="numeric">{{ entity.lastLogin|date('d-m-Y') }}</td>
                                        <td class="numeric">
                                            {% if entity.role != 'ROLE_DOMAIN' %}
                                            <a href="{{ path('domain_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
                                            <a href="{{ path('domain_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
                                            <a title="Are you sure went to delete ?" href="{{ path('domain_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr id="show-{{ entity.id }}" class="showing-overview">
                                        <td colspan="7">
                                             <table class="table">
                                                 <tr><td>Joining Date</td><td>{{ entity.profile.joiningDate|date("d-F-Y") }}</td></tr>
                                                 <tr><td>Designation</td><td>{{ entity.profile.designation }}</td></tr>
                                                 <tr><td>Email</td><td>{{ entity.email }}</td></tr>
                                                 <tr><td>Address</td><td>{{ entity.profile.address }}</td></tr>
                                                 <tr><td>Thana/District</td><td>{% if entity.profile.thana is not empty %}{{ entity.profile.thana.name }}{% endif %}{% if entity.profile.district is not empty %} , {{ entity.profile.district.name }}{% endif %}</td></tr>
                                                 <tr><td>Blood group </td><td>{{ entity.profile.bloodGroup }}</td></tr>
                                                 <tr><td>Additional phone </td><td>{{ entity.profile.additionalPhone }}</td></tr>
                                             </table>
                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


