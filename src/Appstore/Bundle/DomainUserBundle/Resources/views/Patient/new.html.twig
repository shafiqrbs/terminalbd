{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN hms_customer HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="hms_customer-title">
                    Create new Patient
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('hms_customer') }}">Patient List</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Create new Patient</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END hms_customer HEADER-->
        <!-- BEGIN hms_customer CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Patient Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('hms_customer_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('hms_customer') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('hms_customer_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('hms_customer_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span12 patient-info">
                                    <div class="row-fluid customer-add">
                                        <div class="span8">
                                            <div class="control-group">
                                                <label class="control-label red" for="firstName"><span>Patient Name</span><span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.name) }}
                                                    {{ form_errors(form.name) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span4">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label red" for="firstName"><span>Mobile no</span><span class="required">*</span></label>
                                                        <div class="controls">
                                                            {{ form_widget(form.mobile) }}
                                                            {{ form_errors(form.mobile) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="control-group">
                                                    <label class="control-label red" for="firstName"><span>Gender & Age</span><span class="required">*</span></label>
                                                    <div class="controls span4">
                                                        {{ form_widget(form.gender) }}
                                                    </div>
                                                    <div class="controls span3">
                                                        {{ form_widget(form.age) }}
                                                    </div>
                                                    <div class="controls span4">
                                                        {{ form_widget(form.ageType) }}
                                                        {{ form_errors(form.ageType) }}
                                                    </div>
                                                    <div class="clearfix"></div>
                                                    <div class="controls">
                                                        {{ form_errors(form.gender) }}
                                                    </div>
                                                    <div class="clearfix"></div>
                                                    <div class="controls">
                                                        {{ form_errors(form.age) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label red" for="firstName"><span>Location</span></label>
                                                        <div class="controls">
                                                            {{ form_widget(form.location) }}
                                                            {{ form_errors(form.location) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label red" for="firstName"><span>Address</span></label>
                                                        <div class="controls">
                                                            {{ form_widget(form.address) }}
                                                            {{ form_errors(form.address) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                    <button type="submit" name="patientInvoice" value="invoice" class="btn blue"><i class="icon-plus"></i> Save & New Invoice</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('hms_customer_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
