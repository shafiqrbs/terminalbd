{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_damage HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_damage-title">
                    Manage E-commerce Config
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('ecommerce_config_modify') }}">Manage E-commerce Config</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage E-commerce Config new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_damage HEADER-->
        <!-- BEGIN inventory_damage CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage E-commerce Config Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}


                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">

                                                <label class="control-label" for="price">Delivery Charge</label>
                                                <div class="controls">
                                                    {{ form_widget(form.shippingCharge) }}
                                                    {{ form_errors(form.shippingCharge) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Currency</label>
                                                <div class="controls">
                                                    {{ form_widget(form.currency) }}
                                                    {{ form_errors(form.currency) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Slider column</label>
                                                <div class="controls">
                                                    {{ form_widget(form.owlProductColumn) }}
                                                    {{ form_errors(form.owlProductColumn) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Per Column</label>
                                                <div class="controls">
                                                    {{ form_widget(form.perColumn) }}
                                                    {{ form_errors(form.perColumn) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Per Page</label>
                                                <div class="controls">
                                                    {{ form_widget(form.perPage) }}
                                                    {{ form_errors(form.perPage) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                            <label class="control-label" for="price">Show Master Name &nbsp; {{ form_widget(form.showMasterName) }}
                                                {{ form_errors(form.showMasterName) }}</label>
                                                </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                            <label class="control-label" for="price">Is Cart &nbsp; {{ form_widget(form.cart) }}
                                                {{ form_errors(form.cart) }}</label>
                                                </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="quantity">Is Pre-order&nbsp;  {{ form_widget(form.isPreorder) }}
                                                    {{ form_errors(form.isPreorder) }}</label>
                                            </div>
                                        </div>
                                    </div>  
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                            <label class="control-label" for="price">Is Promotion&nbsp; {{ form_widget(form.promotion) }}
                                                {{ form_errors(form.promotion) }}</label>
                                                </div>
                                        </div>
                                    </div>
                                   {# <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="price">Product Using Color &nbsp; {{ form_widget(form.isColor) }}
                                                    {{ form_errors(form.isColor) }}</label>
                                            </div>
                                        </div>
                                    </div>#}
                                </div>

                                <div class="span5">
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Pickup address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.pickupLocation) }}
                                                    {{ form_errors(form.pickupLocation) }}

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="reset" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                        <br/>
                        <br/>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@EcommerceBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    ApproveProcess();
{% endblock %}

