{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_damage HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_damage-title">
                    Manage E-commerce Config
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('ecommerce_config_modify') }}">Manage E-commerce Config</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage E-commerce Config new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_damage HEADER-->
        <!-- BEGIN inventory_damage CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage E-commerce Config Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="clearfix"><br/></div>
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Menu Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.menuType) }}
                                            {{ form_errors(form.menuType) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3 ">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Slider column</label>
                                        <div class="controls">
                                            {{ form_widget(form.owlProductColumn) }}
                                            {{ form_errors(form.owlProductColumn) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3 ">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Per Column</label>
                                        <div class="controls">
                                            {{ form_widget(form.perColumn) }}
                                            {{ form_errors(form.perColumn) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3 ">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Per Page</label>
                                        <div class="controls">
                                            {{ form_widget(form.perPage) }}
                                            {{ form_errors(form.perPage) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="form-actions portlet box blue">
                                <div class="portlet-title"><div class="caption"><i class="icon-tag"></i>Manage Product</div></div>
                            </div>
                            <div class="clearfix"><br/> </div>
                            <div class="row-fluid">
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Product With Brand  {{ form_widget(form.showBrand) }}</label></div>
                                </div>
                                 <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Product With Category  {{ form_widget(form.showCategory) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Is Cart {{ form_widget(form.cart) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Pre-order {{ form_widget(form.isPreorder) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Size {{ form_widget(form.isSize) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Color{{ form_widget(form.isColor) }}</label></div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="form-actions portlet box yellow">
                                <div class="portlet-title"><div class="caption"><i class="icon-truck"></i>Delivery Process</div></div>
                            </div>
                            <div class="clearfix"><br/> </div>
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <label class="control-label" for="notes">Currency</label>
                                            <div class="controls">
                                                {{ form_widget(form.currency) }}
                                                {{ form_errors(form.currency) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="price">Delivery Charge</label>
                                                <div class="controls">
                                                    {{ form_widget(form.shippingCharge) }}
                                                    {{ form_errors(form.shippingCharge) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="notes"> Vat Enable {{ form_widget(form.vatEnable) }}</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">

                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Vat Registration No</label>
                                                <div class="controls">
                                                    {{ form_widget(form.vatRegNo) }}
                                                    {{ form_errors(form.vatRegNo) }}

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Vat Amount</label>
                                                <div class="controls">
                                                    {{ form_widget(form.vat) }}
                                                    {{ form_errors(form.vat) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="isAdditionalItem"> Additional Item {{ form_widget(form.isAdditionalItem) }}</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.address) }}
                                                    {{ form_errors(form.address) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                             <div class="span3">
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="notes">Pickup address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.pickupLocation) }}
                                                    {{ form_errors(form.pickupLocation) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="form-actions portlet box green">
                                <div class="portlet-title"><div class="caption"><i class="icon-cog"></i>Sidebar Config</div></div>
                            </div>
                            <div class="clearfix"><br/> </div>
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group"><label class="control-label" for="price">Show Product Sidebar {{ form_widget(form.showSidebar) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Category {{ form_widget(form.sidebarCategory) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Price {{ form_widget(form.sidebarPrice) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Size {{ form_widget(form.sidebarSize) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Color{{ form_widget(form.sidebarColor) }}</label></div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span3">&nbsp;</div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Brand {{ form_widget(form.sidebarBrand) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Discount {{ form_widget(form.sidebarDiscount) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Promotion {{ form_widget(form.sidebarPromotion) }}</label></div>
                                </div>
                                <div class="span2">
                                    <div class="control-group"><label class="control-label" for="price">Tag {{ form_widget(form.sidebarTag) }}</label></div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="form-actions portlet box purple">
                                <div class="portlet-title"><div class="caption"><i class="icon-reorder"></i>Manage Printer</div></div>
                            </div>
                            <div class="clearfix"><br/> </div>
                            <div class="row-fluid">
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="isPrintHeader">Print Head {{ form_widget(form.isPrintHeader) }}
                                            {{ form_errors(form.isPrintHeader) }}
                                        </label>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="isPrintFooter">Print Bottom {{ form_widget(form.isPrintFooter) }}
                                            {{ form_errors(form.isPrintFooter) }}</label>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="control-group">
                                        <label class="control-label" for="printBy">Print By {{ form_widget(form.printBy) }}
                                            {{ form_errors(form.printBy) }}</label>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Printer</label>
                                        <div class="controls">
                                            {{ form_widget(form.printer) }}
                                            {{ form_errors(form.printer) }}

                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Left Margin</label>
                                        <div class="controls">
                                            {{ form_widget(form.printLeftMargin) }}px
                                            {{ form_errors(form.printLeftMargin) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span8"></div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="printTopMargin">Top Margin</label>
                                        <div class="controls">
                                            {{ form_widget(form.printTopMargin) }}px
                                            {{ form_errors(form.printTopMargin) }}

                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="printMarginBottom">Bottom Margin</label>
                                        <div class="controls">
                                            {{ form_widget(form.printMarginBottom) }}px
                                            {{ form_errors(form.printMarginBottom) }}

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                        <br/>
                        <br/>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@EcommerceBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    ApproveProcess();
{% endblock %}

