{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="page-title">
                Home Slider
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('ecommerceslider') }}">Home Slider</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Home Slider</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
           
            <div class="portlet box green tabbable">

                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                </div>

                <div class="portlet-body">

                    <div class="tabbable portlet-tabs">
                        <ul class="nav nav-tabs">
                            {% if entity.id > 0  %}
                                <li><a  href="{{ path('ecommerceslider_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;View</a></li>
                            {% endif %}
                            <li class=""><a  href="{{ path('ecommerceslider') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                            <li class="active"><a  href="javascript:"><i class="icon-edit"></i>&nbsp;Add/Edit</a></li>


                        </ul>
                        <div class="tab-content">

                            <div class="portlet-body form">
                                {% include('flash-message.html.twig')  %}
                                <!-- BEGIN FORM-->
                                {{ form_start(form) }}
                                {{ form_row(form._token) }}
                                <div class="row-fluid">
                                    <div class="span8">
                                        <div class="row-fluid">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Title <span class="required">*</span></label>
                                                    <div class="controls">
                                                        <div class="input-icon left">
                                                            <i class="icon-font"></i>
                                                            {{ form_widget(form.name) }}
                                                            {{ form_errors(form.name) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="row-fluid">
                                                    <div class="span12 ">
                                                        <div class="control-group">
                                                            <label class="control-label" for="firstName">Content</label>
                                                            <div class="controls">
                                                                {{ form_widget(form.content) }}
                                                                {{ form_errors(form.content) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Target URL</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.targetTo) }}
                                                        {{ form_errors(form.targetTo) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid hide" id="Category">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Category</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.category) }}
                                                        {{ form_errors(form.category) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row-fluid hide" id="Promotion">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Promotion</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.promotion) }}
                                                        {{ form_errors(form.promotion) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row-fluid hide" id="Tag">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Tag</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.tag) }}
                                                        {{ form_errors(form.tag) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid hide" id="Discount">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Discount</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.discount) }}
                                                        {{ form_errors(form.discount) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                               <div class="row-fluid">

                                    <div class="span12">
                                        <div class="row-fluid">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Feature image</label>
                                                    <div class="controls">

                                                    </div>
                                                    <div class="controls">
                                                        <div data-provides="fileupload" class="fileupload fileupload-new">
                                                            <div style="width: 100%; min-height: 150px;" class="fileupload-new thumbnail">
                                                                {% if(entity.webPath) %}
                                                                    <img class="fileupload-preview fileupload-exists thumbnail" alt="" src="/{{ entity.webPath }}">
                                                                {% else %}
                                                                    <img alt="" src="http://www.placehold.it/1024x512/EFEFEF/AAAAAA&amp;text=no+image">
                                                                {% endif %}
                                                            </div>
                                                            <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                            <div>
													<span class="btn btn-file">
                                                        <span class="fileupload-new">Select image</span>
													    <span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
                                                    </span>
                                                                <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br/>
                                <div class="form-actions portlet box grey">
                                    <div class="pull-center">
                                        <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                        <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                        {% if(entity.id > 0 ) %}
                                            <a href="{{ path('ecommerceslider_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                        {% endif %}
                                    </div>
                                </div>
                                {{ form_end(form) }}
                                <!-- END FORM-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>

{% endblock %}
{% block documentready %}

    {{ parent() }}

    NestSortable.init();
    $('#serialize').click(function(){

        serialized = $('ol.sortable').nestedSortable('serialize');
        $.ajax({
            url: '{{ path('menugrouping_sorted') }}',
            type: "POST",
            data: serialized
        }).done(function(data){
            ('#sorting').submit();
        });
    })

{% endblock %}
