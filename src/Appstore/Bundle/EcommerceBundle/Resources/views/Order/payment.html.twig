{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Order
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('customer_order') }}">Manage Order</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Order Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Order Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('customer_order') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="">
                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <label><strong>Bill Overview</strong></label>
                                            <ul class="unstyled" >
                                                <li><strong>Invoice</strong>:#&nbsp;{{ entity.invoice }}</li>
                                                <li><strong>Grand Total</strong>:&nbsp;{{ entity.grandTotalAmount }}</li>
                                                {% if entity.discountAmount > 0 %}
                                                    <li><strong>Discount</strong>:&nbsp;{{ entity.discountAmount }}</li>
                                                {% endif %}
                                                <li><strong>Delivery Fee</strong>:&nbsp;{{ entity.shippingCharge }}</li>
                                                <li><strong>Paid</strong>:&nbsp;{{ entity.paidAmount }}</li>
                                                {% if entity.paidAmount <  entity.grandTotalAmount and entity.dueAmount > 0 %}
                                                    <li><strong>Due</strong>:&nbsp;{{ entity.dueAmount }}</li>
                                                {% elseif entity.paidAmount >  entity.grandTotalAmount and entity.returnAmount > 0 %}
                                                    <li><strong>Return</strong>:&nbsp;{{ entity.returnAmount }}</li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <label><strong>Payment Details</strong></label>
                                            <ul class="unstyled" >
                                                {% if entity.cashOnDelivery == 1 %}
                                                    <li><strong>Payment Method</strong>:&nbsp;Cash On Delivery</li>
                                                {% elseif entity.transactionMethod is not empty %}
                                                    <li><strong>Payment Method</strong>:&nbsp;{{ entity.transactionMethod.name }}</li>
                                                {% endif %}
                                                <li><strong>Shipping Method</strong>:&nbsp;{{ entity.delivery }}</li>
                                                <li><strong>Delivery Date</strong>:&nbsp;{{ entity.deliveryDate|date('d-m-Y') }}</li>

                                                {% if entity.accountMobileBank is not empty %}
                                                    <li><strong>Received</strong>:&nbsp;{{ entity.accountMobileBank.mobile }},{{ entity.accountMobileBank.serviceName }},{{ entity.accountMobileBank.authorised }}</li>
                                                {% endif %}
                                                {% if entity.mobileAccount is not empty %}
                                                    <li><strong>Mobile</strong>:&nbsp;{{ entity.mobileAccount }}</li>
                                                {% endif %}
                                                {% if entity.accountType is not empty %}
                                                    <li><strong>Account Type</strong>:&nbsp;{{ entity.accountType }}</li>
                                                {% endif %}
                                                {% if entity.transaction is not empty %}
                                                    <li><strong>Transaction ID</strong>:&nbsp;{{ entity.transaction }}</li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <label><strong>{{ entity.delivery|capitalize }} Address</strong></label>
                                            <ul class="unstyled" >
                                                <li><strong>Name</strong>:&nbsp;{{ entity.createdBy.profile.name }}</li>
                                                <li><strong>Mobile</strong>:&nbsp;{{ entity.createdBy.profile.mobile }}</li>
                                                <li><strong>Location</strong>:&nbsp;{{ entity.createdBy.profile.location.name }}</li>
                                                <li>{{ entity.address }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="portlet-body flip-scroll">
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" ><i class="icon-reorder"></i></th>
                                    <th class="numeric" >Item</th>
                                    <th class="numeric" >Size/Weight/Dimension</th>
                                    <th class="numeric" >Color</th>
                                    <th class="numeric" >Quantity</th>
                                    <th class="numeric" >Unit Price</th>
                                    <th class="numeric" >Total Price</th>
                                    <th class="numeric" >Barcode</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in entity.orderItems %}
                                    <tr id="remove-{{ item.id }}">
                                        <td>{{ loop.index }}.</td>
                                        <td class="numeric" >{{ item.purchaseVendorItem.masterItem.name }} {{ item.purchaseVendorItem.webName }}</td>
                                        <td class="numeric" >{% if item.goodsItem.size is not empty %}{{ item.goodsItem.size.name }}{% endif %}</td>
                                        <td class="numeric" >{% if item.color is not empty %}{{ item.color.name }}{% endif %}</td>
                                        <td class="numeric" >
                                        {{ item.quantity }}&nbsp;{{ item.purchaseVendorItem.masterItem.productUnit.name }}</td>
                                        <td class="numeric" >{{ item.price }}</td>
                                        <td class="numeric" >=&nbsp;{{ item.subTotal }}</td>
                                        <td class="numeric" >
                                            {% if item.purchaseItem is not empty %}{{ item.purchaseItem.barcode }}{% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td class="numeric" colspan="6" ><span class="pull-right">Total</span></td>
                                    <td class="numeric" colspan="1" >=&nbsp;{{ entity.totalAmount|number_format }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="numeric" colspan="6" ><span class="pull-right">Delivery Charge</span></td>
                                    <td class="numeric">=&nbsp;
                                        {% if entity.process == 'WfC'  %}
                                            <a data-mode="inline" class="editable" data-name="amount" href="#"  data-url="{{ path('customer_order_shipping_charge',{'id':entity.id}) }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change your delivery charge">{{ entity.shippingCharge }}</a>
                                        {% else %}
                                            {{ entity.shippingCharge }}
                                        {% endif %}
                                    </td>
                                    <td></td>
                                </tr>

                                {% if entity.ecommerceConfig.vatEnable == 1 %}
                                    <tr>
                                        <td class="numeric" colspan="6" ><span class="pull-right">Vat & Tax</span></td>
                                        <td class="numeric">=&nbsp;{{ entity.vat }}</td>
                                        <td></td>
                                    </tr>
                                {% endif %}
                                {% if entity.discountAmount > 0 %}
                                    <tr>
                                        <td class="numeric" colspan="6" ><span class="pull-right">Discount Amount</span></td>
                                        <td class="numeric">=&nbsp;{{ ( entity.discountAmount)|number_format }}</td>
                                        <td></td>
                                    </tr>
                                {% endif %}
                                {% if entity.coupon is not empty %}
                                    <tr>
                                        <td class="numeric" colspan="6" ><span class="pull-right">Coupon Code({{ entity.coupon.couponCode }})</span></td>
                                        <td class="numeric">=&nbsp;{{ entity.couponAmount }}</td>
                                        <td></td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <td class="numeric" colspan="6" ><span class="pull-right">Grand Total</span></td>
                                    <td class="numeric"><strong>=&nbsp;{{ ( entity.grandTotalAmount)|number_format }}</strong></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="numeric" colspan="6" ><span class="pull-right">Paid Amount</span></td>
                                    <td class="numeric"><strong>=&nbsp;{{ ( entity.paidAmount)|number_format }}</strong></td>
                                    <td></td>
                                </tr>
                                {% if entity.dueAmount  > 0 %}
                                <tr>
                                    <td class="numeric" colspan="6" ><span class="pull-right">Due Amount</span></td>
                                    <td class="numeric" >=&nbsp;{{ ( entity.dueAmount)|number_format }}</td>
                                    <td></td>
                                </tr>
                                {% endif %}
                                {% if entity.returnAmount  > 0 %}
                                <tr>
                                    <td class="numeric" colspan="6" ><span class="pull-right">Return Amount</span></td>
                                    <td class="numeric">=&nbsp;{{ ( entity.returnAmount)|number_format }}</td>
                                    <td></td>
                                </tr>
                                {% endif %}
                                </tbody>
                            </table>

                        </div>
                        <div class="clearfix"><br/></div>
                        <!--/span-->
                    </div>
                    <div class="form-actions" style="background-color: #FFFFff">
                        <div class="">
                            {% if entity.process == 'WfC' %}
                                <div>
                                    <form id="process" name="process" action="{{ path('customer_order_confirm',{'id':entity.id,'process':'in-progress'}) }}" method="post">
                                        <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="row-fluid">
                                                        <div class="span9">
                                                            <input type="text" id="comment" name="comment" class="span12 m-wrap tooltips"  data-trigger ="hover"  data-original-title="Enter sms content for order." placeholder="Enter sms content for order." value="" >
                                                        </div>
                                                        <div class="span3">
                                                            <div class="input-append">
                                                                <input type="datetime" name="deliveryDate" id="deliveryDate" class="date-picker span6 m-wrap" value="{{ "now"|date("d-m-Y") }}" placeholder="{{ "now"|date("d-m-Y") }}" >
                                                                <div class="btn-group">
                                                                    <button class="blue btn dropdown-toggle" data-toggle="dropdown">
                                                                        Action <span class="tasks"></span>
                                                                    </button>
                                                                    <ul class="dropdown-menu pull-right action">
                                                                        <li><button type="submit" id="submitProcess" name="submitProcess" data-name="confirm" value="confirm"  class="btn blue span12"><i class="icon-ok"></i>&nbsp;Confirm</button>
                                                                        </li>
                                                                        <li><button type="submit" id="submitProcess" name="submitProcess" data-name="sms" class="btn purple span12" value="sms"><i class="icon-comments"></i>&nbsp;SMS</button>
                                                                        </li>
                                                                     </ul>
                                                                </div>
                                                            </div>
                                                         </div>
                                                    </div>
                                                </div>
                                        </div>
                                    </form>
                                </div>
                                {% elseif entity.process == 'confirm'  %}
                                <div class="clearfix"><br/></div>
                                    <form id="process" name="process" action="{{ path('customer_order_confirm',{'id':entity.id}) }}" method="post">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="row-fluid">
                                                    <div class="span10">
                                                        <input type="text" id="comment" name="comment" class="span12 m-wrap tooltips"  data-trigger ="hover"  data-original-title="Enter sms content for order." placeholder="Enter sms content for order." value="" >
                                                    </div>
                                                    <div class="span2">
                                                        <div class="input-append">
                                                            <div class="btn-group">
                                                                <button class="green btn dropdown-toggle" data-toggle="dropdown">
                                                                    Way of Delivery&nbsp;<span class="tasks"></span>
                                                                </button>
                                                                <ul class="dropdown-menu pull-right action">
                                                                    <li><button  type="submit" id="submitProcess" name="submitProcess" value="done"   class="btn purple span12"><i class="icon-ok-circle"></i>&nbsp;Delivered</button></li>
                                                                    <li><button type="submit" id="submitProcess" name="submitProcess"  value="return" class="btn blue span12"   ><i class="icon-circle-arrow-left"></i>&nbsp;Return</button></li>
                                                                    <li><button  type="submit" id="submitProcess" name="submitProcess" value="cancel"   class="btn red span12" ><i class="icon-remove-circle"></i>&nbsp;Cancel</button></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                <div class="pull-center">
                                    <a  href="{{ path('customer_order_print_invoice',{id:entity.id}) }}" target="_blank" data-url=""  class="btn blue process"><i class="icon-truck"></i>&nbsp;Delivery Invoice</a>
                                </div>
                            {% endif %}

                        </div>
                    </div>
                    <div class="form-actions" >
                        {% set paymentID = entity.globalOption.id~'-ecommerce-payment-'~entity.id %}
                        {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': paymentID } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@EcommerceBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@EcommerceBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $(".editable").editable();
    ApproveProcess();
{% endblock %}