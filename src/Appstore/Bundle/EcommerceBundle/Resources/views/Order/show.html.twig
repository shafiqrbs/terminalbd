{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Order</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Invoice</th>
                <td>{{ entity.invoice }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount }}</td>
            </tr>
            <tr>
                <th>Paidamount</th>
                <td>{{ entity.paidAmount }}</td>
            </tr>
            <tr>
                <th>Dueamount</th>
                <td>{{ entity.dueAmount }}</td>
            </tr>
            <tr>
                <th>Commissionamount</th>
                <td>{{ entity.commissionAmount }}</td>
            </tr>
            <tr>
                <th>Process</th>
                <td>{{ entity.process }}</td>
            </tr>
            <tr>
                <th>Item</th>
                <td>{{ entity.item }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ entity.quantity }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer_order') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customer_order_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
