{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_damage HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_damage-title">
                    Manage Pre-order Item
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('customer_preorder') }}">Manage Pre-order Item</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Pre-order new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_damage HEADER-->
        <!-- BEGIN inventory_damage CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green">
                    {% if entity.process == 'created'  %}
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Pre-order Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('customer_preorder_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('customer_preorder') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Item name</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="url">Item url</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-link"></i>
                                            {{ form_widget(form.url) }}
                                            {{ form_errors(form.url) }}
                                                </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="quantity">Quantity</label>
                                        <div class="controls">
                                            {{ form_widget(form.quantity) }}
                                            {{ form_errors(form.quantity) }}
                                        </div>

                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="price">Unit Price $</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-dollar"></i>
                                            {{ form_widget(form.dollar) }}
                                            {{ form_errors(form.dollar) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="price">Unit Price taka</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-money"></i>
                                            {{ form_widget(form.price) }}
                                            {{ form_errors(form.price) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="price">Shipping Charge</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-money"></i>
                                            {{ form_widget(form.shippingCharge) }}
                                            {{ form_errors(form.shippingCharge) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="notes">Details</label>
                                        <div class="controls">

                                                {{ form_widget(form.details) }}
                                                {{ form_errors(form.details) }}

                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="reset" class="btn purple"><i class="icon-refresh"></i> Reset</button>

                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                        <br/>
                        <br/>

                    </div>
                    {% endif %}
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>List of Pre-order items</div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">

                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Quantity</th>
                                    <th class="numeric" >USD</th>
                                    <th class="numeric" >TotalUSD</th>
                                    <th class="numeric" >Unit price</th>
                                    <th class="numeric" >Total</th>
                                    <th class="numeric" >Shipping Charge</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in entity.preOrderItems %}
                                    <tr id="remove-{{ item.id }}">
                                        <td>
                                            {% if item.details %}
                                            <span class="badge badge-warning toggle badge-custom" id="{{ item.id  }}" ><span>[+]</span></span>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >{{ item.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" ><a target="_blank" href="{{ item.url }}"> {{ item.name|truncate(20) }}</a></td>
                                        <td class="numeric" >{{ item.quantity }}</td>
                                        <td class="numeric" >{{ item.dollar }}</td>
                                        <td class="numeric" >{{ item.totalDollar }}</td>
                                        <td class="numeric" >{{ item.price }}</td>
                                        <td class="numeric" >{{ item.total|number_format }}</td>
                                        <td class="numeric" >{{ item.shippingCharge|number_format }}</td>

                                        <td class="numeric" >
                                        {% if entity.process == 'created'  %}
                                            <a title="Are you sure went to delete ?" data-id="{{ item.id }}" data-url="{{ path('customer_preorder_item_delete',{'preOrder':entity.id,'id':item.id}) }}" class="btn red mini remove" ><i class="icon-trash"></i></a>
                                        {% elseif entity.process == 'in-progress' and entity.checkRoleEcommercePreorder(app.user.role) == true  %}
                                            <a data-title="Confirm item" data-id="{{ item.id }}" data-url="{{ path('customer_preorder_item_confirm',{'preOrder':entity.id,'id':item.id}) }}" class="btn  mini confirm {% if item.status == 1 %} green {% else %} red {% endif %} " ><i class="icon-ok"></i>{% if item.status == 1 %} Accept {% else %} Deny {% endif %}</a>
                                        {% endif %}
                                        </td>
                                    </tr>
                                    <tr id="show-{{ item.id }}" class="showing-overview">
                                        <td colspan="10">{{ item.details }}</td>
                                    </tr>
                                {% endfor %}
                                    <tr>
                                        <td class="numeric" colspan="3">&nbsp;</td>
                                        <td class="numeric" >{{ entity.quantity }}</td>
                                        <td class="numeric" >Total USD</td>
                                        <td class="numeric" >{{ entity.dollar }}</td>
                                        <td class="numeric" >Sub-total</td>
                                        <td class="numeric" >{{ entity.total|number_format }}</td>
                                        <td class="numeric" colspan="2">{{ entity.shippingCharge|number_format }}</td>

                                    </tr>
                                    <tr>
                                        <td class="numeric" colspan="4">&nbsp;</td>
                                        <td class="numeric" colspan="4" ><span class="pull-right">Grand Total (Sub-total + Shipping Charge)</span></td>
                                        <td class="numeric" colspan="2" >{{ ( entity.total + entity.shippingCharge)|number_format }}</td>
                                      </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="clearfix"><br/></div>
                        <!--/span-->
                    </div>
                    <div class="form-actions">

                        <div class="">
                            {% if entity.process == 'created' %}
                                <div>
                                    <form id="process" name="process">
                                        <div class="row-fluid">

                                            <div class="span10">
                                                <div class="control-group">
                                                    <div class="controls">
                                                       <select class="span12" name="delivery" id="delivery">
                                                           <option value="pickup" {% if entity.delivery == 'pickup'  %} selected="selected" {% endif %}>Pickup address: [ {{ entity.ecommerceConfig.pickupLocation }} ]</option>
                                                           <option value="delivery" {% if entity.delivery == 'delivery'  %} selected="selected" {% endif %} >Delivery address</option>
                                                       </select>
                                                        <input type="text" name="address" id="address" class="span12" value="{% if entity.delivery == 'pickup'  %} {{ entity.ecommerceConfig.pickupLocation }}  {% else %} {{ entity.address }}{% endif %}" >
                                                    </div>
                                                </div>
                                            </div>
                                            {% if entity.grandTotal > 0 %}

                                            <div class="span2">
                                                <div class="control-group">
                                                    <div class="controls" style="margin-top: 20px">
                                                        <button type="button" id="submitProcess" name="submitProcess"  data-url="{{ path('customer_preorder_process',{id:entity.id,'process':'in-progress'}) }}"  class="btn blue"><i class="icon-refresh"></i>&nbsp;Process</button>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endif %}
                                        </div>
                                    </form>
                                </div>
                            {% elseif entity.process == 'in-progress'  %}
                            <form name="wfc" id="wfc" action="{{ path('ecommerce_preorder_ajax_payment',{id:entity.id}) }}" method="post" >
                                <div class="row-fluid">
                                    <div class="span2">Grand Total</div>
                                    <div class="span1">{{ entity.grandTotal }}</div>
                                    <div class="span2">Advance Amount</div>
                                    <div class="span2"><input type="text" name="advanceAmount" id="advanceAmount" class="numeric span12" value="" placeholder="{{ entity.grandTotal }}" ></div>
                                    <div class="span3">Delivery Date(Approximately)</div>
                                    <div class="span2"><input type="datetime" name="deliveryDate" id="deliveryDate" class="date-picker span12" value="{{ "now"|date("d-m-Y") }}" placeholder="{{ "now"|date("d-m-Y") }}" ></div>
                                </div>
                                <div class="clearfix"><br/></div>
                                <div class="row-fluid">
                                    <div class="span2">{{ entity.delivery|capitalize }}</div>
                                    <div class="span10">{% if entity.delivery == 'pickup'  %} {{ entity.ecommerceConfig.pickupLocation }}  {% else %} {{ entity.address }}{% endif %}</div>
                                </div>
                            <div class="clearfix"><br/></div>

                            <div class="pull-center">
                                <input type="hidden" name="process" id="process" value="wfc" >
                                <button type="submit" id="confirm" data-url="{{ path('ecommerce_preorder_ajax_payment',{id:entity.id}) }}"  class="btn yellow"><i class="icon-pushpin"></i>&nbsp;Order in Progress</button>
                            </div>
                            </form>
                            {% elseif entity.process == 'wfc'  %}
                                <div class="">

                                    <form name="payment" id="payment" action="" method="post" >
                                        <div class="row-fluid">
                                            <div class="span4">
                                                <div class="row-fluid">
                                                    <div class="span12">Grand Total: {{ entity.grandTotal }}</div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">Advance amount: {{ entity.advanceAmount }}</div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">Due amount: {{ entity.grandTotal - entity.advanceAmount }}</div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">Delivery Date: {{ entity.deliveryDate|date('d-m-Y') }}</div>
                                                </div>
                                            </div>
                                            <div class="span8">
                                                <div class="row-fluid">
                                                    <div class="span12">{{ entity.delivery|capitalize }}</div>
                                                    </div>
                                                    <div class="row-fluid">
                                                    <div class="span9">{% if entity.delivery == 'pickup'  %} {{ entity.ecommerceConfig.pickupLocation }}  {% else %} {{ entity.address }}{% endif %}</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clearfix"><br/></div>

                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="row-fluid">
                                                    <div class="span3 ">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                <select name="paymentType" id="paymentType" class="span12 select2">
                                                                    <option value="">--Select Payment Type--</option>
                                                                    {% for paymentType in paymentTypes %}
                                                                        <option {% if entity.paymentType is not empty and entity.paymentType.id == paymentType.id %} selected="selected" {% endif %} value="{{ paymentType.slug }}" >{{ paymentType.name }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="span7">
                                                        <div class="control-group span12">
                                                            <div class="controls span12" id="bankbox">
                                                                <select name="bank" id="bank" class="select2 span12">
                                                                    <option value="">--Select Bank Account--</option>
                                                                    {% for bank in banks %}
                                                                        <option {% if entity.bankAccount is not empty and entity.bankAccount.id == bank.id %} selected="selected" {% endif %} value="{{ bank.id }}" >{{ bank.bank.name }}-{{ bank.accountNo }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                            <div class="controls span12" id="bkashbox">
                                                                <select name="bkash" id="bkash" class="select2 span12">
                                                                    <option value="">--Select bKash Account--</option>
                                                                    {% for bkash in bkashs %}
                                                                        <option {% if entity.bkashAccount is not empty and entity.bkashAccount.id == bkash.id %} selected="selected" {% endif %} value="{{ bkash.id }}">{{ bkash.accountType }}-{{ bkash.mobile }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="span2 ">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                <button type="submit" id="submitted" class="btn green" data-url="{{ path('ecommerce_preorder_ajax_payment',{id:entity.id}) }}"><i class=" icon-money"></i>&nbsp;Add Payment</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            <div class="pull-center">  <a  href="javascript:" data-url="{{ path('customer_preorder_process',{id:entity.id,'process':'confirm'}) }}"  class="btn blue process"><i class="icon-cog"></i>&nbsp;Order Confirm</a></div>

                            {% elseif entity.process == 'confirm'  %}
                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">Grand Total: {{ entity.grandTotal }}</div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">Advance amount: {{ entity.advanceAmount }}</div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">Due amount: {{ entity.grandTotal - entity.advanceAmount }}</div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">Delivery Date: {{ entity.deliveryDate|date('d-m-Y') }}</div>
                                        </div>
                                    </div>
                                    <div class="span8">
                                        <div class="row-fluid">
                                            <div class="span12">{{ entity.delivery|capitalize }}</div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span9">{% if entity.delivery == 'pickup'  %} {{ entity.ecommerceConfig.pickupLocation }}  {% else %} {{ entity.address }}{% endif %}</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"><br/></div>
                                <div class="pull-center">
                                    {% if entity.checkRoleEcommercePreorder(app.user.role) == true %}
                                        <a  href="{{ path('customer_preorder_invoice',{id:entity.id}) }}" target="_blank" data-url=""  class="btn purple process"><i class="icon-truck"></i>&nbsp;Delivery Invoice</a>
                                    {% else %}
                                        <a  href="javascript:"   class="btn purple process"><i class="icon-truck"></i>&nbsp;Way of Delivery</a></div>
                                    {% endif %}
                            {% endif %}

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@EcommerceBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@EcommerceBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    ApproveProcess();
{% endblock %}

