
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Election Committee
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="{{ path('election_committee') }}">Manage Election Committee</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Election Committee Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('election_committee') }}"><i class="icon-th-list"></i>&nbsp; Committee</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">
                               <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Committee Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.electionSetup) }}
                                            {{ form_errors(form.electionSetup) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                               <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Name</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.name) }}
                                                {{ form_errors(form.name) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                               <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Location</label>
                                        <div class="controls">
                                            {{ form_widget(form.location) }}
                                            {{ form_errors(form.location) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Duration</label>
                                        <div class="controls">
                                            <div class="input-icon left span6">
                                                <i class="icon-calendar"></i>
                                                <input class="m-wrap span12 search-input date-picker" style="padding-right:0!important" name="startDate" id="startDate" value=" {{ "now"|date("d-m-Y") }}"  autocomplete="off" placeholder="" >
                                            </div>
                                            <div class="input-icon left span6">
                                                <i class="icon-calendar"></i>
                                                <input class="m-wrap span12 search-input date-picker" style="padding-right:0!important;" name="endDate" id="endDate" value=" {{ "tomorrow"|date("d-m-Y") }}"  autocomplete="off" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box yellow">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>List of Committee Member</div>
                                    <div class="actions">
                                        <div class="btn-group">
                                            <button class="btn blue" href=""><i class="icon-save"></i>&nbsp; Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="portlet-body flip-scroll">
                                <table class="table table-bordered table-striped table-condensed flip-content ">

                                    <thead class="flip-content ">
                                    <tr class="head-blue">
                                        <th class="numeric" >Code</th>
                                        <th class="numeric" >Election Committee Type</th>
                                        <th class="numeric" >Name </th>
                                        <th class="numeric" >Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="form-actions portlet box green">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Add Committee Member</div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="row-fluid">
                                <div class="span8">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Search Member</label>
                                        <div class="controls">
                                            <input class="m-wrap span12 select2Member" name="member" id="member" value=""  autocomplete="off" placeholder="">
                                         </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="input-append span12" style="margin-bottom:0!important">
                                        <div class="input-group">
                                            <select class="m-wrap span9">
                                                <option>Designation</option>
                                                <option>President</option>
                                                <option>Secretary</option>
                                                <option>Member</option>
                                            </select>
                                            <button type="submit" class="btn blue" id="addRoom" ><i class="icon-save"></i> Add</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->

                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                        <div class="clearfix"><br/></div>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ElectionBundle/Resources/public/js/election.js'
    '@ElectionBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}


