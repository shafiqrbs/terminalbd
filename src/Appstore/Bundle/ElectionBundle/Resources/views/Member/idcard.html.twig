{% extends '::print.html.twig' %}
{% block body %}

    <div class="row-fluid" id="card-content" style="width: 100%">
        {% for entity in entities %}
            <div data-match-height="item-product" class="col-xs-4 col-lg-4 card-box">
                <div class="row-fluid header">
                    <div class="span4 pull-center">
                        <img class="img" src="{{ asset('assets/img/election/asraf.jpg') }}">
                    </div>
                    <div class="span8 right" >
                        <div class="row-fluid pull-center">
                            <h5>অসন্ন ১১তম জাতীয় সংসদ নির্বাচনে</h5>
                            <h4><strong>পিরোজপুর ৩ আসনের</strong></h4>
                            <h4>সংসদ সদস্য পদপ্রার্থী</h4>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="candidate">মোঃ আশরাফুর রহমান - কে</h3>
                    </div>
                    <div class="row-fluid body">
                        <div class="span4 pull-center" data-match-height="item-body">
                            <span><img class="img" src="{{ asset('assets/img/election/noukka.jpg') }}"></span>
                            <h4>নৌকা মার্কায় <br/> ভোট দিন</h4>
                        </div>
                        <div class="span8 right" data-match-height="item-body" >
                            <div class="row-fluid">
                                <div class="span12 inner">
                                    <p><label class="label-line">Name</label><strong>{{ entity.name }}</strong></p>
                                    <p><label class="label-line">NID </label> {{ entity.nid }}</p>
                                    <p><label class="label-line">Mobile </label> {{ entity.mobile }}</p>
                                    <p><label class="label-line">Center</label>{% if entity.voteCenter is not empty %}{{ entity.voteCenter.name }}{% endif %}</p>
                                    <span>{{ entity.location.name }}, {{ entity.location.wardName }}, {{ entity.location.unionName }}, {{ entity.location.thanaName }}</span>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

<style>

    .label-line{
        width: 60px; float: left;
        font-weight: bold;
    }

    .row-fluid .span8{
        padding-left: 0!important;
        margin-left: 0!important;
    }

    .card-box{
        border: 2px solid #000;
        background: #ffffff;
        width: 30.33333333%;
        float: left;
        position: relative;
        min-height: 1px;
        margin-right: 15px;
        margin-left: 15px;
        margin-bottom: 15px;
    }
    .card-box .header{
        border-bottom: 2px solid #000101;
    }
    .card-box .header .img , .card-box .body .img{
        height: 80px;padding: 5px;
        width: 105px;
    }
    .card-box .header .right{
        border-left:2px solid #000101;
        min-height: 90px;
    }
    .card-box .body .right{
        border-left:2px solid #000101;
    }
    .card-box .body .right .inner{
        padding-left: 10px;
        min-height: 125px;
        padding-top:5px;
    }
    .card-box .candidate{
        background: #000;
        color: #fff;
        font-weight: bold;
        font-size: 20px;
        padding-top: 8px!important;
        padding-bottom: 8px!important;
        line-height: 20px!important;
        text-align: center;
    }

    h1, h2, h3, h4, h5, h6{
        padding: 0!important;
        margin: 0!important;
    }
    p{
        margin: 0!important;
        padding: 0!important;
        padding-bottom: 5px!important;
        height: 15px;
        display: flex;

    }

    .fileupload .btn {
        padding: 4px 15px !important;
    }

    .barcode-block {
        text-align: center!important;
        white-space: nowrap;
        width: 350px;
        float: left;
        height: 80px;
        border: 1px solid #ccc;
        border-right: none;
        border-top: none;
    }

    /* The ghost, nudged to maintain perfect centering */
    .barcode-block:before {
        content: '';
        display: inline-block;
        height: 100%;
        vertical-align: middle;
        margin-right: -0.25em; /* Adjusts for spacing */
    }

    /* The element to be centered, can also be of any width and height */
    .centered {
        display: inline-block;
        vertical-align: middle;
        width: 113px;
    }
    .centered p{
        padding: 0!important;
        margin: 0!important;
        display: block;
        height: 14px;
        font-size: 11px;
        line-height: 13px;
        font-weight: bold;
    }

    .centered .left{
        text-align: left;
        float: left;
        display: inline-block;
        height: 14px;
        font-size: 9px;
    }
    .centered .center{
        text-align: center;
        display: inline-block;
        height: 14px;
    }
    .centered .right{
        text-align: right;
        float: right;
        display: inline-block;
        height: 14px;
        font-size: 9px;
    }

</style>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ElectionBundle/Resources/public/js/jspdf.debug.js'
    '@ElectionBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}