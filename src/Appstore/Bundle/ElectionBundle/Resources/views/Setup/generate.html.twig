<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Campaign Analysis Information</div>
    </div>
    <div class="portlet-body form">
        <div class="loader loader-double" ></div>
        <div id="memberLoad">
        <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span4">
                    <h4>About:</h4>
                    <ul class="unstyled">
                        {% if entity is not empty %}<li><strong>Created: </strong>&nbsp;{{ entity.created|date('d-m-y') }}</li>{% endif %}
                        {% if entity.location is not empty  %}<li><strong>Location: </strong>&nbsp;{{ entity.location.name }}</li>{% endif %}
                    </ul>
                </div>
            </div>
            <div class="row-fluid">
                <table class="table table-bordered table-striped table-condensed flip-content ">

                    <thead class="flip-content ">
                    <tr class="head-blue">
                        <th class="numeric" >Name</th>
                        <th class="numeric" >Political Party</th>
                        <th class="numeric" >Marka</th>
                        <th class="numeric" >Mobile</th>
                        <th class="numeric" >Location</th>
                        <th class="numeric" >Male Vote</th>
                        <th class="numeric" >Female Vote</th>
                        <th class="numeric" >Other Vote</th>
                        <th class="numeric" >Total Vote</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for candidate in entity.candidates %}
                        <tr>
                            <td class="numeric" >{{ candidate.name }}</td>
                            <td class="numeric" >{% if candidate.politicalParty is not empty %}{{ candidate.politicalParty.name }}{% endif %}</td>
                            <td class="numeric" >{% if candidate.marka is not empty %}{{ candidate.marka.name }}{% endif %}</td>
                            <td class="numeric" >{{ candidate.mobile }}</td>
                            <td class="numeric" >{% if entity.location is not empty %}{{ entity.location.name }}{% endif %}</td>
                            <td class="numeric" >{{ candidate.maleVote }}</td>
                            <td class="numeric" >{{ candidate.femaleVote }}</td>
                            <td class="numeric" >{{ candidate.otherVote }}</td>
                            <td class="numeric" >{{ candidate.totalVote }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

