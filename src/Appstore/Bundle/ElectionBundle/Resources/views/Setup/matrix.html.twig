{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Election Result Matrix
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="{{ path('daily_attendance') }}">Election Result Matrix</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Election Result Matrix Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="red btn" href="{{ path('election_setup') }}"><i class="icon-th-list"></i>&nbsp; Election Result</a>
                                <a class="red btn" href="javascript:" data-url="{{ path('election_setup_result_generate',{'id':entity.id}) }}"><i class="icon-refresh"></i>&nbsp; Result Generate</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body flip-scroll">
                        <table class="table table-bordered table-striped table-condensed flip-content ">
                        <thead class="head-yellow">
                            <tr>
                                <th class="numeric" >Name of Vote Center</th>
                                {% for cadidate in entity.candidates %}
                                    <td class="numeric" >
                                        <div class="row-fluid">
                                            <span class="span12 pull-center"><strong>{{ cadidate.marka.name }}</strong></span>
                                        </div>
                                        <div class="row-fluid" style="border-top: 1px solid red">
                                            <span class="span3 pull-center">Male</span>
                                            <span class="span3 pull-center">Female</span>
                                            <span class="span3 pull-center">Others</span>
                                            <span class="span3 pull-center">Total</span>
                                        </div>
                                    </td>
                                {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                            {% for center in entity.votecenters %}
                                <tr>
                                    <th class="">{{ center.location.voteCenterName }}</th>
                                    {% for candidate in entity.candidates %}
                                        {% set ids = center.id~'-'~candidate.id %}
                                        {% if matrixArr[ids]['centerId'] == center.id and  matrixArr[ids]['candidateId'] ==  candidate.id %}
                                            <td>
                                                <input type="text" data-id="{{ matrixArr[ids]['matrixId'] }}" class="m-wrap  span3 inline-input voteCount" id="maleVoter-{{ matrixArr[ids]['matrixId'] }}" name="maleVoter-{{ matrixArr[ids]['matrixId'] }}" value="{{ matrixArr[ids]['maleVoter'] }}" >
                                                <input type="text" data-id="{{ matrixArr[ids]['matrixId'] }}" class="m-wrap  span3 inline-input voteCount" id="femaleVoter-{{ matrixArr[ids]['matrixId'] }}" name="femaleVoter-{{ matrixArr[ids]['matrixId'] }}" value="{{ matrixArr[ids]['femaleVoter'] }}" >
                                                <input type="text" data-id="{{ matrixArr[ids]['matrixId'] }}" class="m-wrap  span3 inline-input voteCount" id="otherVoter-{{ matrixArr[ids]['matrixId'] }}" name="otherVoter-{{ matrixArr[ids]['matrixId'] }}" value="{{ matrixArr[ids]['otherVoter'] }}" >
                                                <input type="text" class="m-wrap  span3 inline-input" id="totalVoter-{{ matrixArr[ids]['matrixId'] }}"  name="totalVoter-{{ matrixArr[ids]['matrixId'] }}" value="{{ matrixArr[ids]['totalVoter'] }}" >
                                            </td>
                                        {% endif %}

                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot class="head-yellow">
                            <tr>
                                <th class="numeric" >Total</th>
                                {% for candidate in entity.candidates %}
                                    <td class="numeric" >
                                        <div class="row-fluid">
                                            <span class="span3 pull-center" id="totalMaleVote-{{ candidate.id }}">{{ candidate.maleVote }}</span>
                                            <span class="span3 pull-center" id="totalFemaleVote-{{ candidate.id }}" >{{ candidate.femaleVote }}</span>
                                            <span class="span3 pull-center" id="totalOtherVote-{{ candidate.id }}" >{{ candidate.otherVote }}</span>
                                            <span class="span3 pull-center" id="totalCandidateVote-{{ candidate.id }}">{{ candidate.totalVote }}</span>
                                        </div>
                                        <div class="row-fluid" style="border-top: 1px solid red">
                                            <span class="span12 pull-center"><strong>{{ candidate.marka.name }}</strong></span>
                                        </div>
                                    </td>
                                {% endfor %}
                            </tr>
                            </tfoot>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
 <style>
    input[class*="span"].m-wrap{
         font-weight: bold;
         margin-top: -1px;
         text-align: right;
         border: 2px solid #4b8df8!important;
         height: 23px!important;
         width: 24%;
     }
 </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@ElectionBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ElectionBundle/Resources/public/js/election.js'
    '@ElectionBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}





