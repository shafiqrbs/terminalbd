{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Doctor Payment Invoice
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Commission Payment Invoice Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Doctor Payment Invoice</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('hms_doctor_commission_invoice') }}"><i class="icon-th-list"></i>&nbsp;Commission Invoice</a></li>
                                    <li><a href="{{ path('hms_doctor_invoice') }}"><i class="icon-th-list"></i>&nbsp;Payment List</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="row-fluid" >
                                <form class="search-form" action="" method="get" name="itemSearch">
                                    <div class="row-fluid" style="margin-bottom: 10px">
                                        <div class="span3">
                                            <div class="input-icon left">
                                                <i class="icon-user"></i>
                                                <input class="m-wrap span12 search-input" name="name" id="name" value="{% if searchForm.name is defined %}{{ searchForm.name }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.name is defined %}{{ searchForm.name }}{% else %}Patient name{% endif %}">
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="input-icon left">
                                                <i class="icon-phone"></i>
                                                <input class="m-wrap span12 search-input" name="mobile" id="mobile" value="{% if searchForm.mobile is defined %}{{ searchForm.mobile }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.mobile is defined %}{{ searchForm.mobile }}{% else %}Patient mobile{% endif %}">
                                            </div>
                                        </div>

                                        <div class="span3">
                                            <div class="input-icon left">
                                                <i class="icon-calendar"></i>
                                                <input class="m-wrap span12 search-input date-picker" name="created" id="created" value="{% if searchForm.created is defined %}{{ searchForm.created }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.created is defined %}{{ searchForm.created }}{% else %}Created Date{% endif %}" >
                                            </div>
                                        </div>

                                        <div class="span3">
                                            <div class="input-icon left">
                                                <i class="icon-calendar"></i>
                                                <input class="m-wrap span12 search-input date-picker" name="deliveryDate" id="deliveryDate" value="{% if searchForm.deliveryDate is defined %}{{ searchForm.deliveryDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.deliveryDate is defined %}{{ searchForm.deliveryDate }}{% else %}Delivery Date{% endif %}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="row-fluid">
                                        <div class="span3">
                                            <select name="doctor" id="doctor" class="m-wrap span12">
                                                <option value="" >--Assign Doctor--</option>
                                                {% for doctor in assignDoctors %}
                                                    <option {% if searchForm.doctor is defined and searchForm.doctor == doctor.id %} selected="selected" {% endif %} value="{{ doctor.id }}" >{{ doctor.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="span3">
                                            <select name="referred" id="referred" class="m-wrap span12">
                                                <option value="" >--Patient Referred--</option>
                                                {% for referred in referredDoctors %}
                                                    <option {% if searchForm.referred is defined and searchForm.referred == referred.id %} selected="selected" {% endif %} value="{{ referred.id }}" >{{ referred.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="span3">
                                            <select name="process" id="process" class="m-wrap span12">
                                                <option value="" >--Process--</option>
                                                <option value="In-progress" {% if searchForm.process is defined and searchForm.process == 'In-progress' %} selected="selected" {% endif %} >In-progress</option>
                                                <option value="Done"  {% if searchForm.process is defined and searchForm.process == 'Done' %} selected="selected" {% endif %} >Done</option>
                                                <option value="Cancel"  {% if searchForm.process is defined and searchForm.process == 'Cancel' %} selected="selected" {% endif %} >Cancel</option>
                                            </select>
                                        </div>
                                        <div class="span3">
                                            <div class="controls">
                                                <div class="input-append span11">
                                                    <input type="text" id="invoice" name="invoice"  class="m-wrap span10" value="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% else %}Patient invoice no{% endif %} ">
                                                    <div class="btn-group">
                                                        <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <table class="table table-bordered table-striped table-condensed flip-content ">
                                    <thead class="flip-content">
                                    <tr class="head-red">
                                        <th class="numeric" ><strong>Net Total Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ invoiceOverview.netTotal|number_format }}</strong></th>
                                        <th class="numeric" ><strong>Received Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ invoiceOverview.netPayment|number_format }}</strong></th>
                                        <th class="numeric" ><strong>Due Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ invoiceOverview.netDue|number_format }}</strong></th>
                                        <th class="numeric" ><strong>Commission Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ invoiceOverview.netCommission|number_format }}</strong></th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-blue">
                                    <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i></th>
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Invoice No</th>
                                    <th class="numeric" >Delivery Date</th>
                                    <th class="numeric" >Net Total</th>
                                    <th class="numeric" >Received</th>
                                    <th class="numeric" >Balance</th>
                                    <th class="numeric" >Commission</th>
                                    <th class="numeric" >Status</th>
                                    <th class="numeric" >Process</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>
                                        <td class="numeric"> {% if  entity.doctorInvoices is not empty %}<span class="badge badge-warning toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span>{% endif %}</td>
                                        <td class="numeric" >{{ entity.created|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.invoice }}</td>
                                        <td class="numeric" >{{ entity.deliveryDateTime }}</td>
                                        <td class="numeric" >{{ entity.total|number_format }}</td>
                                        <td class="numeric" >{{ entity.payment|number_format }}</td>
                                        <td class="numeric" >{{ entity.due|number_format }}</td>
                                        <td class="numeric" >{{ entity.commission|number_format }}</td>
                                        <td class="numeric" >{{ entity.paymentStatus }}</td>
                                        <td class="numeric" >{{ entity.process }}</td>
                                        <td class="numeric" >
                                            {% if entity.commissionApproved == false %}
                                                <a href="{{ path('hms_doctor_invoice_new', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-money"></i> Add Commission</a>
                                            {% elseif entity.commissionApproved == true  %}
                                                <a href="javascript:" class="btn blue mini" ><i class="icon-ok"></i> Done</a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% if  entity.doctorInvoices is not empty %}
                                        <tr id="show-{{ entity.id }}" class="showing-overview">
                                            <td colspan="11">
                                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                                    <thead>
                                                    <tr class="head-yellow">
                                                        <th class="numeric">&nbsp;&nbsp;<i class="icon-list"></i></th>
                                                        <th class="numeric">Created</th>
                                                        <th class="numeric">Doctor/Referred</th>
                                                        <th class="numeric">Mobile</th>
                                                        <th class="numeric">Payment For</th>
                                                        <th class="numeric">Payment Method</th>
                                                        <th class="numeric">Created By</th>
                                                        <th class="numeric">Amount</th>
                                                        <th class="numeric">Paid</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody id="invoiceTransaction">
                                                    {% set totalPayment = 0 %}
                                                    {% for transaction in entity.doctorInvoices %}

                                                        {%  set totalPayment = totalPayment + transaction.payment  %}
                                                        <tr>
                                                            <td  class="numeric">{{ loop.index }}</td>
                                                            <td  class="numeric">{{ transaction.updated|date('d-m-Y') }}</td>
                                                            <td class="numeric">{{ transaction.assignDoctor.name }}</td>
                                                            <td class="numeric">{{ transaction.assignDoctor.mobile }}</td>
                                                            <td class="numeric">{{ transaction.hmsCommission.name }}</td>
                                                            <td class="numeric">{{ transaction.transactionMethod.name }}</td>
                                                            <td class="numeric">{{ transaction.createdBy }}</td>
                                                            <td class="numeric">{{ transaction.payment }}</td>
                                                            <td class="numeric">
                                                                {% if transaction.process != 'Paid' %}
                                                                    <a class="btn purple mini addPay" data-url="{{ path('hms_doctor_invoice_pay',{'id':transaction.id}) }}"><i class="icon-money"></i>&nbsp;Pay</a>
                                                                    <a title="Are you sure went to delete ?" data-url="{{ path('hms_doctor_invoice_delete', { 'id': transaction.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a>
                                                                {% else %}
                                                                    <a class="btn green mini"><i class="icon-ok"></i></a>
                                                                {% endif %}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot>
                                                    <tr>
                                                        <td class="numeric" colspan="7"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                                                        <td class="numeric"><strong>{{ totalPayment|number_format }}</strong></td>
                                                        <td class="numeric"><strong>{{ entity.commission|number_format }}</strong></td>
                                                    </tr>
                                                    </tfoot>
                                                </table>
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination" >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <style>
        .search-input{
            padding-left: 10px;
        }
    </style>
{% endblock %}

{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@HospitalBundle/Resources/public/js/doctorInvoice.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@InventoryBundle/Resources/public/css/jquery-ui.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}

{% block documentready %}
    {{ parent() }}
{% endblock %}


