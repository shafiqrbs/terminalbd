{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Invoice no #  <strong>{{ entity.invoice }}</strong>
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('hms_invoice') }}">Patient Invoice</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage Patient Invoice</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Patient Invoice Information</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        <i class="icon-cogs"></i>&nbsp;Tools
                        <i class="icon-tasks"></i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="{{ path('hms_invoice_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                        <li><a href="{{ path('hms_invoice') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                        {% if(entity.id > 0 ) %}
                        <li><a href="{{ path('hms_invoice_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}

            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box green">
                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Particulars & Payment Information</div>
                </div>
            </div>

            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span12" id="particular-table">
                    <table class="table table-bordered table-striped table-condensed table-fixed">
                        <thead>
                        <tr>
                            <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i></th>
                            <th class="span1">Si/No</th>
                            <th class="span1">Code</th>
                            <th class="span4">Particular</th>
                            <th class="span2">Service</th>
                            <th class="span1">Qnt</th>
                            <th class="span1">Amount</th>
                            <th class="span1"><i class="icon-trash"></i></th>
                        </tr>
                        </thead>
                        <tbody id="invoiceParticulars">
                        {% for item in entity.invoiceParticulars %}
                        <tr id="remove-{{ item.id }}">
                            <td class="span1"><span class="badge badge-warning toggle badge-custom" id="{{ item.id  }}" ><span>[+]</span></span></td>
                            <td  class="span1">{{ loop.index }}</td>
                            <td  class="span1">{{ item.particular.particularCode }}</td>
                            <td class="span4">{{ item.particular.name }}</td>
                            <td class="span2">{{ item.particular.service.name }}</td>
                            <td class="span1">{{ item.quantity }}</td>
                            <td class="span1">{{ item.subTotal|number_format }}</td>
                            <td class="span1"><a id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('hms_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="8" class="span12" style="border: 1px double #000"></td>
                        </tr>
                        <tr>
                            <td colspan="6" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                            <td class="span2"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        <tr>
                            <td colspan="6" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                            <td class="span2"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        <tr>
                            <td colspan="6" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                            <td class="span2"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                            <td class="span1">
                                <a href="javascript:" id=""  data-trigger="hover" data-original-title="Delete discount amount" data-url="{{ path('hms_invoice_discount_delete',{'id':entity.id}) }}" class=" btn red mini removeDiscount tooltips"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                            <td class="span2"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix">&nbsp;</div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box purple">
                <div class="pull-left span2">
                    <a class="btn black span12 pull-left" style="text-align: left" ><i class="icon-plus"></i>&nbsp;Add Particular</a>
                </div>
                <div class="pull-left span5 msg-hidden" style="display: none">
                    <a class="btn yellow span12 pull-left" ><span id="msg"></span></a>
                </div>
                <div class="pull-right span3">
                    <button type="button" class="btn green span10 netTotal" style="text-align: left">{{ entity.total }}</button>
                    <a href="javascript:" id="show"  data-trigger="hover" data-original-title="All payment history" class=" btn purple receivePayment tooltips"><i class="icon-money"></i></a>

                </div>
                <div class="pull-right span2">
                    <a class="btn blue span12 pull-right" style="text-align: right" ><i class="icon-money"></i>&nbsp;<strong>Grand Total</strong>&nbsp;=&nbsp;</a>
                </div>

            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid" id="showPayment">
                <div class="span12">
                    <table class="table table-bordered table-striped table-condensed table-fixed">
                        <thead>
                        <tr class="head-blue">
                            <th class="numeric">&nbsp;&nbsp;<i class="icon-list"></i></th>
                            <th class="numeric">Created</th>
                            <th class="numeric">Payment Method</th>
                            <th class="numeric">Discount</th>
                            <th class="numeric">Vat/Tax</th>
                            <th class="numeric">Amount</th>
                            <th class="numeric">Created By</th>
                        </tr>
                        </thead>
                        <tbody id="invoiceTransaction">
                        {% for transaction in entity.invoiceTransactions %}
                            <tr>
                                <td  class="numeric">{{ loop.index }}</td>
                                <td  class="numeric">{{ transaction.updated|date('d-m-Y') }}</td>
                                <td class="numeric">{{ transaction.transactionMethod.name }}</td>
                                <td class="numeric">{{ transaction.discount }}</td>
                                <td class="numeric">{{ transaction.vat }}</td>
                                <td class="numeric">{{ transaction.payment }}</td>
                                <td class="numeric">{{ transaction.createdBy }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td class="numeric" colspan="3"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                            <td class="numeric"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                            <td class="numeric"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                            <td class="numeric"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                            <td class="numeric"></td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">

                <div class="span3 payment-info">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span>Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}
                                        </span>
                                </label>
                                <div class="controls">
                                {{ form_errors(form.payment) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span id="balance">Due TK.</span> <span class="pull-right sales-right due" style="text-align: left; width: 110px"  id="" >{{ entity.due }}</span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>

                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(form.transactionMethod) }}
                                    {{ form_errors(form.transactionMethod) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div id="cartMethod" class="bankHide">

                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountBank) }}
                                        {{ form_errors(form.accountBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div id="bkashMethod" class="mobileBankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountMobileBank) }}
                                        {{ form_errors(form.accountMobileBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.paymentMobile) }}
                                        {{ form_errors(form.paymentMobile) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.transactionId) }}
                                        {{ form_errors(form.transactionId) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(form.printFor) }}
                                    {{ form_errors(form.printFor) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box grey">
                <div class="pull-left span9">

                </div>
                <div class="pull-right span3">
                    <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}">
                    <input type="hidden" name="netTotal" class="" id="netTotal" value="{{ entity.total }}">
                    <input type="hidden" name="due" class="" id="due" value="{{ entity.due }}">

                    <button type="submit" class="btn blue span12" id="receiveBtn"><i class="icon-ok"></i> Received with Print</button>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}

{% block cssBlock %}
{% stylesheets filter='cssrewrite'
    '@HospitalBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@HospitalBundle/Resources/public/js/invoice.js'
    '@HospitalBundle/Resources/public/js/editable.js'
    '@HospitalBundle/Resources/public/js/datetimepicker_css.js'

    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    $('body').addClass('page-sidebar-closed');
    $('input[name=particular]').focus();
    $( ".payment" ).val('');
    $( ".discount" ).val('');
    $( ".payment" ).attr( "placeholder", "{{ entity.payment }}" );
    $( ".discount" ).attr( "placeholder", "{{ entity.discount }}" );
{% endblock %}
