<!-- BEGIN FORM-->
{{ form_start(form) }}
{{ form_row(form._token) }}
<div class="portlet box">
<div class="clearfix">&nbsp;</div>
<div class="portlet-body" style="min-height: 460px">
<div class="clearfix">&nbsp;</div>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Doctor Appointment</div>
        <div class="actions">
            <div class="btn-group">
                <a target="_blank" class="btn red" href="{{ path('hms_invoice_appointment') }}"><i class="icon-th-list"></i> Invoice</a>
             </div>
        </div>
    </div>
    <form action="{{ path('hms_invoice_admission_old_patient') }}" method="post">
        <div class="row-fluid">
            <div class="span1"></div>
            <div class="span9">
                <input type="text" id="customer" required name="customer"  class="leftMargin span12 select2Customer m-wrap" value="{% if searchForm.mobile is defined %}{{ searchForm.mobile }}{% endif %}"  autocomplete="off" placeholder="Customer mobile no">
            </div>
            <div class="span2">
                <div class="control-group">
                    <div class="btn-group">
                        <button class="btn blue" type="submit"><i class="icon-plus-sign"></i> Admission</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row-fluid particular-info" style="padding-left: 15px" >
        <div class="row-fluid">
            <div class="span3">
                <div class="control-group">
                    <label class="control-label red" for="firstName">Patient Name<span class="required">*</span></label>
                    <div class="controls">
                        {{ form_widget(form.customer.name) }}
                        {{ form_errors(form.customer.name) }}
                    </div>
                </div>
            </div>
            <div class="span2">
                <div class="control-group">
                    <label class="control-label red" for="firstName"><span>Mobile no</span><span class="required">*</span></label>
                    <div class="controls">
                        {{ form_widget(form.customer.mobile) }}
                        {{ form_errors(form.customer.mobile) }}
                    </div>
                </div>
            </div>
            <div class="span4">
                <div class="control-group">
                    <label class="control-label red" for="firstName"><span>Age & Gender</span><span class="required">*</span></label>
                    <div class="controls span4" style="margin-left: 0!important;">
                        {{ form_widget(form.customer.age) }}
                    </div>
                    <div class="controls span4">
                        {{ form_widget(form.customer.ageType) }}
                    </div>
                    <div class="controls span4">
                        {{ form_widget(form.customer.gender) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="controls">
                        {{ form_errors(form.customer.age) }}
                        {{ form_widget(form.customer.gender) }}
                        {{ form_errors(form.customer.gender) }}
                    </div>
                </div>
            </div>
            <div class="span2">
                <div class="control-group">
                    <div class="controls">
                        <label class="control-label red" for="firstName"><span>Height/Weight</span></label>
                        <div class="controls span6" style="margin-left: 0!important;">
                            {{ form_widget(form.customer.height) }}
                        </div>
                        <div class="controls span6">
                            {{ form_widget(form.customer.weight) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="span1">
                <div class="control-group">
                    <div class="controls">
                        <label class="control-label red" for="firstName"><span>B/P</span></label>
                        {{ form_widget(form.customer.bloodPressure) }}
                        {{ form_errors(form.customer.bloodPressure) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="row-fluid" style="background:#ffffff!important;">
        <div class="span8" id="particular-table" >
        </div>
        <div class="span4 payment-info">
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        {{ form_widget(form.customer.address) }}
                        {{ form_errors(form.customer.address) }}
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        {{ form_widget(form.department) }}
                        {{ form_errors(form.department) }}
                    </div>
                </div>
            </div>
            <div class="clearfix"><br/></div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        {{ form_widget(form.assignDoctor) }}
                        {{ form_errors(form.assignDoctor) }}
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label" id="receive-label" for="firstName"><span class="label-custom" >Receivable TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}</span></label>
                    </div>
                </div>
                <!--/span-->
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <div class="controls">
                            {{ form_widget(form.transactionMethod) }}
                            {{ form_errors(form.transactionMethod) }}
                        </div>
                    </div>
                </div>
                <!--/span-->
            </div>
            <div id="cartMethod" class="bankHide">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                {{ form_widget(form.cardNo) }}
                                {{ form_errors(form.cardNo) }}
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                {{ form_widget(form.paymentCard) }}
                                {{ form_errors(form.paymentCard) }}
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                {{ form_widget(form.accountBank) }}
                                {{ form_errors(form.accountBank) }}
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
            </div>
            <div id="bkashMethod" class="mobileBankHide">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                {{ form_widget(form.accountMobileBank) }}
                                {{ form_errors(form.accountMobileBank) }}
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                {{ form_widget(form.paymentMobile) }}
                                {{ form_errors(form.paymentMobile) }}
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls">
                                {{ form_widget(form.transactionId) }}
                                {{ form_errors(form.transactionId) }}
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="row-fluid" style="padding-top: 13px">
        <div class="span8" style="padding-left: 15px">
            {{ form_widget(form.comment) }}
            {{ form_errors(form.comment) }}
        </div>
        <div class="span4">
            <div class="input-append span11">
                {#{{ form_widget(form.printFor) }}
                {{ form_errors(form.printFor) }}#}
                <div class="btn-group span12">
                    <input type="hidden" class="initialGrandTotal" name="initialDue" id="initialDue" value="">
                    <input type="hidden" name="initialDiscount" id="initialDiscount" value="">
                    <button type="submit" class="btn red big span12"   id="saveDiagnosticButton"><i class="icon-save"></i> Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<div class="clearfix">&nbsp;</div>
</div>
{{ form_end(form) }}
<!-- END FORM-->
