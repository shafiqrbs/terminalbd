{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Patient Admission #  <strong>{{ entity.invoice }}</strong>
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('hms_invoice_admission') }}">Patient Admission</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage Patient Admission</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Patient Admission Information</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn red" href="{{ path('hms_invoice_admission_new') }}"><i class="icon-plus-sign"></i> New Admission</a>
                    <a class="btn" href="{{ path('hms_invoice_admission') }}"><i class="icon-th-list"></i> Admission</a>
                    <a class="btn black patientShow"><span class="fa fa-angle-double-up"></span>&nbsp;Show</a>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body">
            {% if entity.customer is defined and entity.customer is not empty and entity.customer.id is not empty %}
            <div class="row-fluid">
                <div class="span3">
                    <h4>About:</h4>
                    <ul class="unstyled">
                        {% if entity.customer is not empty %}<li><strong>Patient #:</strong>&nbsp;{{ entity.customer.name }}</li>{% endif %}
                        {% if entity.customer is not empty %}<li><strong>Mobile #:</strong>&nbsp;{{ entity.customer.mobile }}</li>{% endif %}
                        {% if entity.customer is not empty %}<li><strong>Address #:</strong>&nbsp;{{ entity.customer.address }}</li>{% endif %}
                        {% if entity.customer is not empty and entity.customer.location is not empty   %}<li><strong>Location #:</strong>&nbsp;{{ entity.customer.location.name }}, {{ entity.customer.location.parent.name }}</li>{% endif %}
                        <li><strong>Guardian:</strong>&nbsp;{{ entity.customer.alternativeContactPerson }},{{ entity.customer.alternativeContactMobile }}</li>
                        <li><strong>Patient Relation:</strong>&nbsp;{{ entity.customer.alternativeRelation }}</li>
                    </ul>
                </div>
                <div class="span3">
                    <h4>Personal:</h4>
                    <ul class="unstyled">
                        {% if entity.customer is not empty %}<li><strong>Patient ID #:</strong>&nbsp;{{ entity.customer.customerId }}</li>{% endif %}
                        <li><strong>Age:</strong>&nbsp;{{ entity.customer.age }} {{ entity.customer.ageType }}</li>
                        <li><strong>Date of Birth:</strong>&nbsp;{{ entity.customer.dob }}</li>
                        <li><strong>Marital:</strong>&nbsp;{{ entity.customer.maritalStatus }}</li>
                        <li><strong>Blood Group:</strong>&nbsp;{{ entity.customer.bloodGroup }}</li>
                    </ul>
                </div>

                <div class="span3">
                    <h4>Admission:</h4>
                    <ul class="unstyled">
                        <li><strong>Admission Date:</strong>&nbsp;{{ entity.created|date('d-m-Y') }}</li>
                        <li><strong>Release Date:</strong>&nbsp;{% if entity.releaseDate is not empty %}{{ entity.releaseDate|date('d-m-Y') }}{% endif %}</li>
                        <li><strong>Cabin/Bed:</strong> {% if entity.cabin is not empty %}{{ entity.cabin.name }}{% endif %}/{{ entity.cabinNo }}</li>
                        <li><strong>Assign Doctor:</strong>&nbsp;{% if entity.assignDoctor is not empty %}{{ entity.assignDoctor.name }}{% endif %}</li>
                        <li><strong>Department:</strong>&nbsp;{% if entity.department is not empty %}{{ entity.department.name }}{% endif %}</li>
                    </ul>
                </div>

                <div class="span3 invoice-payment">
                    <h4>Payment Details:</h4>
                    <ul class="unstyled">
                        <li><strong>Total BDT:</strong>&nbsp;{{ entity.total|number_format() }}</li>
                        <li><strong>Payment BDT:</strong>&nbsp;{{ entity.payment|number_format() }}</li>
                        {% if entity.discount %}<li><strong>Discount BDT:</strong>&nbsp;{{ entity.discount|number_format() }}</li>{% endif %}
                        {% if entity.due %}<li><strong>Due BDT:</strong>&nbsp;{{ entity.due|number_format() }}</li>{% endif %}
                        <li><strong>Payment status</strong>&nbsp;{{  entity.paymentStatus|capitalize }}</li>
                    </ul>

                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <strong>Disease: </strong>{{ entity.disease }}
                </div>
            </div>
            {% endif %}
        </div>
        <div class="portlet-body form"  >
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            <div>
                <div class="form-actions portlet box green">
                    <div class="pull-left span8">
                        <span class="btn green span12 text-left" style="text-align:left"  ><i class="icon-reorder"></i> Payment Information</span>
                    </div>
                    <div class="pull-right span2">
                        <a class="btn blue span12 pull-right" style="text-align: right" href="{{ path('') }}" ><i class="icon-money"></i>&nbsp;<strong>Add Invoice</strong></a>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
                <div class="row-fluid">
                    <div class="span12">
                        <table class="table table-bordered table-striped table-condensed table-fixed">
                            <thead>
                            <tr class="head-blue">
                                <th class="numeric">&nbsp;&nbsp<i class="icon-list"></i></th>
                                <th class="numeric">Created</th>
                                <th class="numeric">Payment Method</th>
                                <th class="numeric">Discount</th>
                                <th class="numeric">Vat/Tax</th>
                                <th class="numeric">Amount</th>
                                <th class="numeric">Created By</th>
                            </tr>
                            </thead>
                            <tbody id="invoiceTransaction">
                            {% for transaction in entity.invoiceTransactions %}
                                <tr>
                                    <td  class="numeric">{{ loop.index }}</td>
                                    <td  class="numeric">{{ transaction.updated|date('d-m-Y') }}</td>
                                    <td class="numeric">{{ transaction.transactionMethod.name }}</td>
                                    <td class="numeric">{{ transaction.discount }}</td>
                                    <td class="numeric">{{ transaction.vat }}</td>
                                    <td class="numeric">{{ transaction.payment }}</td>
                                    <td class="numeric">{{ transaction.createdBy }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td class="numeric" colspan="3"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                                <td class="numeric"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                                <td class="numeric"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                <td class="numeric"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                                <td class="numeric"></td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
                <div class="form-actions portlet box green">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Particulars Information</div>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
                <div class="row-fluid">
                    <div class="span12" id="particular-table">
                        <table class="table table-bordered table-striped table-condensed table-fixed">
                            <thead>
                            <tr>
                                <th class="span1">Si/No</th>
                                <th class="span1">Created</th>
                                <th class="span2">Created By</th>
                                <th class="span3">Particular</th>
                                <th class="span2">Service</th>
                                <th class="span1">Qnt</th>
                                <th class="span2">Unit Price</th>
                                <th class="span1">Amount</th>
                                <th class="span1"></th>
                            </tr>
                            </thead>
                            <tbody id="invoiceParticulars">
                            {% for item in entity.admissionPatientParticulars %}
                                <tr id="remove-{{ item.id }}">
                                    <td  class="span1">{{ loop.index }}</td>
                                    <td  class="span1">{{ item.created|date('d-m-Y') }}</td>
                                    <td  class="span2">{{ item.createdBy }}</td>
                                    <td class="span3">{{ item.particular.particularCode }}-{{ item.particular.name }}</td>
                                    <td class="span2">{{ item.particular.service.name }}</td>
                                    <td class="span1">{% if item.particular.service.hasQuantity == 1 %}{{ item.quantity }}{% endif %}</td>
                                    <td class="span2">{{ item.salesPrice }}</td>
                                    <td class="span1">{{ item.subTotal|number_format }}</td>
                                    <td class="span1"><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('hms_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="9" class="span12" style="border: 1px double #000"></td>
                            </tr>
                            <tr>
                                <td colspan="7" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                <td class="span2"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                <td class="span1"></td>
                            </tr>
                            <tr>
                                <td colspan="7" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                                 <td class="span2"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                 <td class="span1"></td>
                            </tr>
                            <tr>
                                <td colspan="7" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                 <td class="span2"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                                 <td class="span1">
                                     <a href="javascript:" id=""  data-trigger="hover" data-original-title="Delete discount amount" data-url="{{ path('hms_invoice_discount_delete',{'id':entity.id}) }}" class=" btn red mini removeDiscount tooltips"><i class="icon-trash"></i></a>
                                 </td>
                            </tr>
                            <tr>
                                <td colspan="7" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                                <td class="span2"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                                <td class="span1"></td>
                            </tr>
                            </tfoot>
                        </table>
                        <div class="clearfix">&nbsp;</div>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
                <div class="form-actions portlet box purple">
                    <div class="pull-left span2">
                        <a class="btn span12 pull-left" style="text-align: left" ><i class="icon-plus"></i>&nbsp;Add Particular</a>
                    </div>
                    <div class="pull-left span5 msg-hidden" style="display: none">
                        <a class="btn yellow span12 pull-left" ><span id="msg"></span></a>
                    </div>
                    <div class="pull-right span3">
                        <button type="button" class="btn green span10 netTotal" style="text-align: left">{{ entity.total }}</button>
                       <a href="javascript:" id="show"  data-trigger="hover" data-original-title="All payment history" class=" btn purple receivePayment tooltips"><i class="icon-money"></i></a>
                    </div>
                    <div class="pull-right span2">
                        <a class="btn blue span12 pull-right" style="text-align: right" ><i class="icon-money"></i>&nbsp;<strong>Grand Total</strong>&nbsp;=&nbsp;</a>
                    </div>

                </div>
                <div class="clearfix">&nbsp;</div>
                <div class="row-fluid">
                    <div class="span9">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="row-fluid particular-info" >
                                    <div class="span7">
                                        <select id="particular" name="particular" class="span12 select2">
                                            <option value="">Test Name, Accessories, Surgery, Cabin etc. </option>
                                            {{ particularService|raw }}
                                        </select>
                                    </div>
                                    <div class="span2"><input type="number" class="m-wrap span12" id="quantity" name="quantity" value="1"></div>
                                    <div class="span2"><input type="text" class="m-wrap span12" id="price" name="price" value="" maxlength="8"></div>
                                    <div class="span1">
                                        <input type="hidden" id="particularId" name="particularId" value="">
                                        <button type="button" class="btn blue" id="addParticular" data-url="{{ path('hms_invoice_particular_add',{'invoice':entity.id}) }}" >Add</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12" id="instruction"></div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                    </div>
                    <div class="span3 payment-info">
                        <div class="clearfix"></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"><span>Receive TK.</span>
                                        <span class="pull-right sales-right"></span>
                                    </label>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
                <div class="form-actions portlet box grey">
                    <div class="pull-right span3">
                        <input type="hidden" id="patient" name="patient" value="{% if entity.customer is not empty %}{{ entity.customer.id }}{% endif %}">
                        <input type="hidden" id="invoice" name="invoice" data-action="{{ path('hms_invoice_print_for',{'id': entity.id}) }}" value="{{ entity.id }}">
                        <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}">
                        <input type="hidden" name="netTotal" class="" id="netTotal" value="{{ entity.total }}">
                        <input type="hidden" name="due" class="" id="due" value="{{ entity.due }}">
                        <button type="submit" class="btn blue span11" id="receiveBtn"><i class="icon-save"></i> Received</button>
                    </div>
                </div>
            </div>

            <!-- END FORM-->
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}
{% block cssBlock %}
{% stylesheets filter='cssrewrite'
    '@HospitalBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@HospitalBundle/Resources/public/js/invoice.js'
    '@HospitalBundle/Resources/public/js/approveProcess.js'
    '@HospitalBundle/Resources/public/js/editable.js'
    '@HospitalBundle/Resources/public/js/datetimepicker_css.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();

    $(document).on('click', '#addPatient', function(e) {
        var url = $('#addPatient').attr('data-url');
        e.preventDefault();
        $.ajax({
            type: 'post',
            url: url,
            data: $('#invoiceForm').serialize(),
            success: function (response) {
                obj = JSON.parse(response);
                location.reload();
            }
        });
    });

    $(document).on('click', '#addPatient', function(e) {

        var url = $('#addPatient').attr('data-url');
        e.preventDefault();
        $.ajax({
        type: 'post',
        url: url,
        data: $('#invoiceForm').serialize(),
        success: function (response) {
        obj = JSON.parse(response);
        $('#patient').val(obj['patient']);
        }
        });
    });

    $(document).on('change', '#appstore_bundle_hospitalbundle_invoice_printFor', function(e) {

        var printFor = $(this).val();
        var url = $('#invoice').attr('data-action');
        e.preventDefault();
        $.ajax({
        type: 'post',
        url: url,
        data:'printFor='+printFor,
        success: function (response) {}
        });
    });


    $('input[name=particular]').focus();
    $( ".payment" ).val('');
    $( ".discount" ).val('');
    $( ".payment" ).attr( "placeholder", "{{ entity.payment }}" );
    $( ".discount" ).attr( "placeholder", "{{ entity.discount }}" );

{% endblock %}
