{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Manage Admitted Patient # {{ entity.invoice }}
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('hms_invoice_admission') }}"> Manage Admitted Patient</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Patient</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>c
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END purchase_order HEADER-->
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i> Manage Admitted Patient</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('hms_invoice_admission') }}"><i class="icon-th-list"></i> Admission</a>
                                <a class="btn red" href="{{ path('hms_invoice_admission_daily_invoice',{'invoice':entity.invoice}) }}"><i class="icon-plus-sign"></i> Daily Invoice</a>
                                {% if invoiceTransaction is defined and invoiceTransaction is defined is not empty  %}
                                <a class="btn" href="{{ path('hms_invoice_admission_confirm',{'id':entity.id}) }}"><i class="fa fa-fast-backward"></i> Return</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body">
                            {% if entity.customer is defined and entity.customer is not empty and entity.customer.id is not empty %}
                                <div class="row-fluid">
                                    <div class="span3">
                                        <h4>About:</h4>
                                        <ul class="unstyled">
                                            {% if entity.customer is not empty %}<li><strong>Patient #:</strong>&nbsp;{{ entity.customer.name }}</li>{% endif %}
                                            {% if entity.customer is not empty %}<li><strong>Mobile #:</strong>&nbsp;{{ entity.customer.mobile }}</li>{% endif %}
                                            {% if entity.customer is not empty %}<li><strong>Address #:</strong>&nbsp;{{ entity.customer.address }}</li>{% endif %}
                                            {% if entity.customer is not empty and entity.customer.location is not empty   %}<li><strong>Location #:</strong>&nbsp;{{ entity.customer.location.name }}, {{ entity.customer.location.parent.name }}</li>{% endif %}
                                            <li><strong>Guardian:</strong>&nbsp;{{ entity.customer.alternativeContactPerson }},{{ entity.customer.alternativeContactMobile }}</li>
                                            <li><strong>Patient Relation:</strong>&nbsp;{{ entity.customer.alternativeRelation }}</li>
                                        </ul>
                                    </div>
                                    <div class="span3">
                                        <h4>Personal:</h4>
                                        <ul class="unstyled">
                                            {% if entity.customer is not empty %}<li><strong>Patient ID #:</strong>&nbsp;{{ entity.customer.customerId }}</li>{% endif %}
                                            <li><strong>Age:</strong>&nbsp;{{ entity.customer.age }} {{ entity.customer.ageType }}</li>
                                            <li><strong>Date of Birth:</strong>&nbsp;{{ entity.customer.dob }}</li>
                                            <li><strong>Marital:</strong>&nbsp;{{ entity.customer.maritalStatus }}</li>
                                            <li><strong>Blood Group:</strong>&nbsp;{{ entity.customer.bloodGroup }}</li>
                                        </ul>
                                    </div>

                                    <div class="span3">
                                        <h4>Admission:</h4>
                                        <ul class="unstyled">
                                            <li><strong>Patient Status:</strong>&nbsp;{{ entity.printFor|capitalize }}</li>
                                            <li><strong>Admission Date:</strong>&nbsp;{{ entity.created|date('d-m-Y') }}</li>
                                            <li><strong>Release Date:</strong>&nbsp;{% if entity.releaseDate is not empty %}{{ entity.releaseDate|date('d-m-Y') }}{% endif %}</li>
                                            <li><strong>Cabin/Bed:</strong> {% if entity.cabin is not empty %}{{ entity.cabin.name }}{% endif %}/{{ entity.cabinNo }}</li>
                                            <li><strong>Assign Doctor:</strong>&nbsp;{% if entity.assignDoctor is not empty %}{{ entity.assignDoctor.name }}{% endif %}</li>
                                            <li><strong>Department:</strong>&nbsp;{% if entity.department is not empty %}{{ entity.department.name }}{% endif %}</li>
                                        </ul>
                                    </div>

                                    <div class="span3 invoice-payment">
                                        <h4>Payment Details:</h4>
                                        <ul class="unstyled">
                                            <li><strong>Total BDT:</strong>&nbsp;{{ entity.total|number_format() }}</li>
                                            <li><strong>Payment BDT:</strong>&nbsp;{{ entity.payment|number_format() }}</li>
                                            {% if entity.discount %}<li><strong>Discount BDT:</strong>&nbsp;{{ entity.discount|number_format() }}</li>{% endif %}
                                            {% if entity.due %}<li><strong>Due BDT:</strong>&nbsp;{{ entity.due|number_format() }}</li>{% endif %}
                                            <li><strong>Payment status</strong>&nbsp;{{  entity.paymentStatus|capitalize }}</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <strong>Disease: </strong>{{ entity.disease }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <div class="form-actions portlet box green">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Particulars Information</div>
                                    <div class="actions">
                                        <a class="btn yellow" href="javascript:"><span class="fa fa-angle-double-up"></span>&nbsp;Show</a>
                                        <a target="_blank" href="{{ path('hms_invoice_admission_particular_print',{'invoice':entity.invoice}) }}"  class="btn purple"><i class="icon icon-print"></i> Print</a>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid box green">
                                {% if entity.invoiceParticulars is defined and  entity.invoiceParticulars is not empty  %}
                                    <table class="table table-bordered table-striped table-condensed flip-content ">
                                        <thead class="flip-content ">
                                        <tr class="head-blue">
                                            <th class="numeric">Si/No</th>
                                            <th class="numeric">Code</th>
                                            <th class="numeric">Particular</th>
                                            <th class="numeric">Service</th>
                                            <th class="numeric">Qnt</th>
                                            <th class="numeric">Amount</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for item in entity.invoiceParticulars %}
                                            <tr id="remove-{{ item.id }}">
                                                <td  class="numeric">{{ loop.index }}</td>
                                                <td  class="numeric">{{ item.particular.particularCode }}</td>
                                                <td class="numeric">{{ item.particular.name }}</td>
                                                <td class="numeric">{{ item.particular.service.name }}</td>
                                                <td class="numeric">{{ item.quantity }}</td>
                                                <td class="numeric">{{ item.subTotal|number_format }}</td>
                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <td colspan="7" class="span12" style="border: 1px double #000"></td>
                                        </tr>
                                        <tr>
                                            <td colspan="5" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                            <td class="span2"><strong id="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        </tr>
                                        <tr>
                                            <td colspan="5" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                                            <td class="span2"><strong id="vat">{{ entity.vat|number_format }}</strong></td>

                                        </tr>
                                        <tr>
                                            <td colspan="5" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                            <td class="span2"><strong id="vat">{{ entity.discount|number_format }}</strong></td>

                                        </tr>
                                        <tr>
                                            <td colspan="5" class="span9"><span class="pull-right"><strong>Net Total TK.</strong> =</span></td>
                                            <td class="span2"><strong id="vat">{{ entity.total|number_format }}</strong></td>

                                        </tr>
                                        <tr>
                                            <td colspan="5" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                                            <td class="span2"><strong id="vat">{{ entity.payment|number_format }}</strong></td>
                                        </tr>

                                        <tr>
                                            <td colspan="5" class="span9"><span class="pull-right"><strong>Due TK.</strong> =</span></td>
                                            <td class="span2"><strong id="vat">{{ entity.due|number_format }}</strong></td>

                                        </tr>

                                        </tfoot>
                                    </table>
                                {% endif %}
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-money"></i>Transaction Information</div>
                                    <div class="actions">
                                        <a class="btn yellow" href="javascript:"><span class="fa fa-angle-double-up"></span>&nbsp;Show</a>
                                        <a target="_blank" href="{{ path('hms_invoice_admission_transaction_print',{'invoice':entity.invoice}) }}" class="btn purple"><i class="icon icon-print"></i> Print</a>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered table-striped table-condensed table-fixed">
                                        <thead>
                                        <tr class="head-yellow">
                                            <th class="numeric">&nbsp;&nbsp;<i class="icon-list"></i></th>
                                            <th class="numeric">Created</th>
                                            <th class="numeric">Payment Method</th>
                                            <th class="numeric">Discount</th>
                                            <th class="numeric">Vat/Tax</th>
                                            <th class="numeric">Payment</th>
                                            <th class="numeric">Total</th>
                                            <th class="numeric">Created By</th>
                                            <th class="numeric"></th>
                                        </tr>
                                        </thead>
                                        <tbody id="invoiceTransaction">
                                        {% for transaction in entity.invoiceTransactions %}
                                            <tr id="delete-{{ transaction.id }}">
                                                <td  class="numeric">{{ transaction.transactionCode }}</td>
                                                <td  class="numeric">{{ transaction.updated|date('d-m-Y') }}</td>
                                                <td class="numeric">{% if transaction.transactionMethod is not empty %}{{ transaction.transactionMethod.name }}{% endif %}</td>
                                                <td class="numeric">{{ transaction.discount }}</td>
                                                <td class="numeric">{{ transaction.vat }}</td>
                                                <td class="numeric">{{ transaction.payment }}</td>
                                                <td class="numeric" id="total-{{ transaction.id }}">{{ transaction.total }}</td>
                                                <td class="numeric">{{ transaction.createdBy }}</td>
                                                <td class="numeric">
                                                    {% set processArr = {'Created': 'Created' ,'Pending':'Pending'} %}
                                                    {% if transaction.process in  processArr and transaction.payment == 0 and transaction.admissionPatientParticulars is defined and transaction.admissionPatientParticulars is empty %}
                                                        <a href="javascript:" data-id="{{ transaction.id }}" data-url="{{ path('hms_invoice_admission_daily_delete',{'id':transaction.id}) }}" class="btn delete red mini"><i class="icon icon-trash"></i></a>
                                                    {% endif %}
                                                    {% if transaction.admissionPatientParticulars is defined and transaction.admissionPatientParticulars is not empty %}
                                                        <a href="javascript:" class="btn remove green mini"><i class="icon icon-eye-open"></i>View</a>
                                                    {% endif %}
                                                    {% if transaction.process not in processArr %}
                                                        <a target="_blank" href="{{ path('hms_invoice_admission_transaction_print_single',{'invoice':entity.invoice,'id':transaction.id}) }}" data-id="{{ transaction.id }}"  class="btn purple mini"><i class="icon icon-print"></i> Print</a>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <td class="numeric" colspan="4"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                                            <td class="numeric"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                                            <td class="numeric"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                            <td class="numeric"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                                            <td class="numeric"></td>
                                            <td class="numeric"></td>
                                        </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            {% if invoiceTransaction is defined and invoiceTransaction is defined is not empty  %}
                                <div class="form-actions portlet box blue">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-money"></i>Transaction Invoice: {{ entity.invoice }}/{{ invoiceTransaction.transactionCode }}</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                {% if entity.invoiceParticulars is defined and  entity.invoiceParticulars is not empty  %}
                                    <table class="table table-bordered table-striped table-condensed table-fixed">
                                        <thead>
                                        <tr class="head-purple">
                                            <th class="span1">Si/No</th>
                                            <th class="span1">Code</th>
                                            <th class="span4">Particular</th>
                                            <th class="span2">Service</th>
                                            <th class="span1">Qnt</th>
                                            <th class="span2">Unit Price</th>
                                            <th class="span1">Amount</th>
                                            <th class="span1"></th>
                                        </tr>
                                        </thead>
                                        <tbody id="invoiceParticulars">
                                        {% set subTotal = 0 %}
                                        {% for item in invoiceTransaction.admissionPatientParticulars %}
                                            <tr id="remove-{{ item.id }}">
                                                <td  class="span1">{{ loop.index }}</td>
                                                <td  class="span1">{{ item.particular.particularCode }}</td>
                                                <td class="span4">{{ item.particular.name }}</td>
                                                <td class="span2">{{ item.particular.service.name }}</td>
                                                <td class="span1">{% if item.particular.service.hasQuantity == 1 %}{{ item.quantity }}{% endif %}</td>
                                                <td class="span2">{{ item.salesPrice }}</td>
                                                <td class="span1">{{ item.subTotal|number_format }}</td>
                                                <td class="span1"><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('hms_invoice_admission_daily_particular_delete',{'transaction': invoiceTransaction.id ,'id': item.id }) }}" href="javascript:" class="btn red mini particularDelete" ><i class="icon-trash"></i></a></td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <td colspan="8" class="span12" style="border: 1px double #000"></td>
                                        </tr>
                                        <tr>
                                            <td colspan="6" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                            <td class="span2"><strong class="total">{{ invoiceTransaction.total|number_format }}</strong></td>
                                            <td class="span1"></td>
                                        </tr>
                                        </tfoot>
                                    </table>
                                {% endif %}
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid">
                                    <div class="span12">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="row-fluid particular-info" >
                                                <div class="span7">
                                                    <select id="particular" name="particular" class="span12 select2">
                                                        <option value="">Test Name, Accessories, Surgery, Cabin etc. </option>
                                                        {{ particularService|raw }}
                                                    </select>
                                                </div>
                                                <div class="span2"><input type="number" class="m-wrap span12" id="quantity" name="quantity" value="1"></div>
                                                <div class="span3">
                                                    <div class="input-append span11" style="margin-bottom:0!important">
                                                        <input type="hidden" id="particularId" name="particularId" value="">
                                                        <input type="text" class="m-wrap span10" id="price" name="price" value="" maxlength="8">
                                                        <div class="btn-group">
                                                            <button type="button" class="btn purple" id="addPatientParticular" data-url="{{ path('hms_invoice_admission_daily_invoice_add',{'id':invoiceTransaction.id}) }}" >Add</button>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="form-actions portlet box grey">
                                    <div class="pull-right">
                                        <form id="invoiveTransactionForm" method="post" action="{{ path('hms_invoice_admission_daily_invoice_transaction_submit',{'id': invoiceTransaction.id}) }}">
                                            <div class="input-append span11" style="margin-bottom:0!important">
                                                <input type="hidden" id="invoiceTransaction" name="invoiceTransaction" value="{{ entity.id }}">
                                                <input type="text" class="m-wrap span8" id="payment" name="payment" value="" maxlength="8"  placeholder="Payment amount">
                                                <div class="btn-group">
                                                    <button class="btn blue invoiceConfirm" type="button"><i class="icon-save"></i> Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            {% else %}
                                <div class="row-fluid particular-info" >
                                    <form method="post" name="form" id="form">
                                        <div class="span1 pull-right">
                                            <button type="button" class="btn blue" id="addPayment" data-url="{{ path('hms_invoice_approved',{'id':entity.id}) }}" >Save</button>
                                        </div>
                                        <div class="span3 pull-right">
                                            <select id="printFor" name="printFor" class="span12 m-wrap">
                                                <option value="">--- Select Patient Status ---</option>
                                                <option {% if entity.printFor == 'admission' %} selected="selected" {% endif %} value="admission">Admission</option>
                                                <option {% if entity.printFor == 'admitted' %} selected="selected" {% endif %} value="admitted">Admitted</option>
                                                <option {% if entity.printFor == 'release' %} selected="selected" {% endif %} value="release">Release Certificate</option>
                                                <option {% if entity.printFor == 'death' %} selected="selected" {% endif %} value="death">Death Certificate</option>
                                            </select>
                                        </div>
                                        <div class="span2  pull-right"><input type="text" class="m-wrap span12" id="payment" name="payment" value="" maxlength="8"  placeholder="Payment amount"></div>
                                        <div class="span2 pull-right"><input type="number" class="m-wrap span12" id="discount" name="discount" placeholder="Discount amount"  ></div>
                                    </form>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="form-actions portlet box grey">
                                    <div class="pull-right" id="action-{{ entity.id }}">
                                        <a target="_blank"  href="{{ path('hms_invoice_admission_print_invoice',{'id':entity.id}) }}" class="btn green"><i class="icon-print"></i>&nbsp;Print</a>
                                        <span  class="btn blue"><i class=" icon-retweet"></i>&nbsp;{{ entity.process }}</span>
                                        <span  class="btn yellow"><i class="icon-money"></i>&nbsp;{{ entity.paymentStatus }}</span>
                                    </div>
                                </div>
                            {% endif %}

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
{% stylesheets filter='cssrewrite'
'@HospitalBundle/Resources/public/css/invoice.css'
%}
<link rel="stylesheet" href="{{ asset_url }}"/>
{% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@HospitalBundle/Resources/public/js/invoice.js'
    '@HospitalBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}

    $(document).on('click', '#addPayment', function() {

        var payment = $('#payment').val();
        var discount = $('#discount').val();
        var process = $('#process').val();
        var printFor = $('#printFor').val();
        var url = $('#addPayment').attr('data-url');
        $.ajax({
        url: url,
        type: 'POST',
        data: 'payment='+payment+'&discount='+discount+'&process='+process+'&printFor='+printFor,
        success: function (response) {

        }
        })
    });

    $(document).on('click', '#addPatientParticular', function() {

        var particularId = $('#particularId').val();
        var quantity = parseInt($('#quantity').val());
        var price = parseInt($('#price').val());
        var url = $('#addPatientParticular').attr('data-url');

        $('#confirm-content').confirmModal({
        topOffset: 0,
        top: '25%',
        onOkBut: function (event, el){

        $.ajax({
        url: url,
        type: 'POST',
        data: 'particularId='+particularId+'&quantity='+quantity+'&price='+price,
        success: function (response) {
        obj = JSON.parse(response);
        $('#invoiceParticulars').html(obj['invoiceParticulars']);
        $('.total').html(obj['total']);
        $('.msg-hidden').show();
        $('#msg').html(obj['msg']);
        $('#particular').prop('selectedIndex',0);
        $('#price').val('');
        $('#quantity').val('1');
        $('#addPatientParticular').attr("disabled", true);
        }
        })
        }
        });


    });

{% endblock %}

