{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Sales overview
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="javascript:">Sales overview</a>
                    </li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Sales Overview</div>
                    </div>
                    <div class="portlet-body form">
                        <form class="search-form" action="" method="get" name="itemSearch">
                            <div class="row-fluid">
                                <div class="span3"></div>
                                <div class="span3">
                                    <select name="service" id="service" class="span12">
                                    {% for service in services %}
                                        <option {% if searchForm.service is defined and searchForm.service == service.id %} selected="selected" {% endif %} value="{{ service.id }}" >{{ service.name }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="span3">
                                    <input type="text" id="startDate" name="startDate"  class="m-wrap  span12 datePicker" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}Start date{% endif %} ">
                                </div>
                                <div class="span3">
                                    <div class="controls">
                                        <div class="input-append span11">
                                            <input type="text" id="endDate" name="endDate"  class="span11 m-wrap datePicker" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}{{ "now"|date("d-m-Y") }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}End date{% endif %}  ">
                                            <div class="btn-group">
                                                <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                         <div class="clearfix">&nbsp;</div>
                        <div class="form-actions portlet box blue">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-money"></i>Service for {% if entity is not empty %}{{ entity.code }}-{{ entity.Name }}{% endif %}</div>
                                <div class="actions">
                                    <a target="_blank" href="" class="btn purple"><i class="icon icon-print"></i> Print</a>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        {% if serviceGroup is defined and serviceGroup is not empty %}
                        <table class="table table-bordered table-striped table-condensed flip-content ">
                            <tbody>
                                {% set sumTotal = 0 %}
                                {% for service in serviceGroup %}
                                    {% set sumTotal = sumTotal + service.totalAmount %}
                                    <tr>
                                        <th class="numeric span10">{{ loop.index }}. {{ service.serviceName }}</th>
                                        <th class="numeric span1">{{ service.totalQuantity }}</th>
                                        <td class="numeric">{{ service.totalAmount|number_format }}</td>
                                    </tr>
                                {% endfor %}
                                <tr><th class="span11" colspan="2" ><span class=" pull-right">Total</span></th><th>{{ sumTotal|number_format }}</th></tr>
                            </tbody>
                        </table>
                        {% endif %}
                        <div class="clearfix">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    AccountingApproveProcess();
{% endblock %}





