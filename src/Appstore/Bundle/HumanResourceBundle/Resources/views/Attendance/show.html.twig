{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Attendance
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Attendance</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Attendance Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('appsetting_branchshop_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('appsetting_branchshop') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        {% include('flash-message.html.twig')  %}

                        <table id="attendance" class="stripe row-border order-column" cellspacing="0" width="100%">
                            <thead class="head-yellow">
                            <tr>
                                <th class="numeric" >Name of Employee</th>
                                {% set max =  "now"|date("t") %}
                                {% set today =  "now"|date("d") %}
                                {% set month =  "now"|date("Y/m/") %}
                                {% for i in 1..max %}
                                    {% set blackO = date(month~i)|date('m/d/Y') %}
                                    <td class="numeric {% if blackO  in  blackoutdate %} red {% endif %}" >
                                        <div class="row-fluid">
                                            <span class="span12 pull-center"><strong>{{ i }}</strong></span>
                                        </div>
                                        <div class="row-fluid">
                                            <span class="span12 pull-center">IN</span>
                                        </div>
                                    </td>
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in globalOption.users  %}
                                {%  if user.granted("ROLE_DOMAIN") == false %}
                                    <tr>
                                        <th class="numeric"><span class="pull-left">{{ user.profile.name }}</span></th>
                                        {% for i in 1..max %}
                                            {% set blackO = date(month~i)|date('m/d/Y') %}
                                            {% if blackO  in  blackoutdate %}
                                                <td class="numeric  red" >&nbsp;</td>
                                            {% else %}
                                                <td class="numeric"  >
                                                    <div class="row-fluid pull-center">
                                                        <input {% if today != i %} disabled="disabled" {% endif %} type="checkbox" id="{{ i }}" class="attendance" data-url="{{ path('domain_hr_attendance_add',{'user':user.id}) }}" value="1" >
                                                    </div>
                                                </td>
                                            {% endif %}
                                        {% endfor %}
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@DomainUserBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@DomainUserBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}