{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                   Payroll Generate
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('payroll') }}">Payroll Generate</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Payroll Generate Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Payroll Generate Lists </div>
                        <div class="actions">
                            <a href="{{ path('payroll_new') }}" class=" btn red"><i class="fa fa-sign-plus"></i> Pay Run</a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content ">
                                <tr class="head-blue">
                                    <th class="numeric" >Created </th>
                                    <th class="numeric" >Month</th>
                                    <th class="numeric" >Salary Type</th>
                                    <th class="numeric" >Basic</th>
                                    <th class="numeric" >Allowance</th>
                                    <th class="numeric" >Deduction</th>
                                    <th class="numeric" >Loan</th>
                                    <th class="numeric" >Advance</th>
                                    <th class="numeric" >Arear</th>
                                    <th class="numeric" >Salary</th>
                                    <th class="numeric" >Payable</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>
                                        <td class="numeric" >{{ entity.created|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.effectedMonth }}</td>
                                        <td class="numeric" >{{ entity.employeeType }}</td>
                                        <td class="numeric" >{{ entity.salaryType|capitalize }}</td>
                                        <td class="numeric" >{{ entity.basicAmount }}</td>
                                        <td class="numeric" >{{ entity.allowance }}</td>
                                        <td class="numeric" >{{ entity.deduction }}</td>
                                        <td class="numeric" >{{ entity.loan }}</td>
                                        <td class="numeric" >{{ entity.advance }}</td>
                                        <td class="numeric" >{{ entity.arear }}</td>
                                        <td class="numeric" >{{ entity.total }}</td>
                                        <td class="numeric" >{{ entity.payable }}</td>
                                        <td class="numeric" >
                                            <a href="{{ path('employee_payroll_add',{'entity':entity.id}) }}" class="btn purple mini" ><i class="fa fa-sign-out"></i>&nbsp;Payroll</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}



