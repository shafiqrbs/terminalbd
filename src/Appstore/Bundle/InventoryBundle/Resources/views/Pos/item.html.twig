<div class="grid-products">
{% for product in entities %}
<div class="product-content" >
    <div data-match-height="tab-content" class="bs-calltoaction calltoaction-royal-blue">
        {% if config.cartImage == 1 %}
        <div class="col-md-12 addProduct" data-action="{{ path('inventory_pos_item_add',{'product':product.item_id}) }}">
            <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(product.imagePath).resize(180,120) }}">
        </div>
        {% endif %}
        <div class="row addProduct" data-action="{{ path('inventory_pos_item_add',{'product':product.item_id}) }}">
            <div class="col-md-9 cta-contents">
                <h1 class="cta-title">{{ product.unit_id }}-{{ product.name }}</h1>
            </div>
            <div class="col-md-3 cta-button">
                <a href="#" class="btn btn-lg btn-block btn-primary">{{ product.salesPrice }}</a>
            </div>
        </div>
        <div class="" style="background: #ddd; padding-top: 15px">
            <div class="input-append">
              <span class="input-group-btn">
              <a href="javascript:"  class="btn black btn-number-cart" data-type="minus" data-id="{{ product.item_id }}"  data-text="{{ product.item_id }}" data-title="{{ product.salesPrice }}"  data-field="quantity"> <span class="fa fa-minus"></span> </a>
              <input type="text" class="form-control inline-medium-wrap btn-qnt-particular tooltips" data-trigger = 'hover' data-original-title='{{ product.quantity }}'  data-id="{{ product.item_id }}"  id="quantity-{{ product.item_id }}" required="required" name="quantity-{{ product.item_id }}" data-title="{{ product.salesPrice }}" placeholder="{{ product.quantity }}" d min="1" max="{{ product.quantity }}">
              <a href="javascript:"  class="btn black btn-number-cart"  data-type="plus" data-id="{{ product.item_id }}" data-title="{{ product.salesPrice }}"  data-text="{{ product.item_id }}" data-field="quantity"> <span class="fa fa-plus"></span></a></span>
              <a href="javascript:" data-action="{{ path('inventory_pos_item_add',{'product':product.item_id}) }}" class="btn red addToCart"  data-id="{{ product.item_id }}" data-title="{{ product.salesPrice }}"  data-text="{{ product.item_id }}" > <span class="fa fa-shopping-basket"></span></a></span>
            </div>
        </div>
    </div>
</div>
{% endfor %}
</div>
