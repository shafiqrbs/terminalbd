{% if entity.process == 'create'  %}
    <a href="{{ path('purchase_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
    <a href="{{ path('purchase_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
    <a data-title="Add purchase item" href="{{ path('inventory_purchasevendoritem_new', { 'purchase': entity.id }) }}" class="btn blue mini" ><i class="icon-plus-sign"></i> vendor</a>
    <a title="Are you sure went to delete ?" href="javascript:" id="{{ entity.id }}" rel="{{ path('purchase_delete', { 'id': entity.id }) }}" class="btn red mini delete" ><i class="icon-trash"></i></a>
{% endif %}
{% if entity.process == 'wfs' %}
    <a href="{{ path('purchase_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
    <a href="{{ path('purchase_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
    <a data-title="Add purchase item" href="{{ path('inventory_purchasevendoritem_new', { 'purchase': entity.id }) }}" class="btn blue mini" ><i class="icon-plus-sign"></i> vendor</a>
    <a data-title="Add purchase item" href="{{ path('inventory_purchaseitem_new', { 'purchase': entity.id }) }}" class="btn green mini" ><i class="icon-plus-sign"></i>&nbsp;stock</a>
    <a title="Are you sure went to delete ?" href="javascript:" id="{{ entity.id }}" rel="{{ path('purchase_delete', { 'id': entity.id }) }}" class="btn red mini delete approved-{{ entity.id }}" ><i class="icon-trash"></i></a>
{% endif %}

{% if ( app.user.granted("ROLE_DOMAIN")  and entity.process == 'complete' or app.user.granted("ROLE_DOMAIN_MANAGER")  and entity.process == 'complete' or app.user.granted("ROLE_DOMAIN_INVENTORY")  and entity.process == 'complete' )  %}
    <a href="{{ path('purchase_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
    <a title="Approve" href="javascript:" rel="{{ path('purchase_approve', { 'id': entity.id }) }}" class="btn blue mini approve approved-{{ entity.id }}" data-title="{{ entity.id }}" id="" ><i class="icon-ok"></i>&nbsp;Approve</a>
    <a href="{{ path('purchase_edit', { 'id': entity.id }) }}" class="btn green mini approved-{{ entity.id }}" ><i class="icon-edit"></i></a>
    <a title="Are you sure went to delete ?" href="javascript:" id="{{ entity.id }}" rel="{{ path('purchase_delete', { 'id': entity.id }) }}" class="btn red mini delete approved-{{ entity.id }}" ><i class="icon-trash"></i></a>
{% endif %}
{% if entity.process == 'approved' %}
    <a href="{{ path('purchase_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
{% endif %}
