{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Purchase
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('purchase') }}">Purchase</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Add/Edit purchase</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END purchase_order HEADER-->
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid" style="position: relative">

            <div class="span12">
                <div id="dataProces"></div>
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Purchase Information</div>

                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('purchase_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('purchase') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    <li><a href="{{ path('item') }}"><i class="icon-th-list"></i>&nbsp;Item</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ path('item_new') }}"><i class="icon-plus-sign"></i>&nbsp;Item create</a></li>
                                    <li><a href="{{ path('inventory_product') }}"><i class="icon-plus-sign"></i>&nbsp;Master item</a></li>
                                    <li><a href="{{ path('inventory_product_new') }}"><i class="icon-plus-sign  "></i>&nbsp;Master item create</a></li>
                                    <li class="divider"></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('purchase_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('purchase_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body" >

                        <div class="portlet-body form" >
                            <div class="row-fluid">
                                <div class="span4">
                                    <h4>Vendor:</h4>
                                    <ul class="unstyled">
                                        <li>{{ purchaseInfo.vendor.companyName }}</li>
                                        <li>{{ purchaseInfo.vendor.name }}</li>
                                        <li>{{ purchaseInfo.vendor.mobile }}</li>
                                        <li>{{ purchaseInfo.vendor.address }}</li>
                                        {% if purchaseInfo.vendor.country %}
                                        <li>{{ purchaseInfo.vendor.country.name }}</li>
                                        {% endif %}

                                    </ul>
                                </div>
                                <div class="span4">
                                    <h4>About:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Memo/Invoice #:</strong>{{ purchaseInfo.memo }} {% if  purchaseInfo.invoice  %}/{{ purchaseInfo.invoice }}{% endif %}</li>
                                        <li><strong>Item/Qnt:</strong> {{ purchaseInfo.totalItem }}/{{ purchaseInfo.totalQnt }}</li>
                                        {#<li><strong>Created:</strong> {{ purchaseInfo.created }}</li>#}
                                        <li><strong>Received:</strong> {{ purchaseInfo.receiveDate|date('d-m-Y') }}</li>
                                        <li><strong>Created:</strong> {{ purchaseInfo.created|date('d-m-Y') }}</li>
                                    </ul>
                                </div>
                                <div class="span4 invoice-payment">
                                    <h4>Payment Details:</h4>
                                    <ul class="unstyled">

                                        <li><strong>Total BDT:</strong> {{ purchaseInfo.totalAmount|number_format() }}</li>
                                        <li><strong>Payment BDT:</strong> {{ purchaseInfo.paymentAmount|number_format() }}</li>
                                        <li><strong>Due BDT:</strong> {{ purchaseInfo.dueAmount|number_format() }}</li>
                                        <li><strong>Commission BDT:</strong> {{ purchaseInfo.commissionAmount|number_format() }}</li>


                                    </ul>
                                </div>
                                <div class="span3 image-preview"></div>
                            </div>
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            {% set total = 0 %}
                            {% for vendorItem in purchaseInfo.purchaseVendorItems %}

                                {% set total = total + vendorItem.quantity %}

                                <div class="form-actions portlet box blue">
                                    <div class="portlet-title">
                                        <div class="span3">
                                            <div class="caption"><i class="icon-reorder"></i>&nbsp;{% if vendorItem.masterItem is not empty %}{{ vendorItem.masterItem.name }}&nbsp;-{% endif %}&nbsp;{{ vendorItem.name }}</div>
                                        </div>
                                        <div class="span8">
                                            <div class="span3">Purchase: {{ vendorItem.purchasePrice }}</div>
                                            <div class="span5">Quantity: {{ vendorItem.quantity }}</div>
                                            <div class="span3">Sales:{{ vendorItem.salesPrice }}</div>
                                        </div>
                                        <div class="span1"><button type="button" data-ref-id="{{vendorItem.id }}"  class="btn green mini addmore" ><i class="icon-plus m-icon-white"></i></button></div>

                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                               <!--/span-->
                                <div class="clone-block" id="clone-block-{{vendorItem.id }}">
                                    <div class="row-fluid clone  box blue">
                                        <div class="span5">
                                           <select class="span12" name="item[]" style="height: 32px">
                                               {% for item in items %}
                                               <option value="{{ item.id }}">
                                                   {{ item.name }}
                                               </option>
                                               {% endfor %}
                                           </select>
                                        </div>
                                        <div class="span6">
                                            <div class="span6"><input type="hidden" id="" name="purchaseVendorItem[]" class="" value="{{ vendorItem.id }}"  >
                                                <div class="input-append span8">
                                                    <input type="number" id="" name="quantity[]" min="1" max="{{ vendorItem.quantity }}" class="m-wrap tooltips span12" required="required" value="" placeholder="no of quantity" , data-original-title ="No of quantity" , data-trigger = "hover" ><span class="add-on">{% if vendorItem.masterItem.productUnit is defined and vendorItem.masterItem.productUnit is not empty %}{{ vendorItem.masterItem.productUnit.name }}{% endif %}</span>
                                                </div>
                                            </div>
                                            <div class="span4">
                                            <input type="text" id="" name="salesPrice[]" class="m-wrap span12 tooltips"  placeholder="sales price" value="" , data-original-title ="Please add sales price" , data-trigger = "hover" >
                                            </div>

                                        </div>
                                        <div class="span1"><button type="button" class="btn red  remove hidden" ><i class="icon-trash m-icon-white"></i></button></div>
                                    </div>
                                </div>
                                {% if  vendorItem.purchaseItems is not empty %}
                                {% for purchaseItem in vendorItem.purchaseItems %}
                                    <div class="clone-block" id="clone-block-{{vendorItem.id }}">
                                        <div class="row-fluid clone  box blue">
                                            <div class="span5">
                                                <select class="span12" name="item[]" style="height: 32px">
                                                    {% for item in items %}
                                                        <option value="{{ item.id }}">
                                                            {{ item.name }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="span6">
                                                <div class="span6"><input type="hidden" id="" name="purchaseVendorItem[]" class="" value="{{ vendorItem.id }}"  >
                                                    <div class="input-append span8">
                                                        <input type="number" id="" name="quantity[]" min="1" max="{{ vendorItem.quantity }}" class="m-wrap tooltips span12" required="required" value="{{ purchaseItem.quantity }}" placeholder="no of quantity" , data-original-title ="No of quantity" , data-trigger = "hover" ><span class="add-on">{% if vendorItem.masterItem.productUnit is defined and vendorItem.masterItem.productUnit is not empty %}{{ vendorItem.masterItem.productUnit.name }}{% endif %}</span>
                                                    </div>
                                                </div>
                                                <div class="span4">
                                                    <input type="text" id="" name="salesPrice[]" class="m-wrap span12 tooltips"  placeholder="sales price" value="{{ purchaseItem.salesPrice }}" , data-original-title ="Please add sales price" , data-trigger = "hover" >
                                                </div>

                                            </div>
                                            <div class="span1">
                                                <a title="Are you sure went to delete ?" href="javascript:" rel="{{ path('inventory_purchaseitem_delete', { 'id': purchaseItem.id }) }}" id="{{  purchaseItem.id }}"  class="btn red mini purchaseItemDelete" ><i class="icon-trash"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                            {% endfor %}
                            <div class="form-actions portlet box grey">
                                <div class="span8" id="message"></div>
                                <div class="pull-right">
                                    <input type="hidden" id="totalQnt" value="{{ total }}">
                                    <button type="reset" class="btn purple action-button"><i class="icon-refresh"></i> Reset</button>
                                    <button type="button" id="purchaseBtn" class="btn green action-button addPurchase"><i class="icon-ok"></i>&nbsp;Submit</button>

                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/puschaseItem.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
