{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Sales Lists
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('inventory_sales') }}">Sales</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Sales Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                 <div class="portlet box green tabbable">

                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Sales lists</div>
                            <div class="actions">
                                <div class="btn-group">
                                    <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                        Tools
                                        <i class="icon-tasks"></i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="{{ path('inventory_sales_new') }}"><i class="icon-plus-sign"></i>&nbsp;POS</a></li>
                                        <li><a href="{{ path('inventory_sales') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                        <li><a href="{{ path('inventory_sales_empty_delete') }}"><i class="icon-th-list"></i>&nbsp;Delete Empty Invoice</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="portlet-body">
                            <div class="portlet-body flip-scroll">
                                {% include('flash-message.html.twig')  %}
                                <div class="portlet search-portlet box grey">
                                    <form class="search-form" action="" method="get" name="itemSearch">
                                        <div class="row-fluid">
                                            <div class="span2">
                                                <input type="text" id="startDate" name="startDate"  class="span12 search-input date-picker " value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}Enter start date{% endif %} ">
                                            </div>
                                            <div class="span2">
                                                <input type="text" id="endDate" name="endDate"  class="span12 search-input date-picker " value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}Enter end date{% endif %} ">
                                            </div>
                                            <div class="span3">
                                                <input type="text" id="toUser" name="toUser"  class="span12 select2User" value="{% if searchForm.toUser is defined %}{{ searchForm.toUser }}{% endif %}"  autocomplete="off" placeholder="select user">
                                            </div>
                                            <div class="span2">
                                                <input type="text" id="amount" name="amount"  class="span12 search-input  " value="{% if searchForm.amount is defined %}{{ searchForm.amount }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.amount is defined %}{{ searchForm.amount }}{% else %}Enter amount{% endif %} ">
                                            </div>
                                            <div class="span3">
                                                <div class="controls">
                                                    <div class="input-append span9">
                                                        <input type="text" id="invoice" name="invoice"  class="span12 search-input" value="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% else %}Enter invoice no{% endif %} ">
                                                        <div class="btn-group">
                                                            <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <table class="table table-bordered table-striped table-condensed flip-content ">

                                    <thead class="flip-content ">
                                    <tr class="head-blue">
                                        <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                        <th class="numeric" >Invoice</th>
                                        <th class="numeric" >Date</th>
                                        <th class="numeric" >Item</th>
                                        <th class="numeric" >Sub-Total</th>
                                        <th class="numeric" >Discount</th>
                                        <th class="numeric" >Net Total</th>
                                        <th class="numeric" >Payment</th>
                                        <th class="numeric" >Due</th>
                                        <th class="numeric" >Sales By</th>
                                        <th class="numeric" >Action</th>
                                    </tr>
                                    </thead>
                                    <tbody id="sales">

                                    {% for entity in entities %}

                                        <tr id="salesRemove-{{ entity.id }}">
                                            <td> {% if entity.salesItems is defined and  entity.salesItems is not empty  %}<span class="badge badge-warning toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span>{% endif %}</td>
                                            <td class="numeric" >{{ entity.invoice }}</td>
                                            <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                            <td class="numeric" >{{ entity.totalItem }}</td>
                                            <td class="numeric" >{{ entity.subTotal|number_format  }}</td>
                                            <td class="numeric" >{{ entity.discount|number_format  }}</td>
                                            <th class="numeric" >{{ entity.total|number_format  }}</th>
                                            <th class="numeric" >{{ entity.payment|number_format }}</th>
                                            <td class="numeric" >{{ entity.due|number_format }}</td>
                                            <td class="numeric" >{% if entity.salesBy %}{{ entity.salesBy.profile.name }}{% endif %}</td>
                                            <td class="numeric" >
                                                {% if entity.salesItems is defined and  entity.salesItems is not empty  %}
                                                    <a href="{{ path('inventory_sales_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
                                                    <a href="{{ path('inventory_sales_print', { 'code': entity.invoice }) }}" class="btn green mini" ><i class="icon-print"></i></a>
                                                {% endif %}
                                                {% if entity.paymentStatus == "Pending" %}
                                                    <a href="{{ path('inventory_sales_edit', { 'code': entity.invoice }) }}" class="btn yellow mini" ><i class="icon-pushpin"></i></a>
                                                    <a title="Are you sure went to delete ?" id="{{ entity.id }}" rel="{{ path('inventory_sales_delete', { 'id': entity.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a>
                                                {% endif %}
                                                {% if entity.paymentStatus == "Due" %}
                                                    <a href="{{ path('account_sales_new') }}" class="btn mini blue" ><i class="icon-money"></i></a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr id="show-{{ entity.id }}" class="showing-overview">
                                            <td colspan="10">
                                                {% if entity.salesItems is defined and  entity.salesItems is not empty  %}
                                                    <table class="table table-bordered table-striped table-condensed flip-content ">

                                                        <thead class="flip-content ">
                                                        <tr class="head-green">
                                                            <td>&nbsp;&nbsp;<i class="icon-reorder"></i></td>
                                                            <th class="numeric" >Item</th>
                                                            <th class="numeric" >Barcode</th>
                                                            <th class="numeric" >Qnt</th>
                                                            <th class="numeric" >Estimate price</th>
                                                            <th class="numeric" >Sales price</th>
                                                            <th class="numeric" >Sub-total</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for salesItem in entity.salesItems %}
                                                            <tr>
                                                                <td class="numeric" >{{ loop.index }}</td>
                                                                <td class="numeric" >{{ salesItem.item.masterItem.name }}
                                                                    {% if salesItem.item.color  %}-{{ salesItem.item.color.name }}{% endif %}
                                                                    {% if salesItem.item.size  %}-{{ salesItem.item.size.name }}{% endif %}
                                                                    {% if salesItem.item.vendor  %}-{{ salesItem.item.vendor.vendorCode }}{% endif %}
                                                                </td>
                                                                <td class="numeric" >{{ salesItem.purchaseItem.barcode }}</td>
                                                                <td class="numeric" >{{ salesItem.quantity }}</td>
                                                                <td class="numeric" >{{ salesItem.estimatePrice|number_format() }}</td>
                                                                <td class="numeric" >{{ salesItem.salesPrice|number_format() }}</td>
                                                                <td class="numeric" >{{ salesItem.subTotal|number_format() }}</td>

                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                                <div class="pagination pull-center"  >
                                    {{ knp_pagination_render(entities) }}
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@InventoryBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    $('#sales').on("click", ".delete", function() {

    var url = $(this).attr("rel");
    var id = $(this).attr("id");
    $.ajax({
    url: url,
    type: 'GET',
    success: function (response) {
    obj = JSON.parse(response);
    if ('success' == obj['success']) {
    $('#salesRemove-' + id).hide();
    }
    }
    })
    })
{% endblock %}
