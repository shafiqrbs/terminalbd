{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid row-print">
            <div class="span12">
                <table class="table">
                    <tr><td colspan="2" class="pull-center"><h3><strong>Invoice</strong></h3></td></tr>
                    <tr>
                        <td style="width:70%">
                            <div class="span4  pull-left invoice-logo-space">
                                <img style="max-width: 180px" src="/{{ entity.inventoryConfig.globalOption.templateCustomize.webPath('logo') }}">
                            </div>
                        </td>
                        <td class="pull-left">
                            <div class="span4">
                                <ul class="unstyled">
                                    <li><strong>{{ entity.inventoryConfig.globalOption.name }}</strong></li>
                                    <li><i class="icon-phone"></i>&nbsp;{{ entity.inventoryConfig.globalOption.mobile }}</li>
                                    {% if  entity.inventoryConfig.globalOption.email is not empty %}<li><i class="icon-envelope"></i>&nbsp;{{ entity.inventoryConfig.globalOption.email }}</li>{% endif %}
                                    {% if  entity.inventoryConfig.globalOption.contactPage.address1 %}<li><i class="icon-home"></i>&nbsp;{{ entity.inventoryConfig.globalOption.contactPage.address1 }}</li>{% endif %}
                                    {% if entity.inventoryConfig.globalOption.domain is not empty %}<li><i class="icon-link"></i>&nbsp;canvasbangladesh.com</li>{% endif %}
                                </ul>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <!-- END purchase_order HEADER-->

        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box">

                    <div class="portlet-title">
                        <div class="caption"><strong>Invoice Details</strong></div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form">
                            <div class="row-fluid">
                                <table class="table">
                                    <tr>
                                        <td style="width:70%">
                                            <div class="span4">
                                                <strong>Bill For:</strong>
                                                <ul class="unstyled">
                                                    {% if entity.customer is not empty %}<li><strong><i class="icon-user"></i></strong>&nbsp;{{ entity.customer.name }}</li>{% endif %}
                                                    {% if entity.customer is not empty %}<li><strong><i class="icon-phone"></i>&nbsp;</strong>&nbsp;{{ entity.customer.mobile }}</li>{% endif %}
                                                    {% if entity.customer is not empty %}<li><strong><i class="icon-home"></i>&nbsp;</strong>&nbsp;{{ entity.customer.address is not empty }}, {{ entity.customer.address }}</li>{% endif %}
                                                    {% if entity.customer is not empty and entity.customer.location is not empty %}<li><strong><i class="icon-map-marker"></i>&nbsp;:</strong>&nbsp;{{ entity.customer.location.name }}, {{ entity.customer.location.parent.name }}</li>{% endif %}

                                                </ul>
                                            </div>
                                        </td>
                                        <td class="pull-left">
                                            <div class="span4">
                                                <strong>Transaction:</strong>
                                                <ul class="unstyled">
                                                    <li><strong><i class="icon-retweet"></i>&nbsp;</strong>{{ entity.invoice }}</li>
                                                    <li><strong><i class="icon-calendar"></i>&nbsp;</strong>{{ entity.created|date('d-m-Y') }}</li>
                                                    <li><strong><i class="icon-money"></i>&nbsp;</strong>{{ entity.transactionMethod.name }}</li>
                                                    {% if entity.accountMobileBank is not empty %}<li><strong>Received Mobile:</strong>&nbsp;{{ entity.accountMobileBank.name }}</li>{% endif %}
                                                    {% if entity.paymentMobile is not empty %}<li><strong>Mobile/Transaction:</strong>&nbsp;{{ entity.paymentMobile }}/{{ entity.transactionId }}</li>{% endif %}
                                                    {% if entity.accountBank is not empty %}<li><strong>Received Bank:</strong>&nbsp;{{ entity.accountBank.name }}</li>{% endif %}
                                                    {% if entity.paymentCard is not empty %}<li><strong>Payment Card/No:</strong>&nbsp;{{ entity.paymentCard.name }}/{{ entity.cardNo }}</li>{% endif %}
                                                    {% if entity.bank is not empty %}<li><strong>Bank:</strong>&nbsp;{{ entity.bank.name  }}</li>{% endif %}
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="row-fluid box green">
<style>
    .head-green{
        background:#333300!important;
        height: 30px;
        color: #FFFFff;
    }
</style>
                                {% if entity.salesItems is defined and  entity.salesItems is not empty  %}
                                    <table class="table table-bordered table-striped table-condensed flip-content ">

                                        <thead class="flip-content ">
                                        <tr class="head-green">
                                            <td>&nbsp;&nbsp;<i class="icon-reorder"></i></td>
                                            <th class="numeric" >SKU</th>
                                            <th class="numeric" >Description</th>
                                            <th class="numeric" >Qnt</th>
                                            <th class="numeric" >Unit price</th>
                                            <th class="numeric" >Sub-total</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for salesItem in entity.salesItems %}
                                            <tr>
                                                <td class="numeric" >{{ loop.index }}</td>
                                                <td class="numeric" >{{ salesItem.item.sku }}</td>
                                                <td class="numeric" >{{ salesItem.item.name }}</td>
                                                <td class="numeric" >{{ salesItem.quantity }}</td>
                                                <td class="numeric" >{{ salesItem.salesPrice|number_format() }}</td>
                                                <td class="numeric" >{{ salesItem.subTotal|number_format() }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr><td colspan="5"><strong class="pull-right" >Total Amount</strong></td><td>{{ entity.total|number_format() }}</td></tr>
                                        {% if entity.discount %}<tr><td colspan="5"><strong class="pull-right" >Discount Amount</strong></td><td>{{ entity.discount|number_format() }}</td></tr>{% endif %}
                                        {% if entity.due %}<tr><td colspan="5"><strong class="pull-right" >Due Amount</strong></td><td>{{ entity.due|number_format() }}</td></tr>{% endif %}
                                        {% if entity.vat %}<tr><td colspan="5"><strong class="pull-right" >Vat/Tax Amount</strong></td><td>{{ entity.vat|number_format() }}</td></tr>{% endif %}
                                        <tr><td colspan="3"><strong class="pull-right" >Total Item</strong></td><td>{{ entity.totalItem }}</td><td><strong class="pull-right" >Net Amount</strong></td><td>{{ entity.payment|number_format() }}</td></tr>
                                        </tfoot>

                                    </table>
                                {% endif %}
                            </div>
                            <div class="clearfix">&nbsp;</div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@SettingToolBundle/Resources/public/css/print.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{#    window.print();#}
{% endblock %}