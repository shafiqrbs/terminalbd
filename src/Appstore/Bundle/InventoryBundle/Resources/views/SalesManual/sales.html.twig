{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Product Sales System
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('inventory_salesmanual') }}"> Product Sales System</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Item Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Sales System</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('inventory_salesmanual') }}"><i class="icon-th-list"></i> Sales</a>
                                <a class="btn red" href="{{ path('inventory_salesmanual_new') }}"><i class="icon-plus-sign"></i> Add Sales</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="clearfix">&nbsp;</div>
                            {{ form_start(itemForm) }}
                            {{ form_row(itemForm._token) }}
                            <div class="row-fluid">
                                <div class="row-fluid particular-info" >
                                    <div class="span6" style="padding-left:15px">
                                        {{ form_widget(itemForm.item) }}
                                        {{ form_errors(itemForm.item) }}
                                    </div>
                                    <div class="span2 input-append">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <button href="javascript:" class="btn btn-large black">Tk.</button>
                                                <input type="text" style="text-align:center;" class="m-wrap span8 form-control" id="salesPrice" name="salesPrice"  value="" >
                                                <input type="hidden" name="purchasePrice" id="purchasePrice" value="">
                                            </span>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="input-append span12" style="margin-bottom:0!important">
                                            <div class="input-group">
                                                <span class="input-group-btn">
                                                   <a href="javascript:" class="btn yellow btn-large btn-qnt-particular" data-type="minus" data-field="quantity">
                                                            <span class="fa fa-minus"></span>
                                                   </a>
                                                <input type="number" style="text-align:center; width:80px" class="m-wrap span5 form-control btn-qnt-particular" id="quantity" name="quantity" value="1" min="1" max="100">
                                                <a href="javascript:" class="btn btn-large green btn-qnt-particular"  data-type="plus" data-field="quantity">
                                                    <span class="fa fa-plus"></span>
                                                </a>
                                                <a href="javascript:" style="width:70px" class="btn btn-large black unit">-</a>
                                                <a href="javascript:" class="btn btn-large blue" id="addItem" data-url="{{ path('inventory_salesmanual_insert_item',{'sales':entity.id}) }}" ><i class="icon-shopping-cart"></i> <strong>Add</strong></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            {{ form_end(itemForm) }}
                            <div class="clearfix">&nbsp;</div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span8">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                                <thead class="flip-content ">
                                                <tr class="head-blue">
                                                    <th class="numeric" ><i class="icon icon-th-list"></i></th>
                                                    <th class="numeric" >Name </th>
                                                    <th class="numeric" >Price</th>
                                                    <th class="numeric" >Quantity</th>
                                                    <th class="numeric" >Unit</th>
                                                    <th class="numeric" >Total</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody id="salesItem">
                                                {% set quantity = 0 %}
                                                {% set salesPrice = 0 %}
                                                {% for salesItem in entity.salesItems %}
                                                    <tr id="remove-{{ salesItem.id }}">
                                                        <td class="numeric" >{{ loop.index }}</td>
                                                        <td class="numeric" >{{ salesItem.item.name }}</td>
                                                        <td class="numeric" >{{ salesItem.salesPrice }}</td>
                                                        <td class="numeric" >{{ salesItem.quantity }}</td>
                                                        <td class="numeric" >{% if salesItem.item.masterItem.productUnit is not empty %}{{ salesItem.item.masterItem.productUnit.name }}{% endif %}</td>
                                                        <td>{{ salesItem.subTotal }}</td>
                                                        <td><button class="btn red mini remove" data-url="{{ path('inventory_salesmanual_salesitem_delete',{'sales':entity.id,'salesItem':salesItem.id}) }}" id="{{ salesItem.id }}" type="button" ><i class="icon-trash"></i></button></td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="clearfix"></div>
                                    <div class="row-fluid">
                                    <div class="span12" id="payment-info">
                                        <div class="row-fluid">
                                            <div><span class="add-on add-on-custom span5"><strong>SUB-TOTAL TK.</strong></span><input class="m-wrap span7 numeric salesTotal disabled-field" readonly="readonly" id="subTotal" type="text" value="{{ entity.subTotal }}"></div>
                                        </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>VAT/TAX TK.</strong></span><input class="m-wrap span7 numeric disabled-field" readonly="readonly" name="vat" id="vat" type="text" value="{{ entity.vat }}">
                                            <input class="m-wrap span9 numeric" name="vat" id="vat" type="hidden">
                                        </div>
                                       <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>NET TOTAL TK.</strong></span><input class="m-wrap span7 numeric disabled-field salesTotal" readonly="readonly" name="netTotal" id="netTotal" type="text" value="{{ entity.total }}">
                                       </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>DISCOUNT TK.</strong></span> {{ form_widget(form.discount) }}

                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12 input-append-border">
                                                {{ form_widget(form.transactionMethod) }}
                                                {{ form_errors(form.transactionMethod) }}
                                            </div>
                                        </div>
                                        <div id="cartMethod" class="bankHide">
                                            <div class="row-fluid">
                                                {{ form_widget(form.cardNo) }}
                                                {{ form_errors(form.cardNo) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.paymentCard) }}
                                                {{ form_errors(form.paymentCard) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.accountBank) }}
                                                {{ form_errors(form.accountBank) }}
                                            </div>
                                        </div>
                                        <div id="bkashMethod" class="mobileBankHide">
                                            <div class="row-fluid">
                                                {{ form_widget(form.accountMobileBank) }}
                                                {{ form_errors(form.accountMobileBank) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.paymentMobile) }}
                                                {{ form_errors(form.paymentMobile) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.transactionId) }}
                                                {{ form_errors(form.transactionId) }}
                                            </div>
                                        </div>
                                       <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>RECEIVE TK.</strong></span>{{ form_widget(form.payment) }}
                                        </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong id="balance">DUE TK.</strong></span><input class="m-wrap span7  numeric disabled-field dueAmount" readonly="readonly" type="text" id="dueAmount" name="dueAmount" value="{{ entity.total }}">
                                        </div>

                                        <div class="row-fluid">
                                            <div class="span12 input-append-border">
                                                {{ form_widget(form.salesBy) }}
                                             </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="input-append span12">
                                                <input type="text" style="margin-left: 0!important; margin-bottom:15px!important" id="customerMobile" name="customerMobile"  class="span8 m-wrap select2CustomerName" value="{{ entity.customer.mobile }}"  autocomplete="off" placeholder="Customer mobile">
                                                <div class="span3">
                                                    <a href="javascript:" class="pull-right btn btn-large blue  addCustomer span12"><i class="icon-user"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid customer" id="">
                                            <div class="span12 input-append-border">
                                                <div class="row-fluid">
                                                    <div class="input-icon left input-height">
                                                        <i class="icon-user"></i>
                                                        <input type="text" id="customerName" name="customerName" class="m-wrap span12 customer-input" autocomplete="off" placeholder="Customer name" value="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid customer">
                                            <div class="span12 input-append-border">
                                                <div class="row-fluid">
                                                    <div class="input-icon left input-height">
                                                        <i class="icon-phone"></i>
                                                        <input type="text" id="customerMobile" name="customerMobile" class="m-wrap span12 mobile customer-input" autocomplete="off" placeholder="Customer mobile no" value="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid customer">
                                            <div class="span12 input-append-border">
                                                <div class="row-fluid">
                                                    <textarea id="customerAddress" name="customerAddress" class="m-wrap span12 customer-input" rows="2" placeholder="Enter customer address"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="input-append span12 ">
                                                <div class="btn-group">
                                                    {{ form_widget(form.process) }}
                                                    {{ form_errors(form.process) }}
                                                    <input type="hidden" name="paymentTotal" id="paymentTotal" value="{{ entity.total }}">
                                                    <input type="hidden" name="paymentSubTotal" id="paymentSubTotal" value="{{ entity.total }}">
                                                    <button rel=""  type="button" class="btn btn-large green paymentBtn" id="submitBtn"><i class="icon-refresh m-icon-white"></i>&nbsp;Process</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
    <style>
        .disabled{
            opacity: 0.5;
        }
        #payment-info{
            padding:15px;
            background-color:#E5E7E7;
            border:1px solid #B7B9B9;
        }
        #sales_discount{
            border: 2px solid #eca22e!important;
        }
        #sales_payment{
            border: 2px solid red!important;
        }
        .customer{
            display: none;
        }
        input[class*="span"].m-wrap{
            background: #ffffff!important;
        }
        table.dataTable tbody th, table.dataTable tbody td {
            padding: 1px 10px!important;
        }

    </style>
{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@InventoryBundle/Resources/public/css/manual-sales.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/sales-manual.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    InventorySales({{ entity.id ? entity.id : 0 }});
{% endblock %}