{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Product Sales System
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('inventory_salesmanual') }}"> Product Sales System</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Item Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Sales System</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    Tools&nbsp;<i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('inventory_salesmanual') }}"><i class="icon-th-list"></i> Sales List</a></li>
                                    <li><a href="{{ path('inventory_salesmanual_new') }}"><i class="icon-plus-sign"></i> Add Sales</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="row-fluid">
                                <form class="search-form" action="" method="get" name="itemSearch">

                                    {#<div class="row-fluid" style="margin-bottom: 10px">
                                        <div class="span3">
                                            <input type="text" id="barcode" name="barcode" required="required"  class="m-wrap span12 select2Item " >
                                        </div>
                                        <div class="span3">
                                            <input type="text" id="sku" name="sku" required="required"  class="m-wrap span12 select2Item " >
                                        </div>
                                        <div class="span6">
                                            <input type="text" id="sku" name="sku" required="required"  class="m-wrap span12 select2Item " >
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span3">
                                            <input type="text" id="item" name="item"  class="span12 select2Product" value="{% if searchForm.item is defined %}{{ searchForm.item }}{% endif %}"  autocomplete="off" placeholder="Enter item name">
                                        </div>
                                        <div class="span3">
                                            <input type="text" id="size" name="size"  class="leftMargin span12 select2Size" value="{% if searchForm.size is defined %}{{ searchForm.size }}{% endif %}"  autocomplete="off" placeholder="Select size name">
                                        </div>

                                        <div class="span3">
                                            <input type="text" id="color" name="color"  class="leftMargin span12 select2Color" value="{% if searchForm.color is defined %}{{ searchForm.color }}{% endif %}"  autocomplete="off" placeholder="Select color name">
                                        </div>
                                        <div class="span3">
                                            <input type="text" id="category" name="category"  class="leftMargin span12 select2Category" value="{% if searchForm.category is defined %}{{ searchForm.category }}{% endif %}"  autocomplete="off" placeholder="Select category name">
                                        </div>
                                    </div>#}
                                    <div id="search-productx" style="background:#EEF1F4; padding-top:5px; padding-bottom: 20px">
                                        <div class="row-fluid" style="margin-bottom: 5px">
                                            <form class="search-form" >
                                                <input type="text" id="item" name="item" required="required"  class="m-wrap span12 select2Item " >
                                            </form>
                                        </div>
                                        <div class="row-fluid">
                                            <table class="table table-bordered table-striped table-condensed flip-conten" id="stockItemDetails">
                                                <thead class="flip-content ">
                                                <tr class="head-green">
                                                    <th class="numeric" ><span class="btn black mini"><i class="icon-barcode"></i></span></th>
                                                    <th class="numeric" >SKU</th>
                                                    <th class="numeric" >GRN</th>
                                                    <th class="numeric" >Remaining Qnt</th>
                                                    <th class="numeric" >Ongoing Qnt</th>
                                                    <th class="numeric" >Current Stock</th>
                                                    <th class="numeric" >Purchase price</th>
                                                    <th class="numeric" >Sales price</th>
                                                    <th class="numeric" >Action</th>
                                                </tr>
                                                </thead>
                                                <tbody id="itemDetails"></tbody>
                                            </table>
                                        </div>

                                    </div>
                                </form>
                            </div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span8">
                                    <table class="table table-bordered table-striped table-condensed flip-content ">
                                        <thead class="flip-content ">
                                        <tr class="head-grey">
                                            <th class="" >Name </th>
                                            <th class="numeric" >Avg Purchase</th>
                                            <th class="numeric" >Sales</th>
                                            <th class="numeric" >Ongoing</th>
                                            <th class="numeric" >Remaining</th>
                                            <th class="numeric" ></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for item in entities %}
                                            <tr {% if item.remainingQuantity == 0    %} class="disabled" aria-disabled="true" {% endif %}>
                                                <td class="" >
                                                    {{ item.sku }}
                                                    <br/>
                                                    {{  item.name }}
                                                </td>
                                                <td class="numeric" >{{ item.avgPurchasePrice }}</td>
                                                <td class="numeric" >{{ item.avgSalesPrice }}</td>
                                                <td class="numeric" >{{ ongoingItem[item.id]|default('')}}</td>
                                                <td class="numeric" >{{ item.remainingQuantity - ongoingItem[item.id]|default(0)  }}</td>
                                                <td class="numeric">
                                                    <div class="controls">
                                                        <div class="input-append span12">
                                                            <input type="text" id="sales-{{ item.id }}" name="salesPrice"  class="m-wrap span5" value="{{ item.salesPrice }}"  autocomplete="off" placeholder="Enter sales price">
                                                            <input type="text" id="qnt-{{ item.id }}" name="quantity"  class="m-wrap span5" value=""  autocomplete="off" placeholder="Enter qnt">
                                                            <div class="btn-group">
                                                                <button class="btn blue addManualSalesItem" id="{{ item.id }}" type="button" ><i class="icon-shopping-cart"></i></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="pagination pull-center"  >
                                        {{ knp_pagination_render(entities) }}
                                    </div>
                                </div>
                                <div class="span4">
                                    <table class="table table-bordered table-striped table-condensed flip-content ">

                                        <thead class="flip-content ">
                                        <tr class="head-blue">
                                            <th class="numeric" >Name </th>
                                            <th class="numeric" >Price * Qnt</th>
                                            <th class="numeric" >Total</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set quantity = 0 %}
                                        {% set salesPrice = 0 %}
                                        {% for salesItem in entity.salesItems %}
                                            <tr>
                                                <td class="numeric" > {{ salesItem.item.sku }}<br/>{{  salesItem.item.name }}</td>
                                                <td class="numeric" >
                                                    <a class="editable" data-name="SalesPrice" href="#"  data-url="{{ path('inventory_salesmanual_item_inline_update',{'salesItem':salesItem.id}) }}" data-type="text" data-pk="{{ salesItem.id }}" data-original-title="Enter sales price">{{ salesItem.salesPrice }}</a> *
                                                    <a class="editable" data-name="Quantity" href="#"  data-url="{{ path('inventory_salesmanual_item_inline_update',{'salesItem':salesItem.id}) }}" data-type="text" data-pk="{{ salesItem.id }}" data-original-title="Enter sales quantity">{{ salesItem.quantity }}</a>
                                                </td>
                                                <td>={{ salesItem.subTotal }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="clearfix"></div>
                                    <div class="row-fluid">
                                    <div class="span12" id="payment-info">
                                        <div class="row-fluid">
                                            <div><span class="add-on add-on-custom span5"><strong>Sub-Total TK.</strong></span><input class="m-wrap span7 numeric salesTotal disabled-field" readonly="readonly" id="subTotal" type="text" value="{{ entity.subTotal }}"></div>
                                        </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>VAT/TAX TK.</strong></span><input class="m-wrap span7 numeric disabled-field" readonly="readonly" name="vat" id="vat" type="text" value="{{ entity.vat }}">
                                            <input class="m-wrap span9 numeric" name="vat" id="vat" type="hidden">
                                        </div>
                                       <div class="row-fluid">
                                            <div class="span12 input-append-border">
                                                {{ form_widget(form.transactionMethod) }}
                                                {{ form_errors(form.transactionMethod) }}
                                            </div>
                                        </div>
                                        <div id="cartMethod" class="bankHide">
                                            <br/>
                                            <div class="row-fluid">
                                                {{ form_widget(form.cardNo) }}
                                                {{ form_errors(form.cardNo) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.paymentCard) }}
                                                {{ form_errors(form.paymentCard) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.accountBank) }}
                                                {{ form_errors(form.accountBank) }}
                                            </div>
                                        </div>
                                        <div id="bkashMethod" class="mobileBankHide">
                                            <br/>
                                            <div class="row-fluid">
                                                {{ form_widget(form.accountMobileBank) }}
                                                {{ form_errors(form.accountMobileBank) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.paymentMobile) }}
                                                {{ form_errors(form.paymentMobile) }}
                                            </div>
                                            <div class="row-fluid">
                                                {{ form_widget(form.transactionId) }}
                                                {{ form_errors(form.transactionId) }}
                                            </div>
                                        </div>
                                        <br/>
                                        <div class="row-fluid">
                                            <div class="span12 input-append-border">
                                                {{ form_widget(form.salesBy) }}
                                                {{ form_errors(form.salesBy) }}
                                            </div>
                                        </div>
                                        <br/>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>Discount TK.</strong></span><input class="m-wrap span7 numeric" name="discount" id="discount" value="{{ entity.discount }}" type="text">
                                        </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>Receive TK.</strong></span><input class="m-wrap span7 numeric" type="text" name="paymentAmount" id="paymentAmount" placeholder="">
                                        </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>Due TK.</strong></span><input class="m-wrap span7 numeric disabled-field" type="text" name="dueAmount" readonly="readonly" id="dueAmount" value="{{ entity.due }}">
                                        </div>
                                        <div class="row-fluid">
                                            <span class="add-on add-on-custom span5"><strong>Return TK.</strong></span><input class="m-wrap span7  numeric disabled-field" readonly="readonly" type="text" id="returnAmount" name="returnAmount">
                                        </div>
                                        <div class="row-fluid">
                                            <div class="input-append span12">
                                                <input type="text" style="margin-left: 0!important;" id="mobile" name="mobile"  class="span10 select2CustomerName" value="{% if searchForm.mobile is defined %}{{ searchForm.mobile }}{% endif %}"  autocomplete="off" placeholder="Customer mobile">
                                                <div class="btn-group">
                                                    <a href="javascript:" class="pull-right btn blue  addCustomer span12"><i class="icon-user"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <br/>
                                        <div class="row-fluid customer" id="">
                                            <div class="span12 input-append-border">
                                                <div class="row-fluid">
                                                    <div class="input-icon left input-height">
                                                        <i class="icon-user"></i>
                                                        {{ form_widget(form.customer.name) }}
                                                        {{ form_errors(form.customer.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid customer">
                                            <div class="span12 input-append-border">
                                                <div class="row-fluid">
                                                    <div class="input-icon left input-height">
                                                        <i class="icon-phone"></i>
                                                        {{ form_widget(form.customer.mobile) }}
                                                        {{ form_errors(form.customer.mobile) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid customer">
                                            <div class="span12 input-append-border">
                                                {{ form_widget(form.customer.location) }}
                                                {{ form_errors(form.customer.location) }}
                                            </div>
                                        </div>
                                        <div class="row-fluid customer">
                                            <div class="span12 input-append-border">
                                                <div class="row-fluid">
                                                    {{ form_widget(form.customer.address) }}
                                                    {{ form_errors(form.customer.address) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clearfix"><br/></div>
                                        <div class="row-fluid">
                                            <div class="span12 ">

                                                <div class="input-append span12">
                                                    {{ form_widget(form.process) }}
                                                    {{ form_errors(form.process) }}
                                                    <div class="btn-group">
                                                        <input type="hidden" name="paymentTotal" id="paymentTotal" value="{{ entity.total }}">
                                                        <input type="hidden" name="paymentSubTotal" id="paymentSubTotal" value="{{ entity.total }}">
                                                        <button rel=""  type="button" class="btn green paymentBtn span12" id="pos"><i class="icon-refresh m-icon-white"></i>&nbsp;Process</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <style>
        .disabled{
            opacity: 0.5;
        }
        #payment-info{
            padding:15px;
            background-color:#E5E7E7;
            border:1px solid #B7B9B9;
        }
        .customer{
            display: none;
        }

    </style>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/editable.js'
    '@InventoryBundle/Resources/public/js/sales.js'
    '@InventoryBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $('body').addClass('page-sidebar-closed');
    InventorySales({{ entity.id }});
    EditableInit();
    ApproveProcess();

    $(document).on('click', '.addManualSalesItem', function() {

        var item = $(this).attr('id');
        var quantity = $('#qnt-'+item).val();
        var salesPrice = $('#sales-'+item).val();

        if(quantity == ''){
            alert('Add Product Price & Quantity , Please try again.')
            return false;
        }
        $.ajax({
            url: '{{ path('inventory_salesmanual_insert_item',{'sales':entity.id}) }}',
            type: 'POST',
            data:'item=' + item + '&quantity=' + quantity + '&salesPrice=' + salesPrice,
            success: function(response) {
                location.reload();
            },
        })
    });

    $(document).on("click", ".paymentBtn", function(e) {

        $('#confirm-content').confirmModal({
        topOffset: 0,
        top: '25%',
        onOkBut: function(event, el) {
            $('form').submit();
        }
        });
        e.preventDefault();
    });
{% endblock %}
