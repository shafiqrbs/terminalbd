{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Stock Items
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Stock Items</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Item lists</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                {#<ul class="dropdown-menu pull-right">
                                    <li><a href=""><i class="icon-print"></i>&nbsp; Print</a></li>
                                    <li><a href=""><i class=" icon-download"></i>&nbsp;Pdf</a></li>
                                    <li><a href=""><i class=" icon-download-alt"></i>&nbsp;Excel</a></li>
                                </ul>#}
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">

                            {% include('flash-message.html.twig')  %}

                            <div class="row-fluid " >
                                <div class="span3">
                                    <ul class="unstyled">
                                        <li><strong>Purchase:</strong>&nbsp;{{ stockOverview.purchase }}</li>
                                        <li><strong>Sales:</strong>&nbsp;{{ stockOverview.sales }}</li>
                                    </ul>
                                </div>
                                <div class="span3">
                                    <ul class="unstyled">
                                        <li><strong>Purchase Return:</strong> &nbsp;{{ stockOverview.purchaseReturn }}</li>
                                        <li><strong>Sales Return:</strong>&nbsp;{{ stockOverview.salesReturn }}</li>
                                    </ul>
                                </div>
                                <div class="span3">
                                    <ul class="unstyled">
                                        <li><strong>Purchase Replace:</strong> &nbsp;{{ stockOverview.purchaseReplace }}</li>
                                        <li><strong>Damage:</strong>&nbsp;{{ stockOverview.damage }}</li>
                                    </ul>
                                </div>
                                <div class="span3">
                                    <ul class="unstyled">
                                        <li><strong>Remaining:</strong>&nbsp;{{ stockOverview.remaining }}</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="portlet search-portlet box grey">
                                <div class="row-fluid">
                                    <form class="search-form" action="" method="get" name="itemSearch">
                                        <div class="span11">
                                            <div class="controls">
                                                <input type="text" id="item" name="item"  class="span3 select2Product" value="{% if searchForm.item is defined %}{{ searchForm.item }}{% endif %}"  autocomplete="off" placeholder="Enter item name ">
                                                <input type="text" id="color" name="color"  class="span3 select2Color" value="{% if searchForm.color is defined %}{{ searchForm.color }}{% endif %}"  autocomplete="off" placeholder="Enter color name ">
                                                <input type="text" id="size" name="size"  class="span3 select2Size" value="{% if searchForm.size is defined %}{{ searchForm.size }}{% endif %}"  autocomplete="off" placeholder="Enter size name ">
                                                <input type="text" id="vendor" name="vendor"  class="span3 select2Vendor" value="{% if searchForm.vendor is defined %}{{ searchForm.vendor }}{% endif %}" autocomplete="off" placeholder="Enter vendor name ">
                                            </div>
                                        </div>
                                        <div class="">
                                            <div class="btn-group">
                                                <button class="btn" type="submit" >
                                                    <i class="icon-search"></i>&nbsp;Go</button>

                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" >List</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Purchase</th>
                                    <th class="numeric" >Prch.return</th>
                                    <th class="numeric" >Prch.replace</th>
                                    <th class="numeric" >Sales</th>
                                    <th class="numeric" >Sls.return</th>
                                    <th class="numeric" >Damage</th>
                                    {#                                        <th class="numeric" >Min</th>
                                                                            <th class="numeric" >Max</th>#}
                                    <th class="numeric" >Remaining Qnt</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}

                                    <tr>
                                        <td> {% if entity.purchaseItems is defined and  entity.purchaseItems is not empty  %}<span data-trigger="hover" data-original-title="Barcode print" class="btn blue mini toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span>{% endif %}</td>
                                        <td class="numeric" >{{ entity.masterItem.name }}
                                            {% if entity.color  %}-{{ entity.color.name }}{% endif %}
                                            {% if entity.size  %}-{{ entity.size.name }}{% endif %}
                                            {% if entity.vendor  %}-{{ entity.vendor.name }}{% endif %}
                                        <td class="numeric" >{{ entity.purchaseQuantity }}</td>
                                        <td class="numeric" >{{ entity.purchaseQuantityReturn }}</td>
                                        <td class="numeric" >{{ entity.purchaseQuantityReplace }}</td>
                                        <td class="numeric" >{{ entity.salesQuantity }}</td>
                                        <td class="numeric" >{{ entity.salesQuantityReturn }}</td>
                                        <td class="numeric" >{{ entity.damageQuantity }}</td>
                                        {#                                            <td class="numeric" >{{ entity.minQnt }}</td>
                                                                                    <td class="numeric" >{{ entity.maxQnt }}</td>#}
                                        <td class="numeric" >{{ (entity.purchaseQuantity + entity.salesQuantityReturn + entity.purchaseQuantityReplace ) - (entity.purchaseQuantityReturn + entity.salesQuantity + entity.damageQuantity )  }}</td>
                                        <th class="numeric" >
                                            <a href="{{ path('inventory_stockitem_show', { 'item': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
                                        </th>
                                    </tr>
                                    <tr id="show-{{ entity.id }}" class="showing-overview">
                                        <td colspan="10">
                                            {% if entity.stockItems is defined and  entity.stockItems is not empty  %}
                                                <table class="table table-bordered table-striped table-condensed flip-content ">

                                                    <thead class="flip-content ">
                                                    <tr class="head-green">
                                                        <th class="numeric" >Created</th>
                                                        <th class="numeric" >Process</th>
                                                        <th class="numeric" >Invoice</th>
                                                        <th class="numeric" >Purchase</th>
                                                        <th class="numeric" >Prch.return</th>
                                                        <th class="numeric" >Prch.replace</th>
                                                        <th class="numeric" >Sales</th>
                                                        <th class="numeric" >Sls.return</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for stockItem in entity.stockItems %}
                                                        <tr>
                                                            <td class="numeric" >{{ stockItem.created|date('d-m-Y') }}</td>
                                                            <td class="numeric" >{{ stockItem.process }}</td>
                                                            <td class="numeric" >
                                                                {% if(stockItem.process == 'purchase') %}
                                                                    {{ stockItem.purchaseItem.purchase.grn }}
                                                                {% elseif (stockItem.process == 'purchaseRetrun') %}
                                                                    {{ stockItem.purchaseItem.purchase.invoice }}
                                                                {% elseif (stockItem.process == 'purchaseReplace') %}
                                                                    {{ stockItem.purchaseItem.purchase.invoice }}
                                                                {% elseif (stockItem.process == 'sales') %}
                                                                    {{ stockItem.salesItem.sales.invoice }}
                                                                {% elseif (stockItem.process == 'salesRetrun') %}
                                                                    {{ stockItem.salesReturnItem.salesReturn.invoice }}
                                                                {% endif %}
                                                            </td>
                                                            <td class="numeric" > {% if(stockItem.process == 'purchase') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                            <td class="numeric" > {% if(stockItem.process == 'purchaseRetrun') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                            <td class="numeric" > {% if(stockItem.process == 'purchaseReplace') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                            <td class="numeric" > {% if(stockItem.process == 'sales') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                            <td class="numeric" > {% if(stockItem.process == 'salesRetrun') %}  {{ stockItem.quantity }} {% endif %}</td>

                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>

                                                </table>
                                            {% endif %}
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@InventoryBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/item.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    InventoryItemListPage();
{% endblock %}
