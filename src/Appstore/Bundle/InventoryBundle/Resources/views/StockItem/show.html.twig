{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Purchase
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('purchase') }}">Purchase</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Add/Edit purchase</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END purchase_order HEADER-->
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Purchase Information</div>

                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('inventory_stockitem') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            <div class="row-fluid">
                                <div class="span4">
                                    <h4>Vendor:</h4>
                                    <ul class="unstyled">
                                        <li>{{ entity.vendor.companyName }}</li>
                                        <li>{{ entity.vendor.name }}</li>
                                        <li>{{ entity.vendor.mobile }}</li>
                                        <li>{{ entity.vendor.address }}</li>
                                        {% if entity.vendor.country %}
                                            <li>{{ entity.vendor.country.name }}</li>
                                        {% endif %}

                                    </ul>
                                </div>
                                <div class="span4">
                                    <h4>Item Overview:</h4>
                                    <ul class="unstyled">
                                        <li>{{ entity.name }}</li>
                                        <li>{{ entity.masterItem.name }}</li>
                                        <li>{{ entity.color.name }}</li>
                                        <li>{{ entity.size.name }}</li>
                                        {% if entity.vendor.country %}
                                            <li>{{ entity.vendor.country.name }}</li>
                                        {% endif %}

                                    </ul>
                                </div>
                                <div class="span4">
                                    <h4>Stock overview:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Purchase Qnt:</strong>&nbsp;{{ entity.purchaseQuantity }}</li>
                                        <li><strong>Purchase Return Qnt:</strong>&nbsp;{{ entity.purchaseQuantityReturn }}</li>
                                        <li><strong>Purchase Replace Qnt:</strong>&nbsp;{{ entity.purchaseQuantityReplace }}</li>
                                        <li><strong>Sales Qnt:</strong>&nbsp;{{ entity.salesQuantity }}</li>
                                        <li><strong>Sales Return Qnt:</strong>&nbsp;{{ entity.salesQuantityReturn }}</li>
                                    </ul>
                                </div>

                                <div class="span3 image-preview"></div>
                            </div>
                            {% include('flash-message.html.twig')  %}

                            <div class="form-actions portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Verdor receive item list</div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid box green">
                                <table class="table table-bordered table-striped table-condensed flip-content ">

                                                        <thead class="flip-content ">
                                                        <tr class="head-green">
                                                            <th class="numeric" >Created</th>
                                                            <th class="numeric" >Process</th>
                                                            <th class="numeric" >Invoice</th>
                                                            <th class="numeric" >Purchase</th>
                                                            <th class="numeric" >Prch.return</th>
                                                            <th class="numeric" >Prch.replace</th>
                                                            <th class="numeric" >Sales</th>
                                                            <th class="numeric" >Sls.return</th>
                                                            <th class="numeric" >Created</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for stockItem in entity.stockItems %}
                                                            <tr>
                                                                <td class="numeric" >{{ stockItem.created|date('d-m-Y') }}</td>
                                                                <td class="numeric" >{{ stockItem.process }}</td>
                                                                <td class="numeric" >
                                                                    {% if(stockItem.process == 'purchase') %}
                                                                    {{ stockItem.purchaseItem.purchase.grn }}
                                                                    {% elseif (stockItem.process == 'purchaseRetrun') %}
                                                                        {{ stockItem.purchaseItem.purchase.invoice }}
                                                                    {% elseif (stockItem.process == 'purchaseReplace') %}
                                                                        {{ stockItem.purchaseItem.purchase.invoice }}
                                                                    {% elseif (stockItem.process == 'sales') %}
                                                                        {{ stockItem.salesItem.sales.invoice }}
                                                                    {% elseif (stockItem.process == 'salesRetrun') %}
                                                                        {{ stockItem.salesReturnItem.salesReturn.invoice }}
                                                                    {% endif %}
                                                                </td>
                                                                <td class="numeric" > {% if(stockItem.process == 'purchase') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                                <td class="numeric" > {% if(stockItem.process == 'purchaseRetrun') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                                <td class="numeric" > {% if(stockItem.process == 'purchaseReplace') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                                <td class="numeric" > {% if(stockItem.process == 'sales') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                                <td class="numeric" > {% if(stockItem.process == 'salesRetrun') %}  {{ stockItem.quantity }} {% endif %}</td>
                                                                <td class="numeric" >{{ stockItem.createdBy }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>

                                                    </table>
                                                            </div>
                            <div class="clearfix">&nbsp;</div>
                           </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


