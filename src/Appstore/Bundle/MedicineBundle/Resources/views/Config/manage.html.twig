{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_warehouse HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_warehouse-title">
                    Configuration
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>

                    <li><a href="#">Configuration </a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_warehouse HEADER-->
        <!-- BEGIN inventory_warehouse CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Configuration Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <div class="clearfix"><br/></div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid box green">
                               </div>
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label " for="vatPercentage">Invoice Prefix</label>
                                        <div class="control">
                                            {{ form_widget(form.invoicePrefix) }}
                                            {{ form_errors(form.invoicePrefix) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    {{ form_widget(form.customPrint) }} Custom Print
                                    {{ form_widget(form.posPrint) }} POS Print
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label " for="vatPercentage">Instant Item <span class="required">%</span></label>
                                        <div class="control">
                                            {{ form_widget(form.instantVendorPercentage) }}
                                            {{ form_errors(form.instantVendorPercentage) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label " for="vatPercentage">Vendor Item <span class="required">%</span></label>
                                        <div class="control">
                                            {{ form_widget(form.vendorPercentage) }}
                                            {{ form_errors(form.vendorPercentage) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box purple">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Print</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.invoicePrintLogo) }}Print Logo
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isPrintHeader) }} Print Header
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isPrintFooter) }} Print Footer
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12"><h4>Address</h4></div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="control">
                                                {{ form_widget(form.address) }}
                                                {{ form_errors(form.address) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12"><h4>Invoice Format</h4></div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Margin Left</label>
                                                    <div class="control">
                                                        {{ form_widget(form.printLeftMargin) }}
                                                        {{ form_errors(form.printLeftMargin) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Margin Top</label>
                                                    <div class="control">
                                                        {{ form_widget(form.printTopMargin) }}
                                                        {{ form_errors(form.printTopMargin) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $('.sortable').sortable({
    handle: 'span'
    });
    $( ".sortable" ).on( "sortupdate", function( event, ui ) {
    var serialized = $(".sortable").sortable("serialize");
    $.ajax({
    url: '{{ path('dps_service_sorted',{'fieldName':'serviceSorting'}) }}',
    type: "POST",
    data: serialized
    });
    })

{% endblock %}