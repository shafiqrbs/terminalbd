
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Damage
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Damage</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Damage Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('medicine_damage_new') }}"><i class="icon-plus-sign"></i> Add Damage</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="clearfix"><br/></div>
                        <div class="portlet-body flip-scroll">

                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-blue">
                                    <th class="numeric" >Medicine Name </th>
                                    <th class="numeric" >Barcode </th>
                                    <th class="numeric" >Expiration </th>
                                    <th class="numeric" >Grn/Date </th>
                                    <th class="numeric" >Quantity</th>
                                    <th class="numeric" >Purchase Price</th>
                                    <th class="numeric" >SubTotal</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>

                                        <td class="numeric" >{{ entity.medicineStock.name }}</td>
                                        <td class="numeric" >{{ entity.medicinePurchaseItem.barcode }}</td>
                                        <td class="numeric" >{% if entity.medicinePurchaseItem.expirationStartDate is not empty and entity.medicinePurchaseItem.expirationEndDate is not empty %}{{ entity.medicinePurchaseItem.expirationStartDate|date('M y') }} To {{ entity.medicinePurchaseItem.expirationEndDate|date('M y') }}{% endif %}</td>
                                        <td class="numeric" >{{ entity.medicinePurchaseItem.medicinePurchase.grn }}/{{ entity.medicinePurchaseItem.medicinePurchase.created|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.quantity }}</td>
                                        <td class="numeric" >{{ entity.medicinePurchaseItem.purchasePrice }}</td>
                                        <td class="numeric" >{{ entity.subTotal }}</td>
                                       <td class="numeric" >
                                            <a title="Are you sure went to delete ?" href="{{ path('medicine_damage_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}



