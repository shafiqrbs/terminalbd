    var optionsPurchaseSales = {
    animationEnabled: true,
    theme: "light2",
    title: {
    text: "Monthly Progress Report"
    },
    axisX: {
    valueFormatString: "MMM"
    },
    axisY: {
    prefix: "BDT",
    labelFormatter: addSymbols
    },
    toolTip: {
    shared: true
    },
    legend: {
    cursor: "pointer",
    itemclick: toggleDataSeries
    },
    data: [
    {
    type: "column",
    name: "Purchase",
