            background: #EBEDF0;
        }

    </style>
{% endblock %}
{% block cssBlock %}
    <link rel="stylesheet" href="{{ asset('bundles/medicine/css/invoice.css') }}">
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
        '@MedicineBundle/Resources/public/js/purchase.js'
        '@MedicineBundle/Resources/public/js/editable.js'
        '@MedicineBundle/Resources/public/js/approveProcess.js'
        '@MedicineBundle/Resources/public/js/medicine.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
