{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Purchase no #  <strong>{{ entity.grn }}</strong>
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('medicine_purchase') }}">Medicine</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage Medicine</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Medicine Information</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn red" href="{{ path('medicine_purchase_new') }}"><i class="icon-plus-sign"></i> Medicine Receive</a>
                    <a class="btn" href="{{ path('medicine_purchase') }}"><i class="icon-th-list"></i> Medicine</a>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            <div class="clearfix">&nbsp;</div>
            {{ form_start(purchaseItem) }}
            {{ form_row(purchaseItem._token) }}
            <div class="row-fluid particular-info" >
                <div class="span6">
                    {{ form_widget(purchaseItem.stockName) }}
                    {{ form_errors(purchaseItem.stockName) }}
                </div>
                <div class="span6 text-right">
                    {{ form_widget(purchaseItem.expirationStartDate) }}
                    {{ form_widget(purchaseItem.expirationEndDate) }}
                    {{ form_widget(purchaseItem.purchasePrice) }}
                    {{ form_errors(purchaseItem.purchasePrice) }}
                    {{ form_widget(purchaseItem.salesPrice) }}
                    {{ form_errors(purchaseItem.salesPrice) }}
                </div>

            </div>
            <div class="row-fluid particular-info" >
                <div class="span8">&nbsp;</div>
                <div class="span4 text-right">
                    <div class="input-append">
                        <div class="input-group">
                                            <span class="input-group-btn">
                                               <button type="button" class="btn red btn-number" data-type="minus" data-field="quantity">
                                                        <span class="fa fa-minus"></span>
                                               </button>
                                            </span>
                                            {{ form_widget(purchaseItem.quantity) }}
                                            {{ form_errors(purchaseItem.quantity) }}
                                            <span class="input-group-btn">
                                              <button type="button" class="btn green btn-number"  data-type="plus" data-field="quantity">
                                                      <span class="fa fa-plus"></span>
                                              </button>
                                                <button type="submit" class="btn blue" id="addParticular" data-url="{{ path('medicine_purchase_particular_add',{'invoice':entity.id}) }}" > <span class="fa fa-save"></span> Add</button>
                                         </span>
                            <input type="hidden" id="particularId" name="particularId" value="">

                        </div>
                    </div>
                </div>

            </div>
            {{ form_end(purchaseItem) }}
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span12" id="particular-table">
                    <table class="table table-bordered table-striped table-condensed table-fixed">
                        <thead>
                        <tr>
                            <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i> Barcode</th>
                            <th class="span4">Name</th>
                            <th class="span2">Expiration Date</th>
                            <th class="span1">Prch. Price</th>
                            <th class="span1">Sales Price</th>
                            <th class="span1">Qnt</th>
                            <th class="span1">Sales Qnt</th>
                            <th class="span1">Total</th>
                            <th class=""><i class="icon-trash"></i></th>
                        </tr>
                        </thead>
                        <tbody id="invoiceParticulars">
                        {% if entity.medicinePurchaseItems is not empty %}
                            {% for item in entity.medicinePurchaseItems %}
                                <tr id="remove-{{ item.id }}">
                                    <td  class="span1">{{ loop.index }}. {{ item.barcode }}</td>
                                    <td class="span4">{{ item.medicineStock.name }}</td>
                                    <th class="span2">{% if item.expirationStartDate is not empty and item.expirationEndDate is not empty %}{{ item.expirationStartDate|date('M y') }} To {{ item.expirationEndDate|date('M y') }}{% endif %}</th>
                                    <td class="span1" ><a class="editable" data-name="PurchasePrice" href="#"  data-url="{{ path('medicine_purchaseitem_inline_update',{'id':item.id}) }}" data-type="text" data-pk="{{ item.id }}" data-original-title="Change purchase price"> {{ item.purchasePrice }}</a></td>
                                    <td class="span1"><a class="editable" data-name="SalesPrice" href="#"  data-url="{{ path('medicine_purchaseitem_inline_update',{'id':item.id}) }}" data-type="text" data-pk="{{ item.id }}" data-original-title="Change purchase price"> {{ item.salesPrice }}</a></td>
                                    <td class="span1"><a class="editable" data-name="Quantity" href="#"  data-url="{{ path('medicine_purchaseitem_inline_update',{'id':item.id}) }}" data-type="text" data-pk="{{ item.id }}" data-original-title="Change purchase quantity"> {{ item.quantity }}</a></td>
                                    <td class="span1">{{ item.salesQuantity }}</td>
                                    <td class="span1">{{ item.purchaseSubTotal|number_format }}</td>
                                    <td class="">{% if item.salesQuantity == 0 %}<a id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('medicine_purchase_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a>{% endif %}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="9" class="span12" style="border: 1px double #000"></td>
                        </tr>
                        <tr>
                            <td colspan="7" class="span10"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                            <td class="span1"><strong id="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        <tr>
                            <td colspan="7" class="span10"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                            <td class="span1"><strong id="discount">{{ entity.discount|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix">&nbsp;</div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box purple">
                <div class="pull-left span3">
                    <span class="btn purple span12 pull-left" style="text-align: left" ><i class="icon-plus"></i>&nbsp;Remark</span>
                </div>
                <div class="pull-left span4 msg-hidden" style="display: none">
                    <a class="btn yellow span12 pull-left" ><span id="msg"></span></a>
                </div>
                <div class="pull-right span3">
                    <button type="button" class="btn green span12 grandTotal" style="text-align: left">{{ entity.netTotal }}</button>
                </div>
                <div class="pull-right span2">
                    <a class="btn blue span12 pull-right" style="text-align: right" ><i class="icon-money"></i>&nbsp;<strong>Grand Total</strong>&nbsp;=&nbsp;</a>
                </div>

            </div>

            {{ form_start(form) }}
            {{ form_row(form._token) }}
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span8">
                       <div class="row-fluid">
                        <div class="span12">
                            {{ form_widget(form.remark) }}
                            {{ form_errors(form.remark) }}
                        </div>
                    </div>
                </div>
                <div class="span4 payment-info">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span class="label">Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discount) }}</span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                {{ form_widget(form.medicineVendor) }}
                                {{ form_errors(form.medicineVendor) }}
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                {{ form_widget(form.memo) }}
                                {{ form_errors(form.memo) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                {{ form_widget(form.receiveDate) }}
                                {{ form_errors(form.receiveDate) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(form.transactionMethod) }}
                                    {{ form_errors(form.transactionMethod) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div id="cartMethod" class="bankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountBank) }}
                                        {{ form_errors(form.accountBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div id="bkashMethod" class="mobileBankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountMobileBank) }}
                                        {{ form_errors(form.accountMobileBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span class="label">Payment TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}
                                        </span>
                                </label>
                                <div class="controls">
                                    {{ form_errors(form.payment) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span class="label" id="balance">Due TK.</span> <span class="pull-right sales-right dueAmount" style="text-align: left; width: 110px"  id="" >{{ entity.due }}</span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>

                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box grey">
                <input type="hidden" class="dueAmount" name="due" id="due" value="{{ entity.due }}">
                <input type="hidden" name="purchaseId" id="purchaseId" value="{{ entity.id }}">
                <input type="hidden" name="paymentTotal" id="paymentTotal" value="{{ entity.netTotal }}">
                <div class="pull-right">
                    <button type="button" class="btn blue span12 confirmSubmit" id="receiveBtn"><i class="icon-save"></i> Payment</button>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}

{% block cssBlock %}
{% stylesheets filter='cssrewrite'
    '@DmsBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@MedicineBundle/Resources/public/js/purchase.js'
    '@MedicineBundle/Resources/public/js/editable.js'
    '@MedicineBundle/Resources/public/js/approveProcess.js'
    '@MedicineBundle/Resources/public/js/datetimepicker_css.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    $('#appstore_bundle_dmspurchase_medicineStock').focus();
{% endblock %}

