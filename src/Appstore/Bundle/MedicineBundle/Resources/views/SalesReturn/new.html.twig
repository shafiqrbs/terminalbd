{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Sales Return # {{ entity.invoice }}
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('medicine_sales_return') }}">Sales Return</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Manage Sales Return Details</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i> {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END purchase_order HEADER-->
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Sales Return Details</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('medicine_sales_return') }}"><i class="icon-th-list"></i> Medicine Return</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                            <div class="row-fluid">
                                <div class="span4">
                                    <h4>About:</h4>
                                    <ul class="unstyled">
                                        {% if entity.customer is not empty %}<li><strong>Customer #:</strong>&nbsp;{{ entity.customer.name }}</li>{% endif %}
                                        {% if entity.customer is not empty %}<li><strong>Mobile #:</strong>&nbsp;{{ entity.customer.mobile }}</li>{% endif %}
                                        {% if entity.customer is not empty %}<li><strong>Address #:</strong>&nbsp;{{ entity.customer.address }}</li>{% endif %}
                                        {% if entity.customer is not empty and entity.customer.location is not empty   %}<li><strong>Location #:</strong>&nbsp;{{ entity.customer.location.name }}, {{ entity.customer.location.parent.name }}</li>{% endif %}
                                        <li><strong>Created:</strong>&nbsp;{{ entity.created|date('d-m-Y') }}</li>
                                    </ul>
                                </div>
                                <div class="span4 invoice-payment">
                                    <h4>Payment Details:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Total BDT:</strong>&nbsp;{{ entity.netTotal|number_format() }}</li>
                                        <li><strong>Payment BDT:</strong>&nbsp;{{ entity.received|number_format() }}</li>
                                        {% if entity.discount %}<li><strong>Discount BDT:</strong>&nbsp;{{ entity.discount|number_format() }}</li>{% endif %}
                                        {% if entity.due %}<li><strong>Due BDT:</strong>&nbsp;{{ entity.due|number_format() }}</li>{% endif %}
                                        <li><strong>Payment status:</strong>&nbsp;{{  entity.paymentStatus|capitalize }}</li>
                                        <li><strong>Customer Outstanding:&nbsp;{{  balance|number_format(2) }}</strong></li>
                                    </ul>
                                </div>
                                <div class="span4">
                                    <h4>Payment Method:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Process:</strong>&nbsp;{{ entity.process }}</li>
                                        <li><strong>Payment Method:</strong>&nbsp;{{ entity.transactionMethod.name }}</li>
                                        {% if entity.accountMobileBank is not empty %}<li><strong>Received Mobile:</strong>&nbsp;{{ entity.accountMobileBank.name }}</li>{% endif %}
                                        {% if entity.paymentMobile is not empty %}<li><strong>Mobile/Transaction:</strong>&nbsp;{{ entity.paymentMobile }}/{{ entity.transactionId }}</li>{% endif %}
                                        {% if entity.accountBank is not empty %}<li><strong>Received Bank:</strong>&nbsp;{{ entity.accountBank.name }}</li>{% endif %}
                                        {% if entity.paymentCard is not empty %}<li><strong>Payment Card/No:</strong>&nbsp;{{ entity.paymentCard.name }}/{{ entity.cardNo }}</li>{% endif %}
                                        {% if entity.bank is not empty %}<li><strong>Bank:</strong>&nbsp;{{ entity.bank.name  }}</li>{% endif %}
                                        <li><strong>Sales By:</strong>&nbsp;{% if entity.salesBy is defined and entity.salesBy is not empty %}{{ entity.createdBy }}{% endif %}</li>
                                        <li><strong>Confirmed By:</strong>&nbsp;{% if entity.approvedBy is defined and entity.approvedBy is not empty %}{{ entity.approvedBy }}{% endif %}</li>
                                    </ul>
                                </div>
                            </div>
                            {% include('flash-message.html.twig')  %}
                            <form action="{{ path('medicine_sales_return_create') }}" method="post" name="purchaseReturn" id="purchaseReturn">
                            <div class="row-fluid box green">
                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                    <thead class="flip-content ">
                                    <tr class="head-blue">
                                        <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i> Barcode</th>
                                        <th class="numeric">Name</th>
                                        <th class="numeric">Price</th>
                                        <th class="numeric">Quantity</th>
                                        <th class="numeric">Sub-total</th>
                                        <th class="numeric" >Return Qnt</th>
                                        <th class="numeric" >Return price</th>
                                        <th class="numeric" >Return subTotal</th>
                                        <th class="numeric" >Adjustment</th>
                                    </tr>
                                    </thead>
                                    <tbody id="">
                                    {% if entity.medicineSalesItems is not empty %}
                                        {% for item in entity.medicineSalesItems %}
                                            {% if item.medicineSalesReturns is empty %}
                                                <tr>
                                                    <td class="span1">{{ loop.index }}.</td>
                                                    <td class="">{{ item.medicineStock.name }}</td>
                                                    <td class="">{{ item.salesPrice }}</td>
                                                    <td class="">{{ item.quantity }}</td>
                                                    <td class="">{{ item.subTotal|number_format }}</td>
                                                    <td class="" >
                                                        <input type="hidden" name="salesItem[]" value="{{ item.id }}" >
                                                        <input type="number" class="span10 numeric returnQuantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"   id="quantity-{{ item.id }}" name="quantity[]" value="" placeholder="{{ item.quantity }}"></td>
                                                    <td class="span2" ><input type="number" class="span10 numeric returnPrice" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.salesPrice }}"  id="price-{{ item.id }}" name="price[]" value="{{ item.salesPrice }}" placeholder="{{ item.salesPrice }}"></td>
                                                    <td>
                                                        <span class="itemSubtotal" id="subTotal-{{ item.id }}">0</span>
                                                    </td>
                                                    <td><input type="checkbox" name="isAdjustment[{{ item.id }}]" id="isAdjustment-{{ item.id }}" value="1"></td>
                                                </tr>
                                             {% else %}
                                                    <tr>
                                                        <td  class="">{{ loop.index }}. {{ item.getMedicinePurchaseItem.barcode }}</td>
                                                        <td class="">{{ item.medicineStock.name }}</td>
                                                        <td class="">{{ item.salesPrice }}</td>
                                                        <td class="">{{ item.quantity }}</td>
                                                        <td class="">{{ item.subTotal|number_format }}</td>
                                                        <td class="" ></td>
                                                        <td class="" ></td>
                                                        <td></td>
                                                    </tr>
                                             {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="4"><strong class="pull-right">Sub-Total</strong></td>
                                        <td><strong>{{ entity.netTotal }}</strong></td>
                                        <td colspan="2"><strong class="pull-right">Return Sub-Total</strong></td>
                                        <td>
                                            <strong class="returnGrandTotal"></strong>
                                            <input type="hidden" class="returnSubTotal"  id="returnTotal" value="0">
                                        </td>
                                        <td></td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="reset" id=""  class="btn yellow"><i class="icon-save"></i>&nbsp;Reset</button>
                                    <button type="button" id="submitBtn"  class="btn green"><i class="icon-save"></i>&nbsp;Save</button>
                                </div>
                            </div>
                            </form>
                        </div>
                    <div class="portlet-body form">
                        <div class="clearfix">&nbsp;</div>
                        {{ form_start(salesItem) }}
                        {{ form_row(salesItem._token) }}
                        <div class="row-fluid particular-info" style="padding-left:15px!important; margin-left: -10px!important;" >
                            <div class="{% if entity.medicineConfig.purchaseItem == 1 %}span5{% else %}span7{% endif %}">
                                {{ form_widget(salesItem.stockName) }}
                                {{ form_errors(salesItem.stockName) }}
                            </div>
                            {% if entity.medicineConfig.purchaseItem == 1 %}
                            <div class="span2">
                                {{ form_widget(salesItem.purchaseItem) }}
                                {{ form_errors(salesItem.purchaseItem) }}
                            </div>
                            {% endif %}
                            <div class="span5">
                                <div class="input-append">
                                    <div class="input-group">
                                        {{ form_widget(salesItem.salesPrice) }}
                                        {{ form_errors(salesItem.salesPrice) }}
                                        {{ form_widget(salesItem.quantity) }}
                                        {{ form_errors(salesItem.quantity) }}
                                        {{ form_widget(salesItem.itemPercent) }}
                                        <button type="submit" class="btn blue" id="addTemporaryItem"> <span class="fa fa-shopping-cart"></span> Add</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(salesItem) }}
                        <div class="clearfix">&nbsp;</div>

                        <div class="row-fluid">
                            <div class="span12" id="particular-table">
                                <table class="table table-bordered table-striped table-condensed table-fixed">
                                    <thead>
                                    <tr>
                                        {#<th class="span1">&nbsp;&nbsp;<i class="icon-list"></i> Barcode</th>#}
                                        <th class="span3">Name</th>
                                        <th class="span1">Rack</th>
                                        <th class="span1">PP</th>
                                        <th class="span1">MRP</th>
                                        <th class="span1">Quantity</th>
                                        <th class="span1">Discount</th>
                                        <th class="span1">Sub-total</th>
                                        <th class="span1"><i class="icon-trash"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody id="invoiceParticulars">
                                    {% if user.medicineSalesTemporary is not empty %}
                                        {% for item in user.medicineSalesTemporary %}
                                            <tr id="remove-{{ item.id }}">
                                                {#<td  class="span1">{% if item.medicinePurchaseItem is not empty %}{{ item.medicinePurchaseItem.barcode }}{% endif %}</td>#}
                                                <td class="span5">{{ item.medicineStock.name }}</td>
                                                <td class="span1">{% if item.medicineStock.rackNo is not empty %}{{ item.medicineStock.rackNo.name }}{% endif %}</td>
                                                <td class="span1">{{ item.purchasePrice }}</td>
                                                <td class="span1">
                                                    <input type="hidden" name="salesItem[]" value="{{ item.id }}" >
                                                    <input type="number" class=" numeric td-inline-input salesPrice" data-id="{{ item.id }}" autocomplete = "off"  id="salesPrice-{{ item.id }}" name="salesPrice" value="{{ item.salesPrice }}" >
                                                </td>
                                                <td class="span1">
                                                    <input type="number" class=" numeric td-inline-input quantity" data-id="{{ item.id }}" autocomplete = "off" min="1" max="{{ item.quantity }}"  id="quantity-{{ item.id }}" name="quantity[]" value="{{ item.quantity }}" placeholder="{{ item.quantity }}"> {% if item.medicineStock.unit is not empty %}<span>{{ item.medicineStock.unit.name }}</span>{% endif %}
                                                </td>
                                                <td class="span1">
                                                    <select class="td-inline-input itemPercent" id="itemPercent-{{ item.id }}" name="itemPercent-{{ item.id }}">
                                                        <option value="0">Disc(%)</option>
                                                        {% for per in discountPercentLists %}
                                                            <option {% if item.itemPercent is defined and item.itemPercent == per %} selected="selected" {% endif %} value="per">{{ per }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </td>
                                                <th class="itemSubtotal" id="subTotal-{{ item.id }}">{{ item.subTotal|number_format }}</th>
                                                <td class="">
                                                    <div class="btn-group">
                                                    <a data-id="{{ item.id }}" title="" data-url="{{ path('medicine_sales_temporary_item_update') }}" href="javascript:" class="btn blue mini itemUpdate" ><i class="icon-save"></i></a>
                                                    <a id="{{ item.id }}"  data-url="{{ path('medicine_sales_temporary_item_delete',{'id': item.id }) }}" href="javascript:" class="btn red mini temporaryDelete" ><i class="icon-trash"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="8" class="span12" style="border: 1px double #000"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" class="span8"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                                        <td class=""><strong id="subTotal">{{ result.subTotal|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" class="span8"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                        <td class=""><strong class="discount"></strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" class="span8"><span class="pull-right"><strong>Grand-Total TK.</strong> =</span></td>
                                        <td class=""><strong id="grandTotal">{{ result.subTotal|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" class="span8"><span class="pull-right"><strong>Profit TK.</strong> =</span></td>
                                        <td class=""><strong id="profit">{{ (result.subTotal - result.purchaseSubTotal)|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="row-fluid">
                            <div class="span8">&nbsp;</div>
                            <div class="span4 payment-info">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">
                                                <span class="label" >Discount Type</span>
                                                <span class="pull-right sales-right">
                                                    {{ form_widget(form.discountType) }}
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Discount TK.</span>
                                                <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span>
                                            </label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.transactionMethod) }}
                                                {{ form_errors(form.transactionMethod) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div id="cartMethod" class="bankHide">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.cardNo) }}
                                                    {{ form_errors(form.cardNo) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.paymentCard) }}
                                                    {{ form_errors(form.paymentCard) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.accountBank) }}
                                                    {{ form_errors(form.accountBank) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                </div>
                                <div id="bkashMethod" class="mobileBankHide">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.paymentMobile) }}
                                                    {{ form_errors(form.paymentMobile) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.transactionId) }}
                                                    {{ form_errors(form.transactionId) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.accountMobileBank) }}
                                                    {{ form_errors(form.accountMobileBank) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <input type="text" style="margin-left: 0!important;" id="mobile" name="mobile"  class="span10 m-wrap select2TemporaryCustomer" value=""  autocomplete="off" placeholder="Customer mobile no">
                                        <button class="pull-right btn btn-large blue  addTemporaryCustomer"><i class="icon-user"></i></button>
                                    </div>
                                </div>
                                <div class="row-fluid customer" id="">
                                    <div class="span12 input-append-border">
                                        <div class="row-fluid">
                                            <div class="input-icon left input-height">
                                                <i class="icon-user"></i>
                                                <input type="text" id="customerName" name="customerName" class="m-wrap span12 customer-input" autocomplete="off" placeholder="Customer name" value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12 input-append-border">
                                        <div class="row-fluid">
                                            <div class="input-icon left input-height">
                                                <i class="icon-phone"></i>
                                                <input type="text" id="customerMobile" name="customerMobile" class="m-wrap span12 mobile customer-input" autocomplete="off" placeholder="Customer mobile no" value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12 input-append-border">
                                        <div class="row-fluid">
                                            <textarea id="customerAddress" name="customerAddress" class="m-wrap span12 customer-input" rows="2" placeholder="Enter customer address"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid ">
                                    <div class="span12 input-append-border">
                                        <div class="row-fluid">
                                            {{ form_widget(form.salesBy) }}
                                            {{ form_errors(form.salesBy) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label">Receivable TK.</span> <span class="pull-right sales-right">{{ form_widget(form.received) }}</span></label>
                                            <div class="controls">
                                                {{ form_errors(form.received) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label" id="balance">Due TK.</span> <span class="pull-right sales-right dueAmount" style="text-align: left; width: 110px"  id="" >{{ entity.due }}</span></label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <select name="process" id="process" class="span12 m-wrap">
                                                <option value="save">Save & Continue</option>
                                                <option value="print">Save & Print</option>
                                                <option value="hold">Hold</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>

                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="form-actions portlet box grey">
                            <div class="row-fluid">
                                <div class="span8"></div>
                                <div class="span4">
                                    <div class="pull-right">
                                        {{ form_widget(form.due) }}
                                        {{ form_widget(form.discount) }}
                                        <input type="hidden" id="salesNetTotal" name="salesNetTotal" value="{{ result.subTotal }}">
                                        <input type="hidden" id="salesSubTotal" name="salesSubTotal" value="{{ result.subTotal }}">
                                        <button type="button" class="btn red span12 confirmTemporarySubmit" id="receiveBtn"><i class="icon-save"></i> Save Process</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>

    </div>
