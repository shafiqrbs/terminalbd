{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Purchase Requisition # {{ entity.grn }}
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('pro_purchaserequisition') }}">Purchase Requisition</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Add/Edit purchase</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END purchase_order HEADER-->
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Purchase Information</div>

                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('purchase') }}"><i class="icon-th-list"></i>&nbsp;Purchase Requsition</a>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            <div class="row-fluid">
                                <div class="span4">
                                    <h4>Branch Information:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Branch Name #:</strong>{{ entity.branch.name }}/{{ entity.branch.branchCode }}</li>
                                        <li><strong>Branch In Charge:</strong> {{ entity.branch.branchManager.profile.name }}</li>
                                        <li><strong>Mobile</strong> {{ entity.branch.mobile }}</li>
                                        <li><strong>Address:</strong> {{ entity.branch.address|raw }}</li>
                                    </ul>
                                </div>
                                <div class="span4">
                                    <h4>About:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Ref No #:</strong>{{ entity.memo }}</li>
                                        <li><strong>Item/Qnt:</strong> {{ entity.totalItem }}/{{ entity.totalQnt }}</li>
                                        <li><strong>Created:</strong> {{ entity.created|date('d-m-Y') }}</li>
                                        <li><strong>Approved Date:</strong> {{ entity.updated|date('d-m-Y') }}</li>
                                    </ul>
                                </div>
                                <div class="span4 invoice-payment">
                                    <h4>Payment Details:</h4>
                                    <ul class="unstyled">
                                        <li><strong>Total BDT:</strong> {{ entity.totalAmount|number_format() }}</li>
                                        <li><strong>Created By:</strong> {% if entity.createdBy is defined and entity.createdBy is not empty %}{{ entity.createdBy.userNameDesignation }}{% endif %}</li>
                                        <li><strong>Checked By:</strong> {% if entity.checkedBy is defined and entity.checkedBy is not empty %}{{ entity.checkedBy.userNameDesignation }}{% endif %}</li>
                                        <li><strong>Approved By:</strong> {% if entity.approvedBy is defined and entity.approvedBy is not empty %}{{ entity.approvedBy.userNameDesignation }}{% endif %}</li>

                                    </ul>
                                </div>
                                <div class="span3 image-preview"></div>
                            </div>
                            {% include('flash-message.html.twig')  %}

                            <div class="form-actions portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Purchase Requisition Item List</div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid box green">

                                <table class="table table-bordered table-striped table-condensed flip-content ">

                                    <thead class="flip-content ">
                                    <tr class="head-green">
                                        <th class="numeric" ><i class="icon-th-list"></i></th>
                                        <th class="numeric" >Item</th>
                                        <th class="numeric" >Product Name</th>
                                        <th class="numeric" >Qnt</th>
                                        <th class="numeric" >Purchase price</th>
                                        <th class="numeric" >Sub total</th>
                                        <th class="numeric" ></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for purchaseItem in entity.purchaseItems %}

                                        <tr>
                                            <td class="numeric" >{{ loop.index }}.</td>
                                            <td class="numeric" >{{ purchaseItem.item.name }}</td>
                                            <td class="numeric" >{{ purchaseItem.name }}</td>
                                            <td class="numeric" >{{ purchaseItem.quantity }}</td>
                                            <td class="numeric" >{{ purchaseItem.purchasePrice }}</td>
                                            <td class="numeric" >{{ purchaseItem.purchasePrice * purchaseItem.quantity }}</td>
                                            <td class=" numeric" >
                                             <span class="pull-left">
                                                {% if entity.approve != 'approved' %}
                                                    <a title="Are you sure went to delete ?" href="javascript:" rel="{{ path('inventory_purchaseitem_delete', { 'id': purchaseItem.id }) }}" id="{{  purchaseItem.id }}"  class="btn red mini purchaseItemDelete" ><i class="icon-trash"></i></a>
                                                {% endif %}
                                             </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>

                                </table>


                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box grey">
                                <div class="pull-right" id="action-{{ entity.id }}">
                                    {% if entity.approve != 'approved' %}
                                        <a href="{{ path('pro_purchaserequisition_edit', { 'id': entity.id }) }}" class="btn green" ><i class="icon-edit"></i></a>
                                    {% endif %}
                                    {% if ((app.user.granted("ROLE_DOMAIN")  and entity.approve == 'in-progress'))  %}
                                        <a class="btn purple approve"  data-id="{{ entity.id }}" data-title="{{ entity.id }}" data-url="{{ path('pro_purchaserequisition_approve', { 'id': entity.id,'approve':'reject'  }) }}" ><i class="icon-refresh"></i>&nbsp;Reject</a>
                                        <a class="btn yellow approve approved-{{ entity.id }}" data-id="{{ entity.id }}" data-title="{{ entity.id }}" data-url="{{ path('pro_purchaserequisition_approve', { 'id': entity.id,'approve':'checked' }) }}"><i class="icon-ok"></i>&nbsp;Checking</a>
                                    {% elseif ((app.user.granted("ROLE_DOMAIN")  and entity.approve == 'checked'))  %}
                                        <a class="btn purple approve"  data-id="{{ entity.id }}" data-title="{{ entity.id }}" data-url="{{ path('pro_purchaserequisition_approve', { 'id': entity.id,'approve':'reject'  }) }}" ><i class="icon-refresh"></i>&nbsp;Reject</a>
                                        <a class="btn blue approve approved-{{ entity.id }}" data-id="{{ entity.id }}" data-title="{{ entity.id }}" data-url="{{ path('pro_purchaserequisition_approve', { 'id': entity.id,'approve':'approved' }) }}"><i class="icon-ok"></i>&nbsp;Approve</a>
                                    {% elseif entity.approve == 'approved'  %}
                                        <span  class="btn green"><i class="icon-ok"></i>&nbsp;Approved</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/approveProcess.js'
    '@InventoryBundle/Resources/public/js/puschase.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    ApproveProcess();
    InventoryPurchasePage();
{% endblock %}

