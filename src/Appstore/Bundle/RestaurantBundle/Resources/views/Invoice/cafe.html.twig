{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->

        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Sales System</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('restaurant_invoice') }}"><i class="icon-th-list"></i> Sales</a>
                                <a class="btn red" href="{{ path('restaurant_invoice_new') }}"><i class="icon-plus-sign"></i> Add Invoice</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                               <div class="span8">
                                   <table id="product" class="table table-bordered table-striped table-condensed" cellspacing="0" width="100%">
                                        <thead>
                                        <tr class="head-grey">
                                            <th class="" >Name </th>
                                            <th class="numeric" >Price</th>
                                            <th class="" ></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for item in pagination %}
                                            <tr>
                                                <td class="numeric span6" >{{ item.particularCode }} - {{ item.name }}</td>
                                                <td class="numeric span1" >{{ item.price }}</td>
                                                <td class="">
                                                    <div class="input-group input-append">
                                                    <span class="input-group-btn">
                                                        <button type="button" class="btn yellow btn-number" data-type="minus" data-field="quantity" data-id="{{ item.id }}"  data-text="{{ item.id }}" data-title="{{ item.price }}">
                                                             <i class="icon-minus"></i>
                                                        </button>
                                                    </span>
                                                        <input type="text" readonly="readonly" name="quantity" id="quantity-{{ item.id }}" class="form-control m-wrap  span4 input-number" value="{{ item.quantity }}" min="1" max="100" >
                                                        <span class="input-group-btn">
                                                          <button type="button" class="btn green btn-number" data-type="plus" data-field="quantity" data-id="{{ item.id }}"   data-title="{{ item.price }}">
                                                           <i class="icon-plus"></i>
                                                          </button>
                                                    </span>
                                                        <input type="hidden" id="price-{{ item.id }}" value="{{ item.price }}" name="">
                                                        <button type="button" class="btn red addCart" id=""  data-id="{{ item.id }}"  data-url="{{ path('restaurant_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-shopping-cart"></i></button>
                                                    </div>


                                                </td>
                                            </tr>

                                        {% endfor %}

                                        </tbody>
                                    </table>

                                </div>
                                <div class="span4">

                                    <div class="clearfix"></div>
                                    <div class="row-fluid">
                                        <div class="span12 payment-info">
                                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                                <thead class="flip-content ">
                                                <tr class="head-blue">
                                                    <th class="numeric" ><i class="icon-list"></i></th>
                                                    <th class="numeric" >Product Code</th>
                                                    <th class="numeric" >Price</th>
                                                    <th class="numeric" >Qnt</th>
                                                    <th class="numeric" >Total</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody id="invoiceParticulars">
                                                {% set quantity = 0 %}
                                                {% set salesPrice = 0 %}
                                                {% for item in entity.invoiceParticulars %}
                                                    <tr id="remove-{{ item.id }}">
                                                        <td class="numeric" >{{ loop.index }}</td>
                                                        <td class="numeric" >{{ item.particular.particularCode }}</td>
                                                        <td class="numeric" >{{ item.salesPrice }}</td>
                                                        <td class="numeric" >
                                                            {{ item.quantity }}
                                            {#                <a class="editable" data-name="Quantity" href="#"  data-url="{{ path('inventory_salesmanual_item_inline_update',{'salesItem':item.id}) }}" data-type="text" data-pk="{{ item.id }}" data-original-title="Enter sales quantity">{{ item.quantity }}</a>
                                            #}            </td>
                                                        <td>= {{ item.subTotal }}</td>
                                                        <td><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('restaurant_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini particularDelete" ><i class="icon-trash"></i></a></td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Sub-Total Tk.</span> <span class="pull-right sales-right subTotal">{{ entity.subTotal }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>VAT/TAX Tk.</span> <span class="pull-right sales-right">{{ entity.vat }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="input-append span12">
                                                    <input type="text" style="margin-left: 0!important;" id="customerMobile" name="mobile"  class="span10 select2Customer" value="{{ entity.mobile }}"  autocomplete="off" placeholder="Customer mobile">
                                                    <div class="btn-group span2">
                                                        <a href="javascript:" class="pull-right btn blue  addCustomer span12"><i class="icon-user"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer">
                                                <div class="span12 input-append-border">
                                                    <div class="row-fluid">
                                                        <div class="input-icon left input-height">
                                                            <i class="icon-phone"></i>
                                                            {{ form_widget(form.customer.mobile) }}
                                                            {{ form_errors(form.customer.mobile) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer" id="">
                                                <div class="span12 input-append-border">
                                                    <div class="row-fluid">
                                                        <div class="input-icon left input-height">
                                                            <i class="icon-user"></i>
                                                            {{ form_widget(form.customer.name) }}
                                                            {{ form_errors(form.customer.name) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer">
                                                <div class="span12 input-append-border">
                                                    {{ form_widget(form.customer.location) }}
                                                    {{ form_errors(form.customer.location) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Discount TK.</span> <span class="pull-right sales-right">{% if entity.restaurantConfig.discountType == 'percentage' %}(%){% endif %}{{ form_widget(form.discount) }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>

                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}</span></label>
                                                        <div class="controls">
                                                            {{ form_errors(form.payment) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span id="balance">Due TK.</span> <span class="pull-right sales-right due" style="text-align: left; width: 110px"  id="dueable" >{{ entity.due }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.transactionMethod) }}
                                                            {{ form_errors(form.transactionMethod) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div id="cartMethod" class="bankHide">
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.cardNo) }}
                                                                {{ form_errors(form.cardNo) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.paymentCard) }}
                                                                {{ form_errors(form.paymentCard) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.accountBank) }}
                                                                {{ form_errors(form.accountBank) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                            </div>
                                            <div id="bkashMethod" class="mobileBankHide">
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.accountMobileBank) }}
                                                                {{ form_errors(form.accountMobileBank) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.paymentMobile) }}
                                                                {{ form_errors(form.paymentMobile) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.transactionId) }}
                                                                {{ form_errors(form.transactionId) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span4">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.slipNo) }}
                                                            {{ form_errors(form.slipNo) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span8">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.tokenNo) }}
                                                            {{ form_errors(form.tokenNo) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12 input-append-border">
                                                    {{ form_widget(form.salesBy) }}
                                                    {{ form_errors(form.salesBy) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box grey">
                                <div class="pull-left span9"></div>
                                <div class="pull-right span3">
                                    <input type="hidden" id="patient" name="patient" value="{% if entity.customer is not empty %}{{ entity.customer.id }}{% endif %}">
                                    <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                    <input type="hidden" name="netTotal" class="" id="netTotal" value="{{ entity.total }}">
                                    <input type="hidden" name="due" class="" id="due" value="{{ entity.due }}">
                                    <div class="controls">
                                        <div class="input-append span7">
                                            <div class="btn-group pull-center">
                                                <button type="button" class="btn red spa12 " {% if entity.tokenNo is empty %} disabled="disabled" {% endif %} id="receiveBtn" data-url="{{ path('restaurant_invoice_pos',{'invoice':entity.invoice}) }}"><i class="icon-print"></i> Payment Print</button>
                                  {#              <button type="button" class="btn green spa12" {% if entity.tokenNo is empty %} disabled="disabled" {% endif %}  id="kitchenBtn" data-url="{{ path('restaurant_invoice_kitchen',{'invoice':entity.invoice}) }}" ><i class="icon-print"></i> Kitchen Print</button>
                                  #}          </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div id="cabinInvalid" style="display: none">This token already booked for another customer.</div>
    <style>
        .disabled{
            opacity: 0.5;
        }
        #payment-info{
            padding:15px;
            background-color:#E5E7E7;
            border:1px solid #B7B9B9;
        }
        .customer{
            display: none;
        }
        table.dataTable tbody th, table.dataTable tbody td {
            padding: 2px 10px;
        }


    </style>
{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@HospitalBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/invoice.js'
    '@RestaurantBundle/Resources/public/js/posprint.js'
    '@RestaurantBundle/Resources/public/js/editable.js'
    '@RestaurantBundle/Resources/public/js/datetimepicker_css.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'

    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();




    var table = $('#product').DataTable( {
        scrollY:        '50vh',
        scrollCollapse: true,
        paging:         false,
        bInfo : false,
        orderable: false,
        aoColumnDefs: [
        {
            bSortable: false,
            aTargets: [ -1 ]
        }
        ]
    });


    $(document).on('change', '#appstore_bundle_restaurant_invoice_tokenNo', function(e) {

    var url ="{{ path('restaurant_invoice_token_check') }}";
    var invoice = $('#invoiceId').val();
    var tokenNo = $('#appstore_bundle_restaurant_invoice_tokenNo').val();
    if(tokenNo == ''){
    return false;
    }
    $.post( url,{ invoice:invoice , tokenNo:tokenNo } )
    .done(function( data ) {
    if(data == 'invalid'){
    $("#appstore_bundle_restaurant_invoice_tokenNo").select2().select2("val","");
    $('#cabinInvalid').notifyModal({
    duration : 5000,
    placement : 'center',
    overlay : true,
    type : 'notify',
    icon : false,
    });

    }else{

    $("#receiveBtn").attr("disabled", false);
    $("#kitchenBtn").attr("disabled", false);
    }
    });

    });

    $("input:text:visible:first").focus();
    $('input[name=particular]').focus();

    $('.inputs').keydown(function (e) {
    if (e.which === 13) {
    var index = $('.inputs').index(this) + 1;
    $('.inputs').eq(index).focus();
    }
    });
    $('.input2').keydown(function (e) {
    if (e.which === 13) {
    var index = $('.input2').index(this) + 1;
    $('.input2').eq(index).focus();
    }
    });
    $( ".payment" ).val('');
    $( ".payment" ).attr( "placeholder", "{{ entity.payment }}" );


{% endblock %}
