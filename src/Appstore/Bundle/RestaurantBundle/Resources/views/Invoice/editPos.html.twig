{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Sales System</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('restaurant_invoice') }}"><i class="icon-th-list"></i> Sales</a>
                                <a class="btn red" href="{{ path('restaurant_invoice_new') }}"><i class="icon-plus-sign"></i> Add Invoice</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="clearfix">&nbsp;</div>
                        {{ form_start(itemForm) }}
                        {{ form_row(itemForm._token) }}
                        <div class="row-fluid particular-info" style="padding-left: 15px; margin-left: -10px" >
                            <div class="row-fluid">
                                <div class="span8">
                                    {{ form_widget(itemForm.particular) }}
                                </div>

                                <div class="span4">
                                    <div class="input-append span11" style="margin-bottom:0!important">
                                        <input type="hidden" id="particularId" name="particularId" value="">
                                        <div class="input-append span12" style="margin-bottom:0!important">
                                            <div class="input-group">
                                                <input type="text" class="m-wrap span4" readonly="readonly" placeholder="Price" id="price" name="price" value="" maxlength="8">
                                                <span class="input-group-btn">
                                               <button type="button" class="btn yellow btn-number" data-type="minus" data-field="quantity"><span class="fa fa-minus"></span></button>
                                            </span>
                                                <input type="number" class="m-wrap span3 form-control input-number" style="text-align: center" id="quantity" name="quantity" value="1" min="1" max="100">
                                                <span class="input-group-btn">
                                                  <button type="button" class="btn green btn-number"  data-type="plus" data-field="quantity"><span class="fa fa-plus"></span></button>
                                                </span>
                                                <button type="button" class="btn red" id="addParticular" data-url="{{ path('restaurant_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-shopping-cart"></i> Add</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(itemForm) }}
                        <div class="clearfix">&nbsp;</div>
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="row-fluid" style="background:#ffffff!important;">
                            <div class="span8" id="particular-table" >
                                <table id="invoiceParticular" class="table table-bordered table-striped table-condensed" style="width:100%!important">

                                    <thead class="flip-content ">
                                    <tr class="head-blue">
                                        <th>S/N</th>
                                        <th class="span5" >Code & Product Name</th>
                                        <th class="" >Price</th>
                                        <th class="" >Quantity</th>
                                        <th class="" >Sub-Total</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody id="invoiceParticulars">
                                    {% set quantity = 0 %}
                                    {% set salesPrice = 0 %}
                                    {% for item in entity.invoiceParticulars %}
                                        <tr id="remove-{{ item.id }}">
                                            <td class="" >{{ loop.index }}.</td>
                                            <td class="" >{{ item.particular.particularCode }} - {{ item.particular.name }}</td>
                                            <td class="" >{{ item.salesPrice }}</td>
                                            <td class="" >
                                                <div class="input-append span12" style="margin-bottom:0!important">
                                                    <div class="input-group">
                                                <span class="input-group-btn">
                                                   <a href="javascript:" class="btn yellow btn-number" data-type="minus" data-id="{{ item.id }}"  data-text="{{ item.id }}" data-field="quantity">
                                                            <span class="fa fa-minus"></span>
                                                   </a><input type="text" disabled="disabled" style="text-align:center; width:80px; height: 34px !important;" class="m-wrap span5 form-control btn-qnt-particular" id="quantity-{{ item.id }}" name="quantity-{{ item.id }}" value="{{ item.quantity }}" min="1" max="100">
                                                  <a href="javascript:" class="btn green btn-number"  data-type="plus" data-id="{{ item.id }}"  data-text="{{ item.id }}" data-field="quantity">
                                                          <span class="fa fa-plus"></span>
                                                  </a>
                                                  <a href="javascript:" class="btn blue addCart" data-title="{{ item.salesPrice }}"  data-text="{{ item.id }}"  id="{{ item.id }}"  data-id="{{ item.particular.id }}" data-url="{{ path('restaurant_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-save"></i></a>
                                                </span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td id="subTotal-{{ item.id }}">= {{ item.subTotal }}</td>
                                            <td><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('restaurant_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red particularDelete" ><i class="icon-trash"></i></a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="6" class="span12" style="border: 1px double #000"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Sub-Total TK.</strong> =</span></td>
                                        <td class="span2"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                        <td class="span2"><strong class="discount">{{ entity.discount|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Vat TK.</strong> =</span></td>
                                        <td class="span2"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="span9"><span class="pull-right"><strong>Grand Total TK.</strong> =</span></td>
                                        <td class="span2"><strong class="netTotal">{{ entity.total|number_format }}</strong></td>
                                        <td class="span1"></td>
                                    </tr>
                                    </tfoot>

                                </table>
                                <div class="clearfix">&nbsp;</div>
                            </div>
                            <div class="span4 payment-info">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">
                                                <span class="label-custom" >Slip No</span>
                                                <span class="pull-right sales-right">
                               {{ form_widget(form.slipNo) }}
                            </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">
                                                <span class="label-custom" >Table/Token No</span>
                                                <span class="pull-right sales-right">
                               {{ form_widget(form.tokenNo) }}
                            </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            {{ form_widget(form.salesBy) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">
                                                <span class="label-custom" >Discount Type</span>
                                                <span class="pull-right sales-right">
                                {{ form_widget(form.discountType) }}
                            </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" style="height: 50px; line-height: 40px!important;background: yellowgreen" for="firstName"><span class="label-custom" >Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" style="height: 50px; line-height: 40px!important;background:#ff9007" for="firstName"><span class="label-custom" >Discount Coupon</span> <span class="pull-right sales-right">{{ form_widget(form.discountCoupon) }}</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label"  for="firstName"><span class="label-custom" >Vat TK.</span>
                                                <span class="pull-right sales-right"><input type="text" id="vat" name="vat" readonly="readonly"  class="m-wrap span12 vat" value="{{ entity.vat }}" ></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName"><span class="label-custom" id="balance">Due TK.</span> <span class="pull-right sales-right due" style="text-align: left; width: 110px"  id="dueable" >{{ entity.due }}</span></label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" style="height: 50px; line-height: 40px!important;background: red" for="firstName"><span class="label-custom" >Receivable TK.</span>
                                                <span class="pull-right sales-right">
                                                    {{ form_widget(form.payment) }}
                                                    {{ form_errors(form.payment) }}
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.transactionMethod) }}
                                                {{ form_errors(form.transactionMethod) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div id="cartMethod" class="bankHide">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.cardNo) }}
                                                    {{ form_errors(form.cardNo) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.paymentCard) }}
                                                    {{ form_errors(form.paymentCard) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.accountBank) }}
                                                    {{ form_errors(form.accountBank) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                </div>
                                <div id="bkashMethod" class="mobileBankHide">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.accountMobileBank) }}
                                                    {{ form_errors(form.accountMobileBank) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.paymentMobile) }}
                                                    {{ form_errors(form.paymentMobile) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.transactionId) }}
                                                    {{ form_errors(form.transactionId) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="control-group">
                                        <div class="span12">
                                            <input type="text" style="margin-left: 0!important;" id="customerMobile" name="customerMobile"  class="span10 select2Customer" value="{{ entity.mobile }}"  autocomplete="off" placeholder="Customer mobile">
                                            <div class="btn-group span2">
                                                <a href="javascript:" class="pull-right btn blue btn-large  addCustomer span12"><i class="icon-user"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    <i class="icon-phone"></i>
                                                    <input type="text" id="new_customer_mobile" name="new_customer_mobile" class="m-wrap span12 mobile" autocomplete="off" placeholder="Mobile no" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    <i class="icon-user"></i>
                                                    <input type="text" id="new_customer_name" name="new_customer_name" class="m-wrap span12" autocomplete="off" placeholder="Customer name" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="input-prepend" style="width: 89%!important;">
                                                <button class="btn purple" type="button" onclick="javascript:NewCssCal('deliveryDateTime','ddMMyyyy','arrow',true,'12','','future')"><i class="icon-calendar"></i></button>
                                                <input type="text" disabled="disabled"   id="deliveryDateTime" name="deliveryDateTime" required="required" class="m-wrap span12 tooltips input2" value="" data-trigger="hover" placeholder="Delivery date" data-original-title="Delivery date" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                            {{ form_widget(form.process) }}
                                            {{ form_errors(form.process) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="form-actions portlet box green">
                            <div class="row-fluid" style="padding-top: 13px; padding-bottom: 13px;">
                            <div class="span8" style="padding-left: 15px">
                                {{ form_widget(form.remark) }}
                                {{ form_errors(form.remark) }}
                            </div>
                            <div class="span4">
                                <div class="input-append span12">
                                    <div class="btn-group span11">
                                        <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                        <input type="hidden" name="netTotal" class="" id="netTotal" value="{{ entity.total }}">
                                        <input type="hidden" name="due" class="" id="due" value="{{ entity.due }}">
                                        <input type="hidden" name="buttonType" id="buttonType" value="">
                                        <button type="submit" class="btn red big span12 receiveBtn" {% if entity.total is empty %} disabled="disabled" {% endif %} id="saveButton"><i class="icon-save"></i> SAVE</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        input.m-wrap , select.m-wrap , textarea.m-wrap{
            border: 2px solid #1e7b85!important;
        }
        select.m-wrap{
            height: 30px!important;
        }
        .label-custom{
            background: #1e7b85;
            padding: 0px;
            width: 180px;
            display: inline-block;
            text-align: right;
            padding-right: 15px;
            color: #ffffff;
        }
        .sales-right input[class*="span"].payment, .sales-right input[class*="span"].discount, .sales-right input[class*="span"].discountCoupon{
            border: 3px solid #1e7b85!important;
            height: 41px!important;
            font-size: 20px;
        }

        .sales-right input[class*="span"].discountCoupon{
            font-size: 15px;
        }
        input[class*="span"].remark{
            height: 54px!important;
        }
        .address{
            background: #ffffff!important;
        }
        .select2-container{
            border: 2px solid #1e7b85!important;
        }
        .bankHide , .mobileBankHide , .customer{
            display: none;
        }
        .dialogModal{
            z-index: 9999!important;
        }
        #calBorder, .select2-drop , .select2-drop-mask{
            z-index: 99999!important;
        }
        input[class*="span"].m-wrap:focus,select[class*="span"].m-wrap:focus, textarea[class*="span"].m-wrap:focus {
            border: 3px solid rgb(234, 2, 3)!important;
            color: red;
        }
    </style>
{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@RestaurantBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/invoice.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'
    '@HospitalBundle/Resources/public/js/datetimepicker_css.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}
