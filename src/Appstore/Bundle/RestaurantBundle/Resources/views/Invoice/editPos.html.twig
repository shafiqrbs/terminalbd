{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span8">
                <!--BEGIN TABS-->
                <div class="tabbable tabbable-custom tabs-left">
                    <!-- Only required for left/right tabs -->
                    <ul data-match-height="tab-content" class="nav nav-tabs tabs-left">
                        <li class="active"><a href="#all-product" data-toggle="tab" class="saveButton" aria-expanded="false">All Products</a></li>
                        {% for category in categories %}
                        <li class=""><a href="#{{ category.slug }}" data-toggle="tab" class="saveButton" aria-expanded="false">{{ category.name }}</a></li>
                        {% endfor %}
                    </ul>
                    <div data-match-height="tab-content"  class="tab-content">
                        <div class="tab-pane tab-height active" id="all-product">
                            <div class="form-actions portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-th-list"></i>ALL PRODUCTS</div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="form-control">
                                       <input type="text" id="search" name="search" class="span12 m-wrap m-wrap-bg" value="" autocomplete="off" placeholder="Search product">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <ul class="unstyled">
                                        {% if categories is not empty %}
                                            {% for category in categories %}
                                                {% for product in category.particulars %}
                                                    <li class="product-content addProduct" data-action="{{ path('restaurant_invoice_product_add',{'invoice':entity.id,'product':product.id}) }}">
                                                        <div class="btn blue title">
                                                            {{ product.name|upper }}
                                                            <br/>
                                                            <span class="inline-price">BDT- {{ product.price }} TK</span>
                                                        </div>
                                                    </li>
                                                {% endfor %}
                                            {% endfor %}
                                        {% endif %}

                                    </ul>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                        </div>
                        {% for category in categories %}
                        <div class="tab-pane tab-height" id="{{ category.slug }}">
                            <div class="form-actions portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-th-list"></i>{{ category.name }}</div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="form-control">
                                        <input type="text" id="search" name="search" class="span12 m-wrap m-wrap-bg" value="" autocomplete="off" placeholder="Search product">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <ul class="unstyled">
                                        {% if category.particulars is not empty %}
                                            {% for product in category.particulars %}
                                            <li class="product-content">
                                                <div class="btn green title" >
                                                    {{ product.name|upper }}
                                                    <br/>
                                                    <span class="inline-price">BDT- {{ product.price }} TK</span>
                                                </div>
                                            </li>
                                            {% endfor %}
                                        {% endif %}

                                    </ul>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
                <!--END TABS-->
            </div>
            <div class="span4">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>MANAGE CART</div>
                    </div>

                    <div class="portlet-body">
                        <table class="table table-bordered">

                            <thead class="flip-content ">
                            <tr class="head-blue">
                                <th class="numeric">Product</th>
                                <th class="numeric">Price</th>
                                <th class="numeric">Qnt</th>
                                <th class="numeric">Total</th>
                                <th class="numeric"></th>
                            </tr>
                            </thead>
                            <tbody id="invoiceParticulars">
                            {% if entity.invoiceParticulars is not empty  %}
                                {% for item in entity.invoiceParticulars %}
                                    <tr id="remove-{{ item.id }}">
                                    <td class="numeric">{{ loop.index }}. {{ item.particular.name }}</td>
                                    <td class="numeric">{{ item.salesprice }}</td>
                                    <td class="">
                                        <input type="number" class="form-control inline-m-wrap updateProduct" id="quantity" name="quantity" value="{{ item.quantity }}" data-action="{{ path('restaurant_invoice_product_update',{'invoice':entity.id,'product':item.particular.id}) }}" min="1" max="100">
                                    </td>
                                    <td class="numeric">{{ item.subTotal }}</td>
                                    <td class="numeric">
                                        <a id="11" data-id="{{ item.id }}" data-url="{{ path('restaurant_invoice_particular_delete',{'invoice':entity.id,'id':item.id}) }}" href="javascript:" class="btn red mini particularDelete"><i class="icon-trash"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th colspan="3">Total</th>
                                <th>{{ entity.subTotal|number_format(2) }}</th>
                                <td></td>
                            </tr>
                            </tfoot>
                        </table>
                        <br/>
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="payment-info">
                            <div class="row-fluid">
                                <div class="span12" style="padding: 7px">
                                    <ul class="unstyled">
                                        {% for table in tables  %}
                                        <li style="width: 33%; float: left">
                                            <input type="checkbox" value="{{ table.name }}" name="tableNos[]"> {{ table.name }}
                                        </li>
                                        {% endfor %}

                                    </ul>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        {{ form_widget(form.salesBy) }}
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">
                                            <span class="label-custom" >Discount Type</span>
                                            <span class="pull-right sales-right">
                                {{ form_widget(form.discountType) }}
                            </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"><span class="label-custom" >Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discountCalculation) }}</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label"  for="firstName"><span class="label-custom" >Discount Coupon</span> <span class="pull-right sales-right">{{ form_widget(form.discountCoupon) }}</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label"  for="firstName"><span class="label-custom" >Vat TK.</span>
                                            <span class="pull-right sales-right"><input type="text" id="vat" name="vat" readonly="readonly"  class="m-wrap span12 vat" value="{{ entity.vat }}" ></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"><span class="label-custom" id="balance">Due TK.</span> <span class="pull-right sales-right due" style="text-align: left; width: 110px"  id="dueable" >{{ entity.due }}</span></label>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" style="height: 50px; line-height: 40px!important;background: red" for="firstName"><span class="label-custom" >Receivable TK.</span>
                                            <span class="pull-right sales-right">
                                                    {{ form_widget(form.payment) }}
                                                {{ form_errors(form.payment) }}
                                                </span>
                                        </label>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <div class="controls">
                                            {{ form_widget(form.transactionMethod) }}
                                            {{ form_errors(form.transactionMethod) }}
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div id="cartMethod" class="bankHide">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.cardNo) }}
                                                {{ form_errors(form.cardNo) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.paymentCard) }}
                                                {{ form_errors(form.paymentCard) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.accountBank) }}
                                                {{ form_errors(form.accountBank) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                            <div id="bkashMethod" class="mobileBankHide">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.accountMobileBank) }}
                                                {{ form_errors(form.accountMobileBank) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.paymentMobile) }}
                                                {{ form_errors(form.paymentMobile) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <div class="controls">
                                                {{ form_widget(form.transactionId) }}
                                                {{ form_errors(form.transactionId) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label"  for="firstName"><span class="label-custom" >Process</span> <span class="pull-right sales-right">{{ form_widget(form.process) }}</span></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                        <div class="form-actions portlet box grey">
                            <div class="pull-center">
                                <button type="submit" class="btn yellow"><i class="icon-print"></i> POS PRINT</button>
                                <button type="submit" class="btn green"><i class="icon-save"></i> SAVE</button>
                                <button type="submit" class="btn purple"><i class="icon-print"></i> KITCHEN PRINT</button>
                            </div>
                        </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
    <style>
        input[type="number"].inline-m-wrap{
            height: 15px;
            width: 50px;
            font-size: 12px;
            border: 1px solid green;
            padding: 3px;
            margin-bottom: 0;
        }

        input[class*="span"].m-wrap-bg{
            height: 50px!important;
            background: #ffffff;
            font-size: 30px;
        }

        input.m-wrap , select.m-wrap , textarea.m-wrap{
            border: 2px solid #1e7b85!important;
        }

        .inline-price{
            width: 100px;
            border-top: 2px #ddddff solid;
            display: inline-block;
            padding-top:5px;
            margin-top:7px;
            font-size: 12px
        }
        table.table {
            clear: both;
            margin-bottom: 0px !important;
            max-width: none !important;
            font-size: 11px;
        }

        .table th, .table td{
            padding: 0;
            margin: 0;
            padding-left: 5px;
        }
        select.m-wrap{
            height: 30px!important;
        }
        .product-content{
            width: 50%;
            margin-bottom: 15px;
            text-align: center;
            float: left;
        }
        .product-content .title{
            width: 92%!important;
        }
        .label-custom{
            background: #1e7b85;
            padding: 0px;
            width: 180px;
            display: inline-block;
            text-align: right;
            padding-right: 15px;
            color: #ffffff;
        }
        .sales-right input[class*="span"].payment, .sales-right input[class*="span"].discount, .sales-right input[class*="span"].discountCoupon{
            border: 3px solid #1e7b85!important;
            font-size: 20px;
        }
        .sales-right input[class*="span"].payment{
            border: 3px solid #1e7b85!important;
            font-size: 20px;
            height: 42px!important;
        }

        .sales-right input[class*="span"].discountCoupon{
            font-size: 15px;
        }
        input[class*="span"].remark{
            height: 54px!important;
        }
        .address{
            background: #ffffff!important;
        }
        .select2-container{
            border: 2px solid #1e7b85!important;
        }
        .bankHide , .mobileBankHide , .customer{
            display: none;
        }
        .dialogModal{
            z-index: 9999!important;
        }
        #calBorder, .select2-drop , .select2-drop-mask{
            z-index: 99999!important;
        }
        input[class*="span"].m-wrap:focus,select[class*="span"].m-wrap:focus, textarea[class*="span"].m-wrap:focus {
            border: 3px solid rgb(234, 2, 3)!important;
            color: red;
        }
    </style>
{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@RestaurantBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/invoice.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'
    '@HospitalBundle/Resources/public/js/datetimepicker_css.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}
