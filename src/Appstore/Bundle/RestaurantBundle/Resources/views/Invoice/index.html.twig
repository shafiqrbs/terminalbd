{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                   Manage  Invoice
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('restaurant_invoice') }}"> Order  Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i> {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage  Invoice</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn yellow" href="{{ path('restaurant_invoice_empty_delete') }}"><i class="icon-trash"></i> Empty Delete</a>
                       {#         <a class="btn purple" href="{{ path('restaurant_report_sales_summary') }}"><i class="icon-cart"></i> Sales Summary</a>#}
                                <a class="btn red" href="{{ path('restaurant_invoice_new') }}"><i class="icon-plus-sign"></i> Add Invoice</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <div class="row-fluid" >
                                <form class="search-form" action="" method="get" name="itemSearch">
                                    <div class="row-fluid" style="margin-bottom: 10px">
                                        <div class="span3">
                                            <div class="input-icon left">
                                                <i class="icon-user"></i>
                                                <input class="m-wrap span12 search-input" name="name" id="name" value="{% if searchForm.name is defined %}{{ searchForm.name }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.name is defined %}{{ searchForm.name }}{% else %}Order ID{% endif %}">
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <select name="process" id="process" class="m-wrap span12">
                                                <option value="" >--Process--</option>
                                                <option value="In-progress" {% if searchForm.process is defined and searchForm.process == 'In-progress' %} selected="selected" {% endif %} >In-progress</option>
                                                <option value="Done"  {% if searchForm.process is defined and searchForm.process == 'Done' %} selected="selected" {% endif %} >Done</option>
                                                <option value="Cancel"  {% if searchForm.process is defined and searchForm.process == 'Cancel' %} selected="selected" {% endif %} >Cancel</option>
                                            </select>
                                        </div>

                                        <div class="span3">
                                            <div class="input-icon left">
                                                <i class="icon-calendar"></i>
                                                <input class="m-wrap span12 search-input date-picker" name="created" id="created" value="{% if searchForm.created is defined %}{{ searchForm.created }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.created is defined %}{{ searchForm.created }}{% else %}Created Date{% endif %}" >
                                            </div>
                                        </div>

                                        <div class="span3">
                                            <div class="input-append span12">
                                                <input type="text" id="invoice" name="invoice"  class="m-wrap span10" value="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.invoice is defined %}{{ searchForm.invoice }}{% else %}Order invoice no{% endif %} ">
                                                <div class="btn-group">
                                                    <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="row-fluid">
                                       <div class="span3">

                                        </div>
                                        <div class="span3">
                                            <div class="controls">

                                            </div>
                                        </div>
                                    </div>
                                </form>
                                {#<table class="table table-bordered table-striped table-condensed flip-content ">
                                    <thead class="flip-content">
                                    <tr class="head-red">
                                        <th class="numeric" ><strong>Total Sales Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ salesTransactionOverview.total|number_format }}</strong></th>
                                        <th class="numeric" ><strong>Today Sales Receive Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ salesTransactionOverview.receive|number_format }}</strong></th>
                                        <th class="numeric" ><strong>Due Received Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ previousSalesTransactionOverview.receive|number_format }}</strong></th>
                                        <th class="numeric" ><strong>Total Received Tk.</strong></th>
                                        <th class="numeric" ><strong>{{ (previousSalesTransactionOverview.receive + salesTransactionOverview.receive)|number_format }}</strong></th>
                                    </tr>
                                    </thead>
                                </table>#}
                            </div>
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-green">
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Invoice No</th>
                                    <th class="numeric" >Slip/Table No</th>
                                    <th class="numeric" >Total</th>
                                    <th class="numeric" >Vat</th>
                                    <th class="numeric" >Discount</th>
                                    <th class="numeric" >NetTotal</th>
                                    <th class="numeric" >Payment</th>
                                    <th class="numeric" >Due</th>
                                    <th class="numeric" >Process</th>
                                    <th class="numeric" >Served By</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr id="delete-{{ entity.id }}">
                                        <td class="numeric" >{{ entity.created|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.invoice }}</td>
                                        <td class="numeric" >{{ entity.slipNo }} / {% if entity.tokenNo is not empty %}{{ entity.tokenNo.name }}{% endif %}</td>
                                        <td class="numeric" >{{ entity.subTotal }}</td>
                                        <td class="numeric" >{{ entity.vat }}</td>
                                        <td class="numeric" >{{ entity.discount }}</td>
                                        <td class="numeric" >{{ entity.total }}</td>
                                        <td class="numeric" >{{ entity.payment }}</td>
                                        <td class="numeric" >{{ entity.due }}</td>
                                        <td class="numeric" > {{ entity.process }}</td>
                                        <td class="numeric" > {{ entity.salesBy }}</td>
                                        <td class="numeric"  >
                                            <div class="btn-group" id="paymentDone-{{ entity.id }}" >
                                                {% set processIntArr = ['Created','Pending','Kitchen','Revised'] %}
                                                {% if  entity.process in processIntArr %}
                                                    <a href="{{ path('restaurant_invoice_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i> Edit </a>
                                                {% endif %}
                                                {% if entity.process == 'Kitchen' or entity.process == 'Done'  %}
                                                    <a href="javascript:" data-url="{{ path('restaurant_invoice_payment',{'id':entity.id}) }}" data-id="{{ entity.id }}" class="btn purple mini paymentReceive" ><i class="icon-money"></i> Print </a>
                                                {% endif %}
                                                <a href="{{ path('restaurant_invoice_show',{'id':entity.id}) }}"  class="btn blue mini" ><i class="icon-eye"></i> View </a>
                                                {% if ( entity.process == 'Done' and app.user.granted("ROLE_DOMAIN")) or ( entity.process == 'Done' and app.user.granted("ROLE_DOMAIN_RESTAURANT_MANAGER") and "now"|date("d-m-Y") == entity.updated|date("d-m-Y")) %}
                                                <a href="{{ path('restaurant_invoice_reverse',{'invoice':entity.invoice}) }}"  class="btn yellow mini" ><i class="icon-retweet"></i> Reverse </a>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "http://localhost.xiidea.net:9432/assets/easy-print-server.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, "script", "xiidea-epp-sdk"));

    </script>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@InventoryBundle/Resources/public/css/jquery-ui.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/invoice.js'
    '@RestaurantBundle/Resources/public/js/posprint.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}
