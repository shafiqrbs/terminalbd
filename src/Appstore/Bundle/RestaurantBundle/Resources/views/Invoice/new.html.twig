{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                 Invoice no #  <strong>{{ entity.invoice }}</strong>
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('restaurant_invoice') }}"> Invoice</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage  Invoice</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i> Invoice  Information</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn" href="{{ path('restaurant_invoice') }}"><i class="icon-th-list"></i> Sales</a>
                    <a class="btn red" href="{{ path('restaurant_invoice_new') }}"><i class="icon-plus-sign"></i> Add Invoice</a>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span12" id="particular-table">
                    <table class="table table-bordered table-striped table-condensed table-fixed">
                        <thead>
                        <tr>
                            <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i></th>
                            <th class="span1">Si/No</th>
                            <th class="span1">Code</th>
                            <th class="span3">Particular</th>
                            <th class="span2">Category</th>
                            <th class="span1">Qnt</th>
                            <th class="span2">Unit Price</th>
                            <th class="span1">Amount</th>
                            <th class="span1"><i class="icon-trash"></i></th>
                        </tr>
                        </thead>
                        <tbody id="invoiceParticulars">
                        {% for item in entity.invoiceParticulars %}
                            <tr id="remove-{{ item.id }}">
                                <td class="span1"><span class="badge badge-warning toggle badge-custom" id="{{ item.id  }}" ><span>[+]</span></span></td>
                                <td  class="span1">{{ loop.index }}</td>
                                <td  class="span1">{{ item.particular.particularCode }}</td>
                                <td class="span3">{{ item.particular.name }}</td>
                                <td class="span2">{{ item.particular.category.name }}</td>
                                <td class="span1">{% if item.particular.service.hasQuantity == 1 %}{{ item.quantity }}{% endif %}</td>
                                <td class="span2">{{ item.salesPrice }}</td>
                                <td class="span1">{{ item.subTotal|number_format }}</td>
                                <td class="span1"><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('hms_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini particularDelete" ><i class="icon-trash"></i></a></td>
                            </tr>
                            {% if item.particular.service.id == 1 %}
                                <tr id="show-{{ item.id }}" class="showing-overview">
                                    <td colspan="8">
                                        <table class="table table-bordered table-striped table-condensed ">
                                            <tr class="">
                                                <th class="span3" >Instruction</th>
                                                <td class="span9" >{{ item.particular.instruction }}</td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="9" class="span12" style="border: 1px double #000"></td>
                        </tr>
                        <tr>
                            <td colspan="7" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                            <td class="span2"><strong class="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        <tr>
                            <td colspan="7" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                            <td class="span2"><strong class="vat">{{ entity.vat|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        <tr>
                            <td colspan="7" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                            <td class="span2"><strong class="discountAmount">{{ entity.discount|number_format }}</strong></td>
                            <td class="span1">
                                <a href="javascript:" id=""  data-trigger="hover" data-original-title="Delete discount amount" data-url="{{ path('restaurant_invoice_discount_delete',{'id':entity.id}) }}" class=" btn red mini removeDiscount tooltips"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="7" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                            <td class="span2"><strong class="paymentAmount">{{ entity.payment|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix">&nbsp;</div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box purple">
                <div class="pull-left span2">
                    <a class="btn black span12 pull-left" style="text-align: left" > Add Particular</a>
                </div>
                <div class="pull-left span5 msg-hidden" style="display: none">
                    <a class="btn yellow span12 pull-left" ><span id="msg"></span></a>
                </div>
                <div class="pull-right span3">
                    <button type="button" class="btn green span10 netTotal" style="text-align: left">{{ entity.total }}</button>
                    <a href="javascript:" id="show"  data-trigger="hover" data-original-title="All payment history" class=" btn purple receivePayment tooltips"><i class="icon-money"></i></a>

                </div>
                <div class="pull-right span2">
                    <a class="btn blue span12 pull-right" style="text-align: right" ><i class="icon-money"></i>&nbsp;<strong>Grand Total</strong>&nbsp;=&nbsp;</a>
                </div>

            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span9">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid particular-info" >
                                <div class="span7">
                                    <select id="particular" name="particular" class="span12 select2">
                                        <option value="">Search Product</option>
                                        {{ particularService|raw }}
                                    </select>
                                </div>
                                <div class="span2">
                                    <div class="input-append span12" style="margin-bottom:0!important">
                                        <div class="input-group">
                                                <span class="input-group-btn">
                                                   <button type="button" class="btn yellow btn-number" data-type="minus" data-field="quantity">
                                                            <span class="fa fa-minus"></span>
                                                   </button>
                                                </span>
                                            <input type="number" class="m-wrap span5 form-control input-number" id="quantity" name="quantity" value="1" min="1" max="100">
                                            <span class="input-group-btn">
                                                  <button type="button" class="btn green btn-number"  data-type="plus" data-field="quantity">
                                                          <span class="fa fa-plus"></span>
                                                  </button>
                                                </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="input-append span11" style="margin-bottom:0!important">
                                        <input type="hidden" id="particularId" name="particularId" value="">
                                        <input type="text" class="m-wrap span8" id="price" name="price" value="" maxlength="8">
                                        <div class="btn-group">
                                            <button type="button" class="btn blue" id="addParticular" data-url="{{ path('restaurant_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-plus"></i> Add</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span3 payment-info">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(form.tokenNo) }}
                                    {{ form_errors(form.tokenNo) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span>Discount TK.</span> <span class="pull-right sales-right">{{ form_widget(form.discount) }}</span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span>Receive TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}
                                        </span>
                                </label>
                                <div class="controls">
                                {{ form_errors(form.payment) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span id="balance">Due TK.</span> <span class="pull-right sales-right due" style="text-align: left; width: 110px"  id="" >{{ entity.due }}</span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(form.transactionMethod) }}
                                    {{ form_errors(form.transactionMethod) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div id="cartMethod" class="bankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.cardNo) }}
                                        {{ form_errors(form.cardNo) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.paymentCard) }}
                                        {{ form_errors(form.paymentCard) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountBank) }}
                                        {{ form_errors(form.accountBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div id="bkashMethod" class="mobileBankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountMobileBank) }}
                                        {{ form_errors(form.accountMobileBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.paymentMobile) }}
                                        {{ form_errors(form.paymentMobile) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.transactionId) }}
                                        {{ form_errors(form.transactionId) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>

                    <div class="clearfix"></div>

                </div>
            </div>

            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box grey">
                <div class="pull-left span9"></div>
                <div class="pull-right span3">
                    <input type="hidden" id="patient" name="patient" value="{% if entity.customer is not empty %}{{ entity.customer.id }}{% endif %}">
                    <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                    <input type="hidden" name="netTotal" class="" id="netTotal" value="{{ entity.total }}">
                    <input type="hidden" name="due" class="" id="due" value="{{ entity.due }}">
                    <div class="controls">
                        <div class="input-append span7">
                            <div class="btn-group">
                                <button type="button" class="btn blue spa12" {% if entity.tokenNo is empty %} disabled="disabled" {% endif %} id="receiveBtn" data-url="{{ path('restaurant_invoice_pos',{'invoice':entity.invoice}) }}"><i class="icon-print"></i> Payment Print</button>
                                <button type="button" class="btn green spa12" {% if entity.tokenNo is empty %} disabled="disabled" {% endif %}  id="kitchenBtn" data-url="{{ path('restaurant_invoice_kitchen',{'invoice':entity.invoice}) }}" ><i class="icon-print"></i> Kitchen Print</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    <div id="cabinInvalid" style="display: none">This token already booked for another customer.</div>
    <script>

        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "http://localhost.xiidea.net:9432/assets/easy-print-server.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, "script", "xiidea-epp-sdk"));

    </script>
{% endblock %}

{% block cssBlock %}
{% stylesheets filter='cssrewrite'
    '@HospitalBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/invoice.js'
    '@RestaurantBundle/Resources/public/js/posprint.js'
    '@RestaurantBundle/Resources/public/js/editable.js'
    '@RestaurantBundle/Resources/public/js/datetimepicker_css.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'

    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();

    $(document).on('change', '#appstore_bundle_restaurant_invoice_tokenNo', function(e) {

        var url ="{{ path('restaurant_invoice_token_check') }}";
        var invoice = $('#invoiceId').val();
        var tokenNo = $('#appstore_bundle_restaurant_invoice_tokenNo').val();
        if(tokenNo == ''){
            return false;
        }
        $.post( url,{ invoice:invoice , tokenNo:tokenNo } )
        .done(function( data ) {
        if(data == 'invalid'){
            $("#appstore_bundle_restaurant_invoice_tokenNo").select2().select2("val","");
            $('#cabinInvalid').notifyModal({
            duration : 5000,
            placement : 'center',
            overlay : true,
            type : 'notify',
            icon : false,
            });

        }else{

            $("#receiveBtn").attr("disabled", false);
            $("#kitchenBtn").attr("disabled", false);
        }
        });

    });

    $("input:text:visible:first").focus();
    $('input[name=particular]').focus();

    $('.inputs').keydown(function (e) {
        if (e.which === 13) {
        var index = $('.inputs').index(this) + 1;
        $('.inputs').eq(index).focus();
        }
    });
    $('.input2').keydown(function (e) {
        if (e.which === 13) {
        var index = $('.input2').index(this) + 1;
        $('.input2').eq(index).focus();
        }
    });
    $( ".payment" ).val('');
    $( ".payment" ).attr( "placeholder", "{{ entity.payment }}" );


{% endblock %}
