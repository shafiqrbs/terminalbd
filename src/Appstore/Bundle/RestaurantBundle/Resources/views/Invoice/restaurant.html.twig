{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Sales System</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="{{ path('restaurant_invoice') }}"><i class="icon-th-list"></i> Sales</a>
                                <a class="btn red" href="{{ path('restaurant_invoice_new') }}"><i class="icon-plus-sign"></i> Add Invoice</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body form">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}

                            <div class="clearfix">&nbsp;</div>
                            {{ form_start(particularForm) }}
                            {{ form_row(particularForm._token) }}
                            <div class="row-fluid">
                                <div class="row-fluid particular-info" >
                                    <div class="span9" style="padding-left:15px">
                                        {{ form_widget(particularForm.particular) }}
                                        {{ form_errors(particularForm.particular) }}
                                    </div>
                                    <div class="span3">
                                        <div class="input-append span12" style="margin-bottom:0!important">
                                            <div class="input-group">
                                                <span class="input-group-btn">
                                                   <a href="javascript:" class="btn yellow btn-large btn-qnt-particular" data-type="minus" data-field="quantity">
                                                            <span class="fa fa-minus"></span>
                                                   </a>
                                                <input type="number" style="text-align:center; width:80px" class="m-wrap span5 form-control btn-qnt-particular" id="quantity" name="quantity" value="1" min="1" max="100">
                                                <a href="javascript:" class="btn btn-large green btn-qnt-particular"  data-type="plus" data-field="quantity">
                                                    <span class="fa fa-plus"></span>
                                                </a>
                                                <a href="javascript:" class="btn btn-large blue" id="addParticular" data-url="{{ path('restaurant_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-shopping-cart"></i> <strong>Add</strong></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            {{ form_end(particularForm) }}
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">

                                <div class="span12">
                                    {{ form_start(form) }}
                                    {{ form_row(form._token) }}
                                    <div class="clearfix"></div>
                                    <div class="row-fluid">
                                        <div class="span12 payment-info" id="sidebar">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><h4><strong>Add Product Information</strong></h4></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <table id="invoiceParticular" class="table table-bordered table-striped table-condensed" style="width:100%!important">

                                                <thead class="flip-content ">
                                                <tr class="head-blue">
                                                    <th class="" >Code & Product Name</th>
                                                    <th class="" >Price</th>
                                                    <th class="" >Quantity</th>
                                                    <th class="" >Sub-Total</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody id="invoiceParticulars">
                                                {% set quantity = 0 %}
                                                {% set salesPrice = 0 %}
                                                {% for item in entity.invoiceParticulars %}
                                                    <tr id="remove-{{ item.id }}">
                                                        <td class="" >{{ loop.index }}. {{ item.particular.particularCode }} - {{ item.particular.name }}</td>
                                                        <td class="" >{{ item.salesPrice }}</td>
                                                        <td class="" >
                                                            <div class="input-append span12" style="margin-bottom:0!important">
                                                                <div class="input-group">
                                                <span class="input-group-btn">
                                                   <a href="javascript:" class="btn yellow btn-number" data-type="minus" data-id="{{ item.id }}"  data-text="{{ item.id }}" data-field="quantity">
                                                            <span class="fa fa-minus"></span>
                                                   </a><input type="text" disabled="disabled" style="text-align:center; width:80px; height: 34px !important;" class="m-wrap span5 form-control btn-qnt-particular" id="quantity-{{ item.id }}" name="quantity-{{ item.id }}" value="{{ item.quantity }}" min="1" max="100">
                                                  <a href="javascript:" class="btn green btn-number"  data-type="plus" data-id="{{ item.id }}"  data-text="{{ item.id }}" data-field="quantity">
                                                          <span class="fa fa-plus"></span>
                                                  </a>
                                                  <a href="javascript:" class="btn blue addCart" data-title="{{ item.salesPrice }}"  data-text="{{ item.id }}"  id="{{ item.id }}"  data-id="{{ item.particular.id }}" data-url="{{ path('restaurant_invoice_particular_add',{'invoice':entity.id}) }}" ><i class="icon-shopping-cart"></i> <strong>Add</strong></a>
                                                </span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td id="subTotal-{{ item.id }}">= {{ item.subTotal }}</td>
                                                        <td><a id="{{ item.id }}" data-id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('restaurant_invoice_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red particularDelete" ><i class="icon-trash"></i></a></td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><h4><strong>Payment Information: {{ entity.invoice }}</strong></h4></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Sub-Total Tk.</span> <span class="pull-right sales-right subTotal">{{ entity.subTotal }}</span></label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row-fluid">
                                                <div class="span4">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.slipNo) }}
                                                            {{ form_errors(form.slipNo) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span8">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.tokenNo) }}
                                                            {{ form_errors(form.tokenNo) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.salesBy) }}
                                                            {{ form_errors(form.salesBy) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="control-group">
                                                <div class="span12">
                                                    <input type="text" style="margin-left: 0!important;" id="customerMobile" name="customerMobile"  class="span10 select2Customer" value="{{ entity.mobile }}"  autocomplete="off" placeholder="Customer mobile">
                                                    <div class="btn-group span2">
                                                        <a href="javascript:" class="pull-right btn blue btn-large  addCustomer span12"><i class="icon-user"></i></a>
                                                    </div>
                                                </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            <div class="input-icon left">
                                                                <i class="icon-phone"></i>
                                                                <input type="text" id="new_customer_mobile" name="new_customer_mobile" class="m-wrap span12 mobile" autocomplete="off" placeholder="Mobile no" value="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid customer">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            <div class="input-icon left">
                                                                <i class="icon-user"></i>
                                                                <input type="text" id="new_customer_name" name="new_customer_name" class="m-wrap span12" autocomplete="off" placeholder="Customer name" value="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            <div class="input-icon left">
                                                                <i id="percentage" class="fa fa-percent"></i>
                                                                {{ form_widget(form.discount) }}
                                                                {{ form_errors(form.discount) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            {{ form_widget(form.transactionMethod) }}
                                                            {{ form_errors(form.transactionMethod) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div id="cartMethod" class="bankHide">
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.cardNo) }}
                                                                {{ form_errors(form.cardNo) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.paymentCard) }}
                                                                {{ form_errors(form.paymentCard) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.accountBank) }}
                                                                {{ form_errors(form.accountBank) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                            </div>
                                            <div id="bkashMethod" class="mobileBankHide">
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.accountMobileBank) }}
                                                                {{ form_errors(form.accountMobileBank) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.paymentMobile) }}
                                                                {{ form_errors(form.paymentMobile) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span12">
                                                        <div class="control-group">
                                                            <div class="controls">
                                                                {{ form_widget(form.transactionId) }}
                                                                {{ form_errors(form.transactionId) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            {% if entity.restaurantConfig.vatEnable == 1 %}
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>VAT Tk.</span> <span class="pull-right sales-right">{{ entity.vat }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Discount Tk.</span> <span class="pull-right sales-right totalDiscount">{{ entity.totalDiscount }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <label class="control-label" for="firstName"><span>Net-Total Tk.</span> <span class="pull-right sales-right netTotal">{{ entity.total }}</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="control-group">
                                                        <div class="pull-center">
                                                            <input type="hidden" id="patient" name="patient" value="{% if entity.customer is not empty %}{{ entity.customer.id }}{% endif %}">
                                                            <input type="hidden" name="invoiceId" id="invoiceId" value="{{ entity.id }}" >
                                                            <input type="hidden" name="netTotal" class="" id="netTotal" value="{{ entity.total }}">
                                                            <input type="hidden" name="due" class="" id="due" value="{{ entity.due }}">
                                                            <div class="controls">
                                                                <div class="pull-center">
                                                                    <div class="input-append span12" style="margin-bottom:0!important">
                                                                        <div class="input-group">
                                                <span class="input-group-btn">
                                                                    <button type="button" class="btn yellow"  data-url="{{ path('restaurant_invoice_save',{'invoice':entity.invoice}) }}"   id="saveBtn"><i class="icon-save"></i> SAVE</button>
                                                                    <button type="button" class="btn blue"  id="receiveBtn" data-url="{{ path('restaurant_invoice_pos',{'invoice':entity.invoice}) }}"><i class="icon-print"></i> PRINT</button>
                                                </span>
                                                                        </div>
                                                                    </div>
                                                                        </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box">
                                <div class="pull-center span12"><h4><strong>Today Sales</strong></h4></div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <table id="salesList" class="table table-bordered table-striped table-condensed">

                                <thead class="flip-content ">
                                <tr class="head-green">
                                    <th class="numeric" >Invoice</th>
                                    <th class="numeric" >Slip/Table</th>
                                    <th class="numeric" >Total</th>
                                    <th class="numeric" >Vat</th>
                                    <th class="numeric" >Discount</th>
                                    <th class="numeric" >NetTotal</th>
                                    <th class="numeric" >Payment</th>
                                    <th class="numeric" >Due</th>
                                    <th class="numeric" >Process</th>
                                    <th class="numeric" >Served By</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody id="salesLoad" >
                                {% for entity in salesLists %}
                                    <tr id="delete-{{ entity.id }}">
                                        <td class="numeric" >{{ entity.invoice }}</td>
                                        <td class="numeric" >{{ entity.slipNo }} / {% if entity.tokenNo is not empty %}{{ entity.tokenNo.name }}{% endif %}</td>
                                        <td class="numeric" >{{ entity.subTotal }}</td>
                                        <td class="numeric" >{{ entity.vat }}</td>
                                        <td class="numeric" >{{ entity.totalDiscount }}</td>
                                        <td class="numeric" >{{ entity.total }}</td>
                                        <td class="numeric" >{{ entity.payment }}</td>
                                        <td class="numeric" >{{ entity.due }}</td>
                                        <td class="numeric" > {{ entity.process }}</td>
                                        <td class="numeric" > {{ entity.salesBy }}</td>
                                        <td class="numeric" >
                                            <div class="btn-group" id="paymentDone-{{ entity.id }}">
                                                {% set processIntArr = ['Created','Pending','Kitchen'] %}
                                                {% if  entity.process in processIntArr %}
                                                    <a href="{{ path('restaurant_invoice_edit', { 'id': entity.id }) }}" class="btn purple" ><i class="icon-edit"></i> Update</a>
                                                {% endif %}
                                                {% if entity.process == 'Kitchen' %}
                                                    <a href="javascript:" data-url="{{ path('restaurant_invoice_payment',{'id':entity.id}) }}" data-id="{{ entity.id }}"  class="btn blue paymentReceive" ><i class="icon-print"></i> Print</a>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="clearfix">&nbsp;</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "http://localhost.xiidea.net:9432/assets/easy-print-server.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, "script", "xiidea-epp-sdk"));
    </script>
{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@RestaurantBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/invoice.js'
    '@RestaurantBundle/Resources/public/js/posprint.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    {# $("#productLoad").load('{{ path('restaurant_load_product',{'invoice':entity.id}) }}');
        $("#salesLoad").load('{{ path('restaurant_today_sales') }}');#}
{% endblock %}
