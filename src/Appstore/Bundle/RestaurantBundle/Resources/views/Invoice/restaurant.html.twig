    {{ parent() }}
    EditableInit();
    $("#productLoad").load('{{ path('restaurant_load_product',{'invoice':entity.id}) }}');
    $("#salesLoad").load('{{ path('restaurant_today_sales') }}', function () {

   {# function loadingAjax(productLoad){
