{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Product Name #  <strong>{{ entity.name }}</strong>
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="{{ path('restaurant_product') }}">Product Measurement & Cost</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Product: {{ entity.name }}</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn red" href="{{ path('restaurant_product') }}"><i class="icon-th-list"></i> Product Measurement & Cost</a>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid"><div class="span12" id="particular-table">
                    <table class="table table-bordered table-striped table-condensed table-fixed">
                        <thead>
                        <tr>
                            <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i></th>
                            <th class="span1">Code</th>
                            <th class="span4">Name</th>
                            <th class="span1">Receive</th>
                            <th class="span1">Sales</th>
                            <th class="span1">Qnt</th>
                            <th class="span1">Sub Total</th>
                            <th class="span1"></th>
                        </tr>
                        </thead>
                        <tbody id="invoiceParticulars">
                        {% if entity.productionElements is not empty %}
                            {% for item in entity.productionElements %}
                                <tr id="remove-{{ item.id }}">
                                    <td  class="span1">{{ loop.index }}</td>
                                    <td  class="span1">{{ item.particular.particularCode }}</td>
                                    <td class="span4">{{ item.particular.name }}</td>
                                    <td class="span1">{{ item.purchasePrice }}</td>
                                    <td class="span1">{{ item.salesPrice }}</td>
                                    <td class="span1">{{ item.quantity }}</td>
                                    <td class="span1">{{ item.purchaseSubTotal|number_format }}</td>
                                    <td class="span1"><a id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('restaurant_purchase_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a></td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="8" class="span12" style="border: 1px double #000"></td>
                        </tr>
                        <tr>
                            <td colspan="6" class="span9"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                            <td class="span2"><strong id="subTotal">{{ entity.purchasePrice|number_format }}</strong></td>
                            <td class="span1"></td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix">&nbsp;</div>
                </div></div>
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="span9">
                            <div class="row-fluid particular-info" >
                                <div class="span7">
                                    <select id="particular" name="particular" class="span12 select2">
                                        <option value="">--- Select product name ---</option>
                                       {% for particular in particulars %}
                                           <option value="{{ path('restaurant_purchase_particular_search',{'id':particular.id}) }}">{{ particular.particularCode }}-{{ particular.name }} {{ particular.unit }}</option>
                                       {% endfor %}
                                     </select>
                                </div>
                                <div class="span2">
                                    <input type="text" class="m-wrap span5" id="purchasePrice" disabled="disabled" required="required" name="purchasePrice" placeholder="Purchase price" value="" maxlength="8">
                                    <input type="text" class="m-wrap span6" id="price" disabled="disabled" required="required" name="price" placeholder="Sales price" value="" maxlength="8"></div>
                                <div class="span3">
                                    <div class="input-group input-append">
                                            <span class="input-group-btn">
                                               <button type="button" class="btn yellow btn-number" data-type="minus" data-field="quantity">
                                                        <span class="fa fa-minus"></span>
                                               </button>
                                            </span>
                                        <input type="number" class="m-wrap span5 form-control input-number" id="quantity" name="quantity" value="1" min="1" max="10000">
                                        <span class="input-group-btn">
                                              <button type="button" class="btn green btn-number"  data-type="plus" data-field="quantity">
                                                      <span class="fa fa-plus"></span>
                                              </button>
                                            </span>
                                        <input type="hidden" id="particularId" name="particularId" value="">
                                        <button type="button" class="btn blue" id="addParticular" data-url="{{ path('restaurant_production_particular_add',{'id':entity.id}) }}" >Add</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span3 payment-info">
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"><span>Over Head TK.</span>
                                            <span class="pull-right sales-right">{{ form_widget(form.overHead) }}</span>
                                        </label>
                                        <div class="controls">{{ form_errors(form.overHead) }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"><span>Packaging TK.</span>
                                            <span class="pull-right sales-right">{{ form_widget(form.packaging) }}</span>
                                        </label>
                                        <div class="controls">{{ form_errors(form.packaging) }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"><span>Utility TK.</span>
                                            <span class="pull-right sales-right">{{ form_widget(form.utility) }}</span>
                                        </label>
                                        <div class="controls">{{ form_errors(form.utility) }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"><span>Marketing TK.</span>
                                            <span class="pull-right sales-right">{{ form_widget(form.marketing) }}</span>
                                        </label>
                                        <div class="controls">{{ form_errors(form.marketing) }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box grey">
                <div class="pull-right">
                    <button type="button" class="btn blue span12 confirmSubmit" id="receiveBtn"><i class="icon-save"></i> Save</button>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>

    </div>
 <style>
     .sales-right{
         width: 110px;
     }
 </style>
{% endblock %}

{% block cssBlock %}
{% stylesheets filter='cssrewrite'
    '@RestaurantBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/purchase.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    $('input[name=particular]').focus();
{% endblock %}

