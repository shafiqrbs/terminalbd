{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                   Manage Stock
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('restaurant_stock') }}">Manage Stock</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green ">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Stock</div>
                        <div class="actions">
                            <a href="javascript:" id="show"  data-trigger="hover" data-original-title="Add accessories" class=" btn red tooltips"><i class="fa fa-angle-double-down"></i> Add Stock</a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        <div class="{{ formShow }}" id="hide">
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid" >
                                <div class="span4">
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Product Type<span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.service) }}
                                                    {{ form_errors(form.service) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Product Category<span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.category) }}
                                                    {{ form_errors(form.category) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Product<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-medkit"></i>
                                                        {{ form_widget(form.name) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid" >
                                       <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Unit<span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.unit) }}
                                                    {{ form_errors(form.unit) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="name">Purchase Price<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-money"></i>
                                                        {{ form_widget(form.purchasePrice) }}
                                                        {{ form_errors(form.purchasePrice) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="name">Sales Price<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-money"></i>
                                                        {{ form_widget(form.price) }}
                                                        {{ form_errors(form.price) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="control-group">
                                            <label class="control-label" >Feature image</label>
                                            <div class="controls">
                                                <div data-provides="fileupload" class="fileupload fileupload-new">
                                                    <div  class="fileupload-new thumbnail">
                                                        {% if(entity.webPath) %}
                                                            <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(entity.webPath).resize(250,150) }}">
                                                        {% else %}
                                                            <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                        {% endif %}
                                                    </div>
                                                    <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                    <div>
                                                    <span class="btn btn-file">
                                                        <span class="fileupload-new">Select image</span>
                                                        <span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
                                                    </span>
                                                        <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <!-- END FORM-->
                        <div class="clearfix"><br/></div>
                        <div class="portlet-body flip-scroll">
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-blue">
                                    <th class="numeric" >Code</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Receive Price</th>
                                    <th class="numeric" >Price</th>
                                    <th class="numeric" >Opening</th>
                                    <th class="numeric" >Receive Qnt</th>
                                    <th class="numeric" >Sales Qnt</th>
                                    <th class="numeric" >Stock Qnt</th>
                                    <th class="numeric" >Min. Qnt</th>
                                    <th class="numeric" >Unit</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in pagination %}
                                    {% set stockQnt = (entity.purchaseQuantity + entity.openingQuantity) - entity.salesQuantity %}

                                    <tr {% if entity.minQuantity > 0 and stockQnt <= entity.minQuantity %} class="min" {% endif %}>
                                        <td class="numeric" >{{ entity.particularCode }}</td>
                                        <td class="numeric" ><a href="{{ path('restaurant_stock_edit',{'id': entity.id })}}">{{ entity.name }}</a></td>
                                        <td class="numeric">
                                            {% if ( app.user.granted("ROLE_DOMAIN_MANAGER_ADMIN") or app.user.granted("ROLE_DOMAIN"))  %}
                                                <a  class="editable" data-name="purchasePrice" href="#"  data-url="{{ path('restaurant_stock_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change purcahse price">{{ entity.purchasePrice }}</a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric">
                                            {% if ( app.user.granted("ROLE_DOMAIN_MANAGER_ADMIN") or app.user.granted("ROLE_DOMAIN"))  %}
                                                <a  class="editable" data-name="salesPrice" href="#"  data-url="{{ path('restaurant_stock_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change sales price">{{ entity.price }}</a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric">
                                            {% if ( app.user.granted("ROLE_DOMAIN_MANAGER_ADMIN") or app.user.granted("ROLE_DOMAIN"))  %}
                                                <a  class="editable" data-name="openingQuantity" href="#"  data-url="{{ path('restaurant_stock_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change opening quantity">{{ entity.openingQuantity }}</a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >{{ entity.purchaseQuantity|number_format }}</td>
                                        <td class="numeric" >{{ entity.salesQuantity|number_format }}</td>
                                        <td class="numeric" >{{ stockQnt }}</td>
                                        <td class="numeric">
                                            {% if ( app.user.granted("ROLE_DOMAIN_MANAGER_ADMIN") or app.user.granted("ROLE_DOMAIN"))  %}
                                                <a  class="editable" data-name="minQuantity" href="#"  data-url="{{ path('restaurant_stock_inline') }}" data-type="text" data-pk="{{ entity.id }}" data-original-title="Change min Quantity">{{ entity.minQuantity }}</a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric">{% if  entity.unit is defined and  entity.unit is not empty %}{{ entity.unit.name|default('---') }}{% endif %}</td>
                                        <td class="numeric" >
                                            {% if( entity.status == 1) %}
                                                <a class="btn mini blue btn-action" href="{{ path('restaurant_stock_status', { 'id': entity.id}) }}"><i class="icon-ok"></i></a>
                                            {% else %}
                                                <a class="btn mini red btn-action" href="{{ path('restaurant_stock_status', { 'id': entity.id}) }}">x</a>
                                            {% endif %}
                                            {% if ( app.user.granted("ROLE_DOMAIN_HOSPITAL_ADMIN") or app.user.granted("ROLE_DOMAIN"))  %}
                                                <a href="{{ path('restaurant_stock_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
                                                <a title="Are you sure went to delete ?" href="{{ path('restaurant_stock_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                            {% endif %}
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                            <div class="pagination pull-center" >
                                {{ knp_pagination_render(pagination) }}
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@HospitalBundle/Resources/public/js/editable.js'
    '@HospitalBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
{% endblock %}