{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN itembrand HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="itembrand-title">
                    Service & Maintenance Invoice Details
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('serviceinvoice') }}">Service & Maintenance Invoice</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">{{ entity.product.name }}</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END itembrand HEADER-->
        <!-- BEGIN itembrand CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Service & Maintenance Invoice Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="red btn" href="{{ path('serviceinvoice') }}"><i class="icon-th-list"></i>&nbsp;Service Invoice</a>
                            </div>
                        </div>

                    </div>
                    <div class="portlet-body form">
                        <div class="row-fluid">

                            <div class="span3">
                                <h4>Vendor Informtion:</h4>
                                <ul class="unstyled">
                                    {% if entity.vendor is not empty %}<li><strong>Vendor Name #:</strong>&nbsp;{{ entity.vendor.companyName }}</li>{% endif %}
                                    {% if entity.vendor is not empty %}<li><strong>Mobile #:</strong>&nbsp;{{ entity.vendor.mobile }}</li>{% endif %}
                                    {% if entity.vendor is not empty %}<li><strong>Email #:</strong>&nbsp;{{ entity.vendor.email }}</li>{% endif %}
                                    {% if entity.vendor is not empty %}<li><strong>Address #:</strong>&nbsp;{{ entity.vendor.address }}</li>{% endif %}
                                </ul>
                            </div>

                            <div class="span3">
                                <h4>About:</h4>
                                <ul class="unstyled">
                                    {% if entity.branch is not empty %}<li><strong>Branch Name #:</strong>&nbsp;{{ entity.branch.name }}</li>{% endif %}
                                    {% if entity.branch is not empty %}<li><strong>Mobile #:</strong>&nbsp;{{ entity.branch.mobile }}</li>{% endif %}
                                    {% if entity.branch is not empty %}<li><strong>Address #:</strong>&nbsp;{{ entity.branch.address }}</li>{% endif %}
                                    {% if entity.branch is not empty and entity.branch.location is not empty   %}<li><strong>Location #:</strong>&nbsp;{{ entity.branch.location.name }}, {{ entity.branch.location.parent.name }}</li>{% endif %}
                                </ul>
                            </div>

                            <div class="span3">
                                <h4>Assign Information:</h4>
                                <ul class="unstyled">
                                    <li><strong>Name:</strong>&nbsp;{{ entity.assignBy.profile.name }}</li>
                                    <li><strong>Mobile:</strong>&nbsp;{{ entity.assignBy.profile.mobile }}</li>
                                    <li><strong>Branch:</strong>&nbsp;{{ entity.assignBy.profile.branches.name }}</li>
                                    <li><strong>Address:</strong>&nbsp;{{ entity.assignBy.profile.branches.address|raw }}</li>
                                </ul>
                            </div>
                            <div class="span3">
                                <h4>Product :</h4>
                                <ul class="unstyled">
                                    <li><strong>Product :</strong>&nbsp;{{ entity.product.name }}</li>
                                    <li><strong>Assurance :</strong>&nbsp;{{ entity.product.assuranceType }}</li>
                                    <li><strong>Expired :</strong>&nbsp;{{ entity.product.expiredDate|date('d-m-Y') }}</li>
                                    <li><strong>Receive Invoice :</strong>&nbsp;{{ entity.product.purchaseItem.purchase.grn }}</li>
                                    <li><strong>Receive Date :</strong>&nbsp;{{ entity.product.purchaseItem.purchase.receiveDate|date('d-m-Y') }}</li>
                                </ul>
                            </div>
                        </div>
                        <div class="clearfix"><br/></div>
                        <div class="form-actions portlet box blue">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>Information Details</div>
                            </div>
                        </div>
                        <div class="clearfix"><br/></div>
                        {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Urgency</label>
                                        <div class="controls">
                                            {{ form_widget(form.urgency) }}
                                            {{ form_errors(form.urgency) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Assign By</label>
                                        <div class="controls">
                                            {{ form_widget(form.assignBy) }}
                                            {{ form_errors(form.assignBy) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Assurance Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.assuranceType) }}
                                            {{ form_errors(form.assuranceType) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">

                            <div class="span12">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Description</label>
                                    <div class="controls">
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="clearfix"><br/></div>
                            <div class="form-actions portlet box red">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Vendor Provided Information</div>
                                </div>
                            </div>

                            <div class="clearfix"><br/></div>
                            <div class="row-fluid">

                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Responsible Person</label>
                                    <div class="controls">
                                        {{ form_widget(form.responsiblePerson) }}
                                        {{ form_errors(form.responsiblePerson) }}
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Responsible Mobile</label>
                                    <div class="controls">
                                        {{ form_widget(form.responsibleMobile) }}
                                        {{ form_errors(form.responsibleMobile) }}
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Service Type</label>
                                    <div class="controls">
                                        {{ form_widget(form.serviceType) }}
                                        {{ form_errors(form.serviceType) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="row-fluid">

                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Initiation Date</label>
                                    <div class="controls">
                                        {{ form_widget(form.initiationDate) }}
                                        {{ form_errors(form.initiationDate) }}
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Delivery Date</label>
                                    <div class="controls">
                                        {{ form_widget(form.resolvedDate) }}
                                        {{ form_errors(form.resolvedDate) }}
                                    </div>
                                </div>
                            </div>
                            <div class="span2">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Service Status</label>
                                    <div class="controls">
                                        {{ form_widget(form.serviceStatus) }}
                                        {{ form_errors(form.serviceStatus) }}
                                    </div>
                                </div>
                            </div>
                            <div class="span2">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Service Hour</label>
                                    <div class="controls">
                                        {{ form_widget(form.totalServiceHour) }}
                                        {{ form_errors(form.totalServiceHour) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="row-fluid">

                            <div class="span8">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Service Description</label>
                                            <div class="controls">
                                                {{ form_widget(form.serviceDescription) }}
                                                {{ form_errors(form.serviceDescription) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span4">

                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Service Cost</label>
                                            <div class="controls">
                                                {{ form_widget(form.serviceCost) }}
                                                {{ form_errors(form.serviceCost) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Accessories Cost</label>
                                            <div class="controls">
                                                {{ form_widget(form.accessoriesCost) }}
                                                {{ form_errors(form.accessoriesCost) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Total Cost</label>
                                            <div class="controls">
                                                {{ form_widget(form.totalCost) }}
                                                {{ form_errors(form.totalCost) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Process Status</label>
                                            <div class="controls">
                                                {{ form_widget(form.process) }}
                                                {{ form_errors(form.process) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        <div class="clearfix"><br/> </div>
                        <div class="form-actions portlet box yellow">
                            <div class="portlet-title"><div class="caption"><i class="icon-reorder"></i>Comments Information</div></div>
                        </div>
                        <div class="clearfix"> </div>
                        {% set paymentID = 'service-post-'~entity.invoice %}
                        {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': paymentID } %}
                        <div class="clearfix"> </div>
                        </div>

                </div>

            </div>
        </div>

    </div>
    <style>
        #fos_comment_comment_body{
           width: 99%!important;
            height:120px!important;
        }
        .editable-input{
            margin-top: 4px !important;
        }
    </style>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ServiceBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $('#fos_comment_comment_body').addClass('span12');
    $('.fos_comment_submit input[type="submit"]').addClass('btn blue');
{% endblock %}
