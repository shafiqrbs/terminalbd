{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Customer Invoice : {{ entity.invoice }}
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('inventory_salesonline') }}">Sales</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#"> Customer Base sales</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>

        <div class="clearfix">&nbsp;</div>
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Daily Sales Overview </div>

                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn  red" href="{{ path('inventory_salesonline_new') }}"><i class="icon-th-list"></i>&nbsp;Add Sales</a>
                                <a class="btn" href="{{ path('inventory_salesonline') }}"><i class="icon-th-list"></i>&nbsp;Sales</a>
                            </div>
                        </div>

                    </div>
                    <div class="portlet-body">
                        <!-- END purchase_order HEADER-->
                        <div class="row-fluid " id="purchaseItemx">
                            <div class="span4"><ul class="unstyled"><li><strong>Estimate Amount #:</strong>&nbsp; {{ todaySalesOverview[0]["subTotal"] }}</li><li><strong>Sales Amount:</strong>&nbsp; {{ todaySalesOverview[0]["total"] }}</li></ul></div>
                            <div class="span4"><ul class="unstyled"><li><strong>Due Amount:</strong> &nbsp; {{ todaySalesOverview[0]["totalDue"] }}</li><li><strong>Discount Amount:</strong>&nbsp; {{ todaySalesOverview[0]["totalDiscount"] }}</li></ul></div>
                            <div class="span4"><ul class="unstyled"><li><strong>Receive Amount:</strong> &nbsp; {{ todaySalesOverview[0]["total"]-todaySalesOverview[0]["totalDue"] }}</li><li><strong>Total Voucher:</strong>&nbsp;{{ todaySalesOverview[0]["totalVoucher"] }}</li></ul></div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="clearfix"></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="row-fluid">
                                    <div class="span12">

                                        <table class="table table-bordered table-hover">
                                            <thead class="">
                                            <tr class="head-blue">
                                                <th class="numeric" >S/N</th>
                                                <th class="numeric">Barcode</th>
                                                <th class="numeric">Product</th>
                                                <th class="numeric">HS Code</th>
                                                {% if entity.config.isAttribute == 1 %}
                                                    <th  class="numeric">Serial no</th>
                                                {% endif %}
                                                <th  class="numeric span1">Quantity</th>
                                                <th class="numeric span2">Price</th>
                                                <th>Sub-Total</th>
                                                <th>VAT(%)</th>
                                                <th>VAT</th>
                                                <th>TTI</th>
                                                <th>Total</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            <tbody id="salesItem" >
                                            {% for salesitem in entity.stockItems %}
                                                <tr id="remove-{{ salesitem.id }}">
                                                    <td class="numeric" style="width:20px!important;" > {{ loop.index }}</td>
                                                    <td  class="numeric">
                                                        {{ salesitem.purchaseItem.barcode }}
                                                    </td>
                                                    <td  class="numeric">
                                                        {{ salesitem.item.name }}- {{ salesitem.purchaseItem.name }}
                                                    </td>
                                                     <td  class="numeric">
                                                         {% if salesitem.hsCode is not empty %}{{ salesitem.hsCode.hsCode }}{% endif %}
                                                    </td>
                                                    {% if entity.config.isAttribute == 1 %}
                                                        <td class="numeric" >
                                                            {% if salesitem.purchaseItem.externalSerial is not empty %}
                                                                <select class="m-wrap inputs" name="serialNo" id="serialNo-{{ salesitem.id }}" multiple="multiple" >
                                                                    <option>--Serial no--</option>
                                                                    {% set serials = salesitem.serialNo|split(',') %}
                                                                    {% for serial in  salesitem.purchaseItem.externalSerial|split(',') %}
                                                                        <option {% if serial in serials %} selected="selected" {% endif %} value="{{ serial }}" >{{ serial }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            {% endif %}
                                                        </td>
                                                    {% endif %}
                                                    <td class=" span1" >
                                                        <input type="text" id="quantity-{{ salesitem.id }}" rel="{{ salesitem.id }}" name="quantity[]"  value="{{ salesitem.salesQuantity }}" class="quantity inputs td-inline-input" placeholder="{{ salesitem.purchaseItem.salesQuantity }}" min="1" max="{{ salesitem.purchaseItem.quantity }}">
                                                    </td>
                                                    <td>
                                                        <input class="numeric salesPrice inputs td-inline-input"  rel="{{ salesitem.id }}" id="salesPrice-{{ salesitem.id }}" type="text" name="salesPrice" value="{{ salesitem.salesPrice }}" placeholder="{{ salesitem.actualPrice }}">
                                                    </td>
                                                    <td><span id="itemSubTotal-{{ salesitem.id }}" ><strong>{{ salesitem.subTotal }}</strong></span></td>
                                                    <td>{{ salesitem.valueAddedTaxPercent }}</td>
                                                    <td><span id="itemVat-{{ salesitem.id }}" ><strong>{{ salesitem.valueAddedTax }}</strong></span></td>
                                                    <td><span id="itemTotalTaxIncidence-{{ salesitem.id }}" ><strong>{{ salesitem.totalTaxIncidence }}</strong></span></td>
                                                    <td><span id="itemTotal-{{ salesitem.id }}" ><strong>{{ salesitem.total }}</strong></span></td><td>
                                                        {% if entity.config.isAttribute == 1 and salesitem.purchaseItem.externalSerial is not empty %}
                                                            <a title="Save" id="{{ salesitem.id }}" data-url="{{ path('tally_sales_item_serial_update',{'salesItem':salesitem.id}) }}" href="javascript:" class="btn blue mini serialSave" ><i class="icon-save"></i></a>
                                                        {% endif %}
                                                        <a  id="{{ salesitem.id }}" rel="{{ path('tally_salesitem_delete',{'sales':entity.id,'salesItem':salesitem.id}) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                            <tfoot>
                                            <tr><th class="text-right" {% if entity.config.isAttribute == 1 %} colspan="7" {% else %} colspan="6" {% endif %} >Sub-Total</th><th class="subTotal">{{ entity.subTotal }}</th><th>Total </th><td>{{  entity.valueAddedTax }}</td><th><span class="vat">{{  entity.totalTaxIncidence }}</span></th><th><span class="total">{{  entity.total }}</span></th>
                                            <td></td>
                                            </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="row-fluid">
                            <div class="" id="wrongBarcode"></div>
                        </div>
                        <div class="form-actions portlet box green">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>Product Add & Search</div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="row-fluid">
                            <div class="span8">
                                <div id="search-productx" style="background:#EEF1F4;">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="row-fluid">
                                                <div class="span6">
                                                    <div class="input-prepend input-append span12">
                                                        <span class="add-on add-on-height"><i class="icon-barcode"></i></span>
                                                        <input type="text" id="barcode" name="barcode" required="required" class="m-wrap span11" placeholder="Enter product barcode" autocomplete="off">
                                                        <span class="add-on add-on-height"><i class="icon-search"></i></span>
                                                    </div>
                                                </div>
                                                <div class="span6" style="margin-left:10px; margin-top:10px ">
                                                    <input type="text" id="barcodeNo" name="barcodeNo" required="required" class="m-wrap span11"  autocomplete="off">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid"><hr/></div>
                                    <div class="row-fluid">
                                        <form class="search-form" >
                                            <input type="text" id="item" name="item" required="required"  class="m-wrap span12 select2Item " >
                                        </form>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid">
                                    <table class="table table-bordered table-striped table-condensed flip-conten" id="stockItemDetails">
                                        <thead class="flip-content ">
                                        <tr class="head-yellow">
                                            <th class="numeric" ><span class="btn black mini"><i class="icon-barcode"></i></span> Barcode</th>
                                            <th class="numeric" >GRN</th>
                                            <th class="numeric" >Remaining</th>
                                            <th class="numeric" >Ongoing</th>
                                            <th class="numeric" >Current</th>
                                            <th class="numeric" >Sales</th>
                                            {% if entity.config.isAttribute == 1 %}
                                            <th class="numeric" >Attribute</th>
                                            {% endif %}
                                            <th class="numeric" >Action</th>
                                        </tr>
                                        </thead>
                                        <tbody id="itemDetails"></tbody>
                                    </table>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="span4" id="payment-info" style="padding: 15px">
                                <div class="payment-area">
                                    <div class="row-fluid">
                                        <div class="span8"><label class="control-label">Sub-Total Tk.</label></div>
                                        <div class="span4 subTotal" id="subTotal">{{ entity.subTotal }}</div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span8"><label class="control-label">VAT/TAX Tk.</label></div>
                                        <div class="span4 vat" id="vat">{{ entity.totalTaxIncidence }}</div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span8"><label class="control-label"><strong>Total Tk.</strong></label></div>
                                        <div class="span4"><strong class="total" id="total">{{ entity.total }}</strong></div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span8"><label class="control-label">Discount Tk.</label></div>
                                        <div class="span4" id="discount"><span class="discount">{{ entity.discount }}</span> <span class="discountCalculation btn mini red" >{{ entity.discountCalculation }} {% if entity.discountType == "Percentage" %}%{%  endif %}</span></div>
                                    </div>

                                    <div class="row-fluid" id="sales-total">
                                        <div class="span8"><label class="control-label"><strong>Net-Total Tk.</strong></label></div>
                                        <div class="span4"><strong class="netTotal">{{ entity.netTotal }}</strong></div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span8"><label  id="balance" class="control-label">Due Tk.</label></div>
                                        <div class="span4 due">{{ entity.netTotal - entity.payment }}</div>
                                        <input class="due" name="due" id="due" type="hidden" value="{{ entity.netTotal - entity.payment }}">
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span4"><label class="control-label">Discount</label></div>
                                    <div class="span4"> {{ form_widget(form.discountType) }}</div>
                                    <div class="span4"> {{ form_widget(form.discountCalculation) }}</div>
                                </div>
                                <div class="row-fluid" >
                                    <div class="span6"><label class="control-label">Receive</label></div>
                                    <div class="span6"> {{ form_widget(form.payment) }}</div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6"><label class="control-label">Delivery Charge</label></div>
                                    <div class="span6">{{ form_widget(form.deliveryCharge) }}</div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        {{ form_widget(form.transactionMethod) }}
                                        {{ form_errors(form.transactionMethod) }}
                                    </div>
                                </div>
                                <div id="cartMethod" class="bankHide">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.cardNo) }}
                                            {{ form_errors(form.cardNo) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.paymentCard) }}
                                            {{ form_errors(form.paymentCard) }}
                                        </div>

                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.accountBank) }}
                                            {{ form_errors(form.accountBank) }}
                                        </div>
                                    </div>
                                </div>
                                <div id="bkashMethod" class="mobileBankHide">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.accountMobileBank) }}
                                            {{ form_errors(form.accountMobileBank) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.paymentMobile) }}
                                            {{ form_errors(form.paymentMobile) }}
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.transactionId) }}
                                            {{ form_errors(form.transactionId) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <div class="span12">
                                        {{ form_widget(form.salesBy) }}
                                        {{ form_errors(form.salesBy) }}
                                    </div>
                                </div>

                                <div class="row-fluid" style="margin-bottom:15px">
                                    <div class="span12">
                                        <input type="text" style="margin-left:0!important;width:88.2%" id="mobile" name="mobile"  class="span10 select2Customer inputs" value="{{ entity.mobile }}"  autocomplete="off" placeholder="Customer mobile">
                                        <a href="javascript:" class="pull-right btn green addCustomer inputs"><i class="icon-user"></i></a>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row-fluid customer" id="">
                                    <div class="span12 input-append-border">
                                        <div class="row-fluid">
                                            <div class="input-icon left input-height">
                                                <i class="icon-user"></i>
                                                <input type="text" id="customerName" name="customerName" class="m-wrap span12 customer-input" autocomplete="off" placeholder="Customer name" value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12">
                                        <input type="text" id="customerMobile" name="customerMobile" class="m-wrap span12 mobile customer-input" autocomplete="off" placeholder="Customer mobile no" value="">
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12">
                                        <input style="margin-left:0!important;" type="text" id="location" name="location" class="m-wrap span12 customer-input select2Location" autocomplete="off" placeholder="Customer location" value="">
                                    </div>
                                </div>
                                <div class="row-fluid customer">
                                    <div class="span12">
                                        <textarea id="customerAddress" name="customerAddress" class="m-wrap span12 customer-input" rows="2" placeholder="Enter customer address"></textarea>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        {{ form_widget(form.remark) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>

                                <div class="pull-center">
                                    <div class="input-append span12">
                                        <div class="btn-group span12">
                                            <input type="hidden" name="salesId" id="salesId" value="{{ entity.id }}">
                                            <input type="hidden" class="paymentTotal" name="paymentTotal" id="paymentTotal" value="{{ entity.netTotal }}">
                                            {% if entity.config.printer == 'printer' %}
                                                <select name="process" id="process" class="span8 m-wrap">
                                                    <option value="save">Save & Continue</option>
                                                    <option value="print">Save & Print</option>
                                                    <option {% if entity.process == 'In-progress' %} selected="selected" {% endif %} value="In-progress">In-progress</option>
                                                </select>
                                                <button type="button" id="saveType" class="btn yellow receiveBtn" name="saveType" value="save" ><i class="icon-save m-icon-white"></i>&nbsp;Process</button>

                                                <select name="process" id="process" class="span8 m-wrap">
                                                    <option value="save">Save & Continue</option>
                                                    <option value="print">Save & Print</option>
                                                    <option {% if entity.process == 'In-progress' %} selected="selected" {% endif %} value="In-progress">In-progress</option>
                                                </select>
                                                <button type="submit" class="btn blue" name="saveType" value="save" ><i class="icon-ok m-icon-white"></i>&nbsp;Save</button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- BEGIN FORM-->
                            <div class="clearfix">&nbsp;</div>
                            <!--/span-->
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
