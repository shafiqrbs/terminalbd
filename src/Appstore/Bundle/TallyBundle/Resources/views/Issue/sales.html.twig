{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@TallyBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@TallyBundle/Resources/public/js/editable.js'
    '@TallyBundle/Resources/public/js/issue.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    $('input[name=barcode]').focus();
    InventorySales({{ entity.id ? entity.id : 0 }});
    EditableInit();
    if($('#sales_discount').val() == 0 ){
    $('#sales_discount').removeAttr('value');
    }
    $('#sales_payment').removeAttr('value');
    $('#sales_deliveryCharge').removeAttr('value');
{% endblock %}
