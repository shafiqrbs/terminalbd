{% extends ':bindu:base.html.twig' %}
{% block body %}
    <div id="tm-page-body" xmlns="http://www.w3.org/1999/html">
        <div id="tm-template-default-fullwidth" class="tm-container">
            <div class="page-content">
                <div class="page-content-inner tm-content">
                    <div class="tm-row">
                        <div class="tm-wrap">
                            <div class="clear"></div>
                              <div class="clear"></div>
                                <div class="tm-row">
                                    <div id="tm-portfolio" class="tm-portfolio-classic">
                                        <div class="tm-content tm-col-4">
                                            {% for entity in entities %}
                                                {% if(entity.templateCustomize.webPath('logo') is defined and entity.templateCustomize.webPath('logo') is not empty) %}
                                                    <article>
                                                        <div class="client-logo">
                                                            <div class="tm-mask">
                                                                <div class="tm-mask-content">
                                                                    <h3><a href="{{ path('ecommercesubdomain',{'subdomain':entity.subDomain}) }}">{{ entity.name }}</a></h3>
                                                                    <span class="line"></span>
                                                                    <div class="incategory">
                                                                        <a href="{{ path('bindu_build_syndicate',{'syndicate':entity.syndicate.slug }) }}">{{ entity.syndicate.name }}</a>
                                                                    </div>
                                                                    <a class="tm-btn" href="{{ path('ecommercesubdomain',{'subdomain':entity.subDomain}) }}" >Visit Website</a>
                                                                </div>
                                                            </div>
                                                            {% if(entity.templateCustomize.webPath('logo') is defined and entity.templateCustomize.webPath('logo') is not empty) %}
                                                            <img class="img-ceneter" src="{{ image(entity.templateCustomize.webPath('logo')).resize(250,200) }}">
                                                            {% endif %}
                                                        </div>
                                                        <div class="org-title" ><strong>{{ entity.name }}</strong></div>
                                                        <ul class="social-networks">
                                                            <li>
                                                                <a target="_blank" href="{% if entity.domain is not empty %}http://www.{{ entity.domain }}{% else %}{{ path('ecommercesubdomain',{'subdomain':entity.subDomain}) }}{% endif %}" data-title="{% if entity.domain is not empty %}http://www.{{ entity.domain }}{% endif %}" >
                                                                    <i class="fa fa-home"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#" data-title="+88{{ entity.mobile }}">
                                                                    <i class="fa fa-phone"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#" data-title="+88{{ entity.mobile }}">
                                                                    <i class="fa fa-comment"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#" data-title="{{ entity.email }}">
                                                                    <i class="fa fa-envelope"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="last" href="{{ path('webservice_contact',{'subdomain':entity.subDomain}) }}" data-title="{% if  entity.location is defined and entity.location is not null  %}{{ entity.location.name }},{{ entity.location.parent.name }}{% endif %}">
                                                                    <i class="fa fa-map-pin"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </article>
                                                {% endif %}
                                            {% endfor %}

                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                    <!--portfolio-->
                                </div>
                                <div class="clear"></div>
                        </div>
                    </div>

                </div>

            </div>
            <!--page-content-->
        </div>
        <!--tm-container-->
    </div>
<style>

.client-logo{
    height: 200px;
    width: 250px
}
ul.social-networks {
  /* fallback */
  background-position: center center;
  background-repeat: no-repeat;
  background: linear-gradient(70deg, black, white);
  padding-left: 23px!important;
}
.ul.social-networks li a::before{
    width: 200px;
}

</style>
{% endblock %}
