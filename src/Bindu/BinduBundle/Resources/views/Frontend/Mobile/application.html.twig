{% extends ':bindu/mobile:base.html.twig' %}
{% block body %}
    <div class="bannerPane bannerPane-business-locaton">
        <div class="overlay"></div>
        <div class="s-banner-content">
            <div><img width="100" src="{{ asset('assets/frontend/img/logo.png') }}" /></div>
            <div class="page-title"> {{ app.name }}</div>
        </div>
    </div>
    <div id="content">
        {{ app.content|raw }}
        <div class="clear"></div>
        <style>
            .p-blog article a p {
                color: #333;
            }
            article h2 {
                text-transform: uppercase;
                font-weight: bold;
            }

        </style>
        <br/>
        <h3 class="title"><i class="fa fa-th-list"></i> CLIENT OPINIONS</h3>
        {% if testimonials is defined and testimonials is not empty %}
            {% for team in testimonials %}
                <article>
                    <div class="article-img-pane">
                        <img src="{{ image(team.webPath).scaleResize(120,120) }}" alt="Thumb">
                    </div>
                    <h2><i class="fa fa-user"></i> {{ team.name }}</h2>
                    <span> <i class="fa fa-cog"></i> {{ team.designation }}</span>
                    <p>{{ team.content|raw }}</p>
                </article>
            {% endfor %}
        {% endif %}
        <div class="clear"></div>
    </div>
{% endblock %}