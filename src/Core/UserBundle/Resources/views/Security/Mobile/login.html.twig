{% extends ':bindu/mobile:base.html.twig' %}
{% block body %}
    <div class="bannerPane bannerPane-webbuilder">
     <div class="s-banner-content">
            <div><img width="100" src="{{ asset('assets/frontend/img/logo.png') }}" /></div>
            <div class="page-title">LOGIN</div>
        </div>
    </div>
    <div id="content" style="background:#131e2d" >
        <form class="registration signupForm" id="signup" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
        <div>
            {% if(error) %}
                <p class="error" style="color: red; text-align: center">{{ error }}</p>
            {% endif  %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        </div>
        <div>
            <p><span class="fa-icon"><i class="fa  fa-user"></i></span>
                <input type="text" id="_username" name="_username" required="required" class="" placeholder="Enter your mobile no">
            </p>
        </div>
        <div>
            <p><span class="fa-icon"><i class="fa  fa-lock"></i></span>
                <input type="password" id="_password" name="_password" required="required" class="" placeholder="Enter your password">
            </p>
        </div>
            <p>
                <input type="checkbox" id="remember" name="_remember_me" value="on"/><span style="width: auto; line-height: 32px; color: #ffffff">&nbsp;&nbsp;Remember me</span>
            </p>

        <div><p class="form-suphobmit" style="text-align:center"><input id="signup" class="tm-btn dark small" type="submit" value="Login" name="submit"></p></div>
        </form>
        <div class="clear"></div>
    </div>
  <style>
      .signupForm input[type="password"] {
          width: 100%;
          background-color: #FFF;
          border: 1px solid #D7D9DB;
          padding: 3px 25px;
          height: 35px;
          color: #555;
          outline: none;
          font-size: 14px;
          box-shadow: none;
          margin-bottom: 5px;
      }
  </style>
{% endblock %}

{% block documentready %}

    $('#commentform').validate({

        rules: {
        _username: {
        required: true
        },
        _password: {
        required: true
        },
        },
        messages:{

        },
        submitHandler: function(form) {
        form.submit();
        }

    });
    $('.checkbox :checkbox').rcSwitcher({

            // reverse: true,
            inputs:false,
            // width: 70,
            // height: 24,
            // blobOffset: 2,
            onText: 'Yes',
            offText: 'No',
            theme: 'modern',
            // autoFontSize: true,

        });

{% endblock %}