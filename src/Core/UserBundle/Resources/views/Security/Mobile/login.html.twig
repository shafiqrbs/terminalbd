{% extends ':bindu/mobile:login.html.twig' %}
{% block body %}
    <div id="tm-page-body">
        <div id="tm-template-default-fullwidth" class="tm-container">
            <div class="page-content">
                <div class="page-content-inner tm-content">
                    <div class="tm-row" style="text-align: center; line-height: 40px">
                        <h3>Added your login information</h3>
                    </div>
                    <div id="container-form">
                        <div class="entry-container">
                            <section id="respond">

                                <!-- BEGIN FORM-->
                                <form class="form-vertical login-form" id="commentform" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
                                    {% if(error) %}
                                        <p class="error">{{ error }}</p>
                                    {% endif  %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                    <div>
                                        <p><span class="fa-icon"><i class="fa  fa-mobile"></i></span>
                                            <input type="text" id="_username" name="_username" required="required" class="" placeholder="Enter your mobile no">
                                        </p>
                                    </div>
                                    <div>
                                        <p><span class="fa-icon"><i class="fa  fa-lock"></i></span>
                                            <input type="password" id="_password" name="_password" required="required" class="" placeholder="Enter your password">
                                        </p>
                                    </div>

                                    <div>
                                        <div class="checkbox block" style="float: left">
                                            <input type="checkbox" id="remember" name="_remember_me" value="on"/><label style="width: auto; line-height: 32px; color: #ffffff">&nbsp;&nbsp;Remember me</label>
                                        </div>
                                        <p class="form-suphobmit" style="float: right"><input  id="signup" class="tm-btn light small" type="submit" value="Login" name="submit"></p>
                                    </div>

                                </form>
                                <div class="clear"></div>
                                <blockquote class="tm-style2-overwrite">
                                    <div class="forget-password">
                                        <h4>Forgot your password ?</h4>
                                        <p>
                                            no worries, click <a href="{{ path('fos_user_resetting_request') }}"  id="forget-password1">here</a>
                                            to reset your password.
                                        </p>
                                    </div>
                                    <div class="create-account">
                                        <p>
                                            Don't have an account yet ?&nbsp;
                                            <a href="{{ path('bindu_web_bulder')  }}" id="register-btn1" >Create an account</a>
                                        </p>
                                    </div>
                                </blockquote>

                            </section>
                        </div>
                    </div>
                </div>
            </div>
            <!--page-content-->
        </div>
        <!--tm-container-->
    </div>
{% endblock %}

{% block documentready %}

    $('#commentform').validate({

        rules: {
        _username: {
        required: true
        },
        _password: {
        required: true
        },
        },
        messages:{

        },
        submitHandler: function(form) {
        form.submit();
        }

    });
    $('.checkbox :checkbox').rcSwitcher({

            // reverse: true,
            inputs:false,
            // width: 70,
            // height: 24,
            // blobOffset: 2,
            onText: 'Yes',
            offText: 'No',
            theme: 'modern',
            // autoFontSize: true,

        });

{% endblock %}