{% extends ':bindu/mobile:base.html.twig' %}
{% block body %}
<style>
    #header a, .header a, a.menu-btn{
        background: none!important;
    }
    a.p-link-back {
        position: fixed !important;
        left: 24px;
        top: 24px;
        color: #0A0302;
    }

    a.login {
        position: fixed !important;
        right: 24px;
        top: 24px;
        color: #0A0302;
    }
    #div-center{
        vertical-align: bottom;
        text-align: center;
        display: inline-flex;
        align-items: center;
        width: 100%;
    }
    .signupForm {
        width: 100%;
        overflow: hidden!important;
    }
    .signupForm input[type="password"] {
        width: 100%;
        background-color: #FFF;
        padding: 3px 25px;
        height: 35px;
        color: #555;
        outline: none;
        font-size: 14px;
        box-shadow: none;
        margin-bottom: 5px;
    }
    .signupForm input[type="text"],.signupForm input[type="password"] {
        height: 48px!important;
        border: 3px solid #D7D9DB!important;
    }
    #remember{
        width: 36px!important;
        height: 36px!important;
    }
    .fa-icon {
        display: inline-block;
        top: 20px;
        position: absolute;
        left: 24px;
    }
    .tm-btn, input[type="submit"] {
        color: #ffffff;
        background-image: none;
        background-color: #ff0800;
        padding: 0 50px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        height: 48px;
        line-height: 48px;
    }
    label{
        text-align: left;
        font-weight: bold;
    }
</style>
    <div id="content" style="background:#ffffff; height: 100%; margin-top:0px!important; display: flex" >
        <div id="div-center">
            <form class="registration signupForm" id="signup" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
                <div>
                    <img style="background-color: #FFFFff" src="{{ asset('assets/frontend/img/logo.png') }}" height="auto" width="100%" alt="">
                </div>
                <h3 style="
    height: 80px;
    background: #fff;
    margin-bottom: 30px;
    line-height: 80px;
    font-size: 30px;
    text-transform: uppercase;
    font-weight: bold;
">SIGN IN</h3>
                <div class="clear"></div>
                <div>
                    {% if(error) %}
                        <p class="error" style="color: red; text-align: center">{{ error }}</p>
                    {% endif  %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                </div>
                <div>
                    <label>Username</label>
                    <p>
                        <input type="text" id="_username" name="_username" required="required" class="" placeholder="Enter your mobile no">
                    </p>
                </div>
                <div>
                    <label>Password</label>
                    <p>
                        <input type="password" id="_password" name="_password" required="required" class="" placeholder="Enter your password">
                    </p>
                </div>
                <div>
                    <div style="float: left"><input type="checkbox" id="remember" name="_remember_me" value="on"/></div>
                    <div style="width: auto; line-height:48px; float: left;">&nbsp;&nbsp;Remember me</div>
                    <div style="float: right"><input id="signup" class="tm-btn dark small" type="submit" value="Sign in" name="submit"></div>
                </div>
            </form>
        </div>
        <div class="clear"></div>
    </div>
{% endblock %}

{% block documentready %}

    $('#commentform').validate({

        rules: {
        _username: {
        required: true
        },
        _password: {
        required: true
        },
        },
        messages:{

        },
        submitHandler: function(form) {
        form.submit();
        }

    });
    $('.checkbox :checkbox').rcSwitcher({

            // reverse: true,
            inputs:false,
            // width: 70,
            // height: 24,
            // blobOffset: 2,
            onText: 'Yes',
            offText: 'No',
            theme: 'modern',
            // autoFontSize: true,

        });

{% endblock %}