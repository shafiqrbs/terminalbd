{% extends "login.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <!-- BEGIN LOGO -->
    <div class="logo">
        <img style="background-color: #FFFFff" src="{{ asset('assets/frontend/img/logo.png') }}" height="80" width="420" alt="" />
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="form-vertical login-form" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        <h3 class="form-title">Login to your account</h3>
            {% if(error) %}
                <div class="alert alert-error">
                    <button class="close" data-close="alert"></button>
                    <span>
                       <div class="tm-alert error"><strong>Error</strong> &ndash; {{ error }}</div>
                    </span>
                </div>
           {% endif  %}
        <div class="control-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-user"></i>
                    <input class="m-wrap placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" id="username" name="_username" value="{{ last_username }}"/>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-lock"></i>
                    <input class="m-wrap placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="password" name="_password"/>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <label class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" checked="checked" value="on"/> Remember me
            </label>
            <input type="submit" id="submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                    class="btn blue pull-right">
                    Login <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
{#        <div class="forget-password">
            <h4>Forgot your password ?</h4>
            <p>
                no worries, click <a href="{{ path('fos_user_resetting_request') }}"  id="forget-password1">here</a>
                to reset your password.
            </p>
        </div>
        <div class="create-account">
            <p>
                Don't have an account yet ?&nbsp;
                <a href="/signup" id="register-btn1" >Create an account</a>
            </p>
        </div>#}
    </form>
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        {{ "now"|date('Y') }} &copy; Terminalbd.com.
    </div>

    <!-- END COPYRIGHT -->
{% endblock body %}
