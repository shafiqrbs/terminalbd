{% extends ':Template:base.html.twig' %}
{% block body %}
    <div class="clearfix"></div>
    <div class="page_title">
        <div class="container">
            <div class="title"><h1>{{ moduleName }}</h1></div>
                <div class="pagenation">&nbsp;<a href="{{ path('homepage') }}">Home</a> <i>/</i> {{ moduleName }}</div>
        </div>
    </div><!-- end page title -->
    <!-- Contant
    ======================================= -->

    <div class="container">

        <div class="content_left">

            {% if ( moduleName == 'News') %}
                {{ include('@Frontend/Template/Desktop/Module/news.html.twig')}}
            {% elseif( moduleName == 'Blog' ) %}
                {{ include('@Frontend/Template/Desktop/Module/blog.html.twig')}}
            {% elseif( moduleName == 'Testimonial' ) %}
                {{ include('@Frontend/Template/Desktop/Module/testimonial.html.twig')}}
            {% elseif( moduleName == 'Timeline' ) %}
                {{ include('@Frontend/Template/Desktop/Module/timeline.html.twig')}}
            {% elseif( moduleName == 'Branch' ) %}
                {{ include('@Frontend/Template/Desktop/Module/branch.html.twig')}}
            {% elseif( moduleName == 'Event' ) %}
                {{ include('@Frontend/Template/Desktop/Module/event.html.twig')}}
            {% elseif( moduleName == 'ClassRoutine' ) %}
                {{ include('@Frontend/Template/Desktop/Module/blackout.html.twig')}}
            {% elseif( moduleName == 'Blackout' ) %}
                {{ include('@Frontend/Template/Desktop/Module/blackout.html.twig')}}
            {% elseif( moduleName == 'NoticeBoard' ) %}
                {{ include('@Frontend/Template/Desktop/Module/noticeboard.html.twig')}}
            {% elseif( moduleName == 'Admission' ) %}
                {{ include('@Frontend/Template/Desktop/Module/admission.html.twig')}}
            {% elseif( moduleName == 'Syndicate' ) %}
                {{ include('@Frontend/Template/Desktop/Module/syndicate.html.twig')}}
            {% else %}
                {{ include('@Frontend/Template/Desktop/Module/default.html.twig')}}
            {% endif %}

        </div><!-- end content left side area -->
        <!-- right sidebar starts -->
        <div class="right_sidebar">

            <div class="sidebar_widget">
                <div class="sidebar_title"><h3><i>Pages</i></h3></div>
                <ul class="arrows_list1">
                    {% if globalOption.pages is not empty %}
                        {% for subPage in globalOption.pages %}
                            <li><a href="{{ path('webservice_page',{'subdomain':globalOption.subDomain,'slug': subPage.nav.slug}) }}"><i class="fa fa-angle-right"></i>{{ subPage.name }}</a></li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div><!-- end section -->
            {% if globalOption.newses is not empty %}
                <div class="clearfix mar_top4"></div>

                <div class="sidebar_widget">
                    <div class="sidebar_title"><h3>Recent <i>News</i></h3></div>
                    <ul class="recent_posts_list">
                        {% for news in  globalOption.newses %}
                            <li>
                                <span><a href="{{ path('desktop_module',{'subdomain':globalOption.subDomain,'module':'news','slug': news.slug}) }}"><img src="{{ image(news.webPath()).resize(50,50) }}" alt="" /></a></span>
                                <a href="{{ path('desktop_module',{'subdomain':globalOption.subDomain,'module':'news','slug': news.slug}) }}">{{ news.name }}</a>
                                <i> {{ news.startDate|date("d-F-Y") }} To  {{ news.endDate|date("d-F-Y") }}</i>
                            </li>
                        {% endfor %}
                    </ul>
                </div><!-- end section -->
            {% endif %}
            {% if globalOption.blogs is not empty %}
                <div class="clearfix mar_top4"></div>

                <div class="sidebar_widget">
                    <div class="sidebar_title"><h3>Recent <i>Blogs</i></h3></div>
                    <ul class="recent_posts_list">
                        {% for blog in  globalOption.blogs %}
                            <li>
                                {% if blog.webPath() %}<span><a href="#"><img src="{{ image(blog.webPath()).resize(50,50) }}" alt="" /></a></span>{% endif %}
                                <a href="#">{{ blog.title }}</a>
                                <i>{{ blog.created|date('d-m-Y') }}</i>
                            </li>
                        {% endfor %}
                    </ul>
                </div><!-- end section -->
            {% endif %}

        </div>

    </div><!-- end content area -->
    <div class="clearfix mar_top5"></div>
{% endblock %}
