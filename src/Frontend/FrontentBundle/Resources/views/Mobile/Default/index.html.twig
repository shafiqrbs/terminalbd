{% extends ':mobile:introbase.html.twig' %}
{% block body %}
    <div class="homepage-wrapper">
        {% if(entity.templateCustomize.webPath('logo') is defined and entity.templateCustomize.webPath('logo') is not empty) %}
        <img src="{{ image(entity.templateCustomize.webPath('logo')).resize(50,40) }}" onclick="window.location='{{ path('bindu_mobile_home',{'subdomain': entity.subDomain }) }}'" class="homepage-logo" alt="/{{ entity.name }}">
        {% endif %}
        <em class="homepage-logo-sub">Welcome: {{ entity.name }}</em>
        <div class="homepage-navigation centered">
            <a class="home-icon"    href="homepage.html">Homepage</a>
            <a class="type-icon"    href="tel:+88 {{ entity.mobile }}">Call</a>
            <a class="jquery-icon"  href="{{ path('mobile_sms',{'subdomain': entity.subDomain })}}">SMS</a>
            <a class="mail-icon"    href="mailto:{{ entity.email }}" >Email</a>
            <a class="folio-icon"   href="{{ path('mobile_maps',{'subdomain': entity.subDomain })}}">Find</a>
            <a class="mail-icon"	href="{{ path('mobile_contact',{'subdomain': entity.subDomain })}}">Contact</a>
            <div class="clear"></div>
        </div>
    </div>
    <div class="homepage-background">
        <div class="bg-pattern"></div>
        <div class="bg-overlay"></div>
        {% if( entity.templateCustomize.webPath('bgImage') is defined and entity.templateCustomize.webPath('bgImage') is not empty) %}
        <img id="bg" src="{{ image(entity.templateCustomize.webPath('bgImage')).resize() }}" alt="img">
        {% endif %}
    </div>
 <style>

     .centered {
         position: fixed;
         top: 50%;
         left: 50%;
         /* bring your own prefixes */
         transform: translate(-50%, -50%);
     }
     #bg {
         position: fixed;
         top: 0;
         left: 0;
         width: 100%;
         height: 100%;
     }




 </style>
{% endblock %}

{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@MobileBundle/Resources/public/css/style.css'
    %}
    <style type="text/css" src="{{ asset_url }}"></style>
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@MobileBundle/Resources/public/js/mobile.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    MobileVersion();
{% endblock %}





