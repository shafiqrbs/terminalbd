<nav class="navbar navbar-inverse ">
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
        <section class="feature-widget-header-top" >
            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'pageName':pageName,'position':'header-top'}) %}
        </section>
    {% endif %}
    <section id="header">
        <div class="container">
            <div class="navbar-header">
                <div class="col-md-3">
                    <a class="img-logo"
                       href="{{ path(globalOption.subDomain ~ '_ecommercesubdomain') }}">{% if globalOption.templateCustomize.webPath('logo') is not empty %}
                            <img src="{{ image(globalOption.templateCustomize.webPath('logo')).resize() }}"
                                 alt="{{ globalOption.name }}" />{% else %}{{ globalOption.name }}{% endif %}</a>
                </div>
                <div class="col-md-9">
                    {% if globalOption.templateCustomize.showSearch == 1 %}
                        <div class="row bs-example-form" id="header-form">
                            <div class="col-md-9 col-lg-9">
                                <form class="bs-example" action="{{ path(globalOption.subDomain ~ '_webservice_product') }}"  method="get" data-example-id="input-group-segmented-buttons">
                                    <div class='input-group search-box' >
                                        <div class='input-group-field'>
                                            {{ categoryTree|raw }}
                                        </div>
                                        <input type='text' class='form-control serarch-keyword' style="width: 300px" name="product" id="product" value="{% if searchForm.product is defined %}{{ searchForm.product }}{% endif %}"  placeholder="Find Your Favorite Products"/>
                                        <span class="input-group-btn">
                                                <button class="btn btn-group btn-group-search search-box-bg" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                                            </span>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-3 col-lg-3">
                                <div class="input-group text-right" style="margin-top: 2px" >
                                    <div class="input-group-btn">
                                        <a href="{{ path(globalOption.subDomain ~ '_webservice_product_cart_details') }}" data-toggle="tooltip" data-original-title="View Shopping Bag Details"  class="btn btn-group btn-success"><span  class="glyphicon glyphicon-shopping-cart"></span></a>
                                        <a  href="javascript:" data-toggle="tooltip" data-original-title="View Shopping Items"  id="cartItem"  class="btn btn-warning"> <span class="label label-warning badge totalItem "  >{{ cart.total_items }}</span></a>
                                        {% if app.user %}
                                            <a href="/logout" type="button" data-toggle="tooltip" data-original-title="System Logout" class="btn btn-group btn-danger" ><span class="glyphicon glyphicon-lock"></span></a>
                                            <a href="{{ path('domain_customer_homepage',{'shop':globalOption.slug}) }}" data-toggle="tooltip" data-original-title="Go To Your Order Panel" type="button" class="btn btn-group btn-primary" ><span class="glyphicon glyphicon-user"></span></a>
                                        {% else %}
                                            <a type="button" class="btn btn-group btn-primary login-preview"  title="" data-toggle="tooltip" data-original-title="System Login" ><span class="glyphicon glyphicon-lock"></span></a>
                                        {% endif %}
                                    </div><!-- /btn-group -->
                                </div><!-- /input-group -->
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <section id="menu-bar" class="sticky">
        <div class="container">
            {{ include('FrontendBundle:Template/Desktop/Menu:menu.html.twig')}}
        </div>
    </section>
</nav>

