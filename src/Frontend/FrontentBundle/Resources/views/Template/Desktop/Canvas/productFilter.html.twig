<form id="productFilter" method="get" action="{{ path(globalOption.subDomain ~ '_webservice_product_filter') }}" >
<div class="panel panel-default panel-filter">

        {% if globalOption.ecommerceConfig.sidebarCategory == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">ALL CATEGORY</h3>
            </div>
            <div class="panel-body scrollbar">
                <div class="treeview">
                    {{ categorySidebar|raw }}
                </div>
            </div>
        {% endif %}
        {% if globalOption.ecommerceConfig.sidebarBrand == 1 %}
            <div class="panel-heading">
                <h5 class="panel-title">ALL BRANDS</h5>
            </div>
            <div class="panel-body scrollbar">
                <div class="row">
                    {{ brandTree|raw }}
                </div>
            </div>
        {% endif %}
        {% if globalOption.ecommerceConfig.sidebarPrice == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">PRICE RANGE</h3>
            </div>
            <div class="panel-body">
                <input id="price-range" name="price-range" type="text" class="span12" value="" data-slider-min="1" data-slider-max="999999" data-slider-step="5" data-slider-value="[10,999999]"/>
            </div>
        {% endif %}

        {% if globalOption.ecommerceConfig.sidebarSize == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">SIZE/WEIGHT/DIMENSION</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    {{ sizeTree|raw }}
                </div>
            </div>
        {% endif %}
        {% if globalOption.ecommerceConfig.sidebarColor == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">COLOR</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    {{ colorTree|raw }}
                </div>
            </div>
        {% endif %}
        <div class="clearfix"></div>
        {% if globalOption.ecommerceConfig.sidebarDiscount == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">DISCOUNT</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    {{ discountTree|raw }}
                </div>
            </div>
        {% endif %}
        <div class="clearfix"></div>
        {% if globalOption.ecommerceConfig.sidebarPromotion == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">PROMOTION</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    {{ promotionTree|raw }}
                </div>
            </div>
        {% endif %}
        <div class="clearfix"></div>
        {% if globalOption.ecommerceConfig.sidebarTag == 1 %}
            <div class="panel-heading">
                <h3 class="panel-title">Popular Tags</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    tagTree|raw
                </div>
            </div>
        {% endif %}
        <div class="clearfix"></div>
        <div class="panel-heading">
            <div class="sidebar-footer col-md-12" >
                <div class="row div-vertical-center">
                    <button type="submit"  class="btn btn-info" id="filter"><span class="glyphicon glyphicon-filter"></span> FILTER</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    <div class="clearfix"></div>
</div>
</form>