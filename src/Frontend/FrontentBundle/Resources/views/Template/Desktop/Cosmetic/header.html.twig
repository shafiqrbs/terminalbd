<nav class="navbar navbar-inverse ">
    <section id="top-bar">
        <div class="container" id="menu">
            <div class="row">
                <div class="col-md-6 text-left">
                    <div class="box">
                        <ul class="info-links">
                            {% if globalOption.templateCustomize.showCalendar == 1 %}
                                <li><i class="fa fa-calendar"></i>&nbsp;{{ "now"|date("F j, Y") }}</li>{% endif %}
                            {% if globalOption.templateCustomize.showEmail == 1 and globalOption.email is not empty %}
                                <li><i class="fa fa-envelope"></i>&nbsp;{{ globalOption.email }}</li>{% endif %}
                            {% if globalOption.templateCustomize.showMobile == 1 %}
                                <li><i class="fa fa-mobile"></i>&nbsp;{{ globalOption.mobile }}</li>{% endif %}
                        </ul>
                    </div>
                </div>
                <div class=" col-md-6 text-right">
                    <div class="box">
                        <ul class="social-links">
                            {% if globalOption.facebookPageUrl == 1 %}
                                <li><a href="https://{{ globalOption.facebookPageUrl }}"><i class="fa fa-facebook"></i></a>
                                </li>{% endif %}
                            {% if globalOption.templateCustomize.showSearch == 1 %}
                                <li><a href="javascript:" id="searchEvent"><i class="fa fa-search"></i></a>
                                </li>{% endif %}
                            <li><a href="javascript:" class="register-btn"><i class="fa fa-sign-in"></i></a></li>
