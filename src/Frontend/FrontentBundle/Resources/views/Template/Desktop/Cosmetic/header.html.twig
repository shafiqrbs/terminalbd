                                <li>
                                    <a href="{{ path('webservice_product_cart_details',{'subdomain':globalOption.subDomain}) }}"
                                       class=""><i class="fa fa-shopping-cart"></i></a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
        <section class="feature-widget-header-top" >
            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'pageName':pageName,'position':'header-top'}) %}
        </section>
    {% endif %}
    <section id="header">
        <div class="container">
            <div class="row navbar-header">
                <div class="col-md-3">
                    <a class="img-logo"
                       href="{{ path('ecommercesubdomain') }}">{% if globalOption.templateCustomize.webPath('logo') is not empty %}
                            <img src="{{ image(globalOption.templateCustomize.webPath('logo')).resize() }}"
                                 alt="company logo" />{% else %}{{ globalOption.name }}{% endif %}</a>
                </div>
                <div class="col-md-9">
                    {% if globalOption.templateCustomize.showSearch == 0 %}

                        <div class="row bs-example-form" id="header-form">
                            <div class="col-lg-10">
                                <form class="bs-example" action="{{ path('webservice_product',{'subdomain':globalOption.subDomain}) }}"  method="get" data-example-id="input-group-segmented-buttons">
                                    <div class='input-group search-box' >
                                        <div class='input-group-field'>
                                            {{ categoryTree|raw }}
                                        </div>
                                        <input type='text' class='form-control input-group-lg' style="width: 351px" name="product" id="product" value="{% if searchForm.product is defined %}{{ searchForm.product }}{% endif %}"  placeholder="Find Your Favorite Products"/>
                                        <span class="input-group-btn">
                                                <button class="btn btn-group btn-group-search search-box-bg" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                                            </span>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-2">
                                <div class="input-group dropdown navbar-right">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-group btn-cart dropdown-toggle search-box-bg" data-toggle="dropdown"  aria-expanded="false"><span
                                                    class="glyphicon glyphicon-shopping-cart"></span></button>
                                        <a  style=" border:1px solid #000; border-left:none" href="#" class="btn dropdown-toggle search-box-bg" data-toggle="dropdown" role="button"
                                            aria-expanded="false"> <span class="label-success badge totalItem" >{{ cart.total_items }}</span>
                                            &nbsp;<span class="label label-warning">à§³ <em class="totalAmount">&nbsp;{{ cart.total }}</em></span></a>
                                        <div class="item-list">
                                            {% if  cart.contents is not empty %}
                                                <ul class="dropdown-menu dropdown-cart" role="menavbar-rightnu">
                                                    {% for product in cart.contents %}
                                                        <li id="item-remove-{{ product.rowid }}">
                                                              <span class="item">
                                                                <span class="item-left">
                                                                    {% if product.productImg is not empty %}
                                                                        <img src="{{ image(product.productImg).scaleResize(50,50) }}"
                                                                             alt=""/>
                                                                    {% endif %}
                                                                    <span class="item-info">
                                                                        <span>{{ product.name|truncate(15) }}</span>
                                                                        <span>Qnt&nbsp;{{ product.quantity }}</span>
                                                                        <span><strong>{{ globalOption.ecommerceConfig.currency }}
                                                                                &nbsp;{{ product.price }}</strong></span>
                                                                    </span>
                                                                </span>
                                                                <span class="item-right">
                                                                    <button id="{{ product.rowid }}"
                                                                            data-url="{{ path('webservice_product_cart_remove',{'cartid':product.rowid}) }}"
