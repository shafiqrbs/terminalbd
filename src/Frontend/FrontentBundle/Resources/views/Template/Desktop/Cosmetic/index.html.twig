{% extends ':frontend/template:base.html.twig' %}
{% block body %}
{#
    $featureCategories          = $this->getDoctrine()->getRepository('ProductProductBundle:Category')->getCategoryFeature();
    {% if(featureCategories) %}
        {{ featureCategories|raw }}
    {% endif %}#}

    <!-- Header Carousel -->
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
        <section class="section-white top-nav-margin" style="background-color: rgb(27, 27, 27)" >
            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'position':'Home'}) %}

        </section>
    {% endif %}
    <section style="background-color: rgb(22, 22, 22); height: 70px;">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1" style="margin-top: 10px" >
                    <div class="col-md-10" >
                        <div  style="padding: 10px;border: 1px solid #000;color: #fff;font-size: 20px;">
                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> PLACE YOUR ORDER NOW - RECEIVE YOUR ITEMS WITHIN 72 HOURS
                        </div>
                        </div>
                        <div class="col-md-2"><a style="margin-top: 7px;
    border: 3px solid #fff;
    border-radius: 15px;
    background: #000;" class="btn" href="{{ path('webservice_product') }}">SHOP NOW</a></div></div>
            </div>
        </div>
    </section>

{#

{% if globalOption.ecommerceConfig.templates is not empty %}
        <section class="section-divide" id="dashboard">
            <div class="container">
                <div class="row">
                    {% render controller("FrontendBundle:EcommerceWidget:homeTopWidget",{'globalOption':globalOption.id,'position':'top'}) %}
                </div>
            </div>
        </section>
{% endif %}

#}
        <section>

            {% if globalOption.contactPage.latitude is not empty and globalOption.contactPage.longitude is not empty %}
                <div id="gmap_canvas" class="gmap">
                    <div class="Lat">{{ globalOption.contactPage.latitude }}</div>
                    <div class="Lng">{{ globalOption.contactPage.longitude }}</div>
                    <div class="imgMap">{{ asset('assets/img/placeholder.png') }}</div>
                    <address>Address Here</address>
                    <div class="infoWindow">
                            <span style="line-height: 25px;">{% if globalOption.contactPage.address1 is not empty %}

                                 <p style="font-size: 18px; line-height: 25px; font-weight: bolder"> <i class="fa fa-home"></i>&nbsp;{{ globalOption.contactPage.address1 }}<br>
                                    {% if globalOption.contactPage.location is defined and globalOption.contactPage.location %}
                                        {{ globalOption.contactPage.location.name }}, {{ globalOption.contactPage.location.parent.name }}
                                    {% endif %}
                                    {% if globalOption.contactPage.postalCode is defined and globalOption.contactPage.postalCode %}
                                        -{{ globalOption.contactPage.postalCode }}
                                    {% endif %}
                                 </p>
                                {% endif %}
                                {% if globalOption.contactPage.startHour %}
                                    <i class="fa fa-clock-o"></i>&nbsp;<strong>{{ globalOption.contactPage.startHour }} To {{ globalOption.contactPage.endHour }}</strong>
                                {% endif %}
                                {% if globalOption.contactPage.weeklyOffDay is not empty %}
                                    <br><i class="fa fa-calendar-o" aria-hidden="true"></i>&nbsp;<strong>
                                    {% for day in globalOption.contactPage.weeklyOffDay %}
                                        {{ day }}
                                        {% if not loop.last %},{% endif %}
                                    {% endfor %}
                                </strong>
                                {% endif %}
                                <br>
                                <i class="fa fa-mobile-phone"></i>&nbsp;+ 088&nbsp;<a href="tel:+ 088 {{ globalOption.mobile }}" class="contact-call">{{ globalOption.mobile }}</a>
                                <i class="fa fa-map-pin"></i>&nbsp;<a target="_blank" href="https://maps.google.com?saddr=Current+Location&daddr=23.801422,90.352599">Direction</a>

                            </span>
                    </div>
                </div>
            {% endif %}
        </section>

<style>
    a{
        color: #002842;
        text-decoration: none;
    }
    a:hover{
        text-decoration: none;
    }
    .owl-prev, .owl-next {opacity: 0 !important;}
    .owl-carousel:hover .owl-controls .owl-buttons .owl-prev {opacity: 1 !important;}
    .owl-carousel:hover .owl-controls .owl-buttons .owl-next {opacity: 1 !important;}
    .owl-carousel:hover .owl-controls .owl-buttons .owl-next .btn , .owl-carousel:hover .owl-controls .owl-buttons .owl-prev .btn{
        border-radius: 50%;
        width: 42px;
        height: 42px;
        line-height: 36px;
        padding: 0;
        margin: 0;

    }
    .owl-carousel:hover .owl-controls .owl-buttons .owl-next .btn:hover,
    .owl-carousel:hover .owl-controls .owl-buttons .owl-prev .btn:hover{
        background-color: #002842
    }


    .owl-theme .owl-controls .owl-buttons div.owl-next {
        right: 25px;
    }
    .owl-theme .owl-controls .owl-buttons div.owl-prev {
        left: 25px;
    }
    .owl-theme .owl-controls .owl-buttons div.owl-prev,
    .owl-theme .owl-controls .owl-buttons div.owl-next{
        top: 31%;
        position: absolute;
        padding: 0!important;
        background: rgba(255,255,255,.8)!important;
    }
</style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@FrontendBundle/Resources/public/template/js/common.js'
    '@FrontendBundle/Resources/public/template/js/revolutionSlider.js'
    '@FrontendBundle/Resources/public/js/kmaps.min.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="//maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyDmior4xLqsriysUeQhtdSawc8yjDyaWaw"></script>
{% endblock %}
{% block documentready %}
