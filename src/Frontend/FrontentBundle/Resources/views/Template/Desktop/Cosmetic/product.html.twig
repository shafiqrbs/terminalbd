{% extends ':frontend/template:base.html.twig' %}
{% block body %}
    <div class="clearfix"></div>
    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="{{ path('ecommercesubdomain') }}"><span class="glyphicon glyphicon-home"></span></a></li>
                <li class="active"><span>Product</span></li>
            </ol>
        </div>
    </section>
    <div class="clearfix"></div>
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
        <section class="feature-widget-body-top" >
            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'pageName':'Product','position':'body-top'}) %}
        </section>
    {% endif %}
    <div class="clearfix"></div>
    <section>
        <div class="container" >
            <div class="col-md-3 sidebar-top" >
                <div class="row">
                    <div class="col-md-12 paginate">
                        <div class="btn-group pull-left">
                            <div class="product-title"><span class="glyphicon glyphicon-filter"></span>&nbsp;REFINE RESULTS</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row paginate">
                    <div class="col-md-6">
                        <div class="btn-group pull-left">
                            <div class="product-title"><span class="glyphicon glyphicon-list"></span>&nbsp;{% if titleName is defined and titleName is not empty %}{{ titleName }}{% else %}ALL PRODUCT{% endif %}</div>

                   {#         <a href="#" id="list" class="btn btn-default btn-sm page-button"><span class="glyphicon glyphicon-th-list"></span></a>
                            <a href="#" id="grid" class="btn btn-default btn-sm page-button"><span class="glyphicon glyphicon-th"></span></a>
#}                        </div>
                    </div>
                    <div class="col-md-6 navbar-right">
                        <form class="form-inline">
                            <div class="form-group paginate-form-group" >
                                <label for="exampleInputEmail2">Show: </label>
                                {% set limit = app.request.get('limit') %}
                                <select id="limit" name="limit" class="input-selector"  onchange='this.form.submit()'>
                                    <option {% if limit == 10  %} selected="selected" {% endif %} value="10">10</option>
                                    <option {% if limit == 20  %} selected="selected" {% endif %} value="20">20</option>
                                    <option {% if limit == 30  %} selected="selected" {% endif %} value="30">30</option>
                                </select>
                            </div>
                            <div class="form-group paginate-form-group">
                                <label for="exampleInputName2">Sort By: </label>
                                {% set sortBy = app.request.get('sortBy') %}
                                <select name="sortBy" id="sortBy" class="input-selector" onchange='this.form.submit()'>
                                    <option>-- Position --</option>
                                    <option {% if sortBy == ''  %} selected="selected" {% endif %} value="" >Default</option>
                                    <option {% if sortBy == 'product.name=?=ASC'  %} selected="selected" {% endif %} value="product.name=?=ASC">Name (A - Z)</option>
                                    <option {% if sortBy == 'product.name=?=DESC'  %} selected="selected" {% endif %} value="product.name=?=DESC">Name (Z - A)</option>
                                    <option {% if sortBy == 'brand.name=?=ASC'  %} selected="selected" {% endif %} value="brand.name=?=ASC">Brand (A - Z)</option>
                                    <option {% if sortBy == 'brand.name=?=DESC'  %} selected="selected" {% endif %} value="brand.name=?=DESC">Brand (Z - A)</option>
                                    <option {% if sortBy == 'product.salesPrice=?=ASC'  %} selected="selected" {% endif %} value="product.salesPrice=?=ASC">Price (Low &gt; High)</option>
                                    <option {% if sortBy == 'product.salesPrice=?=DESC'  %} selected="selected" {% endif %} value="product.salesPrice=?=DESC">Price (High &gt; Low)</option>
                                </select>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="clearfix"></div>
    <section id="products" style="margin-top: 20px">
        <div class="container">
            <div class="col-md-3" data-match-height="body-content" >
                <div class="row">
                    <div class="clearfix"></div>
                    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
                        <section class="feature-widget-body-bottom" >
                            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'pageName':'Product','position':'sidebar-top'}) %}
                        </section>
                    {% endif %}
                    <div class="clearfix"></div>
                    <form>
                    <div class="panel panel-default">
                        {% if globalOption.ecommerceConfig.sidebarBrand == 1 %}
                            <div class="panel-heading">
                                <h5 class="panel-title">ALL BRAND (1 To {{ brands|length }})</h5>
                            </div>
                            <div class="panel-body scrollbar">
                                <div class="rectangle-list">
                                    <ol>
                                        {% for brand in brands %}
                                            <li><a href="{{ path('webservice_product_brand',{'subdomain': globalOption.subDomain,'id':brand.id }) }}">{{ brand.name }}</a></li>
                                        {% endfor %}
                                    </ol>
                                </div>

                            </div>
                        {% endif %}
                        {% if globalOption.ecommerceConfig.sidebarPrice == 1 %}
                        <div class="panel-heading">
                            <h3 class="panel-title">PRICE RANGE</h3>
                        </div>
                        <div class="panel-body">
                            <input id="price-range" type="text" class="span12" value="" data-slider-min="1" data-slider-max="1000000" data-slider-step="5" data-slider-value="[100,1000000]"/>
                        </div>
                        {% endif %}
                        {% if globalOption.ecommerceConfig.sidebarCategory == 1 %}
                        <div class="panel-heading">
                            <h3 class="panel-title">ALL CATEGORY</h3>
                        </div>
                        <div class="panel-body scrollbar">
                            <div class="treeview">
                            {{ categorySidebar|raw }}
                            </div>
                            <!-- List Group End Here -->
                        </div>
                        {% endif %}
                        {% if globalOption.ecommerceConfig.sidebarSize == 1 %}
                        <div class="panel-heading">
                            <h3 class="panel-title">SIZE/WEIGHT/DIMENSION</h3>
                        </div>
                        <div class="panel-body">

                            Product Size
                            <!-- List Group End Here -->
                        </div>
                        {% endif %}
                        {% if globalOption.ecommerceConfig.sidebarColor == 1 %}
                        <div class="panel-heading">
                            <h3 class="panel-title">COLOR</h3>
                        </div>
                        <div class="panel-body">
                            Color
                            <!-- List Group End Here -->
                        </div>
                        {% endif %}
                        <div class="clearfix"></div>
                        {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
                            <section class="feature-widget-body-bottom" >
                                {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'pageName':'Product','position':'sidebar-bottom'}) %}
                            </section>
                        {% endif %}
                        <div class="clearfix"></div>
                    </div>
                    </form>
               </div>
            </div>
            <div class="col-md-9" data-match-height="body-content"  >
                <div id="products" class="row list-group">
                    {% for product in products %}
                        <div data-wow-delay="0.2s" data-match-height="item-promotion" class="item fadeInRight animated col-xs-{{ globalOption.ecommerceConfig.perColumn }} col-lg-{{ globalOption.ecommerceConfig.perColumn }}">
                            <div class="" >
                                <div class="product-preview group list-group-image" >
                                    <img class="img-responsive" src="{% if product.webPath is not empty  %}{{ image(product.webPath).scaleResize(400,400) }}{% elseif product.masterItem.webPath is defined and product.masterItem.webPath is not empty %}{{ image(product.masterItem.webPath).scaleResize(400,400) }}{% endif %}" alt="">
                                    <div class="team-content">
                                        <ul class="view-link">
                                            <li><a class="preview fa fa-eye" data-url="{{ path('webservice_product_modal',{'subdomain': globalOption.subDomain,'item':product.id }) }}" ></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="caption">
                                <div class="row">
                                    <div class="row-fluid">
                                        {% if globalOption.ecommerceConfig.showBrand == 1 %}
                                            <p class="group inner brand text-center" ><a href="{{ path('webservice_product_brand',{'subdomain': globalOption.subDomain,'id':product.id }) }}"><span>{% if product.brand is not empty %}{{ product.brand.name }}{% endif %}</span></a> </p>
                                        {% endif %}
                                        <p class="group inner product-name text-center" ><a href="{{ path('webservice_product_details',{'subdomain': globalOption.subDomain,'item':product.slug }) }}"><strong>{% if product.masterItem is not empty and  globalOption.ecommerceConfig.showMasterName == 1 %}{{ product.masterItem.name }}&nbsp;-&nbsp;{% endif %}{{ product.webName }}</strong></a> </p>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="col-xs-12 col-md-12 text-center"><strong class="currency">{{ globalOption.ecommerceConfig.currency }}&nbsp;{% if product.discount is not empty  %}<strike>{% endif %}{{ product.salesPrice|number_format() }}{% if product.discount is not empty  %}</strike>{% endif %}{% if product.discount is not empty  %}&nbsp;{{ product.discountPrice|number_format() }}{% endif %}</strong></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </section>
    <section>
        <div class="container" >
            <div class="col-md-3 sidebar-footer" data-match-height="body-footer" >
                <div class="row div-vertical-center">
                    <button  class="btn btn-info ladda-button" data-style="zoom-in"><span class="ladda-label">REFINE FILTER</span><span class="ladda-spinner"></span></button>
                </div>
            </div>
            <div class="col-md-9" data-match-height="body-footer"  >
                <div class="row paginate-footer" >
                    <div class="col-md-5 navbar-left">
                    <form class="form-inline">
                        <div class="form-group" >
                            <label for="exampleInputEmail2">Show: </label>
                            {% set limit = app.request.get('limit') %}
                            <select id="limit" name="limit" class="input-selector"  onchange='this.form.submit()'>
                                <option {% if limit == 10  %} selected="selected" {% endif %} value="10">10</option>
                                <option {% if limit == 20  %} selected="selected" {% endif %} value="20">20</option>
                                <option {% if limit == 30  %} selected="selected" {% endif %} value="30">30</option>
                            </select>
                        </div>
                    </form>
                    </div>
                    <div class="col-md-2  navbar-center" style="text-align: center; line-height: 30px"><a href="javascript:">{{ products.getTotalItemCount }} out of {{ products.pageCount }}</a></div>
                    <div class="col-md-5  navbar-right">
                        <div class="pull-right"  >
                            {{ knp_pagination_render(products) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="clearfix"></div>
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
        <section class="feature-widget-body-bottom" >
            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'pageName':'Product','position':'body-bottom'}) %}
        </section>
    {% endif %}
    <div class="clearfix"></div>
    <!-- Modal -->
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@FrontendBundle/Resources/public/template/js/product.js'
    '@FrontendBundle/Resources/public/template/js/common.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    commonJs();
    $('#list').click(function(event){
        event.preventDefault();
        $('#products .item').addClass('list-group-item');
    });

    $('#grid').click(function(event){event.preventDefault();$('#products .item').removeClass('list-group-item');
    $('#products .item').addClass('grid-group-item');});
    $("#price-range").slider({
        tooltip: 'always'
    });


    $('.addCart').submit( function(e) {

        var url = $('.cartSubmit').attr("data-url");
        alert(url);
        $.ajax({
        url:url ,
        type: 'POST',
        data: new FormData( this ),
        processData: false,
        contentType: false,
        success: function(response){
        $('.vsidebar .txt').html('54000');
        }
        });
        e.preventDefault();

    });


    {#    ProductFeatureSlider({{ globalOption.ecommerceConfig.owlProductColumn }});#}
{% endblock %}