{% extends ':frontend/template:base.html.twig' %}
{% block body %}
    <!-- Header Carousel -->
    {% if globalOption.homeSliders is defined and globalOption.homeSliders is not empty %}
    <header id="home" class="carousel slide">
        <ul class="cb-slideshow">
            {% set sec = 9 %}
            {% set foo = 0 %}
            {% for slide in globalOption.homeSliders|slice(0,6) %}
                <li><span style="background-image: url({{ image(slide.webPath).resize() }});animation-delay: {{ foo }}s;"></span>
                    <div class="container" style="animation-delay:{{ foo }}s; ">
                        <div class="row" style="animation-delay:{{ foo }}s; ">
                            <div class="col-lg-12" style="animation-delay:{{ foo }}s; ">
                                <div  class="text-center" style="animation-delay:{{ foo }}s; "><h3>{{ slide.name }}</h3></div>
                            </div>
                        </div>
                        <h4>{{ slide.content|truncate(100)|raw }}</h4>
                    </div>
                </li>
                {% set foo = foo + sec %}
            {% endfor %}
        </ul>
        <div class="intro-scroller">
            <a class="inner-link" href="#about">
                <div class="mouse-icon" style="opacity: 1;">
                    <div class="wheel"></div>
                </div>
            </a>
        </div>
    </header>
        <style>
            .section-divide{
                margin-top:20px ;
            }
            .block{
                background: hsl(0, 0%, 100%) none repeat scroll 0 0;
                border: 1px solid hsl(0, 0%, 82%);
                box-shadow: 5px 5px 0 hsla(0, 0%, 0%, 0.07);
                padding: 20px;
            }
            .block .block-icon{
                float: left;
            }
            .block .block-content h3{
                margin: 11px 0 30px 67px;
                color: #000;
                font-size: 16px;
                font-weight: 600;
            }
            .block .block-content p{
                font-size: 13px;
                line-height: 22px;
                margin: 0;
            }
            .block .block-icon i{
                background: #e74c3c;
                box-shadow: 5px 5px 0 hsla(0, 0%, 0%, 0.1);
                color: hsl(0, 0%, 100%);
                font-size: 26px;
                font-weight: 600;
                height: 50px;
                line-height: 50px;
                text-align: center;
                width: 50px;
                transition:all 0.2s ease-in-out;
            }
            .block:hover .block-icon i{
                background: hsl(208, 17%, 20%) none repeat scroll 0 0;
                border-radius: 50%;
                transform: translate(0px, 3px);
                transition:all 0.5s ease-in-out;
            }
            @media only screen and (max-width: 990px){
                .block{
                    margin-bottom: 20px;
                }
            }
            .home-feature{
                font-size: 18px;
                background: #2a2a2a;
                padding: 10px;
                color: #FFD700;
            }

            .header-double-line-right {
                overflow: hidden;
            }
            .header-double-line-right h1, .header-double-line-right h2, .header-double-line-right h3, .header-double-line-right h4, .header-double-line-right h5, .header-double-line-right h6 {
                position: relative;
                display: inline-block;
                text-transform: uppercase;
                margin: 0 0 15px 0;
            }

            .header-double-line-right h1:after, .header-double-line-right h2:after, .header-double-line-right h3:after, .header-double-line-right h4:after, .header-double-line-right h5:after, .header-double-line-right h6:after {
                border-bottom: 1px solid #FFD700;
                border-top: 1px solid rgba(0, 0, 0, 0.1);
                height: 6px;
                position: absolute;
                content: "";
                top: 50%;
                margin-top: -3px;
                left: 105%;
                width: 9999em;
            }

        </style>
    {% else %}
       <div style="margin-top:130px" ></div>
    {% endif %}
    {% if homeEntity.homeBlocks is not empty %}

        <section class="section-divide" id="">
            <hr>
            <div class="container">
                <div class="row">
                    {% set length =  homeEntity.homeBlocks|length %}
                    {% for block in homeEntity.homeBlocks|slice(0,4) %}
                        <div class=" col-md-{% if length == 3 %}4{% else %}3{% endif %}">
                            <div class="block js-equal-height">
                                <div class="block-icon">
                                    <i class="fa {{ block.icon.className }}"></i>
                                </div>
                                <div class="block-content">
                                    <h3>{{ block.name }}</h3>
                                    <p>{{ block.content|raw }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}
    {% if homeEntity.content is not empty %}
        <section class="section-divide" id="dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-1 col-md-10">
                        <div class="text-center">
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="home-feature">{{ homeEntity.content|raw }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    <section class="section-divide">
        <div class="container">
            <div class="header-double-line-right">
                <h3>About Us</h3>
            </div>
            <div class="row">
                <div class="row">
                    {% render controller("FrontendBundle:TemplateWidget:aboutus",{'globalOption':globalOption.id,'wordlimit':400}) %}
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content -->
    {% for mod in  homeEntity.pageModules %}
            {% if globalOption.siteSetting.modules.contains(mod.module) %}
                {% render controller("FrontendBundle:TemplateWidget:moduleBaseContent",{'globalOption':globalOption.id,'pageModule':mod.id}) %}
            {% endif %}

  {#      {% include 'FrontendBundle:Template/Desktop/Widget:'~ mod.module.moduleClass ~'.html.twig' with {'module':mod.module , 'title' : mod.name ,'limit': 5,'cloumn': 2 } %}
#}
    {% endfor %}
    <section class="section-divide" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-lg-12">
                        <div class="text-center color-elements">
                            <h2>Contact Us</h2>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-8">
                        <form class="inline" id="contactForm" method="post" novalidate >
                            <div class="row">
                                <div class="col-sm-6 height-contact-element">
                                    <div class="form-group">
                                        <i class="fa fa-user"></i>
                                        <input type="text" id="name" name="name" required class="form-control custom-labels" placeholder="FULL NAME"  data-trigger="hover" value="">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-sm-6 height-contact-element">
                                    <div class="form-group">
                                        <i class="fa fa-phone"></i>
                                        <input type="text" name="mobile" class="form-control custom-labels mobile" id="mobile" placeholder="MOBILE" required />
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-sm-12 height-contact-element">
                                    <div class="form-group">
                                        <i class="fa fa-comments"></i>
                                        <input type="text" name="message" class="form-control custom-labels" id="message" placeholder="WHAT'S ON YOUR MIND" required />
                                    </div>
                                </div>
                                <div class="col-sm-3 col-xs-6 height-contact-element">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-md btn-custom btn-noborder-radius" value="Send It"/>
                                    </div>
                                </div>
                                <div class="col-sm-3 col-xs-6 height-contact-element">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-md btn-noborder-radius btn-custom" name="reset">RESET
                                        </button>
                                    </div>
                                </div>
                                <div class="col-sm-3 col-xs-6 height-contact-element">
                                    <div class="form-group">
                                        <div id="response_holder"></div>
                                    </div>
                                </div>
                                <div class="col-sm-12 contact-msg">
                                    <div id="success"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-5 col-md-3 col-lg-offset-1 col-md-offset-1">
                        <div class="row">
                            <div class="col-md-12 height-contact-element">
                                <div class="form-group">
                                    <i class="fa fa-2x fa-map-marker"></i>
                                    <span class="text">{{ globalOption.contactPage.address1 }} {% if globalOption.contactPage.thana is defined and globalOption.contactPage.thana %}
                                            ,{{ globalOption.contactPage.thana.name }}<br>
                                        {% endif %}
                                        {% if globalOption.contactPage.district is defined and globalOption.contactPage.district %}
                                            {{ globalOption.contactPage.district.name }} {% endif %}-{{ globalOption.contactPage.postalCode }}</span>
                                </div>
                            </div>
                            <div class="col-md-12 height-contact-element">
                                <div class="form-group">
                                    <i class="fa fa-2x fa-phone"></i>
                                    <span class="text">{{ globalOption.mobile }}</span>
                                </div>
                            </div>
                            <div class="col-md-12 height-contact-element">
                                <div class="form-group">
                                    <i class="fa fa-2x fa-envelope"></i>
                                    <span class="text"><a href="malito:{{ globalOption.email }}">{{ globalOption.email }}</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@FrontendBundle/Resources/public/template/js/common.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    commonJs();
{% endblock %}









