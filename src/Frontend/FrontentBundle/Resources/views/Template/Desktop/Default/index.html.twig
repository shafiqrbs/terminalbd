{% extends ':frontend/template:ecommerce-base.html.twig' %}
{% block body %}
    <section class="home" style="background:#222">
        <!-- Header Carousel -->
        {% if menu.featureWidgets is defined and menu.featureWidgets is not empty and menu.getFeatureWidgetPositionExist('header-bottom') %}
            <div class="container container-margin">
                {% render controller("FrontendBundle:WebsiteWidget:featureWidget",{'globalOption':globalOption.id, 'menu': menu.id,'position':'header-bottom'}) %}
            </div>
        {% endif %}
        {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
            <div class="container container-margin">
                {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'menu': menu.id,'position':'body-top'}) %}
            </div>
        {% endif %}
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1"  style="margin-top: 15px; margin-bottom:15px">
                    <div class="col-md-10" >
                        <div class="order-widget-block">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> PLACE YOUR ORDER NOW - RECEIVE YOUR ITEMS WITHIN 72 HOURS
                        </div>
                    </div>
                    <div class="col-md-2"><a class="btn shop-now" href="{{ path(globalOption.subDomain ~ '_webservice_product') }}">SHOP NOW</a></div>
                </div>
            </div>
        </div>
        {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
            <div class="container container-margin">
                {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id, 'menu': menu.id,'position':'body-bottom'}) %}
            </div>
        {% endif %}
        {% if menu.featureWidgets is defined and menu.featureWidgets is not empty and menu.getFeatureWidgetPositionExist('footer-top') %}
            <div class="container">
                {% render controller("FrontendBundle:WebsiteWidget:featureWidget",{'globalOption':globalOption.id, 'menu': menu.id,'position':'footer-top'}) %}
            </div>
        {% endif %}
    </section>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@FrontendBundle/Resources/public/template/desktop/css/product.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@FrontendBundle/Resources/public/template/js/common.js'
    '@FrontendBundle/Resources/public/template/js/product.js'
    '@FrontendBundle/Resources/public/template/js/e-commerce.js'
    '@FrontendBundle/Resources/public/template/js/sidebar.js'
    '@FrontendBundle/Resources/public/template/js/page.js'
    '@FrontendBundle/Resources/public/template/js/headerfooter.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
{% endblock %}









