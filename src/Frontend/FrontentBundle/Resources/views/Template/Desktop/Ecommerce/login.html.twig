{% extends ':frontend/template:ecommerce-base.html.twig' %}
{% block body %}
<section class="siteBgColor">
    <div class="clearfix"></div>
    <section id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li class="home"><a href="{{ path(globalOption.subDomain ~ '_ecommercesubdomain') }}"><span class="glyphicon glyphicon-home"></span></a></li>
                <li class="active"><a href="javascript:void(0);">Login</a></li>
            </ul>
        </div>
    </section>
    <section id="">
        <div class="container">
            <div class=" col-xs-6 col-md-6 col-md-offset-3 margin-top">
                <form class="register" id="commentform" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                <div class="panel panel-default">
                    <div class="panel-heading panel-info">
                        <h4 class="text-left"><strong>LOGIN</strong></h4>
                    </div>
                    <div class="panel-body">
                        {% if(error) %}
                            <p class="error">{{ error }}</p>
                        {% endif  %}
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                <input type="text" id="_username" name="_username" required="required" class="form-control" placeholder="Enter your mobile no">

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                <input type="password" id="_password" name="_password" required="required" class="form-control secured" placeholder="Enter your password">
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer clearfix" >
                        <button type="submit"  class="btn btn-sm btn-primary pull-right" role="button">Login</button>
                    </div>
                </div>
                </form>

            </div>
        </div>
    </section>
 </section>
{% endblock %}

