{% if widget.brandShow == 'imageProduct' %}
    <div id="" class="feature-carousel">
        {% if brand is not empty %}
            <div class="col-md-4">
                <div id="" class="product-canvas feature-cat-image brandProductLeft" >
                    <a class="{% if products|length > 3  %} img-card-large {% else %} img-card {% endif %}" href="{{ path(globalOption.subDomain ~ '_webservice_product_brand',{'id':brand.id }) }}">
                        <img  src="{{ image(brand.featureBrand.webPath).resize(400,700, 'white') }}"/>
                    </a>
                    <div class="card-read-more text-center" data-match-height="item-category">
                        <a class="" href="{{ path(globalOption.subDomain ~ '_webservice_product_brand',{'id':brand.id }) }}"><strong>{{ brand.name }}</strong></a>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="col-md-8" id="brandProductRight">
            <div class="" >
                {% for product in  products  %}
                    <div class="col-xs-12 col-sm-4">
                        <form id="add_buy_cart-{{ product.id }}" class="addCart">
                            <div class="product-canvas">
                                <a data-url="{{ path(globalOption.subDomain ~ '_webservice_product_modal',{'item':product.id }) }}" href="javascript:"  class="btn btn-warning product-preview product-eye"><span class="glyphicon glyphicon-eye-open"></span> Preview</a>

                                {% if product.discount is not empty  %}<a class="btn gray-dark-bg danger-font product-discount btn-sm"  href="javascript:"><span class="glyphicon glyphicon-tag"></span> {{ product.discount.discountAmount }}{% if product.discount.type !='flat' %}%{% endif %}</a>{% endif %}
                                <a class="img-card product-preview" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_modal',{'item':product.id }) }}" href="javascript:"  >
                                    <img src="{{ image(product.webPath).resize(500,500, 'white') }}"/>
                                </a>

                                <div class="card-content" data-match-height="item-product">
                                    <a class="product-preview" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_modal',{'item':product.id }) }}" href="javascript:">{% if product.brand is not empty and  globalOption.ecommerceConfig.showBrand == 1 %}{{ product.brand.name }}&nbsp;-&nbsp;{% endif %}{{ product.webName }}</a>
                                </div>
                                <div class="card-read-more text-center" >
                                    <strong class="currency" >MRP</strong>&nbsp;<span id="currency-{{ product.id }}">{% if product.discount is not empty  %}<strike>{% endif %}<span {% if product.discount is empty  %} class="list-price" {% endif %} >{{ product.salesPrice|number_format() }}</span>{% if product.discount is not empty  %}</strike>{% endif %}{% if product.discount is not empty  %}  <strong class="list-price">{{ product.discountPrice|number_format() }}</strong>{% endif %} TK</span>
                                </div>
                                <div class="card-read-more">
                                    <div class="input-group">
          <span class="input-group-btn">
              <button type="button" class="btn gray-dark-bg danger-font btn-number"  data-type="minus" data-field="quant-{{ product.id }}">
                <span class="glyphicon glyphicon-minus"></span>
              </button>
          </span>
                                        <input type="text" id="quant-{{ product.id }}" name="quant-{{ product.id }}" class="form-control cart-input input-number" readonly="readonly" value="1" min="1" max="100">
                                        <span class="input-group-btn">
              <button type="button" class="btn gray-dark-bg  cyan-font btn-number" data-type="plus" data-field="quant-{{ product.id }}">
                  <span class="glyphicon glyphicon-plus"></span>
              </button> {% if product.productUnit is not empty %}<span class="btn btn-info">{{ product.productUnit.name }}</span>{% endif %}<button type="button" class="btn btn-warning productToCart" id="buy-{{ product.id }}" data-id="{{ product.id }}"  data-toggle="tooltip" data-original-title="Add to Cart"  data-url="{{ path(globalOption.subDomain ~ '_webservice_product_medicine_cart',{'product':product.id }) }}"><span class="glyphicon glyphicon-shopping-cart"></span></button>
          </span></div></div></div>
                            <input type="hidden" name="productImg-{{ product.id }}" id="productImg-{{ product.id }}" value="{% if product.webPath is not empty  %}{{ product.webPath }}{% elseif product.masterItem.webPath is defined and product.masterItem.webPath is not empty %}{{ product.masterItem.webPath }}{% endif %}">

                        </form>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
