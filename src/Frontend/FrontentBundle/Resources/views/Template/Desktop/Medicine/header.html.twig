<nav class="navbar navbar-inverse ">
    <section class="animate-menu animate-menu-left">
        <ul class="sidebar-menu" id="sidebar-scroll">
            <li class="sidebar-header">{{ globalOption.name }}  <button id="remove-nav"><i class="fa fa-remove"></i> </button></li>
            {% for  menu in globalOption.ecommerceMenus  %}
                <li><a href="{% if menu.menu is not empty %}/{{ menu.menu.slug }}{% endif %}"> <span>{{ menu.name }}</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="sidebar-submenu">
                        {% if menu.childMenus is not empty %}
                            {% for childMenu in  menu.childMenus %}
                                <li><a href="{{ path(globalOption.subDomain ~ '_webservice_module',{'module':childMenu.slug}) }}">{{ childMenu.menu }}</a></li>
                            {% endfor %}
                        {% endif %}
                        {% if menu.features is not empty %}
                            <li><a href="javascript:"><span>Feature's</span> <i class="fa fa-angle-left pull-right"></i></a>
                                <ul class="sidebar-submenu">
                                    {% for feature in  menu.features %}
                                        {% if feature.targetTo == 'Category' and feature.category is not empty %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_product_category',{'id':feature.category.id}) %}
                                        {% elseif feature.targetTo == 'Promotion' and feature.promotion is not empty %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_product_promotion',{'id':feature.promotion.id}) %}
                                        {% elseif feature.targetTo == 'Tag' and feature.tag is not empty %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_product_tag',{'id':feature.tag.id}) %}
                                        {% elseif feature.targetTo == 'Discount' and feature.discount is not empty %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_product_discount',{'id':feature.discount.id}) %}
                                        {% elseif feature.targetTo == 'Brand' and feature.brand is not empty %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_product_brand',{'id':feature.brand.id}) %}
                                        {% elseif feature.targetTo == 'Page' and feature.menu is not empty %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_module',{'module':feature.menu.slug}) %}
                                        {% else %}
                                            {% set path = path(globalOption.subDomain ~ '_webservice_product') %}
                                        {% endif %}
                                        <li><a href="{{ path }}">{{ feature.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endif %}
                        {% if menu.promotions is not empty %}
                            <li><a href="javascript:"><span>Promotion's</span> <i class="fa fa-angle-left pull-right"></i>
                                <ul class="sidebar-submenu">
                                    {% for promotion in  menu.promotions %}
                                        <li><a href="{{ path(globalOption.subDomain ~ '_webservice_product',{'promotion':promotion.id}) }}">{{ promotion.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endif %}
                        {% if menu.discounts is not empty %}
                            <a href="javascript:"><span>Feature's</span> <i class="fa fa-angle-left pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                {% for discount in  menu.discounts %}
                                    <li><a href="{{ path(globalOption.subDomain ~ '_webservice_product',{'discount':discount.id}) }}">{{ discount.name }}&nbsp;{{ discount.type|capitalize }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        {% if menu.tags is not empty %}
                            <li><a href="javascript:"><span>Popular Tags's</span> <i class="fa fa-angle-left pull-right"></i></a></li>
                            <ul class="sidebar-submenu">
                                {% for tag in  menu.tags %}
                                    <li><a href="{{ path(globalOption.subDomain ~ '_webservice_product',{'tag':tag.id}) }}">{{ tag.name }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        {% if menu.categories is not empty %}
                            {% render controller("FrontendBundle:EcommerceWidget:returnSimpleCategoryMenu",{categories: menu.categories}) %}
                        {% endif %}
                        {% if menu.brands is not empty %}
                            {% for brand in menu.brands %}
                                <li><a href="{{ path(globalOption.subDomain ~ '_webservice_product_brand',{'id' : brand.id}) }}">{{ brand.name }}</a></li>
                            {% endfor %}
                        {% endif %}

                    </ul>
                </li>
            {% endfor %}
        </ul>
    </section>
    <style>
        .sidebar-menu .sidebar-submenu > li > a {
            padding: 5px 5px 5px 15px!important;
            font-size: 14px;
            color: #8aa4af;
        }
        #remove-nav {
            position: absolute;
            right: 8px;
            background: transparent;
            border: none;
        }
    </style>
    <section id="header" class="sticky">
        <div class="container">
            <div class="navbar-header">
                <div class="col-md-2" id="logo-area">
                    <button id="showLeft" class="btn btn-primary"><i class="fa fa-bars"></i> </button>
                    <a class="img-logo"
                       href="{{ path(globalOption.subDomain ~ '_ecommercesubdomain') }}">{% if globalOption.templateCustomize.webPath('logo') is not empty %}
                            <img src="{{ image(globalOption.templateCustomize.webPath('logo')).resize() }}"
                                 alt="{{ globalOption.name }}" />{% else %}{{ globalOption.name }}{% endif %}</a>
                </div>
                <div class="col-md-3" >
                    <img style="margin-top: 15px; height: 40px" src="{{ asset('assets/logo/alshefa/alshefa-mobile.png') }}">
                </div>
                <div class="bs-example-form col-md-7 text-left" style="padding-right: 0!important;">
                    {% if globalOption.templateCustomize.showSearch == 1 %}
                    <form class="action bs-example" action="{{ path(globalOption.subDomain ~ '_webservice_product_search') }}"  method="get" >
                        <div class='input-group search-box' style="width: 100%" >
                            <div class="input-group" style="width: 100%">
                                <input style="float: right; width: 97%" type="text" id="webName" name="webName" required="required" class="form-control serarch-keyword search-field col-md-12 col-lg-12" value="{{ searchForm['webName'] is defined ? searchForm['webName'] :'' }}" placeholder="Product name,category,brand etc">
                                <span class="input-group-btn">
                                    <span id="item-qnt" class="totalItem">{{ cart.contents|length }}</span>
                                               <button class="btn btn-group btn-group-search search-box-bg" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                              <a  href="javascript:" id="prescriptionUpload" data-toggle="tooltip" data-original-title="View Shopping Items"  class="btn btn-warning"> <span  class="fa fa-upload"></span> Prescription</a>
                                    {% if app.user %}
                                        <a href="javascript:" data-action="{{ path(globalOption.subDomain ~ '_webservice_logout') }}" type="button" data-toggle="tooltip" title="System Logout" class="btn logout btn-group btn-danger" ><span class="fa fa-sign-in"></span></a>
                                        <a href="{{ path('domain_customer_homepage',{'shop':globalOption.slug}) }}" data-toggle="tooltip" title="Go To Your Order Panel" type="button" class="btn btn-group btn-primary" ><span class="glyphicon glyphicon-user"></span></a>
                        {% else %}
                                        <a type="button" class="btn btn-group btn-primary login-preview"  data-toggle="tooltip" title="System Login" ><span class="glyphicon glyphicon-lock"></span></a>
                                    {% endif %}
                         </span>

                            </div>
                        </div>
                    </form>
                    {% endif %}
                </div>

            </div>
        </div>
    </section>
    <div class="clearfix"></div>
   {# <section id="menu-bar" >
          <div class="container">
        {{ include('FrontendBundle:Template/Desktop/Menu:menu.html.twig')}}</div>
    </section>#}
    <div class="clearfix"></div>
    <style>
        .action{
            width: 100%!important;
        }
        #searchResult {
            list-style: none;
            padding: 0;
            width: 88%;
            position: absolute;
            margin: 0;
            top: 35px;
            left: -15px!important;
            max-height:220px;
            overflow-y: scroll;
            z-index: 999999999;
            background: #f5f5f5;
        }

        #searchResult li{
            background: #eeeeee;
            padding: 4px;
            margin-bottom: 1px;
        }

        #searchResult li:nth-child(even){
            background: #f5f5f5;
        }

        #searchResult li:hover{
            cursor: pointer;
            background-color:#FF5400;
            color: #ffffff;
        }
        #item-qnt {
            position: absolute;
            top: -12px;
            right: 40px;
            font-size: 9px;
            background: red;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            text-align: center;
            line-height: 18px;
            color: #fff;
            font-weight: bold;
            z-index: 99;
        }
    </style>
    <div class="clearfix"></div>
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty and menu.getFeatureWidgetPositionExist('header')  %}
        {% render controller("FrontendBundle:EcommerceWidget:featureTemplateWidget",{'globalOption':globalOption.id,'menu': menu.id,'position':'header'}) %}
    {% endif %}
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty and menu.getFeatureWidgetPositionExist('header')  %}
        {% render controller("FrontendBundle:WebsiteWidget:featureWidget",{'globalOption':globalOption.id, 'menu': menu.id,'position':'header'}) %}
    {% endif %}
</nav>
