<div class="page-header sidebar-title"><h2>All {{ moduleName }}</h2></div>
<div id="catlist">
    {% for news in pagination %}
        <dl class="news-list">
            <dt><img src="{{ image(news.webPath).resize(300,200) }}" alt="{{ news.name }}" width="93" height="62" /><strong><i class="fa fa-calendar"></i> {{ news.updated|date('d-F-Y') }} </strong><a href="{{ path('webservice_module_page',{'subdomain': globalOption.subDomain,'module': 'news','slug':news.slug }) }}">{{ news.name }}</a></dt>
            <dd>
                <p> {{ news.content|raw|truncate(150) }}</p>
                <span><i class="fa fa-tags"></i>
                    {% for cat in news.moduleCategory %}
                        <a href="{{ path('webservice_module_category',{'subdomain': globalOption.subDomain,'module':moduleName|lower ,'slug':cat.slug }) }}">{{ cat.name }}</a>
                    {% endfor %}
                </span>
            </dd>
        </dl>
    {% endfor %}
</div>

<style>

    .odd{
       background-color: #ffffff;
    }
    .even{
       background-color: #FAFAFA;
    }
    #catlist{
        border-bottom:none;
        margin:10px auto;
    }
    #catlist dl{
        margin:0 auto;
        border-bottom:1px solid #F5F5F5;
        padding:10px;
        overflow:hidden;
    }
    #catlist dd{overflow:auto}
    #catlist dt strong{
        float:right;
        padding:0 0 0 20px;
    }
    #catlist dt img{
        float:left;
        margin:0 10px 0 0;
        border:1px solid #FAFAFA;
    }
    * html dd{height:1%}/* 3px jog*/
</style>

<div class="pagination pull-center"  >
    {{ knp_pagination_render(pagination) }}
</div>


