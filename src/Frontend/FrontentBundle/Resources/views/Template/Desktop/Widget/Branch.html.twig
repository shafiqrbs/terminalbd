{% if globalOption.branches is defined and globalOption.branches is not empty  %}
<section id="branch">
    <div class="container">
        <div class="text-center">
            <h2>{% if title is not empty %}{{ title }}{% else %}Our Branches{% endif %}</h2>
            <img class="img-responsive displayed" src="{{ asset('assets/template/desktop/patros/images/short.png') }}" alt="about">
        </div>
        <div class="row">
            {% for key,branch in globalOption.branches|slice(0,4)  %}
            <div class="col-md-3 col-sm-6">
                <div class="pricingTable {% if key == 0 %}blue{% elseif key == 1 %}purple{% elseif  key == 2 %}orange{% elseif  key == 3 %}green{% endif %}">
                    <div class="pricingTable-header">
                        <span>{{ branch.name }}</span>
                    </div>
                    <div class="pricingContent">
                        <ul>
                            <li><i class="fa fa-phone"></i>&nbsp;{{ branch.mobile }}</li>
                            <li><i class="fa fa-envelope"></i>&nbsp;{{ branch.email }}</li>
                            <li><i class="fa fa-user"></i>&nbsp;{{ branch.contactPerson }}</li>
                            <li><i class="fa fa-bookmark"></i>&nbsp;{{ branch.designation }}</li>
                        </ul>
                    </div><!-- /  CONTENT BOX-->
                    <div class="pricingTable-sign-up"><!-- BUTTON BOX-->
                        <span class="price-value" ><i class="fa fa-home"></i>&nbsp;{{ branch.address }}</span>
                        <div class="clearfix"></div>
                        <a href="" class="btn btn-sm orange">Direction<i class="fa fa-map-marker"></i></a>
                    </div><!-- BUTTON BOX-->
                </div>
            </div>
            {% endfor %}


        </div>
    </div>
</section>
{% endif %}