{% if  (globalOption.testimonials is defined and globalOption.testimonials is not empty) or (globalOption.noticeBords is defined and globalOption.noticeBords is not empty )  %}
<section id="testmonial-noticeboard">
    <div class="testimonial-bg">
        <div class="container">
            <div class="row">
                {% if globalOption.testimonials is defined and globalOption.testimonials is not empty  %}
                <div class="col-md-12">
                    <div id="testimonial-single-slider" class="owl-carousel">
                        {% for testimonial in globalOption.testimonials|slice(0,limit) %}
                        <div class="testimonial">
                            <div class="pic">
                                <img src="{{ image(testimonial.webPath).scaleResize(150,150) }}" alt="">
                            </div>
                            <p class="description">
                                "{{ testimonial.content|raw|truncate(250) }} "
                            </p>
                            <h3 class="testimonial-title"> {{ testimonial.name }}</h3>
                            <span class="post">{{ testimonial.designation }}&nbsp;,&nbsp;<em>{{ testimonial.title }}</em></span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endif %}
