{% extends ':frontend/template:base.html.twig' %}
{% block body %}
    <!-- Header Carousel -->
    {% if globalOption.featureWidgets is defined and globalOption.featureWidgets is not empty %}
        <section class="section-white top-nav-margin" >
            {% render controller("FrontendBundle:EcommerceWidget:featureWidget",{'globalOption':globalOption.id,'position':'Home'}) %}
        </section>
    {% endif %}

