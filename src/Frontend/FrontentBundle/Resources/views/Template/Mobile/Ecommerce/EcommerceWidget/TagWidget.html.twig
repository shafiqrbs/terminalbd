{% for product in  products  %}
    <div class="col-lg-6 col-xs-6 col-md-6 col-sm-6 col-sm-cus-6 fadeInDown animated product-item" data-match-height="item-product-thumb">
        <form id="add_buy_cart-{{ product.id }}" class="addCart">
            <div class="thumbnail">
                <div class="productPreview group list-group-image">
                    <a class="product-preview" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_modal',{'item':product.id }) }}" href="javascript:" >
                        {% if  product.webPath is not empty %}
                            <img class="img-responsive" alt="{{ product.webName }}" src="{{ image(product.webPath).resize(200,160, 'white') }}"/>   {% else %}
                            <img class="img-responsive" alt="{{ product.webName }}" src="{{ image(globalOption.ecommerceConfig.webPath).resize(200,160) }}"/>
                        {% endif %}
                    </a>
                </div>
                <div class=""  data-match-height="item-product">

                    <div class="card-content" >
                        {% if product.category is not empty and  globalOption.ecommerceConfig.showCategory == 1 %}
                            <span class="category-name">
                                            <a class="category-url" href="{{ path(globalOption.subDomain ~ '_webservice_product_category',{'category':product.category.slug  }) }}">{{ product.category.name }}</a>
                                        </span>
                        {% endif %}
                        <div class="clearfix"></div>
                        <span class="product-name">
<a class="product-preview product-url" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_modal',{'item':product.id }) }}" href="javascript:">{{ product.webName }}</a>
                                        </span>
                        <div class="clearfix"></div>
                        {% if product.brand is not empty and  globalOption.ecommerceConfig.showBrand == 1 %}
                            <span class="brand-name">
                                        <a class="brand-url" href="{{ path(globalOption.subDomain ~ '_webservice_product_brand',{'brand':product.brand.slug  }) }}">{{ product.brand.name }}</a>
                                    </span>
                        {% endif %}
                    </div>
                    <div id="inlineLoading-{{ product.id }}">
                        {% if product.itemSubs is not empty  and product.itemSubs|length > 1  %}
                            <div>
                                <select class="input-selector item-select item-select-bg inlineSizeChange size-{{ product.id }}"  data-id="{{ product.id }}" data-url="{{ path(globalOption.subDomain~'_webservice_product_inline_item_load', {'product' : product.id }) }}" name="size" id="size-{{ product.id }}" >
                                    {% for goodsItem in  product.itemSubs  %}
                                        <option  value="{{ goodsItem.id }}" >{% if goodsItem.size is not empty %}{{ goodsItem.size.name }}{% else %} Default {% endif %}{% if goodsItem.productUnit is not empty %} - {{ goodsItem.productUnit.name }}{% endif %} {{ globalOption.ecommerceConfig.currency }} {% if goodsItem.discountPrice is empty %}{{ goodsItem.salesPrice|number_format }} {% else %}{{ goodsItem.discountPrice|number_format }}{% endif %}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        {% endif %}
                        {% if  product.itemColors is not empty and product.itemColors is defined and product.itemColors|length > 1 %}
                            <div>
                                <select class="input-selector item-select item-select-bg" name="color" id="color-{{ product.id }}" >
                                    {% for color in  product.itemColors %}
                                        <option value="{{ color.id }}" >{{ color.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        {% endif %}
                    </div>
                    <div class="product-price" >
                        <span class="currency" > {{ globalOption.ecommerceConfig.currency }}</span>&nbsp;<span id="currency-{{ product.id }}"> {% if product.discount is not empty  %}<strike>{% endif %}<span {% if product.discount is empty  %} class="list-price" {% endif %} >{{ product.salesPrice|number_format() }}</span>{% if product.discount is not empty  %}</strike>{% endif %}{% if product.discount is not empty  %}  <strong class="list-price">{{ product.discountPrice|number_format() }}</strong>{% endif %} {% if product.productUnit is not empty %} / {{ product.productUnit.name }}{% endif %}</span>
                    </div>

                </div>
                <div class="input-group">
              <span class="input-group-btn">
                   <button type="button" class="btn  btn-new-cart-item  btn-minus" id="btn-left-{{ product.id }}" data-id="{{ product.id }}"  data-type="minus" data-field="quant-{{ product.id }}">
            <i class="fa fa-minus"></i>
        </button>
              </span>
                    <input type="text" id="quant-{{ product.id }}" name="quant-{{ product.id }}" class="form-control cart-input input-inline-cart" value="{{ product.minQuantity }}" data-id="{{ product.id }}" min="{{ product.minQuantity }}" max="{{ product.maxQuantity }}" data-type="plus" data-field="quant-{{ product.id }}" >
                    <span class="input-group-btn">
                  <button type="button" data-id="{{ product.id }}" class="btn   btn-new-cart-item btn-plus" data-type="plus" data-field="quant-{{ product.id }}" >
              <i class="fa fa-plus"></i></button>
              </span>
                </div>
                <div>
                    <button type="button" id="productBuy-{{ product.id }}" data-id="{{ product.id }}" class="btn  btn-info product-inline-buy btn-action col-lg-12 col-xs-12 col-md-12 col-sm-12 col-sm-cus-12" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_inline_cart',{'product' : product.id }) }}">
                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> ADD
                    </button>
                </div>
                {% if product.discount is not empty %}
                    <a class="product-discount btn-xs" href="javascript:">
                        <span class="glyphicon glyphicon-tag"></span> {{ product.discount.discountAmount }}{% if product.discount.type !='flat' %}%{% endif %}
                    </a>
                {% endif %}
            </div>
        </form>
        {% if product.discount is not empty %}
            <a class="product-discount btn-xs" href="javascript:">
                <span class="glyphicon glyphicon-tag"></span> {{ product.discount.discountAmount }}{% if product.discount.type !='flat' %}%{% endif %}
            </a>
        {% endif %}
    </div>
{% endfor %}