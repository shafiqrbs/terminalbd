                                        <img class="img-responsive" alt="{{ product.webName }}" src="{{ image(product.webPath).resize(400,320, 'white') }}"/>       {% else %}
                                        <img class="img-responsive" alt="{{ product.webName }}" src="{{ image(globalOption.ecommerceConfig.webPath).resize(400,320) }}"/>
                                    {% endif %}
                                </a>
                            </div>
                            <div class="" >
                                <div class="card-content" >
                                    {% if product.category is not empty and  globalOption.ecommerceConfig.showCategory == 1 %}
