<div class="container  wow fadeInDown" data-wow-offset="300" >
    {% if widget.featureCategoryShow == 'slider2' %}
        {%  set listCarousel = 'twoColumnCarousel' %}
        {%  set columnCarousel = 'TwoColumnCarousel' %}
        {%  set perColumn = 'col-md-6 col-sm-6' %}
    {% elseif widget.featureCategoryShow == 'slider3' %}
        {%  set listCarousel = 'threeColumnCarousel' %}
        {% set columnCarousel = 'ThreeColumnCarousel' %}
        {% set perColumn = 'col-md-4 col-sm-4' %}
    {% elseif widget.featureCategoryShow == 'slider4' %}
        {%  set listCarousel = 'fourColumnCarousel' %}
        {% set columnCarousel = 'FourColumnCarousel' %}
        {% set perColumn = 'col-md-3 col-sm-3' %}
    {% elseif widget.featureCategoryShow == 'grid1' %}
        {%  set perColumn = 'col-md-6 col-sm-12' %}
    {% elseif widget.featureCategoryShow == 'grid2' %}
        {%  set perColumn = 'col-md-6 col-sm-6' %}
    {% else %}
        {%  set listCarousel = 'threeColumnCarousel' %}
        {%  set columnCarousel = 'ThreeColumnCarousel' %}
        {%  set perColumn = 'col-md-6 col-sm-6' %}
    {% endif %}
    {% if widget.featureCategoryShow == 'slider2' or  widget.featureCategoryShow == 'slider3' or  widget.featureCategoryShow == 'slider4' %}

    <div class="row">
        <div class="bs-callout bs-callout-info bs-callout-custom ">
            <h4 class="feature-title"><i class="fa fa-th-large"></i> Categories</h4>
            <span  class="text-right owl-carousel-next-prev">
                <ul class="control-box pager">
                    <li><a data-slide="prev" href="#{{ columnCarousel }}" class=""><i class="glyphicon glyphicon-chevron-left"></i></a></li>
                    <li><a data-slide="next" href="#{{ columnCarousel }}" class=""><i class="glyphicon glyphicon-chevron-right"></i></a></li>
                </ul>
            </span>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div id="product" class="col-md-12 {{ listCarousel }} ">
            <div class="slide carousel" id="{{ columnCarousel }}">
                <div class="carousel-inner">
                    {% for category in  widget.globalOption.featureCategories  %}
                        <div class="item  {% if loop.index-1 == 0 %} active {% endif %}">
                            <div class="col-lg-4 col-xs-4 col-md-4 col-sm-4" data-match-height="item-category">
                                <a class="thumbnail" href="{{ path(globalOption.subDomain ~ '_webservice_product_category',{'subdomain': globalOption.subDomain,'id':category.id }) }}">
                                    <img class="img-responsive" src="{{ image(category.webPath).resize(250,200) }}" alt="">
                                </a>
                                <div class="caption">
                                    <a class="category-name" href="{{ path(globalOption.subDomain ~ '_webservice_product_category',{'subdomain': globalOption.subDomain,'id':category.id }) }}">{{ category.category.name }}</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    {% if widget.featureCategoryShow == 'grid1' or  widget.featureCategoryShow == 'grid2' %}
        <div class="row">
            <div class="bs-callout bs-callout-info bs-callout-custom ">
                <h4 class="feature-title"><i class="fa fa-th-large"></i> Categories</h4>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="container">
            <div class="row feature-grid">
                {% for category in  widget.globalOption.featureCategories  %}
                    <div class="{{ perColumn }}">
                        <div class="wrap-category">
                            <a href="{{ path(globalOption.subDomain ~ '_webservice_product_category',{'subdomain': globalOption.subDomain,'id':category.id }) }}"><img class="img-responsive" src="{{ image(category.webPath).resize(42,42) }}" alt=""></a>
                            <div class="cat-label"><a href="{{ path(globalOption.subDomain ~ '_webservice_product_category',{'subdomain': globalOption.subDomain,'id':category.id }) }}">{{ category.category.name }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

</div>