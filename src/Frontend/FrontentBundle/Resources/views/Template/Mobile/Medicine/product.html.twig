{% extends ':frontend/template/mobile:ecommerce-base.html.twig' %}
{% block body %}
    <div class="container-section">
        <div class="container" id="product-section">
            {% render controller("FrontendBundle:EcommerceWidget:sidebarTemplateProductFilter",{'globalOption':globalOption.id,'searchForm':searchForm}) %}
            <div class="row" id="showCartItem"></div>
            <div class="row">
                <div class="bs-callout bs-callout-info bs-callout-custom ">
                    <h4 class="feature-title"><i class="fa fa-th-large"></i> {% if titleName is defined and titleName is not empty %}{{ titleName }}{% else %}All Products{% endif %}
                    </h4>
                    {% if app.request.cookies.has('productList') %}
                        {% set cookieVal = app.request.cookies.get('productList') %}
                    {% else %}
                        {% set cookieVal = 'faThLarge' %}
                    {% endif %}
                    <div class="btn-group btn-group-sm pull-right" role="group" aria-label="Small button group">
                        <button type="button" class="btn btn-default btn-cookie" id="faListAlt"
                                data-url="{{ path(globalOption.subDomain ~ '_webservice_product_cookie_base_list') }}">
                            <i class="fa fa-list-alt"></i></button>
                        <button type="button" class="btn btn-default btn-cookie" id="faThLarge"
                                data-url="{{ path(globalOption.subDomain ~ '_webservice_product_cookie_base_list') }}">
                            <i class="fa fa-th-large "></i></button>
                        <button type="button" class="btn btn-default btn-cookie" id="faList"
                                data-url="{{ path(globalOption.subDomain ~ '_webservice_product_cookie_base_list') }}">
                            <i class="fa fa-list"></i></button>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for product in products %}
                    {% if cookieVal == 'faThLarge' %}
                        <div class="col-lg-6 col-xs-6 col-md-6 col-sm-6 col-sm-cus-6 fadeInDown animated product-item" data-wow-delay="0.1s">
                            <div class="thumbnail">
                                <div class="product-preview group list-group-image">
                                    <a href="{{ path(globalOption.subDomain ~ '_webservice_product_details',{'item':product.slug }) }}">
                                        <img class="img-responsive"
                                             src="{% if product.webPath is not empty %}{{ image(product.webPath).forceResize(200,160) }}{% endif %}"  alt=""></a>
                                </div>
                                <div class="caption">
                                    <div class="card-content" data-match-height="item-product">
                                        <a class="product-preview" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_modal',{'item':product.id }) }}" href="javascript:">{% if product.brand is not empty and  globalOption.ecommerceConfig.showBrand == 1 %}{{ product.brand.name }}&nbsp;-&nbsp;{% endif %}{{ product.webName }}</a>
                                    </div>
                                    {% if product.productUnit is not empty %}<span class="unit text-center">{{ product.productUnit.name }}</span>{% endif %}
                                    <div class="card-read-more text-center" >
                                        <strong class="currency" >MRP</strong>&nbsp;<span id="currency-{{ product.id }}">{% if product.discount is not empty  %}<strike>{% endif %}<span {% if product.discount is empty  %} class="list-price" {% endif %} >{{ product.salesPrice|number_format() }}</span>{% if product.discount is not empty  %}</strike>{% endif %}{% if product.discount is not empty  %}  <strong class="list-price">{{ product.discountPrice|number_format() }}</strong>{% endif %} TK</span>
                                    </div>
                                    <div class="card-read-more">
                                        <div class="input-group">
              <span class="input-group-btn">
                  <button type="button" class="btn gray-dark-bg danger-font btn-number"  data-type="minus" data-field="quant-{{ product.id }}">
                    <span class="glyphicon glyphicon-minus"></span>
                  </button>
              </span>
                                            <input type="text" id="quant-{{ product.id }}" name="quant-{{ product.id }}" class="form-control cart-input input-number" readonly="readonly" value="1" min="1" max="100">
                                            <span class="input-group-btn">
                  <button type="button" class="btn gray-dark-bg  cyan-font btn-number" data-type="plus" data-field="quant-{{ product.id }}">
                      <span class="glyphicon glyphicon-plus"></span>
                  </button>

              </span></div></div></div>
                                </div>
                            {% if product.discount is not empty %}
                                <a class="btn btn-danger product-discount btn-xs" href="javascript:">
                                    <span class="glyphicon glyphicon-tag"></span> {{ product.discount.discountAmount }}{% if product.discount.type !='flat' %}%{% endif %}
                                </a>
                            {% endif %}

                        </div>
                    {% elseif cookieVal == 'faListAlt' %}
                        <div class="col-xs-12 col-md-12 list-group-item">
                            <div class="col-xs-4 col-md-4">
                                <a href="{{ path(globalOption.subDomain ~ '_webservice_product_details',{'item':product.slug }) }}"
                                   style="margin-top: 20px">
                                    <img class="img-responsive"
                                         src="{% if product.webPath is not empty %}{{ image(product.webPath).forceResize(400,400) }}{% elseif product.webPath is defined and product.webPath is not empty %}{{ image(product.webPath).forceResize(400,400) }}{% endif %}"
                                         alt=""/>
                                </a>
                            </div>
                            <div class="col-xs-8 col-md-8">
                                <div class="row">
                                    <div class="col-xs-12 col-md-12 list-group-product">
                                        {% if product.brand is not empty and  globalOption.ecommerceConfig.showBrand == 1 %}
                                            <span class="group inner brand text-left">{% if product.brand is not empty and  globalOption.ecommerceConfig.showBrand == 1 %}{{ product.brand.name }}{% endif %}
                                                &nbsp;</span>
                                        {% endif %}
                                        <span class="group inner product-name text-left"><a
                                                    href="{{ path(globalOption.subDomain ~ '_webservice_product_details',{'item':product.slug }) }}">{{ product.webName }}
                                                </a>
                                        </span>
                                        <p>
                                            {% if product.productUnit is not empty %}<span class="unit">{{ product.productUnit.name }}</span>{% endif %}
                                        </p>
                                        <div class="row">
                                            <div class="col-xs-4 col-md-4 text-left product-price"><strong
                                                        class="currency">{{ globalOption.ecommerceConfig.currency }}</strong> {% if product.discount is not empty %}
                                                <strike>{% endif %}{{ product.salesPrice|number_format() }}{% if product.discount is not empty %}</strike>{% endif %}{% if product.discount is not empty %}&nbsp;{{ product.discountPrice|number_format() }}{% endif %}
                                            </div>
                                            <div class=" col-xs-8 col-md-8 text-right">
                                                <div class="card-read-more">
                                                    <div class="input-group">
              <span class="input-group-btn">
                  <button type="button" class="btn gray-dark-bg danger-font btn-number"  data-type="minus" data-field="quant-{{ product.id }}">
                    <span class="glyphicon glyphicon-minus"></span>
                  </button>
              </span>
                                                        <input type="text" id="quant-{{ product.id }}" name="quant-{{ product.id }}" class="form-control cart-input input-number" readonly="readonly" value="1" min="1" max="100">
                                                        <span class="input-group-btn">
                  <button type="button" class="btn gray-dark-bg  cyan-font btn-number" data-type="plus" data-field="quant-{{ product.id }}">
                      <span class="glyphicon glyphicon-plus"></span>
                  </button>

              </span></div></div></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if product.discount is not empty %}
                                <a class="btn btn-danger product-discount btn-xs" href="javascript:"><span
                                    class="glyphicon glyphicon-tag"></span> {{ product.discount.discountAmount }}{% if product.discount.type !='flat' %}%{% endif %}
                                </a>
                            {% endif %}
                        </div>
                    {% elseif cookieVal == 'faList' %}
                        <div class="col-xs-12 col-md-12">
                            <div class="product-item">
                                <a class=""
                                   href="{{ path(globalOption.subDomain ~ '_webservice_product_details',{'item':product.slug }) }}">
                                    <img class="img-responsive"
                                         src="{% if product.webPath is not empty %}{{ image(product.webPath).forceResize(450,450) }}{% elseif product.webPath is defined and product.webPath is not empty %}{{ image(product.webPath).forceResize(450,450) }}{% endif %}"
                                         alt=""/>
                                </a>
                                <div class="caption row" data-match-height="item-promotion">
                                    <div class="row-fluid">
                                        <div class="col-xs-4 col-md-4 text-left">
                                            <span class="product-price">
                                                <strong class="currency">{{ globalOption.ecommerceConfig.currency }}</strong> {% if product.discount is not empty %}
                                                <strike>{% endif %}{{ product.salesPrice|number_format() }}{% if product.discount is not empty %}</strike>{% endif %}{% if product.discount is not empty %}&nbsp;{{ product.discountPrice|number_format() }}{% endif %}
                                            </span>
                                        </div>
                                        <div class="col-xs-2 col-md-2 text-center">
                                            {% if product.productUnit is not empty %}<span class="unit text-center">{{ product.productUnit.name }}</span>{% endif %}
                                        </div>
                                        <div class=" col-xs-6 col-md-6 text-right">
                                            <div class="card-read-more" style="margin-top: -6px">
                                                <div class="input-group">
              <span class="input-group-btn">
                  <button type="button" class="btn gray-dark-bg danger-font btn-number-cart"  data-type="minus" data-field="quant-{{ product.id }}">
                    <span class="glyphicon glyphicon-minus"></span>
                  </button>
              </span>
                                                    <input type="text" id="quant-{{ product.id }}" name="quant-{{ product.id }}" class="form-control cart-input btn-number-cart" readonly="readonly" value="1" min="1" max="100">
                                                    <span class="input-group-btn">
                  <button type="button" id="buy-{{ product.id }}" data-id="{{ product.id }}" href="javascript:" data-url="{{ path(globalOption.subDomain ~ '_webservice_product_medicine_cart',{'product':product.id }) }}"  class="btn gray-dark-bg  cyan-font btn-number-cart" data-type="plus" data-field="quant-{{ product.id }}">
                      <span class="glyphicon glyphicon-plus"></span>
                  </button>

              </span></div></div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-12 product-attr">
                                        <span class="group inner product-name text-left"><a
                                                    href="{{ path(globalOption.subDomain ~ '_webservice_product_details',{'item':product.slug }) }}">{{ product.webName }}
                                                </a>
                                        </span>
                                    </div>
                                </div>
                                {% if product.discount is not empty %}
                                    <a class="btn btn-danger product-discount btn-xs" href="javascript:">
                                        <span class="glyphicon glyphicon-tag"></span> {{ product.discount.discountAmount }}{% if product.discount.type !='flat' %}%{% endif %}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="bs-callout bs-callout-info bs-callout-custom ">
                    <div class="row">
                        <div class="col-xs-12 col-md-12 "> {{ knp_pagination_render(products) }}</div>
                    </div>
                </div>
            </div>
        </div><!-- end container -->
    </div>
    <style>
        .input-number, .btn-number-cart {
            height: 33px;
            font-weight: bold;
            text-align: center;
        }
        .unit{
            display: inline-block;
            width: 100%;
        }
    </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@FrontendBundle/Resources/public/template/mobile/css/product-canvas.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
{% block javascriptBlock %}
    {% javascripts
    '@FrontendBundle/Resources/public/template/mobile/js/common.js'
    '@FrontendBundle/Resources/public/template/mobile/js/product.js'
    '@FrontendBundle/Resources/public/template/desktop/js/medicine.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}

{% endblock %}



