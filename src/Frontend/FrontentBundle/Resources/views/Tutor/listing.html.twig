{% extends ':frontend:base.html.twig' %}
{% block body %}
    <div id="tm-page-title">
        <div class="tm-wrap tm-table">
            <div class="tm-title-captions"><h2 class="tm-entry-title">Education</h2></div>
            <ul class="tm-breadcrumbs">
                <li><a href="/">Home</a></li>
                <li>Education</li>
            </ul>
        </div>
    </div>
    <!--tm-page-title-->
    <div id="tm-page-body">
    <div id="" class="tm-container tm-wrap tm-blog-style-magazine1 tm-sidebar-right">
        <div class="page-content">
            <div class="page-content-inner">
                {% if(promotions) %}
                <div id="tm-portfolio" class="tm-portfolio-text">
                    <div class="tm-content tm-col-4" style="margin-top:0">
                        {% for promotion in promotions %}

                            <article class="cat1 cat3">
                                <img alt="img" src="{{ image( promotion.user.tutor.webPath).resize(189,139) }}">
                                <div class="tm-mask">
                                    <div class="tm-mask-content">
                                        <h3><a href="{{ path('frontend_tutor_subdomain',{'subdomain':promotion.slug }) }}">{{ promotion.name }}</a></h3>
                                        <span class="line"></span>
                                        <div class="incategory">
                                            <a href="javascript:">{{ promotion.user.tutor.address }}</a>,
                                            <a href="mailto={{ promotion.user.tutor.email }}">{{ promotion.user.tutor.email }}</a>
                                            <a href="tel:+88 {{ promotion.user.tutor.mobile|default('') }}">{{ promotion.user.tutor.mobile }}</a>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="{{ path('frontend_tutor_subdomain',{'subdomain':promotion.slug }) }}">{{ promotion.name }}</a></p>
                            </article>
                        {% endfor %}

                    </div>
                    <div class="clear"></div>
                </div>
                <div class="tm-double-line"></div>
                {% endif %}
                <div class="tm-row">
                    {% for key , entity in pagination %}
                    <div class="one-third" {% if key == 3 %}last{% endif %} >
                        <div class="tm-team">
                            <div class="tm-team-img">
                                <img src="{{ image(entity.user.tutor.webPath).resize(250,185) }}" alt="img">
                                <div class="tm-mask">
                                    <div class="tm-mask-inner">
                                        <ul class="social-networks">
                                            <li>
                                                <a href="tel:+88 {{ entity.user.tutor.mobile|default('') }}" data-title="+88 {{ entity.user.tutor.mobile|default('') }}">
                                                    <i class="fa fa-phone"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="mailto:{{ entity.user.tutor.email|default('') }}" data-title="{{ entity.user.tutor.email|default('') }}">
                                                    <i class="fa fa-envelope-o"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-title="Facebook">
                                                    <i class="fa fa-facebook"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-title="{{ entity.user.education.address|default('') }}-{{ entity.user.education.postalCode|default('') }}">
                                                    <i class="fa fa-map-marker"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <h2>John Doe</h2>
                            <div class="job-title">
                                CEO & Founder
                            </div>
                            <div class="description">
                                <p>
                                    Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes
                                </p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    <div class="clear"></div>
                </div>
            </div>
        </div>
        <!--page-sidebar-->
        {{ include('frontend/sidebar.html.twig')}}
        <!--end-page-sidebar-->
    <!--tm-blog-->
    </div>
    <!--tm-page-body-->
{% endblock %}


