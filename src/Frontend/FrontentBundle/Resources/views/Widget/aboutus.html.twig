{% set count = about.children|length %}
{% if count == 2 or count > 2   %}
    {% set limit = 2 %}
    {% set column = 6 %}
{% elseif count == 1  %}
    {% set limit = 1 %}
    {% set column = 9 %}
{% endif %}

{% if about is not null %}
<div class="col-md-{{ column }}">
    <h4>&nbsp;</h4>
    <p>{{ about.content|truncate(wordlimit)|raw }}</p>
    <div class="text-left">
        <a href="{{ path('webservice_module',{'subdomain': about.globalOption.subDomain,'module':'about-us'}) }}" class="btn btn-sm orange">Read More<i class="fa fa-link"></i></a>
    </div>
</div>
{% for child in about.children|slice(0,limit)  %}
<div class="col-md-3">
    <h4>{{ child.name }}</h4>
   <p> {{ child.content|truncate(wordlimit/2)|raw }}</p>
</div>
{% endfor %}
{% endif %}
