{% block documentready %}

    {% if( moduleName == 'Blackout' ) %}
        $('#blackout').multiDatesPicker({
        dateFormat: "dd/mm/yy",
        addDates:{{ entity.user.blackout.offBlackoutDate|json_encode|raw }}
        });
    {% endif %}

    $("#newsFeed").bootstrapNews({
    newsPerPage:1,
    autoplay: false,
    onToDo: function () {
