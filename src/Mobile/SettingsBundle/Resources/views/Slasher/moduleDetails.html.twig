{% extends ':mobile/slasher:base.html.twig' %}
{% block body %}
    {% if ( moduleName == 'News') %}
        {{ include('@Mobile/ModuleDetails/admission.html.twig')}}
    {% elseif( moduleName == 'Blog' ) %}
        {{ include('@Mobile/ModuleDetails/blog.html.twig')}}
    {% elseif( moduleName == 'Testimonial' ) %}
        {{ include('@Mobile/ModuleDetails/testimonial.html.twig')}}
    {% elseif( moduleName == 'Timeline' ) %}
        {{ include('@Mobile/ModuleDetails/timeline.html.twig')}}
    {% elseif( moduleName == 'Branch' ) %}
        {{ include('@Mobile/ModuleDetails/branch.html.twig')}}
    {% elseif( moduleName == 'Event' ) %}
        {{ include('@Mobile/ModuleDetails/event.html.twig')}}
    {% elseif( moduleName == 'ClassRoutine' ) %}
        {{ include('@Mobile/ModuleDetails/blackout.html.twig')}}
    {% elseif( moduleName == 'Blackout' ) %}
        {{ include('@Mobile/ModuleDetails/blackout.html.twig')}}
    {% elseif( moduleName == 'NoticeBoard' ) %}
        {{ include('@Mobile/ModuleDetails/noticeboard.html.twig')}}
    {% elseif( moduleName == 'Admission' ) %}
        {{ include('@Mobile/ModuleDetails/admission.html.twig')}}
    {% elseif( moduleName == 'SyndicateContent' ) %}
        {{ include('@Mobile/ModuleDetails/syndicate.html.twig')}}
    {% else %}
        {{ include('@Mobile/Module/default.html.twig')}}
    {% endif %}
{% endblock %}

{% block documentready %}
{%  if( moduleName == 'SyndicateContent' or moduleName == 'Blog' or moduleName == 'Event' ) %}
    {% if(details.photoGallery) %}

        $( '#gallery' ).click( function( e ) {
            e.preventDefault();
            $.swipebox( [
            {% for image in details.photoGallery.galleryImages %}
                { href : '/{{ image.webPath }}', title : '{{ image.caption }}' },
            {% endfor %}
            ]);
        });

    {% endif %}
{% endif %}
{% endblock %}




