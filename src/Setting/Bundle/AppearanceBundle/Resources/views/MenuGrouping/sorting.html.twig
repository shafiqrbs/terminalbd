{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN admission HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="admission-title">
                    Form Components
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('menugrouping_edit',{'id':menuGroup.id}) }}">Menu grouping</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">{{ menuGroup.name }}</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END admission HEADER-->
        <!-- BEGIN admission CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Menu Group Name: {{ menuGroup.name }}</div>
                    </div>

                    <div class="portlet-body">

                        <div class="tabbable portlet-tabs">
                            <ul class="nav nav-tabs">
                                <li class=""><a  href="{{ path('menugrouping') }}"><i class="icon-th-list"></i>&nbsp;Menu Grouping</a></li>
                                <li class="active"><a  href="javascript:"><i class="icon-edit"></i>&nbsp;Add/Edit</a></li>

                            </ul>
                            <div class="tab-content">

                                <div class="portlet-body form">
                                    {% include('flash-message.html.twig')  %}
                                    <!-- BEGIN FORM-->
                                     <form id="sorting" action="" method="post">
                                        <input type="hidden" name="menuGroup" id="menuGroup" value="{{ menuGroup.id }}">
                                        <div class="row-fluid">
                                            <div class="span12 ">
                                                <div class="dd" id="nestable_list_3">
                                                    {{ menu|raw }}
                                                </div>
                                            </div>

                                        </div>
                                        <div class="form-actions portlet box grey">
                                            <div class="pull-center">
                                                <button type="submit" class="btn green" id="serialize"><i class="icon-ok"></i> Save</button>
                                                <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>

                                            </div>
                                        </div>
                                    </form>
                                    <!-- END FORM-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block documentready %}

    {{ parent() }}

    NestSortable.init();
    $('#serialize').click(function(){

        serialized = $('ol.sortable').nestedSortable('serialize');
        $.ajax({
            url: '{{ path('menugrouping_sorted') }}',
            type: "POST",
            data: serialized
        }).done(function(data){
            ('#sorting').submit();
        });
    })

{% endblock %}


