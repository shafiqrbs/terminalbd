{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Create/Edit Page
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('page') }}">Page</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Create/Edit Page Components</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                {#    <div class="btn-group pull-right">
                        {% if entity.id > 0  %}
                            <a class="btn black" target="_blank" href="{{ path('page_print',{'id': entity.id}) }}">Print</a>
                            <a class="btn yellow" target="_blank" href="{{ path('page_pdf',{'id': entity.id}) }}">PDF</a>
                            <a class="btn blue" target="_blank" href="{{ path('page_export',{'id': entity.id}) }}">Export</a>
                        {% else %}
                            <a class="btn purple" href="{{ path('page_import') }}">Import</a>
                        {% endif %}
                    </div>#}
                <div class="portlet box green">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('page_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('page') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}

                        <div class="row-fluid">
                            <div class="span9">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Title <span class="required">*</span></label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" for="icon">Icon</label>
                                    <div class="controls">
                                        {{ form_widget(form.icon) }}
                                        {{ form_errors(form.icon) }}
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!--/row-->
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" >Menu</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.menu) }}
                                            {{ form_errors(form.menu) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="span6">
                                <div class="control-group">
                                    <label class="control-label" >Parent</label>
                                    <div class="controls">
                                        {{ form_widget(form.parent) }}
                                        {{ form_errors(form.parent) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="clearfix">&nbsp;</div>
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.content) }}
                                        {{ form_errors(form.content) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions portlet box blue">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>Additional Field & Value</div>
                                <a href="javascript:" class="btn green pull-right mini addmore"><i class="icon-plus"></i></a>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="row-fluid clone-block" id="clone-block">
                            <div class="clone">
                                <div class="span3 ">
                                    <div class="control-group">
                                        <input type="hidden" name="metaId[]" value="" >
                                        <input type="text" name="metaKey[]" class="m-wrap span12" placeholder="Label name" value="">
                                    </div>
                                </div>
                                <div class="span8">
                                    <div class="control-group">
                                        <input type="text" name="metaValue[]" class="m-wrap span12" placeholder="Label value" value="">
                                    </div>
                                </div>
                                <div class="span1">
                                    <div class="control-group">
                                        <div class="controls">
                                            <a href="javascript:"  class="btn red  remove hidden mini"><i class="icon-trash"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if  entity.pageMetas is defined and entity.pageMetas is not empty %}
                            {% for meta in entity.pageMetas %}
                                <div class="row-fluid trash" id="remove-{{ meta.id }}"  >
                                    <div class="span3 ">
                                        <div class="control-group">
                                            <input type="hidden" name="metaId[]" value="{{ meta.id }}" >
                                            <input type="text" name="metaKey[]" class="m-wrap span12" placeholder="Label name" value="{{ meta.metaKey }}">
                                        </div>
                                    </div>
                                    <div class="span8">
                                        <div class="control-group">
                                            <input type="text" name="metaValue[]" class="m-wrap span12" placeholder="Label value" value="{{ meta.metaValue }}">
                                        </div>
                                    </div>
                                    <div class="span1">
                                        <div class="control-group">
                                            <div class="controls">
                                                <a href="javascript:" id="{{ meta.id }}"  data-url="{{ path('page_meta_delete',{'id':meta.id}) }}" class="btn red  remove mini"><i class="icon-trash"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                        <div class="form-actions portlet box blue">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>Page Features</div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        {% for module in globalOption.siteSetting.getModules %}
                            {% if module.isSingle != 1 %}
                                <div class="row-fluid">
                                    <div class="span2">
                                        <div class="control-group">
                                            <div class="controls">
                                                <input type="hidden" id="" name="rowModule[]" value="{{ loop.index }}">
                                                <input type="hidden" id="pageModule-{% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id %}{{ pageFeature[module.id].id }}{% endif %}" name="pageModule[]" value="{% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id %}{{ pageFeature[module.id].id }}{% endif %}">
                                                <input name="module[]" type="checkbox"  value="{{ module.id }}" {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id %}{{ 'checked="checked"' }}{% endif %}>{{ module.name }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="control-group">
                                            <div class="controls">
                                                <input  placeholder="Alternative Feature Title"
                                                       data-original-title="Alternative Feature Title"
                                                       data-trigger="hover" type="text" name="name[]" class="m-wrap span12 tooltips" value="{% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id %}{{ pageFeature[module.id].name }}{% endif %}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <div class="controls">
                                                <select name="showColumn[]" class="span12" >
                                                    <option value="">Show Column</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showColumn == 12 %} selected ="selected" {% endif %} value="12">1</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showColumn == 6 %} selected ="selected" {% endif %} value="6">2</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showColumn == 4 %} selected ="selected" {% endif %} value="4">3</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showColumn == 3 %} selected ="selected" {% endif %} value="3">4</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <div class="controls">
                                                <select name="contentPosition[]" class="span12" >
                                                    <option value="">Content Position</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].contentPosition == 'Top' %} selected ="selected" {% endif %} value="Top">Top</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].contentPosition == 'Bottom' %} selected ="selected" {% endif %} value="Bottom">Bottom</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].contentPosition == 'Body' %} selected ="selected" {% endif %} value="Body">Body</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].contentPosition == 'Sidebar' %} selected ="selected" {% endif %} value="Sidebar">Sidebar</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].contentPosition == 'Footer' %} selected ="selected" {% endif %} value="Footer">Footer</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <div class="controls">
                                                <select name="showLimit[]" class="span12" >
                                                    <option value="">Show Data</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 1 %} selected ="selected" {% endif %} value="1">1</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 2 %} selected ="selected" {% endif %} value="2">2</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 3 %} selected ="selected" {% endif %} value="3">3</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 4 %} selected ="selected" {% endif %} value="4">4</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 6 %} selected ="selected" {% endif %} value="6">6</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 8 %} selected ="selected" {% endif %} value="8">8</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 9 %} selected ="selected" {% endif %} value="9">9</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 10 %} selected ="selected" {% endif %} value="10">10</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 12 %} selected ="selected" {% endif %} value="12">12</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 15 %} selected ="selected" {% endif %} value="15">15</option>
                                                    <option {% if pageFeature[module.id] is defined and pageFeature[module.id].module.id == module.id and pageFeature[module.id].showLimit == 20 %} selected ="selected" {% endif %} value="20">20</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        {% endif %}
                        {% endfor %}

                        <div class="row-fluid">
                            <div class="span5">
                                <div class="control-group">
                                    <label class="control-label" >Feature image</label>
                                    <div class="controls">
                                        <div data-provides="fileupload" class="fileupload fileupload-new">
                                            <div  class="fileupload-new thumbnail">
                                                {% if(entity.webPath) %}
                                                    <img class="fileupload-preview fileupload-exists thumbnail" alt="" src="{{ image(entity.webPath).resize(100,100) }}">
                                                {% else %}
                                                    <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                {% endif %}
                                            </div>
                                            <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                            <div>
                                            <span class="btn btn-file">
                                                <span class="fileupload-new">Select image</span>
                                                <span class="fileupload-exists">Change</span>
                                                {{ form_widget(form.file) }}
                                                {{ form_errors(form.file) }}
                                            </span>
                                                <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" >Add Photo Gallery</label>
                                    <div class="controls">
                                        <div class="input-icon left">

                                            {{ form_widget(form.photo_gallery) }}
                                            {{ form_errors(form.photo_gallery) }}
                                        </div>

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" >Status</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            {{ form_widget(form.status) }}
                                            {{ form_errors(form.status) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="form-actions portlet box grey">
                            <div class="pull-center">
                                <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                {% if(entity.id > 0 ) %}
                                    <a href="{{ path('siteslider_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                {% endif %}
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@SettingContentBundle/Resources/public/js/editable.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
{% endblock %}