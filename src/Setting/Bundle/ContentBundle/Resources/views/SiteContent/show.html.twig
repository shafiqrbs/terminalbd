{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Site content

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div class="">

            <ul class="sitecontent-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('sitecontent') }}" >Site content</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    Show
                </li>

                <li class="pull-right custom-pull-right">
                    <a class="btn green-stripe blue" href="{{ path('sitecontent_new') }}"><i class="icon-plus"></i> New Create</a>
                    <a class="btn red-stripe blue" href="{{ path('sitecontent_edit', { 'id': entity.id }) }}"><i class="ui-icon-pencil"></i> Edit</a>
                    <a class="btn purple-stripe blue" href="{{ path('sitecontent') }}">Listing<i class="icon-headphones"></i></a>

                </li>
            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">
            <div class="modal-dialog modal-dialog-form" >
                <div class="modal-content" >

                    <div class="modal-body">
                        <div class="form-group form-group-custom backgroundWhite ">

                            <div class="tabbable tabbable-custom" >

                                <table class="table table-striped table-bordered table-hover table-full-width dataTable" >

                                    <tbody>

                                    <tr>
                                        <td><strong>Title</strong></td> <td>{{ entity.name }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Slug</strong></td> <td>{{ entity.slug }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Content</strong></td> <td>{{ entity.content|raw }}</td>
                                    </tr>

                                    <tr>
                                        <td><strong>Feature Image</strong></td><td>{% if( entity.webPath) %}<img src="{{ image( entity.webPath ).resize(150,120) }}"> {% endif %}</td>

                                    </tr>
                                    <tr>
                                        <td><strong>Status</strong></td><td>{% if( entity.status == 1) %}Active {% else %}Inactive {% endif %}</td>

                                    </tr>


                                    </tbody>
                                </table>

                            </div>


                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
