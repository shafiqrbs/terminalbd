{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid row-print">
            <table class="table">
                <tr>
                    <td>
                        <div class="span4  pull-left invoice-logo-space">
                            <img src="{{ asset('assets/img/invoice/walmart.png') }}">
                        </div>
                    </td>

                    <td>
                        <div class="span4 pull-right">
                            <ul class="unstyled">
                                <li><strong>Business Booster Limited</strong></li>
                                <li><i class="icon-phone"></i>&nbsp;01828148148</li>
                                <li><i class="icon-envelope"></i>&nbsp;info@terminalbd.com</li>
                                <li><i class="icon-home"></i>&nbsp;Floor # 3rd , House# 18, Road# 2</li>
                                <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Block# G, Mirpur-1, Dhaka-1215.</li>
                                <li><i class="icon-link"></i>&nbsp;www.terminalbd.com</li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <!-- END purchase_order HEADER-->

        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box">

                    <div class="portlet-title">
                        <div class="caption"><strong>Invoice Details</strong></div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form">
                            <div class="row-fluid">
                                <table class="table">
                                    <tr>
                                        <td>
                                            <div class="span4">
                                                <h4>About:</h4>
                                                <ul class="unstyled">
                                                    <li><strong><i class="icon-home"></i>&nbsp;</strong>&nbsp;{{ entity.getGlobalOption.name }}</li>
                                                    <li><strong><i class="icon-phone"></i>&nbsp;</strong>&nbsp;{{ entity.getGlobalOption.mobile }}</li>
                                                    {% if  entity.getGlobalOption.email  %}
                                                    <li><strong><i class="icon-envelope"></i>&nbsp;</strong>&nbsp;{{ entity.getGlobalOption.email }}</li>
                                                    {% endif %}
                                                    {% if entity.createdBy %}
                                                        <li><strong><i class="icon-user"></i>&nbsp;</strong>&nbsp;{{ entity.createdBy }}</li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="span4 invoice-payment">
                                                <h4>Payment Details:</h4>
                                                <ul class="unstyled">
                                                    <li><strong>Name of Month:</strong>&nbsp;{{ entity.billMonth }}</li>
                                                    <li><strong>Total BDT:</strong>&nbsp;{{ entity.totalAmount|number_format() }}</li>
                                                    <li><strong>Payment BDT:</strong>&nbsp;{{ entity.paidAmount|number_format() }}</li>
                                                    {% if entity.dueAmount %}<li><strong>Due BDT:</strong>&nbsp;{{ entity.dueAmount|number_format() }}</li>{% endif %}
                                                    <li><strong>Payment Progress:</strong>&nbsp;{{  entity.process|capitalize }}</li>
                                                </ul>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="span4">
                                                <h4>Payment method:</h4>
                                                <ul class="unstyled">
                                                    <li><strong>Payment method:</strong>&nbsp;{{ entity.paymentMethod }}</li>
                                                    {% if entity.paymentMethod == 'Bank' %}
                                                        {% if entity.portalBankAccount is not empty %}<li><strong>Bank name:</strong>&nbsp;{{ entity.portalBankAccount.bank.name }}{% endif %}</li>
                                                        {% if entity.portalBankAccount is not empty %}<li><strong>Account no:</strong>&nbsp;{{ entity.portalBankAccount.accountNo }}{% endif %}</li>
                                                        {% if entity.portalBankAccount is not empty %}<li><strong>Branch Address:</strong>&nbsp;{{ entity.portalBankAccount.branch }}{% endif %}</li>
                                                    {% endif %}
                                                    {% if entity.paymentMethod == 'bKash' %}
                                                        {% if entity.portalBkash is not empty %}<li><strong>Mobile no:</strong>&nbsp;{{ entity.portalBkash.mobile }}</li>{% endif %}
                                                        {% if entity.portalBkash is not empty %}<li><strong>Account Type:</strong>&nbsp;{{ entity.portalBkash.accountType  }}</li>{% endif %}
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="row-fluid box green">
                                {% if entity.invoiceModuleItems is defined and  entity.invoiceModuleItems is not empty  %}
                                    <table class="table table-bordered table-striped table-condensed flip-content ">

                                        <thead class="flip-content ">
                                        <tr class="head-grey">
                                            <th class="numeric" ><strong>S/N</strong></th>
                                            <th class="numeric" ><strong>Name</strong></th>
                                            <th class="numeric" ><strong>Amount</strong></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for index,item in entity.invoiceModuleItems %}
                                            <tr id="remove-{{ item.id }}">
                                                <td>{{ loop.index }}.</td>
                                                <td class="numeric" >
                                                    {% if item.appModule is not empty %}
                                                        {{ item.appModule.name }}
                                                    {% elseif item.module is not empty %}
                                                        {{ item.module.name }}
                                                    {% elseif item.syndicateModule is not empty %}
                                                        {{ item.syndicateModule.name }}
                                                    {% endif %}
                                                </td>
                                                <td class="numeric" >{{ item.amount|number_format() }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <td colspan="2"><strong class="pull-right" >Total Amount</strong></td><td>{{ entity.totalAmount|number_format() }}</td>
                                        </tfoot>
                                    </table>
                                {% endif %}
                            </div>
                            <div class="clearfix">&nbsp;</div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@SettingToolBundle/Resources/public/css/print.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    window.print();

{% endblock %}
