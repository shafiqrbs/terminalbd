
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                   Invoice Sms & Email
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('bankaccount') }}">Invoice SMS & Email</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#"> SMS/Email Package Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Invoice SMS & Email Information</div>

                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                    <th class="numeric" >Invoice</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Total Amount</th>
                                    <th class="numeric" >Paid Amount</th>
                                    <th class="numeric" >Due Amount</th>
                                    <th class="numeric" >Created By</th>
                                    <th class="numeric" >Process</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>
                                        <td> {% if entity.invoiceSmsEmailItems is defined and  entity.invoiceSmsEmailItems is not empty  %}<span class="badge badge-warning toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span>{% endif %}</td>
                                        <td class="numeric" >{{ entity.invoice }}</td>
                                        <td class="numeric" >{{ entity.globalOption.name }}</td>
                                        <td class="numeric" >{{ entity.updated|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.totalAmount }}</td>
                                        <td class="numeric" >{{ entity.paidAmount }}</td>
                                        <td class="numeric" >{{ entity.dueAmount }}</td>
                                        <td class="numeric" >{{ entity.createdBy }}</td>
                                        <td class="numeric" >
                                            {% if entity.process == 'Pending' %}
                                                <span  title="Pending" class="btn green mini" ><i class="icon-pushpin"></i></span>
                                            {% elseif entity.process == 'In-peogress' %}
                                                <span  title="In-progress" class="btn yellow mini" ><i class="icon-retweet"></i></span>
                                            {% elseif entity.process == 'Done' %}
                                                <span  title="Done" class="btn blue mini" ><i class="icon-ok-circle"></i></span>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >
                                            {% if entity.process == 'Pending' %}
                                            <a href="{{ path('bankaccount_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
                                            {% endif %}
                                            {% if entity.process == 'Pending' or entity.process == 'In-progress' %}
                                            <a title="Are you sure went to delete ?" href="{{ path('bankaccount_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr id="show-{{ entity.id }}" class="showing-overview" >
                                        <td colspan="10">
                                        {% if entity.invoiceSmsEmailItems is defined and  entity.invoiceSmsEmailItems is not empty  %}
                                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                                <thead class="flip-content ">
                                                <tr class="head-grey">
                                                    <th class="numeric" >Name</th>
                                                    <th class="numeric" >Type</th>
                                                    <th class="numeric" >Quantity</th>
                                                    <th class="numeric" >Unit Price</th>
                                                    <th class="numeric" >Total</th>
                                                </tr>
                                                </thead>
                                                <tbody>

                                                {% for item in entity.invoiceSmsEmailItems %}
                                                    <tr id="remove-{{ item.id }}">
                                                        <td class="numeric" >{{ item.smsEmailPricing.name }}</td>
                                                        <td class="numeric" >{{ item.smsEmailPricing.type }}</td>
                                                        <td class="numeric" >{{ item.smsEmailPricing.quantity }}</td>
                                                        <td class="numeric" >{{ item.smsEmailPricing.price }}</td>
                                                        <td class="numeric" >{{ item.smsEmailPricing.amount }}</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                                <tfoot>
                                                <td colspan="4" ><strong class="pull-right" >Total Amount</strong></td><td colspan="2">{{ entity.totalAmount }}</td>
                                                </tfoot>
                                            </table>
                                        {% endif %}
                                        </td>
                                    </tr>


                                {% endfor %}

                                </tbody>
                            </table>
                            <div class="pagination pull-center"  >
                                {{ knp_pagination_render(entities) }}
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


