{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN bankaccount HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="bankaccount-title">
                    Invoice Sms & Email Components
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('invoicesmsemail') }}">Invoice Sms & Email</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Invoice Sms & Email new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END bankaccount HEADER-->
        <!-- BEGIN bankaccount CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Invoice Sms & Email Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('invoicesmsemail_new',{option: entity.getGlobalOption.id}) }}"><i class="icon-plus-sign"></i>&nbsp;New invoice </a></li>
                                    <li><a href="{{ path('invoicesmsemail') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                    <tr class="head-grey">
                                        <th class="" >Add</th>
                                        <th class="numeric" >Name</th>
                                        <th class="numeric" >Type</th>
                                        <th class="numeric" >Quantity</th>
                                        <th class="numeric" >Unit Price</th>
                                        <th class="numeric" >Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                {% for entity in packagePricing %}
                                    <tr>

                                        <td class="" ><input value="{{ entity.id }}" type="checkbox" name="check[]"></td>
                                        <td class="numeric" >{{ entity.name }}</td>
                                        <td class="numeric" >{{ entity.type }}</td>
                                        <td class="numeric" >{{ entity.quantity }}</td>
                                        <td class="numeric" >{{ entity.price }}</td>
                                        <td class="numeric" >{{ entity.amount }}</td>

                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                            <div class="row-fluid">

                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="Bank">Transaction Method</label>
                                                <div class="controls">
                                                    {{ form_widget(form.transactionMethod) }}
                                                    {{ form_errors(form.transactionMethod) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="span4">
                                    <div class="row-fluid bankHide">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="Bank">Bank Account</label>
                                                <div class="controls">
                                                    {{ form_widget(form.portalBankAccount) }}
                                                    {{ form_errors(form.portalBankAccount) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid mobileBankHide">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="Bank">Mobile Bank Account</label>
                                                <div class="controls">
                                                    {{ form_widget(form.portalMobileBankAccount) }}
                                                    {{ form_errors(form.portalMobileBankAccount) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Transaction no </label>
                                                <div class="controls">
                                                    {{ form_widget(form.transaction) }}
                                                    {{ form_errors(form.transaction) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid bankHide">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Account No</label>
                                                <div class="controls">
                                                    {{ form_widget(form.accountNo) }}
                                                    {{ form_errors(form.accountNo) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid mobileBankHide">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="Bank">Payent Mobile no</label>
                                                <div class="controls">
                                                    {{ form_widget(form.paymentMobile) }}
                                                    {{ form_errors(form.paymentMobile) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i>&nbsp;Create Invoice</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@SettingToolBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    ApproveProcessInt();
{% endblock %}