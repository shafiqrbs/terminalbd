                                                <i class="icon-magic"></i>
                                                {{ form_widget(form.buttonBgColorHover) }}
                                                {{ form_errors(form.buttonBgColorHover) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!--/row-->
                            <div class="row-fluid">
                                <div class="span3 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Site Title Bg Color</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-magic"></i>
                                                {{ form_widget(form.siteTitleBgColor) }}
                                                {{ form_errors(form.siteTitleBgColor) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
