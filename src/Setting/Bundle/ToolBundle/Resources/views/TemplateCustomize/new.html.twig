                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <!--/row-->

                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Site Font Size</label>
                                        <div class="controls">
                                            <div class="input-icon left">

                                                {{ form_widget(form.siteFontSize) }}
                                                {{ form_errors(form.siteFontSize) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Site Background Color</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-magic"></i>
                                                {{ form_widget(form.siteBgColor) }}
                                                {{ form_errors(form.siteBgColor) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Button Bg Color</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-magic"></i>
                                                {{ form_widget(form.buttonBgColor) }}
                                                {{ form_errors(form.buttonBgColor) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Button Bg Color Hover</label>
                                        <div class="controls">
