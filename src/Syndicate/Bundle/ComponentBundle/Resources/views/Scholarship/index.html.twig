{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    View Lists
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('scholarship') }}">Scholarship</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="tabbable portlet-tabs">
                            <ul class="nav nav-tabs">
                                <li class="active" ><a  href="{{ path('scholarship') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                <li><a  href="{{ path('scholarship_new') }}"><i class="icon-plus"></i>&nbsp;Add</a></li>

                            </ul>
                            <div class="tab-content">
                                <div class="portlet-body flip-scroll">
                                    {% include('flash-message.html.twig')  %}
                                    <table class="table table-bordered table-striped table-condensed flip-content ">
                                        <thead class="flip-content ">
                                        {%  set direction = app.request.query.get('direction') %}
                                        {%  set sort = app.request.query.get('sort') %}
                                        <tr class="head-grey">
                                            <td>&nbsp;&nbsp;<i class="icon-list"></i></td>
                                            <th {% if pagination.isSorted('organizationName') %} class="sorted" {% endif %} >{{ knp_pagination_sortable(pagination, 'organizationName', 'organizationName') }}{% if( direction == 'desc' and sort == 'organizationName') %}<i class="icon-sort-up"></i> {% else %}<i class="icon-sort-down"></i> {% endif %}</th>
                                            <th class="numeric">Hot line</th>
                                            <th class="numeric">Email</th>
                                            <th class="numeric">Location</th>
                                            <th class="numeric">Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in pagination %}
                                            <tr>
                                                <td><span class="badge badge-warning toggle badge-custom" id="{{ entity.id  }}" ><span>[+]</span></span></td>
                                                <td><a href="{{ path('scholarship_edit',{'id': entity.id })}}">{{ entity.organizationName }}</a></td>
                                                <td class="numeric"><a href="tel:+88 {{ entity.mobile }}"> {{ entity.mobile }}</a></td>
                                                <td class="numeric"><a href="mailto:{{ entity.email }}"> {{ entity.email }}</a></td>
                                                <td class="numeric">{% if entity.location  %} {{ entity.location.name }} {% endif %}</td>
                                                <td class="numeric">
                                                    <a class="btn mini green-stripe btn-action" href="{{ path('scholarship_edit', { 'id': entity.id }) }}">Edit</a>
                                                    <a class="btn mini blue-stripe btn-action" href="{{ path('scholarship_show', { 'id': entity.id }) }}">View</a>
                                                    <a class="btn mini red-stripe btn-action delete" href="javascript:" rel="{{ path('scholarship_delete', { 'id': entity.id }) }}" >Delete</a>
                                                </td>
                                            </tr>
                                            <tr id="show-{{ entity.id }}" class="showing-overview">
                                                <td colspan="6">
                                                  <table class="inner-table">
                                                      <tr><td>Address</td><td>{{ entity.address }}</td></tr>
                                                      <tr><td>Contact Person</td><td>{{ entity.contactPerson }}</td></tr>
                                                      <tr><td>Designation</td><td>{{ entity.contactPersonDesignation }}</td></tr>
                                                  </table>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="pagination" >
                                        {{ knp_pagination_render(pagination) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


