{% block body %}
    <script>
       // window.print();
    </script>
    <link rel="stylesheet" href="{{ asset('assets/css/print.css') }}">
    <div class="wrapper">
        <table class="table">
            <tr valign="top">
                <td valign="top" class="main-table">
                    <div class="table-head">

                        <table>
                            <tr>
                                <td style="position: relative">
                                    {% if(entity.webPath) %}
                                        <img class="fileupload-preview thumbnail" style="width: 220px" alt="" src="/{{ entity.webPath }}">
                                    {% endif %}

                                  <div style="position: absolute; bottom: 5px; margin-left: 20px; left: 24%">
                                      <p><h3>{{ entity.name | default() }}</h3></p>
                                      <p>{{ entity.address | default() }}</p>
                                      {% if(entity.thana) %}<p>{{ entity.thana.name | default() }},{{ entity.thana.district.name | default() }}</p>{% endif %}
                                      {% if(entity.postalCode) %}<p>{{ entity.postalCode | default() }}</p>{% endif %}
                                      {% if(entity.hotline) %}<p>+88 {{ entity.hotline | default() }}</p>{% endif %}
                                      {% if(entity.email) %}<p> {{ entity.email | default() }}</p>{% endif %}

                                  </div>
                                </td>
                            </tr>
                            <tr>
                                <td><hr></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <table class="inner-table">
                                        <tr><td class="label-td">Aboout us</td><td class="body-value">{{ entity.overview|raw }}</td></tr>
                                        <tr><td class="label-td">Establishment</td><td class="body-value">{{ entity.establishment|date('d-m-Y') }}</td></tr>
                                        <tr><td class="label-td">Registration No</td><td class="body-value">{{ entity.registrationNo }}</td></tr>
                                        <tr><td class="label-td">Institute Chef</td><td class="body-value">{{ entity.instituteCheif }}</td></tr>
                                        <tr><td class="label-td">Designation</td><td class="body-value">{{ entity.instituteCheifDesignation }}</td></tr>
                                        <tr><td class="label-td">Open/Close Time</td><td class="body-value">{{ entity.startHour }} to {{ entity.endHour }}, {{ entity.weeklyOffDay }}</td></tr>
                                        <tr><td class="label-td">Registration No</td><td class="body-value">{{ entity.registrationNo }}</td></tr>
                                        <tr><td class="label-td">Contact Information</td><td class="body-value">{{ entity.contactPerson }}</td></tr>
                                        <tr><td class="label-td">Designation</td><td class="body-value">{{ entity.contactPersonDesignation }}</td></tr>
                                        <tr><td class="label-td">Skype ID </td><td class="body-value">{{ entity.skypeId }}</td></tr>
                                        <tr><td class="label-td">Fax </td><td class="body-value">{{ entity.fax }}</td></tr>
                                        <tr><td class="label-td">Additional Number </td><td class="body-value">{{ entity.phone }}</td></tr>
                                    </table>
                                </td>
                            </tr>

                        </table>
                    </div>
                </td>
            </tr>
        </table>
    </div>

{% endblock %}