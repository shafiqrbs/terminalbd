{% extends '::base-report.html.twig' %}
{% block body %}
    <div id="print-area">
        <div class="row print-header">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <p><strong>{{ option.name }}</strong></p>
                <p><strong>Name of Report: Hospital & Diagnostic</strong></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 print-bar">
                <form action="" method="get">
                    <div class="row">
                        <div class="col-md-5 margin-top">
                        </div>
                        <div class="col-md-3 margin-top">
                            <label>Start Date</label>
                            <input type="date" class="m-wrap" id="startDate" name="startDate" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}">
                        </div>
                        <div class="col-md-3 margin-top">
                            <label>End Date</label>
                            <input type="date" class="m-wrap" id="endDate" name="endDate" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}">
                        </div>
                        <div class="col-md-1 margin-top">
                            <label>&nbsp;</label>
                            <button class='btn btn-download btn-margin-left' ><i class='fa fa-search'></i> Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>Invoice Mode</th>
                        <th class="text-right">SudTotal</th>
                        <th class="text-right">Discount</th>
                        <th class="text-right">Total</th>
                        <th class="text-right">Received</th>
                        <th class="text-right">Due</th>
                    </tr>
                    <tbody>
                    {% if summary is not empty %}
                        {% for sumr in summary %}
                            <tr class="head-blue">
                                <th class="">{{ sumr.invoiceMode|capitalize }}</th>
                                <td class="text-right">{{ sumr.subTotal|number_format(2) }}</td>
                                <td class="text-right">{{ sumr.discount|number_format(2) }}</td>
                                <td class="text-right">{{ sumr.netTotal|number_format(2) }}</td>
                                <td class="text-right">{{ sumr.netPayment|number_format(2) }}</td>
                                <td class="text-right">{{ sumr.netDue|number_format(2) }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
               </div>
        </div>
    </div>
{% endblock %}


