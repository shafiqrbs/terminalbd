{% set totalSales = 0 %}
{% set totalPurchase = 0 %}
{% for entity in entities %}
    {% set totalSales = (totalSales + (entity.quantity * entity.salesPrice)) %}
    {% set totalPurchase = (totalPurchase + (entity.quantity * entity.purchasePrice)) %}
    <tr>
        <td class="numeric" >{{ loop.index }}</td>
        <td class="numeric" >{{ entity.salesCreated|date('d-m-y') }}</td>
        <td class="numeric" >{{ entity.salesInvoice }}</td>
        <td class="numeric" >{{ entity.customerName }}</td>
        <td class="numeric" >{{ entity.salesBy }}</td>
        <td class="numeric" >{{ entity.quantity }}</td>
        <td class="numeric" >{{ entity.salesPrice|number_format }}</td>
        <td class="numeric" >{{ (entity.quantity * entity.salesPrice)|number_format }}</td>
        <td class="numeric" >{{ entity.purchasePrice|number_format }}</td>
        <td class="numeric" >{{ (entity.quantity * entity.purchasePrice)|number_format }}</td>
        <td class="numeric" >{{ ((entity.quantity * entity.salesPrice)-(entity.quantity * entity.purchasePrice))|number_format }}</td>
    </tr>
{% endfor %}
<tr>
    <td colspan="7" class="text-right"><strong>Grand Total</strong></td>
    <td>{{ totalSales|number_format(2) }}</td>
    <td></td>
    <td>{{ totalPurchase|number_format(2) }}</td>
    <td>{{ (totalSales-totalPurchase)|number_format(2) }}</td>
</tr>